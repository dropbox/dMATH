// Semantic verification specification for LLM outputs
// Verifies outputs are semantically equivalent despite non-deterministic wording

semantic_property output_equivalence {
    // Outputs must be semantically similar
    semantic_similarity(expected, actual) >= 0.85
}

semantic_property contains_key_concepts {
    // Output must mention key concepts from the task
    contains_concepts(actual, ["hello_world", "function", "print", "Hello, World"])
}

semantic_property addresses_request {
    // Output must address what the user asked for
    addresses_question(actual, "Create a hello world function in Python")
}

// Statistical property: Output quality is consistent
statistical_property consistent_quality {
    // Run 10 samples, expect 90% to meet threshold
    samples: 10,
    success_threshold: 0.90,
    property: semantic_similarity(expected, actual) >= 0.80
}
