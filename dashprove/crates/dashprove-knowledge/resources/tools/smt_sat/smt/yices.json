{
  "id": "yices",
  "name": "Yices 2",
  "category": "smt_solver",
  "subcategory": "general",

  "description": "Efficient SMT solver from SRI International",
  "long_description": "Yices 2 is a high-performance SMT solver developed at SRI International. It supports linear arithmetic over integers and rationals, bit-vectors, arrays, and uninterpreted functions. Yices is known for its efficiency and is used in various verification tools.",

  "capabilities": [
    "sat_solving",
    "linear_arithmetic",
    "bit_vectors",
    "arrays",
    "uninterpreted_functions",
    "model_generation"
  ],
  "property_types": ["formula", "assertion", "constraint"],
  "input_languages": ["smtlib2", "yices_native"],
  "output_formats": ["sat/unsat", "model"],

  "installation": {
    "methods": [
      {"type": "brew", "command": "brew install SRI-CSL/sri-csl/yices2"},
      {"type": "apt", "command": "apt install yices2"},
      {"type": "source", "command": "autoconf && ./configure && make"}
    ],
    "dependencies": ["gmp", "libpoly"],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://yices.csl.sri.com/",
    "tutorial": "https://yices.csl.sri.com/papers.html",
    "api_reference": "https://yices.csl.sri.com/doc/",
    "examples": "https://github.com/SRI-CSL/yices2/tree/master/examples"
  },

  "tactics": [
    {
      "name": "check",
      "description": "Check satisfiability",
      "syntax": "(check)",
      "when_to_use": "Main solving command",
      "examples": ["(check)"]
    },
    {
      "name": "push/pop",
      "description": "Context management",
      "syntax": "(push) / (pop)",
      "when_to_use": "For incremental solving",
      "examples": ["(push)", "(pop)"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "timeout",
      "meaning": "Solver exceeded time limit",
      "common_causes": ["Hard problem", "Complex arithmetic"],
      "fixes": ["Simplify formula", "Add bounds"]
    },
    {
      "pattern": "unsupported",
      "meaning": "Feature not supported",
      "common_causes": ["Nonlinear arithmetic", "Quantifiers"],
      "fixes": ["Use different encoding", "Switch to Z3"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["constraint", "assertion"],
    "cli_command": "dashprove verify --backend yices"
  },

  "performance": {
    "typical_runtime": "milliseconds to seconds",
    "scalability": "Excellent for linear arithmetic",
    "memory_usage": "Low"
  },

  "comparisons": {
    "similar_tools": ["z3", "cvc5", "mathsat"],
    "advantages": [
      "Fast for linear arithmetic",
      "Low memory usage",
      "Good incremental solving"
    ],
    "disadvantages": [
      "Limited quantifier support",
      "No nonlinear arithmetic"
    ]
  },

  "metadata": {
    "version": "2.6.4",
    "last_updated": "2025-12-21",
    "maintainer": "SRI International",
    "license": "GPL-3.0"
  }
}
