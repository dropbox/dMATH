{
  "id": "z3",
  "name": "Z3",
  "category": "smt_solver",
  "subcategory": "general",

  "description": "High-performance SMT solver from Microsoft Research",
  "long_description": "Z3 is a state-of-the-art SMT (Satisfiability Modulo Theories) solver from Microsoft Research. It supports a wide range of theories including linear arithmetic, bit-vectors, arrays, and uninterpreted functions. Z3 is the backend for many verification tools including Kani, Verus, Dafny, and others.",

  "capabilities": [
    "sat_solving",
    "linear_arithmetic",
    "nonlinear_arithmetic",
    "bit_vectors",
    "arrays",
    "quantifiers",
    "optimization",
    "model_generation"
  ],
  "property_types": ["formula", "assertion", "constraint"],
  "input_languages": ["smtlib2", "python", "cpp", "rust"],
  "output_formats": ["sat/unsat", "model", "proof", "unsat_core"],

  "installation": {
    "methods": [
      {"type": "brew", "command": "brew install z3"},
      {"type": "apt", "command": "apt install z3"},
      {"type": "pip", "command": "pip install z3-solver"},
      {"type": "cargo", "command": "cargo add z3"}
    ],
    "dependencies": [],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://github.com/Z3Prover/z3",
    "tutorial": "https://microsoft.github.io/z3guide/",
    "api_reference": "https://z3prover.github.io/api/html/",
    "examples": "https://github.com/Z3Prover/z3/tree/master/examples"
  },

  "tactics": [
    {
      "name": "smt",
      "description": "Default SMT tactic",
      "syntax": "(check-sat-using smt)",
      "when_to_use": "General purpose solving",
      "examples": ["(check-sat-using smt)"]
    },
    {
      "name": "qe",
      "description": "Quantifier elimination",
      "syntax": "(apply qe)",
      "when_to_use": "To eliminate quantifiers",
      "examples": ["(apply qe)"]
    },
    {
      "name": "simplify",
      "description": "Expression simplification",
      "syntax": "(apply simplify)",
      "when_to_use": "To simplify formulas",
      "examples": ["(apply simplify)"]
    },
    {
      "name": "bit-blast",
      "description": "Bit-vector to SAT reduction",
      "syntax": "(apply bit-blast)",
      "when_to_use": "For bit-vector problems",
      "examples": ["(check-sat-using (then bit-blast sat))"]
    },
    {
      "name": "nlsat",
      "description": "Nonlinear arithmetic",
      "syntax": "(check-sat-using nlsat)",
      "when_to_use": "For polynomial constraints",
      "examples": ["(check-sat-using nlsat)"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "timeout",
      "meaning": "Solver exceeded time limit",
      "common_causes": ["Hard problem", "Unbounded quantifiers", "Nonlinear arithmetic"],
      "fixes": ["Add bounds", "Simplify formula", "Use different tactic"]
    },
    {
      "pattern": "unknown",
      "meaning": "Solver couldn't determine result",
      "common_causes": ["Incomplete theory", "Resource limits"],
      "fixes": ["Increase limits", "Simplify problem"]
    },
    {
      "pattern": "unsupported",
      "meaning": "Feature not supported",
      "common_causes": ["Non-standard SMT-LIB", "Incomplete theory combination"],
      "fixes": ["Encode differently", "Use supported fragment"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["constraint", "assertion"],
    "cli_command": "dashprove verify --backend z3"
  },

  "performance": {
    "typical_runtime": "milliseconds to hours",
    "scalability": "Best in class for many theories",
    "memory_usage": "Variable"
  },

  "comparisons": {
    "similar_tools": ["cvc5", "yices", "mathsat"],
    "advantages": [
      "Best overall performance",
      "Excellent API",
      "Wide theory support",
      "Active development"
    ],
    "disadvantages": [
      "Can be slow on quantifiers",
      "Large binary"
    ]
  },

  "metadata": {
    "version": "4.12.4",
    "last_updated": "2025-12-20",
    "maintainer": "Microsoft Research",
    "license": "MIT"
  }
}
