{
  "id": "opensmt",
  "name": "OpenSMT",
  "category": "smt_solver",
  "subcategory": "interpolation",

  "description": "Open-source SMT solver focused on interpolation and proof production",
  "long_description": "OpenSMT is an SMT solver developed at USI Lugano, designed with a focus on interpolation and proof production. It's particularly useful for software verification techniques that rely on Craig interpolation, such as predicate abstraction and lazy abstraction with interpolants.",

  "capabilities": [
    "linear_arithmetic",
    "uninterpreted_functions",
    "interpolation",
    "proof_production",
    "incremental_solving"
  ],
  "property_types": ["formula", "assertion", "constraint"],
  "input_languages": ["smtlib2"],
  "output_formats": ["sat/unsat", "model", "interpolant", "proof"],

  "installation": {
    "methods": [
      {"type": "source", "command": "git clone https://github.com/usi-verification-and-security/opensmt && cd opensmt && mkdir build && cd build && cmake .. && make"}
    ],
    "dependencies": ["cmake", "gmp", "readline"],
    "platforms": ["linux", "macos"]
  },

  "documentation": {
    "official": "https://github.com/usi-verification-and-security/opensmt",
    "api_reference": "https://github.com/usi-verification-and-security/opensmt/wiki",
    "examples": "https://github.com/usi-verification-and-security/opensmt/tree/master/test"
  },

  "tactics": [
    {
      "name": "interpolation",
      "description": "Generate interpolants for unsat formulas",
      "syntax": "(get-interpolants)",
      "when_to_use": "For CEGAR and predicate abstraction",
      "examples": ["(get-interpolants (A) (B))"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "unknown",
      "meaning": "Could not determine satisfiability",
      "common_causes": ["Nonlinear arithmetic", "Resource limits"],
      "fixes": ["Linearize constraints", "Increase limits"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["constraint", "assertion"],
    "cli_command": "dashprove verify --backend opensmt"
  },

  "performance": {
    "typical_runtime": "milliseconds to minutes",
    "scalability": "Good for interpolation-heavy workloads",
    "memory_usage": "Moderate"
  },

  "comparisons": {
    "similar_tools": ["mathsat", "z3", "cvc5"],
    "advantages": [
      "Strong interpolation support",
      "Open source",
      "Clean design"
    ],
    "disadvantages": [
      "Limited theory support",
      "Smaller community"
    ]
  },

  "metadata": {
    "version": "2.6.0",
    "last_updated": "2025-12-21",
    "maintainer": "USI Verification and Security Lab",
    "license": "MIT"
  }
}
