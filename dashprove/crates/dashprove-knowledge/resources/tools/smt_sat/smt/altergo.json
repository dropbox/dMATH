{
  "id": "altergo",
  "name": "Alt-Ergo",
  "category": "smt_solver",
  "subcategory": "program_verification",

  "description": "SMT solver designed for program verification with Why3",
  "long_description": "Alt-Ergo is an SMT solver designed specifically for program verification. It is the primary backend for Why3 and is used by tools like Frama-C and SPARK. Alt-Ergo supports polymorphism, records, enumerated types, and AC (associative-commutative) reasoning.",

  "capabilities": [
    "linear_arithmetic",
    "nonlinear_arithmetic",
    "arrays",
    "polymorphism",
    "records",
    "enumerations",
    "ac_reasoning"
  ],
  "property_types": ["formula", "assertion", "constraint"],
  "input_languages": ["smtlib2", "native", "why3"],
  "output_formats": ["sat/unsat", "model", "proof_steps"],

  "installation": {
    "methods": [
      {"type": "opam", "command": "opam install alt-ergo"},
      {"type": "apt", "command": "apt install alt-ergo"}
    ],
    "dependencies": ["ocaml", "opam"],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://alt-ergo.ocamlpro.com/",
    "api_reference": "https://ocamlpro.github.io/alt-ergo/",
    "examples": "https://github.com/OCamlPro/alt-ergo/tree/next/tests"
  },

  "tactics": [
    {
      "name": "default",
      "description": "Standard verification mode",
      "syntax": "alt-ergo formula.ae",
      "when_to_use": "General program verification",
      "examples": ["alt-ergo input.ae"]
    },
    {
      "name": "model",
      "description": "Generate model on SAT",
      "syntax": "alt-ergo --produce-models formula.ae",
      "when_to_use": "When counterexample needed",
      "examples": ["alt-ergo --produce-models input.ae"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "I don't know",
      "meaning": "Solver could not determine result",
      "common_causes": ["Complex quantifiers", "Timeout"],
      "fixes": ["Add triggers", "Simplify formula"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["constraint", "assertion"],
    "cli_command": "dashprove verify --backend altergo"
  },

  "performance": {
    "typical_runtime": "milliseconds to minutes",
    "scalability": "Good for Why3 verification conditions",
    "memory_usage": "Moderate"
  },

  "comparisons": {
    "similar_tools": ["z3", "cvc5", "verit"],
    "advantages": [
      "Why3 integration",
      "Polymorphism support",
      "AC reasoning"
    ],
    "disadvantages": [
      "Narrower scope than Z3",
      "Less active community"
    ]
  },

  "metadata": {
    "version": "2.5.2",
    "last_updated": "2025-12-21",
    "maintainer": "OCamlPro",
    "license": "Apache-2.0"
  }
}
