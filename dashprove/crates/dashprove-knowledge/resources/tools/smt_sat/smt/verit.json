{
  "id": "verit",
  "name": "veriT",
  "category": "smt_solver",
  "subcategory": "proof_production",

  "description": "SMT solver designed for proof production and theorem prover integration",
  "long_description": "veriT is an SMT solver developed with a focus on proof production for integration with interactive theorem provers like Isabelle, Coq, and HOL. It generates detailed proofs that can be checked by external proof checkers, making it valuable for verified verification.",

  "capabilities": [
    "linear_arithmetic",
    "uninterpreted_functions",
    "quantifiers",
    "proof_production",
    "proof_checking"
  ],
  "property_types": ["formula", "assertion"],
  "input_languages": ["smtlib2"],
  "output_formats": ["sat/unsat", "model", "proof"],

  "installation": {
    "methods": [
      {"type": "source", "command": "git clone https://gitlab.inria.fr/verit/verit && cd verit && ./configure && make"}
    ],
    "dependencies": ["gmp"],
    "platforms": ["linux", "macos"]
  },

  "documentation": {
    "official": "https://verit.loria.fr/",
    "api_reference": "https://gitlab.inria.fr/verit/verit",
    "examples": "https://verit.loria.fr/examples/"
  },

  "tactics": [
    {
      "name": "proof",
      "description": "Generate proof output",
      "syntax": "veriT --proof-file=proof.smt2 formula.smt2",
      "when_to_use": "When proof certificate needed",
      "examples": ["veriT --proof-file=out.proof input.smt2"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "unknown",
      "meaning": "Solver could not determine result",
      "common_causes": ["Complex quantifiers", "Nonlinear arithmetic"],
      "fixes": ["Add instantiation hints", "Simplify formula"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["constraint", "assertion"],
    "cli_command": "dashprove verify --backend verit"
  },

  "performance": {
    "typical_runtime": "milliseconds to minutes",
    "scalability": "Good for proof-producing queries",
    "memory_usage": "Moderate"
  },

  "comparisons": {
    "similar_tools": ["z3", "cvc5", "opensmt"],
    "advantages": [
      "Excellent proof output",
      "Isabelle/HOL integration",
      "Detailed proof steps"
    ],
    "disadvantages": [
      "Narrower theory support",
      "Slower than Z3 on some benchmarks"
    ]
  },

  "metadata": {
    "version": "2.0",
    "last_updated": "2025-12-21",
    "maintainer": "INRIA Nancy",
    "license": "BSD-2-Clause"
  }
}
