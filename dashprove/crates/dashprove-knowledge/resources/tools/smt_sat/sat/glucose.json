{
  "id": "glucose",
  "name": "Glucose",
  "category": "sat_solver",
  "subcategory": "cdcl",

  "description": "High-performance SAT solver with Literal Block Distance (LBD) restart strategy",
  "long_description": "Glucose is a SAT solver known for introducing the Literal Block Distance (LBD) heuristic for clause quality assessment. The LBD measure revolutionized restart strategies and clause deletion policies in CDCL solvers. Glucose has won multiple SAT competitions.",

  "capabilities": [
    "sat_solving",
    "incremental_solving",
    "unsat_core",
    "model_generation",
    "certified_unsat"
  ],
  "property_types": ["cnf", "formula"],
  "input_languages": ["dimacs"],
  "output_formats": ["sat/unsat", "model", "proof"],

  "installation": {
    "methods": [
      {"type": "source", "command": "git clone https://github.com/audemard/glucose && cd glucose && make"},
      {"type": "apt", "command": "apt install glucose"}
    ],
    "dependencies": [],
    "platforms": ["linux", "macos"]
  },

  "documentation": {
    "official": "https://www.labri.fr/perso/lsimon/glucose/",
    "api_reference": "https://github.com/audemard/glucose",
    "examples": "https://github.com/audemard/glucose/tree/master/simp"
  },

  "tactics": [
    {
      "name": "core",
      "description": "Basic solver without simplification",
      "syntax": "glucose_core formula.cnf",
      "when_to_use": "For incremental solving",
      "examples": ["glucose_core input.cnf"]
    },
    {
      "name": "simp",
      "description": "Solver with preprocessing",
      "syntax": "glucose formula.cnf",
      "when_to_use": "For one-shot solving",
      "examples": ["glucose input.cnf"]
    },
    {
      "name": "certified",
      "description": "Generate DRAT proof",
      "syntax": "glucose -certified -certified-output=proof.drat formula.cnf",
      "when_to_use": "When proof certificate needed",
      "examples": ["glucose -certified -certified-output=proof.drat input.cnf"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "INDETERMINATE",
      "meaning": "Solver was interrupted",
      "common_causes": ["Timeout", "Memory limit"],
      "fixes": ["Increase limits", "Simplify formula"]
    },
    {
      "pattern": "parse error",
      "meaning": "Invalid DIMACS format",
      "common_causes": ["Malformed header", "Invalid literals"],
      "fixes": ["Check DIMACS format"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["constraint"],
    "cli_command": "dashprove verify --backend glucose"
  },

  "performance": {
    "typical_runtime": "milliseconds to hours",
    "scalability": "Excellent for industrial instances",
    "memory_usage": "Moderate"
  },

  "comparisons": {
    "similar_tools": ["minisat", "cadical", "kissat"],
    "advantages": [
      "LBD-based clause management",
      "Strong on industrial instances",
      "Proven track record"
    ],
    "disadvantages": [
      "Less active development",
      "Surpassed by newer solvers like CaDiCaL"
    ]
  },

  "metadata": {
    "version": "4.2.1",
    "last_updated": "2025-12-21",
    "maintainer": "Gilles Audemard, Laurent Simon",
    "license": "MIT"
  }
}
