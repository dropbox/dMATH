{
  "id": "minisat",
  "name": "MiniSat",
  "category": "sat_solver",
  "subcategory": "cdcl",

  "description": "Minimalistic CDCL SAT solver",
  "long_description": "MiniSat is a minimalistic, open-source SAT solver that has been highly influential in the SAT community. It implements conflict-driven clause learning (CDCL) with watched literals. Despite its small codebase, MiniSat is competitive with larger solvers and serves as a reference implementation.",

  "capabilities": [
    "sat_solving",
    "cdcl",
    "clause_learning",
    "watched_literals",
    "proof_logging"
  ],
  "property_types": ["cnf", "boolean_formula"],
  "input_languages": ["dimacs"],
  "output_formats": ["sat/unsat", "model", "proof"],

  "installation": {
    "methods": [
      {"type": "apt", "command": "apt install minisat"},
      {"type": "brew", "command": "brew install minisat"},
      {"type": "source", "command": "make"}
    ],
    "dependencies": [],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "http://minisat.se/",
    "tutorial": "http://minisat.se/MiniSat.html",
    "api_reference": "http://minisat.se/downloads/MiniSat.pdf",
    "examples": "http://minisat.se/MiniSat.html"
  },

  "tactics": [],

  "error_patterns": [
    {
      "pattern": "UNSATISFIABLE",
      "meaning": "Formula has no solution",
      "common_causes": ["Contradictory constraints"],
      "fixes": ["Check constraints", "Relax requirements"]
    },
    {
      "pattern": "parse error",
      "meaning": "Invalid DIMACS format",
      "common_causes": ["Wrong format", "Missing header"],
      "fixes": ["Fix DIMACS format"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["boolean_formula"],
    "cli_command": "dashprove verify --backend minisat"
  },

  "performance": {
    "typical_runtime": "milliseconds to hours",
    "scalability": "Good for medium-sized problems",
    "memory_usage": "Low"
  },

  "comparisons": {
    "similar_tools": ["glucose", "cadical", "cryptominisat"],
    "advantages": [
      "Small codebase",
      "Easy to modify",
      "Good reference implementation"
    ],
    "disadvantages": [
      "Not state-of-the-art performance",
      "No preprocessing"
    ]
  },

  "metadata": {
    "version": "2.2.0",
    "last_updated": "2025-12-21",
    "maintainer": "Niklas Een & Niklas Sorensson",
    "license": "MIT"
  }
}
