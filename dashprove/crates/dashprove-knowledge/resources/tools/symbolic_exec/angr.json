{
  "id": "angr",
  "name": "angr",
  "category": "symbolic_execution",
  "subcategory": "binary",

  "description": "Binary analysis platform with symbolic execution",
  "long_description": "angr is a Python-based binary analysis platform that combines static and dynamic analysis, symbolic execution, and constraint solving. It can analyze binaries without source code and is used for vulnerability research, CTF challenges, and reverse engineering.",

  "capabilities": [
    "symbolic_execution",
    "static_analysis",
    "control_flow_recovery",
    "decompilation",
    "constraint_solving",
    "taint_analysis"
  ],
  "property_types": ["reachability", "assertion", "vulnerability"],
  "input_languages": ["binary", "elf", "pe", "mach-o"],
  "output_formats": ["concrete_inputs", "trace", "cfg"],

  "installation": {
    "methods": [
      {"type": "pip", "command": "pip install angr"},
      {"type": "docker", "command": "docker pull angr/angr"}
    ],
    "dependencies": ["python3", "z3"],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://angr.io/",
    "tutorial": "https://docs.angr.io/en/latest/",
    "api_reference": "https://api.angr.io/",
    "examples": "https://github.com/angr/angr-doc/tree/master/examples"
  },

  "tactics": [
    {
      "name": "explore",
      "description": "Explore execution paths",
      "syntax": "sm.explore(find=target, avoid=bad)",
      "when_to_use": "To find paths to target",
      "examples": ["sm.explore(find=0x400123)"]
    },
    {
      "name": "unicorn",
      "description": "Concrete execution",
      "syntax": "add_options={angr.options.UNICORN}",
      "when_to_use": "For faster concrete execution",
      "examples": ["state.options.add(angr.options.UNICORN)"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "timeout",
      "meaning": "Exploration took too long",
      "common_causes": ["Path explosion", "Complex constraints"],
      "fixes": ["Add constraints", "Limit exploration"]
    },
    {
      "pattern": "unsupported syscall",
      "meaning": "System call not modeled",
      "common_causes": ["Missing SimProcedure"],
      "fixes": ["Hook syscall", "Use concrete execution"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["reachability"],
    "cli_command": "dashprove verify --backend angr"
  },

  "performance": {
    "typical_runtime": "seconds to hours",
    "scalability": "Limited by path explosion",
    "memory_usage": "High"
  },

  "comparisons": {
    "similar_tools": ["manticore", "klee", "triton"],
    "advantages": [
      "No source needed",
      "Python API",
      "Active community"
    ],
    "disadvantages": [
      "Memory intensive",
      "Path explosion"
    ]
  },

  "metadata": {
    "version": "9.2.85",
    "last_updated": "2025-12-21",
    "maintainer": "angr team",
    "license": "BSD-2-Clause"
  }
}
