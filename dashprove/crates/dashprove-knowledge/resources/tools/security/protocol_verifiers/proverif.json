{
  "id": "proverif",
  "name": "ProVerif",
  "category": "security",
  "subcategory": "protocol_verifiers",

  "description": "Automatic cryptographic protocol verifier using applied pi-calculus",
  "long_description": "ProVerif is an automatic cryptographic protocol verifier in the formal model. It uses the applied pi-calculus to model protocols and Horn clause resolution for verification. ProVerif can verify secrecy, authentication, and equivalence properties for an unbounded number of sessions.",

  "capabilities": [
    "secrecy_verification",
    "authentication_verification",
    "equivalence_checking",
    "horn_clause_resolution",
    "applied_pi_calculus",
    "unbounded_sessions",
    "attack_reconstruction"
  ],
  "property_types": ["secrecy", "correspondence", "equivalence"],
  "input_languages": ["pv", "pi_calculus"],
  "output_formats": ["proof", "attack_trace"],

  "installation": {
    "methods": [
      {"type": "brew", "command": "brew install proverif"},
      {"type": "apt", "command": "apt install proverif"},
      {"type": "source", "url": "https://bblanche.gitlabpages.inria.fr/proverif/"}
    ],
    "dependencies": ["ocaml"],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://bblanche.gitlabpages.inria.fr/proverif/",
    "tutorial": "https://bblanche.gitlabpages.inria.fr/proverif/manual.pdf",
    "api_reference": "https://bblanche.gitlabpages.inria.fr/proverif/manual.pdf",
    "examples": "https://bblanche.gitlabpages.inria.fr/proverif/examples/"
  },

  "tactics": [
    {
      "name": "verify",
      "description": "Check protocol properties",
      "syntax": "proverif protocol.pv",
      "when_to_use": "Automated protocol verification",
      "examples": ["proverif handshake.pv"]
    },
    {
      "name": "html_output",
      "description": "Generate HTML trace",
      "syntax": "proverif -html output_dir protocol.pv",
      "when_to_use": "Visualizing attack traces",
      "examples": ["proverif -html results protocol.pv"]
    },
    {
      "name": "equivalence",
      "description": "Check observational equivalence",
      "syntax": "Define processes P and Q with choice",
      "when_to_use": "Verifying privacy/anonymity",
      "examples": ["choice[secret1, secret2]"]
    },
    {
      "name": "query",
      "description": "Define security property",
      "syntax": "query attacker(secret).",
      "when_to_use": "Specifying what to verify",
      "examples": ["query event(acceptA(x)) ==> event(sendB(x))."]
    }
  ],

  "error_patterns": [
    {
      "pattern": "RESULT not attacker",
      "meaning": "Secrecy property holds",
      "common_causes": ["Protocol is secure"],
      "fixes": []
    },
    {
      "pattern": "RESULT attacker",
      "meaning": "Attacker can learn secret",
      "common_causes": ["Protocol flaw", "Weak keys"],
      "fixes": ["Examine derivation", "Strengthen protocol"]
    },
    {
      "pattern": "cannot be proved",
      "meaning": "Analysis inconclusive",
      "common_causes": ["Over-approximation", "Complex protocol"],
      "fixes": ["Refine model", "Try Tamarin"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["security_protocol"],
    "cli_command": "dashprove verify --backend proverif"
  },

  "performance": {
    "typical_runtime": "Seconds to minutes",
    "scalability": "Unbounded sessions",
    "memory_usage": "Low to moderate"
  },

  "comparisons": {
    "similar_tools": ["tamarin", "verifpal", "scyther"],
    "advantages": [
      "Fast automatic analysis",
      "Well-established tool",
      "Good equivalence checking",
      "Extensive documentation"
    ],
    "disadvantages": [
      "May produce false attacks",
      "Less flexible than Tamarin"
    ]
  },

  "metadata": {
    "version": "2.05",
    "last_updated": "2025-12-20",
    "maintainer": "Bruno Blanchet (Inria)",
    "license": "GPL-2.0"
  }
}
