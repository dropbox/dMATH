{
  "id": "verifpal",
  "name": "Verifpal",
  "category": "security",
  "subcategory": "protocol_verifiers",

  "description": "User-friendly cryptographic protocol analysis tool",
  "long_description": "Verifpal is a modern cryptographic protocol analysis tool designed for accessibility. It uses a simple, intuitive language for protocol specification and can verify confidentiality, authentication, and unlinkability. Verifpal aims to make formal verification accessible to non-experts.",

  "capabilities": [
    "confidentiality_analysis",
    "authentication_analysis",
    "freshness_analysis",
    "unlinkability_analysis",
    "passive_attacker",
    "active_attacker",
    "mutation_analysis",
    "pretty_visualization"
  ],
  "property_types": ["confidentiality", "authentication", "freshness", "unlinkability"],
  "input_languages": ["verifpal"],
  "output_formats": ["proof", "attack", "visualization"],

  "installation": {
    "methods": [
      {"type": "brew", "command": "brew install verifpal"},
      {"type": "go", "command": "go install github.com/symbolicsoft/verifpal@latest"},
      {"type": "download", "url": "https://verifpal.com/"}
    ],
    "dependencies": [],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://verifpal.com/",
    "tutorial": "https://verifpal.com/manual/",
    "api_reference": "https://verifpal.com/manual/",
    "examples": "https://github.com/symbolicsoft/verifpal/tree/master/examples"
  },

  "tactics": [
    {
      "name": "verify",
      "description": "Analyze protocol",
      "syntax": "verifpal verify protocol.vp",
      "when_to_use": "Checking protocol properties",
      "examples": ["verifpal verify signal.vp"]
    },
    {
      "name": "pretty",
      "description": "Generate visual diagram",
      "syntax": "verifpal pretty protocol.vp",
      "when_to_use": "Visualizing protocol flow",
      "examples": ["verifpal pretty protocol.vp > diagram.html"]
    },
    {
      "name": "passive",
      "description": "Analyze with passive attacker",
      "syntax": "attacker[passive]",
      "when_to_use": "Checking against eavesdropper",
      "examples": ["attacker[passive]"]
    },
    {
      "name": "active",
      "description": "Analyze with active attacker",
      "syntax": "attacker[active]",
      "when_to_use": "Checking against MITM",
      "examples": ["attacker[active]"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "FAIL",
      "meaning": "Property violated",
      "common_causes": ["Protocol vulnerability", "Weak construction"],
      "fixes": ["Review attack trace", "Strengthen protocol"]
    },
    {
      "pattern": "analysis error",
      "meaning": "Model issue",
      "common_causes": ["Syntax error", "Undefined primitive"],
      "fixes": ["Check model syntax", "Use supported primitives"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["security_protocol"],
    "cli_command": "dashprove verify --backend verifpal"
  },

  "performance": {
    "typical_runtime": "Seconds",
    "scalability": "Bounded analysis",
    "memory_usage": "Low"
  },

  "comparisons": {
    "similar_tools": ["proverif", "tamarin", "scyther"],
    "advantages": [
      "Very accessible syntax",
      "Fast analysis",
      "Good visualization",
      "Active development"
    ],
    "disadvantages": [
      "Less powerful than Tamarin/ProVerif",
      "Bounded number of sessions",
      "Newer (less proven)"
    ]
  },

  "metadata": {
    "version": "0.26.0",
    "last_updated": "2025-12-20",
    "maintainer": "Symbolic Software",
    "license": "GPL-3.0"
  }
}
