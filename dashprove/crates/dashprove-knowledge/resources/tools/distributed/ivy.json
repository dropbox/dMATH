{
  "id": "ivy",
  "name": "Ivy",
  "category": "distributed_verification",
  "subcategory": "protocol",

  "description": "Interactive verification for distributed protocols",
  "long_description": "Ivy is a tool for interactive verification of distributed protocols. It uses a modular approach where protocols are specified in first-order logic with background theories, and verification conditions are discharged using SMT solvers. Ivy has been used to verify protocols like Paxos and Raft.",

  "capabilities": [
    "protocol_verification",
    "invariant_inference",
    "inductive_verification",
    "smt_based",
    "modular_verification",
    "counterexample_generation"
  ],
  "property_types": ["invariant", "safety", "liveness"],
  "input_languages": ["ivy"],
  "output_formats": ["verification_result", "counterexample", "trace"],

  "installation": {
    "methods": [
      {"type": "pip", "command": "pip install ms-ivy"},
      {"type": "source", "command": "python setup.py install"}
    ],
    "dependencies": ["python3", "z3"],
    "platforms": ["linux", "macos"]
  },

  "documentation": {
    "official": "https://microsoft.github.io/ivy/",
    "tutorial": "https://microsoft.github.io/ivy/language.html",
    "api_reference": "https://microsoft.github.io/ivy/",
    "examples": "https://github.com/microsoft/ivy/tree/master/examples"
  },

  "tactics": [
    {
      "name": "isolate",
      "description": "Define verification boundary",
      "syntax": "isolate name = { ... }",
      "when_to_use": "For modular verification",
      "examples": ["isolate node_protocol = { ... }"]
    },
    {
      "name": "invariant",
      "description": "Specify invariant",
      "syntax": "invariant [name] formula",
      "when_to_use": "For safety properties",
      "examples": ["invariant unique_leader: leader(N1) & leader(N2) -> N1 = N2"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "counterexample",
      "meaning": "Invariant can be violated",
      "common_causes": ["Invariant too weak", "Bug in protocol"],
      "fixes": ["Strengthen invariant", "Fix protocol"]
    },
    {
      "pattern": "failed to prove",
      "meaning": "SMT solver couldn't verify",
      "common_causes": ["Missing auxiliary invariant"],
      "fixes": ["Add supporting invariant"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["invariant", "safety"],
    "cli_command": "dashprove verify --backend ivy"
  },

  "performance": {
    "typical_runtime": "seconds to minutes",
    "scalability": "Good for protocol-level",
    "memory_usage": "Moderate"
  },

  "comparisons": {
    "similar_tools": ["tlaplus", "spin", "p"],
    "advantages": [
      "First-order logic",
      "Modular verification",
      "Good for distributed systems"
    ],
    "disadvantages": [
      "Manual invariant annotation",
      "Limited to safety properties"
    ]
  },

  "metadata": {
    "version": "1.8.0",
    "last_updated": "2025-12-21",
    "maintainer": "Microsoft Research",
    "license": "MIT"
  }
}
