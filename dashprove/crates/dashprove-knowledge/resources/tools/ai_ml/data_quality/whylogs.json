{
  "id": "whylogs",
  "name": "whylogs",
  "category": "ai_ml",
  "subcategory": "data_quality",

  "description": "Open-source library for logging statistical profiles of data",
  "long_description": "whylogs is an open-source library for logging statistical profiles of data at any scale. It creates lightweight statistical summaries (profiles) that can track data characteristics over time without storing raw data. Designed for data monitoring and ML observability at scale.",

  "capabilities": [
    "data_profiling",
    "statistical_logging",
    "drift_detection",
    "schema_monitoring",
    "constraint_validation",
    "mergeable_profiles",
    "streaming_support",
    "privacy_preserving"
  ],
  "property_types": ["data_profile", "data_drift", "schema"],
  "input_languages": ["python"],
  "output_formats": ["profile", "constraints_report", "visualization"],

  "installation": {
    "methods": [
      {"type": "pip", "command": "pip install whylogs"},
      {"type": "source", "url": "https://github.com/whylabs/whylogs"}
    ],
    "dependencies": ["pandas", "numpy"],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://whylogs.readthedocs.io/",
    "tutorial": "https://whylogs.readthedocs.io/en/stable/examples/",
    "api_reference": "https://whylogs.readthedocs.io/en/stable/whylogs.html",
    "examples": "https://github.com/whylabs/whylogs/tree/mainline/python/examples"
  },

  "tactics": [
    {
      "name": "log",
      "description": "Create profile from data",
      "syntax": "why.log(df).profile()",
      "when_to_use": "Profiling data batch",
      "examples": ["profile = why.log(df).profile()"]
    },
    {
      "name": "constraints",
      "description": "Define and check constraints",
      "syntax": "constraints = DatasetConstraints(); profile.check_constraints()",
      "when_to_use": "Validating data properties",
      "examples": ["constraints.set('column', 'min_value', 0); profile.check_constraints(constraints)"]
    },
    {
      "name": "merge",
      "description": "Merge profiles",
      "syntax": "profile1.merge(profile2)",
      "when_to_use": "Combining profiles over time",
      "examples": ["daily_profile = hourly_profiles[0].merge(hourly_profiles[1:])"]
    },
    {
      "name": "drift_calc",
      "description": "Calculate drift between profiles",
      "syntax": "current.summary_drift(reference)",
      "when_to_use": "Detecting data changes",
      "examples": ["drift = current_profile.summary_drift(reference_profile)"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "Constraint violation",
      "meaning": "Data does not meet constraint",
      "common_causes": ["Data quality issue", "Drift"],
      "fixes": ["Investigate data", "Update constraints"]
    },
    {
      "pattern": "Profile merge failed",
      "meaning": "Incompatible profiles",
      "common_causes": ["Schema change", "Different columns"],
      "fixes": ["Check schema compatibility"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["data_quality"],
    "cli_command": "dashprove verify --backend whylogs"
  },

  "performance": {
    "typical_runtime": "Very fast (streaming)",
    "scalability": "Excellent (any scale)",
    "memory_usage": "Very low (fixed size profiles)"
  },

  "comparisons": {
    "similar_tools": ["great_expectations", "evidently", "tensorflow_data_validation"],
    "advantages": [
      "Very lightweight profiles",
      "Streaming support",
      "Privacy preserving",
      "Scale to any data size"
    ],
    "disadvantages": [
      "Less detailed than raw analysis",
      "Statistical approximations"
    ]
  },

  "metadata": {
    "version": "1.3.0",
    "last_updated": "2025-12-20",
    "maintainer": "WhyLabs",
    "license": "Apache-2.0"
  }
}
