{
  "id": "metamath",
  "name": "Metamath",
  "category": "theorem_prover",
  "subcategory": "set_theory",

  "description": "Ultra-minimalist proof verifier for formal systems",
  "long_description": "Metamath is a tiny language for expressing theorems in abstract mathematics and a program to verify proofs. It is designed for simplicity and has been used to formalize large bodies of mathematics. The set.mm database contains tens of thousands of proven theorems in ZFC set theory.",

  "capabilities": [
    "minimal_kernel",
    "substitution_based",
    "multiple_logics",
    "proof_verification",
    "proof_compression"
  ],
  "property_types": ["theorem", "axiom", "definition"],
  "input_languages": ["metamath"],
  "output_formats": ["verified_database"],

  "installation": {
    "methods": [
      {"type": "source", "command": "git clone https://github.com/metamath/metamath-exe && cd metamath-exe && make"},
      {"type": "apt", "command": "apt install metamath"}
    ],
    "dependencies": [],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "http://us.metamath.org/",
    "book": "http://us.metamath.org/downloads/metamath.pdf",
    "set_mm": "http://us.metamath.org/mpeuni/mmset.html"
  },

  "tactics": [
    {
      "name": "prove",
      "description": "Interactive proof mode",
      "syntax": "prove label",
      "when_to_use": "For constructing proofs",
      "examples": ["prove mytheorem"]
    },
    {
      "name": "minimize_with",
      "description": "Find shorter proof",
      "syntax": "minimize_with *",
      "when_to_use": "To optimize proof length",
      "examples": ["minimize_with *"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "?Error",
      "meaning": "Syntax or proof error",
      "common_causes": ["Invalid proof step", "Wrong substitution"],
      "fixes": ["Check proof syntax", "Verify substitutions"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["theorem"],
    "cli_command": "dashprove verify --backend metamath"
  },

  "performance": {
    "typical_runtime": "milliseconds to seconds",
    "scalability": "Very fast verification",
    "memory_usage": "Low"
  },

  "comparisons": {
    "similar_tools": ["mizar", "coq", "lean4"],
    "advantages": [
      "Extremely simple kernel",
      "Fast verification",
      "Large ZFC database"
    ],
    "disadvantages": [
      "Low-level proof construction",
      "No tactics"
    ]
  },

  "metadata": {
    "version": "0.198",
    "last_updated": "2025-12-21",
    "maintainer": "Metamath community",
    "license": "CC0"
  }
}
