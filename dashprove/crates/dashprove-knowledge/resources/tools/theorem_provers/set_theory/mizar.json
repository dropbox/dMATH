{
  "id": "mizar",
  "name": "Mizar",
  "category": "theorem_prover",
  "subcategory": "set_theory",

  "description": "Proof checker based on Tarski-Grothendieck set theory",
  "long_description": "Mizar is a proof assistant based on Tarski-Grothendieck set theory. It is notable for its human-readable proof language designed to resemble traditional mathematical writing. The Mizar Mathematical Library (MML) contains over 60,000 lemmas and is one of the largest formalized mathematics repositories.",

  "capabilities": [
    "set_theory",
    "readable_proofs",
    "large_library",
    "soft_types",
    "natural_deduction"
  ],
  "property_types": ["theorem", "definition", "scheme"],
  "input_languages": ["mizar"],
  "output_formats": ["verified_article"],

  "installation": {
    "methods": [
      {"type": "download", "command": "Download from http://mizar.org/"}
    ],
    "dependencies": [],
    "platforms": ["linux", "windows"]
  },

  "documentation": {
    "official": "http://mizar.org/",
    "primer": "http://mizar.org/project/fm2011-mizar-article.pdf",
    "mml": "http://mizar.org/library/"
  },

  "tactics": [
    {
      "name": "by",
      "description": "Justify step with references",
      "syntax": "by REF1, REF2;",
      "when_to_use": "For justified proof steps",
      "examples": ["by XREAL_1:1;"]
    },
    {
      "name": "proof",
      "description": "Begin detailed proof",
      "syntax": "proof ... end;",
      "when_to_use": "When automatic proof fails",
      "examples": ["proof let x; assume x > 0; ... end;"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "*4",
      "meaning": "Unknown reference",
      "common_causes": ["Typo in reference", "Missing import"],
      "fixes": ["Check MML reference", "Add environ directive"]
    },
    {
      "pattern": "*601",
      "meaning": "Inference cannot be verified",
      "common_causes": ["Missing intermediate step"],
      "fixes": ["Add more detailed proof steps"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["theorem"],
    "cli_command": "dashprove verify --backend mizar"
  },

  "performance": {
    "typical_runtime": "seconds per article",
    "scalability": "Large library support",
    "memory_usage": "Moderate"
  },

  "comparisons": {
    "similar_tools": ["metamath", "isabelle", "coq"],
    "advantages": [
      "Readable proofs",
      "Large library",
      "Set-theoretic foundation"
    ],
    "disadvantages": [
      "Steep learning curve",
      "Less modern tooling"
    ]
  },

  "metadata": {
    "version": "8.1.11",
    "last_updated": "2025-12-21",
    "maintainer": "Mizar team",
    "license": "GPL-3.0"
  }
}
