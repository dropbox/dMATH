{
  "id": "hollight",
  "name": "HOL Light",
  "category": "theorem_prover",
  "subcategory": "hol",

  "description": "Minimalist HOL theorem prover with small trusted kernel",
  "long_description": "HOL Light is a member of the HOL family of interactive theorem provers, distinguished by its minimalist design and very small trusted kernel (around 400 lines of OCaml). It has been used for major formalization projects including the Flyspeck proof of the Kepler conjecture.",

  "capabilities": [
    "higher_order_logic",
    "small_kernel",
    "proof_recording",
    "tactics",
    "proof_automation"
  ],
  "property_types": ["theorem", "lemma", "definition"],
  "input_languages": ["hol_light"],
  "output_formats": ["proof_term", "theorem"],

  "installation": {
    "methods": [
      {"type": "source", "command": "git clone https://github.com/jrh13/hol-light && cd hol-light && make"},
      {"type": "opam", "command": "opam install hol_light"}
    ],
    "dependencies": ["ocaml", "camlp5"],
    "platforms": ["linux", "macos"]
  },

  "documentation": {
    "official": "https://www.cl.cam.ac.uk/~jrh13/hol-light/",
    "tutorial": "https://www.cl.cam.ac.uk/~jrh13/hol-light/tutorial.pdf",
    "reference": "https://www.cl.cam.ac.uk/~jrh13/hol-light/reference.html"
  },

  "tactics": [
    {
      "name": "REWRITE_TAC",
      "description": "Rewrite with equations",
      "syntax": "REWRITE_TAC[thm1; thm2]",
      "when_to_use": "For equational reasoning",
      "examples": ["REWRITE_TAC[ADD_SYM]"]
    },
    {
      "name": "MESON_TAC",
      "description": "First-order prover",
      "syntax": "MESON_TAC[thm1]",
      "when_to_use": "For first-order goals",
      "examples": ["MESON_TAC[]"]
    },
    {
      "name": "ARITH_TAC",
      "description": "Linear arithmetic",
      "syntax": "ARITH_TAC",
      "when_to_use": "For numeric goals",
      "examples": ["ARITH_TAC"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "Exception: Failure",
      "meaning": "Tactic failed",
      "common_causes": ["Wrong tactic for goal", "Missing lemma"],
      "fixes": ["Try different tactic", "Prove intermediate lemma"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["theorem"],
    "cli_command": "dashprove verify --backend hollight"
  },

  "performance": {
    "typical_runtime": "interactive",
    "scalability": "Good with automation",
    "memory_usage": "Moderate"
  },

  "comparisons": {
    "similar_tools": ["hol4", "isabelle", "coq"],
    "advantages": [
      "Very small kernel",
      "LCF-style architecture",
      "Strong automation"
    ],
    "disadvantages": [
      "Less IDE support",
      "Smaller community than Coq/Isabelle"
    ]
  },

  "metadata": {
    "version": "2.6.0",
    "last_updated": "2025-12-21",
    "maintainer": "John Harrison",
    "license": "BSD-2-Clause"
  }
}
