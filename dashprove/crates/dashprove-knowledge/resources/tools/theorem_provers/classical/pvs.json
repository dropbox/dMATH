{
  "id": "pvs",
  "name": "PVS",
  "category": "theorem_prover",
  "subcategory": "classical",

  "description": "Prototype Verification System with rich type system",
  "long_description": "PVS (Prototype Verification System) is an interactive theorem prover from SRI International. It features a rich type system including dependent types, predicate subtypes, and parametric theories. PVS has strong automation through decision procedures and is widely used in safety-critical system verification.",

  "capabilities": [
    "predicate_subtypes",
    "dependent_types",
    "parametric_theories",
    "decision_procedures",
    "type_checking_proofs"
  ],
  "property_types": ["theorem", "lemma", "type_correctness"],
  "input_languages": ["pvs"],
  "output_formats": ["proof", "type_judgment"],

  "installation": {
    "methods": [
      {"type": "download", "command": "Download from https://pvs.csl.sri.com/"}
    ],
    "dependencies": ["emacs", "lisp"],
    "platforms": ["linux", "macos"]
  },

  "documentation": {
    "official": "https://pvs.csl.sri.com/",
    "prover_guide": "https://pvs.csl.sri.com/doc/pvs-prover-guide.pdf",
    "language_ref": "https://pvs.csl.sri.com/doc/pvs-language-reference.pdf"
  },

  "tactics": [
    {
      "name": "grind",
      "description": "Powerful combination of strategies",
      "syntax": "(grind)",
      "when_to_use": "For most goals as first attempt",
      "examples": ["(grind)"]
    },
    {
      "name": "induct",
      "description": "Induction",
      "syntax": "(induct \"x\")",
      "when_to_use": "For inductive proofs",
      "examples": ["(induct \"n\")"]
    },
    {
      "name": "assert",
      "description": "Add fact and simplify",
      "syntax": "(assert)",
      "when_to_use": "For propositional reasoning",
      "examples": ["(assert)"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "Typecheck error",
      "meaning": "Type checking failed",
      "common_causes": ["Type mismatch", "Unprovable TCC"],
      "fixes": ["Fix type", "Prove TCC separately"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["theorem"],
    "cli_command": "dashprove verify --backend pvs"
  },

  "performance": {
    "typical_runtime": "interactive",
    "scalability": "Good with decision procedures",
    "memory_usage": "Moderate"
  },

  "comparisons": {
    "similar_tools": ["isabelle", "coq", "lean4"],
    "advantages": [
      "Rich type system",
      "Strong decision procedures",
      "Mature tooling"
    ],
    "disadvantages": [
      "Emacs-centric",
      "Less active development"
    ]
  },

  "metadata": {
    "version": "7.1",
    "last_updated": "2025-12-21",
    "maintainer": "SRI International",
    "license": "GPL-2.0"
  }
}
