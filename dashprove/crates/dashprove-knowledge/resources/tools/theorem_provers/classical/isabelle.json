{
  "id": "isabelle",
  "name": "Isabelle/HOL",
  "category": "theorem_prover",
  "subcategory": "classical",

  "description": "Generic proof assistant with powerful automation",
  "long_description": "Isabelle is a generic proof assistant that supports multiple logics, with Isabelle/HOL (Higher-Order Logic) being the most popular. Known for its powerful automation including Sledgehammer (which invokes external ATPs), Isabelle has been used for large-scale verification projects like seL4 microkernel.",

  "capabilities": [
    "higher_order_logic",
    "powerful_automation",
    "sledgehammer",
    "code_generation",
    "locales",
    "type_classes",
    "refinement"
  ],
  "property_types": ["theorem", "lemma", "definition", "locale", "datatype"],
  "input_languages": ["isar", "ml"],
  "output_formats": ["proof", "sml", "ocaml", "haskell", "scala"],

  "installation": {
    "methods": [
      {"type": "download", "url": "https://isabelle.in.tum.de/download.html"},
      {"type": "brew", "command": "brew install --cask isabelle"}
    ],
    "dependencies": ["java", "polyml"],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://isabelle.in.tum.de/",
    "tutorial": "https://isabelle.in.tum.de/doc/tutorial.pdf",
    "api_reference": "https://isabelle.in.tum.de/doc/isar-ref.pdf",
    "examples": "https://www.isa-afp.org/"
  },

  "tactics": [
    {
      "name": "auto",
      "description": "Automatic reasoner",
      "syntax": "by auto",
      "when_to_use": "For many routine goals",
      "examples": ["by auto", "by (auto simp: lemma1)"]
    },
    {
      "name": "simp",
      "description": "Simplifier",
      "syntax": "by simp",
      "when_to_use": "For rewriting-based proofs",
      "examples": ["by simp", "by (simp add: assms)"]
    },
    {
      "name": "blast",
      "description": "Classical reasoner",
      "syntax": "by blast",
      "when_to_use": "For classical logic",
      "examples": ["by blast"]
    },
    {
      "name": "sledgehammer",
      "description": "External ATP interface",
      "syntax": "sledgehammer",
      "when_to_use": "When stuck - finds proof",
      "examples": ["sledgehammer"]
    },
    {
      "name": "induction",
      "description": "Proof by induction",
      "syntax": "proof (induction x)",
      "when_to_use": "For inductive types",
      "examples": ["proof (induction xs)", "by (induction n) auto"]
    },
    {
      "name": "cases",
      "description": "Case split",
      "syntax": "proof (cases x)",
      "when_to_use": "For case analysis",
      "examples": ["proof (cases x)", "by (cases \"x = 0\") auto"]
    },
    {
      "name": "metis",
      "description": "First-order prover",
      "syntax": "by (metis lemmas)",
      "when_to_use": "When sledgehammer suggests it",
      "examples": ["by (metis add_assoc add_comm)"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "Failed to finish proof",
      "meaning": "Proof method couldn't solve goal",
      "common_causes": ["Insufficient automation", "Wrong approach"],
      "fixes": ["Try sledgehammer", "Add lemmas to simp"]
    },
    {
      "pattern": "Type unification failed",
      "meaning": "Type error",
      "common_causes": ["Polymorphism issue", "Wrong type"],
      "fixes": ["Add type annotations", "Check function types"]
    },
    {
      "pattern": "Tactic failed",
      "meaning": "Tactic doesn't apply",
      "common_causes": ["Goal shape wrong"],
      "fixes": ["Check goal state", "Try different tactic"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["theorem", "lemma", "definition"],
    "cli_command": "dashprove verify --backend isabelle"
  },

  "performance": {
    "typical_runtime": "milliseconds to hours",
    "scalability": "Handles very large projects (seL4)",
    "memory_usage": "4-32GB"
  },

  "comparisons": {
    "similar_tools": ["coq", "lean4", "hol4"],
    "advantages": [
      "Sledgehammer automation",
      "Readable Isar proofs",
      "Massive library (AFP)",
      "Excellent code generation"
    ],
    "disadvantages": [
      "Not dependently typed",
      "Heavy IDE (jEdit)",
      "Classical logic only"
    ]
  },

  "metadata": {
    "version": "2024",
    "last_updated": "2025-12-20",
    "maintainer": "TU Munich / Cambridge",
    "license": "BSD"
  }
}
