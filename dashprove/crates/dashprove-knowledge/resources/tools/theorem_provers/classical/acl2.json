{
  "id": "acl2",
  "name": "ACL2",
  "category": "theorem_prover",
  "subcategory": "classical",

  "description": "Applicative Common Lisp theorem prover for software/hardware verification",
  "long_description": "ACL2 (A Computational Logic for Applicative Common Lisp) is a theorem prover for first-order logic with a Lisp-like syntax. It's used extensively in hardware and software verification, including AMD processor verification. ACL2 combines a programming language with a theorem prover, allowing executable specifications.",

  "capabilities": [
    "induction",
    "rewriting",
    "executable_specifications",
    "hardware_verification",
    "software_verification",
    "termination_analysis"
  ],
  "property_types": ["theorem", "defthm", "defun"],
  "input_languages": ["lisp", "acl2"],
  "output_formats": ["proof", "executable"],

  "installation": {
    "methods": [
      {"type": "source", "command": "make LISP=sbcl"},
      {"type": "cert", "command": "build/make-acl2-from-scratch.sh"}
    ],
    "dependencies": ["sbcl", "ccl", "gcl"],
    "platforms": ["linux", "macos"]
  },

  "documentation": {
    "official": "https://www.cs.utexas.edu/users/moore/acl2/",
    "tutorial": "https://www.cs.utexas.edu/users/moore/acl2/manuals/current/manual/",
    "api_reference": "https://www.cs.utexas.edu/users/moore/acl2/manuals/current/manual/index-seo.php",
    "examples": "https://github.com/acl2/acl2/tree/master/books"
  },

  "tactics": [
    {
      "name": "induct",
      "description": "Automatic induction",
      "syntax": ":induct hint",
      "when_to_use": "For recursive function properties",
      "examples": ["(defthm foo (implies (natp n) ...) :hints ((\"Goal\" :induct t)))"]
    },
    {
      "name": "enable",
      "description": "Enable rewrite rules",
      "syntax": ":in-theory (enable ...)",
      "when_to_use": "To activate disabled rules",
      "examples": [":hints ((\"Goal\" :in-theory (enable rule)))"]
    },
    {
      "name": "cases",
      "description": "Case split",
      "syntax": ":cases ((case1) (case2))",
      "when_to_use": "For case analysis",
      "examples": [":hints ((\"Goal\" :cases ((evenp n))))"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "Proof failed",
      "meaning": "Prover could not complete proof",
      "common_causes": ["Missing lemma", "Wrong induction scheme"],
      "fixes": ["Add helper lemma", "Provide induction hint"]
    },
    {
      "pattern": "Non-termination suspected",
      "meaning": "Function may not terminate",
      "common_causes": ["Decreasing measure not found", "Complex recursion"],
      "fixes": ["Provide measure", "Use mbe"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["theorem", "invariant"],
    "cli_command": "dashprove verify --backend acl2"
  },

  "performance": {
    "typical_runtime": "seconds to hours",
    "scalability": "Excellent for industrial proofs",
    "memory_usage": "Variable"
  },

  "comparisons": {
    "similar_tools": ["isabelle", "coq", "pvs"],
    "advantages": [
      "Industrial track record",
      "Executable specifications",
      "Automatic rewriting"
    ],
    "disadvantages": [
      "Lisp syntax",
      "First-order only",
      "Steep learning curve"
    ]
  },

  "metadata": {
    "version": "8.5",
    "last_updated": "2025-12-21",
    "maintainer": "Matt Kaufmann & J Moore",
    "license": "BSD-3-Clause"
  }
}
