{
  "id": "hol4",
  "name": "HOL4",
  "category": "theorem_prover",
  "subcategory": "classical",

  "description": "Higher-order logic theorem prover in the LCF tradition",
  "long_description": "HOL4 is an interactive theorem prover for higher-order logic in the LCF tradition. It features a small trusted kernel with proofs built from primitive inferences. HOL4 is used in hardware verification, security protocol analysis, and formalization of mathematics.",

  "capabilities": [
    "higher_order_logic",
    "induction",
    "rewriting",
    "decision_procedures",
    "code_extraction",
    "proof_automation"
  ],
  "property_types": ["theorem", "definition", "inductive"],
  "input_languages": ["sml", "holscript"],
  "output_formats": ["proof", "sml"],

  "installation": {
    "methods": [
      {"type": "source", "command": "poly < tools/smart-configure.sml && bin/build"},
      {"type": "nix", "command": "nix-env -i hol"}
    ],
    "dependencies": ["polyml", "mlton"],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://hol-theorem-prover.org/",
    "tutorial": "https://hol-theorem-prover.org/tutorial.html",
    "api_reference": "https://hol-theorem-prover.org/documentation.html",
    "examples": "https://github.com/HOL-Theorem-Prover/HOL/tree/develop/examples"
  },

  "tactics": [
    {
      "name": "simp",
      "description": "Simplification tactic",
      "syntax": "simp[]",
      "when_to_use": "For rewriting goals",
      "examples": ["simp[theorem_name]"]
    },
    {
      "name": "Induct_on",
      "description": "Structural induction",
      "syntax": "Induct_on `x`",
      "when_to_use": "For inductive proofs",
      "examples": ["Induct_on `n`"]
    },
    {
      "name": "rw",
      "description": "Rewrite tactic",
      "syntax": "rw[]",
      "when_to_use": "For directed rewriting",
      "examples": ["rw[theorem]"]
    },
    {
      "name": "metis_tac",
      "description": "First-order automation",
      "syntax": "metis_tac[]",
      "when_to_use": "For first-order goals",
      "examples": ["metis_tac[thm1, thm2]"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "proof failed",
      "meaning": "Tactic couldn't solve goal",
      "common_causes": ["Wrong tactic", "Missing lemma"],
      "fixes": ["Try different tactic", "Prove auxiliary lemma"]
    },
    {
      "pattern": "type mismatch",
      "meaning": "Type error in term",
      "common_causes": ["Wrong type", "Missing type annotation"],
      "fixes": ["Fix types", "Add type constraint"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["theorem"],
    "cli_command": "dashprove verify --backend hol4"
  },

  "performance": {
    "typical_runtime": "seconds to hours",
    "scalability": "Good for medium-sized formalizations",
    "memory_usage": "Moderate"
  },

  "comparisons": {
    "similar_tools": ["isabelle", "coq", "lean4"],
    "advantages": [
      "Small trusted kernel",
      "Good automation",
      "SML integration"
    ],
    "disadvantages": [
      "SML syntax can be verbose",
      "Smaller community than Isabelle/Coq"
    ]
  },

  "metadata": {
    "version": "Kananaskis-14",
    "last_updated": "2025-12-21",
    "maintainer": "HOL Developers",
    "license": "BSD-3-Clause"
  }
}
