{
  "id": "ats",
  "name": "ATS",
  "category": "theorem_prover",
  "subcategory": "dependent",

  "description": "Applied Type System with linear types and theorem proving",
  "long_description": "ATS (Applied Type System) is a statically typed programming language that combines theorem proving with practical systems programming. It features dependent types, linear types, and the ability to write proofs that are erased at runtime, enabling verified low-level programming.",

  "capabilities": [
    "dependent_types",
    "linear_types",
    "theorem_proving",
    "proof_erasure",
    "c_interop"
  ],
  "property_types": ["theorem", "proposition", "type_index"],
  "input_languages": ["ats"],
  "output_formats": ["c_code", "proof_checked"],

  "installation": {
    "methods": [
      {"type": "source", "command": "git clone https://github.com/ats-lang/ats2-lang && cd ats2-lang && make all"},
      {"type": "homebrew", "command": "brew install ats2-postiats"}
    ],
    "dependencies": ["gcc"],
    "platforms": ["linux", "macos"]
  },

  "documentation": {
    "official": "http://www.ats-lang.org/",
    "tutorial": "http://ats-lang.sourceforge.net/DOCUMENT/INT2PROGINATS/HTML/",
    "wiki": "http://ats-lang.sourceforge.net/DOCUMENT/"
  },

  "tactics": [
    {
      "name": "prfun",
      "description": "Proof function",
      "syntax": "prfun name {args} : prop = ...",
      "when_to_use": "For constructing proofs",
      "examples": ["prfun lemma {n:nat} (): [n >= 0] void = ()"]
    },
    {
      "name": "sif",
      "description": "Static conditional",
      "syntax": "sif cond then e1 else e2",
      "when_to_use": "For type-level computation",
      "examples": ["sif n > 0 then ... else ..."]
    }
  ],

  "error_patterns": [
    {
      "pattern": "constraint unsatisfied",
      "meaning": "Type constraint cannot be proven",
      "common_causes": ["Missing proof", "Incorrect type index"],
      "fixes": ["Add proof", "Fix type annotation"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["theorem", "type_property"],
    "cli_command": "dashprove verify --backend ats"
  },

  "performance": {
    "typical_runtime": "compilation time",
    "scalability": "Good for verified systems code",
    "memory_usage": "Low at runtime (proofs erased)"
  },

  "comparisons": {
    "similar_tools": ["idris", "fstar", "rust"],
    "advantages": [
      "Linear types",
      "Proof erasure",
      "Low-level control"
    ],
    "disadvantages": [
      "Steep learning curve",
      "Small community"
    ]
  },

  "metadata": {
    "version": "0.4.2",
    "last_updated": "2025-12-21",
    "maintainer": "Hongwei Xi",
    "license": "GPL-3.0"
  }
}
