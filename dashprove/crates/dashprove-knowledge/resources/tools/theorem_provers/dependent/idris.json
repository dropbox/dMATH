{
  "id": "idris",
  "name": "Idris 2",
  "category": "theorem_prover",
  "subcategory": "dependent",

  "description": "Dependently typed language with quantitative type theory",
  "long_description": "Idris 2 is a purely functional programming language with first-class types. It features quantitative type theory (QTT) which tracks how variables are used, enabling resource-aware programming. Idris is designed for both practical programming and theorem proving.",

  "capabilities": [
    "dependent_types",
    "linear_types",
    "quantitative_types",
    "effects_system",
    "type_driven_development",
    "elaborator_reflection"
  ],
  "property_types": ["theorem", "lemma", "proof"],
  "input_languages": ["idris"],
  "output_formats": ["proof_term", "executable", "error"],

  "installation": {
    "methods": [
      {"type": "pack", "command": "pack install idris2"},
      {"type": "nix", "command": "nix-env -i idris2"},
      {"type": "source", "command": "make bootstrap && make install"}
    ],
    "dependencies": ["chez-scheme"],
    "platforms": ["linux", "macos"]
  },

  "documentation": {
    "official": "https://idris2.readthedocs.io/",
    "tutorial": "https://idris2.readthedocs.io/en/latest/tutorial/",
    "api_reference": "https://idris2.readthedocs.io/en/latest/reference/",
    "examples": "https://github.com/idris-lang/Idris2/tree/main/samples"
  },

  "tactics": [
    {
      "name": "trivial",
      "description": "Solve trivial goals",
      "syntax": "trivial",
      "when_to_use": "When goal is obviously true",
      "examples": ["trivial"]
    },
    {
      "name": "search",
      "description": "Proof search",
      "syntax": "search",
      "when_to_use": "For automatic proof search",
      "examples": ["search 80"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "Mismatch between",
      "meaning": "Type mismatch",
      "common_causes": ["Wrong type", "Missing proof"],
      "fixes": ["Fix type", "Provide proof term"]
    },
    {
      "pattern": "0 is not accessible",
      "meaning": "Linear variable used incorrectly",
      "common_causes": ["Variable used more than once", "Variable not used"],
      "fixes": ["Adjust usage", "Mark as unrestricted"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["theorem"],
    "cli_command": "dashprove verify --backend idris"
  },

  "performance": {
    "typical_runtime": "seconds to minutes",
    "scalability": "Good for medium-sized programs",
    "memory_usage": "Moderate"
  },

  "comparisons": {
    "similar_tools": ["agda", "coq", "lean4"],
    "advantages": [
      "Practical programming focus",
      "Linear types",
      "Good error messages"
    ],
    "disadvantages": [
      "Smaller community than Coq",
      "Fewer tactics"
    ]
  },

  "metadata": {
    "version": "0.6.0",
    "last_updated": "2025-12-21",
    "maintainer": "Idris Community",
    "license": "BSD-3-Clause"
  }
}
