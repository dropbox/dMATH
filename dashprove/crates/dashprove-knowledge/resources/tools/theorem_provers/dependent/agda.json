{
  "id": "agda",
  "name": "Agda",
  "category": "theorem_prover",
  "subcategory": "dependent",

  "description": "Dependently typed functional programming language and proof assistant",
  "long_description": "Agda is a dependently typed functional programming language with support for interactive proof development. It features inductive data types, pattern matching, and termination checking. Agda is used for both programming and proving, with a focus on constructive mathematics.",

  "capabilities": [
    "dependent_types",
    "inductive_types",
    "pattern_matching",
    "termination_checking",
    "universe_polymorphism",
    "interactive_proving"
  ],
  "property_types": ["theorem", "lemma", "definition"],
  "input_languages": ["agda"],
  "output_formats": ["proof_term", "error"],

  "installation": {
    "methods": [
      {"type": "cabal", "command": "cabal install Agda"},
      {"type": "stack", "command": "stack install Agda"},
      {"type": "nix", "command": "nix-env -i agda"}
    ],
    "dependencies": ["ghc", "cabal-install"],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://agda.readthedocs.io/",
    "tutorial": "https://agda.readthedocs.io/en/latest/getting-started/tutorial-list.html",
    "api_reference": "https://agda.readthedocs.io/en/latest/language/",
    "examples": "https://github.com/agda/agda/tree/master/examples"
  },

  "tactics": [
    {
      "name": "auto",
      "description": "Automatic proof search",
      "syntax": "auto",
      "when_to_use": "For simple goals",
      "examples": ["auto"]
    },
    {
      "name": "refine",
      "description": "Refine goal with constructor",
      "syntax": "C-c C-r",
      "when_to_use": "To introduce constructors",
      "examples": ["refine"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "Termination checking failed",
      "meaning": "Function may not terminate",
      "common_causes": ["Missing termination argument", "Non-structural recursion"],
      "fixes": ["Add termination proof", "Use well-founded recursion"]
    },
    {
      "pattern": "No instance of type",
      "meaning": "Type class instance not found",
      "common_causes": ["Missing import", "Instance not in scope"],
      "fixes": ["Import instance", "Define instance"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["theorem"],
    "cli_command": "dashprove verify --backend agda"
  },

  "performance": {
    "typical_runtime": "seconds to minutes",
    "scalability": "Good for medium-sized proofs",
    "memory_usage": "Moderate"
  },

  "comparisons": {
    "similar_tools": ["coq", "lean4", "idris"],
    "advantages": [
      "Clean syntax",
      "Good termination checking",
      "Interactive development"
    ],
    "disadvantages": [
      "Less automation than Coq",
      "Smaller library ecosystem"
    ]
  },

  "metadata": {
    "version": "2.6.4",
    "last_updated": "2025-12-21",
    "maintainer": "Agda Team",
    "license": "MIT"
  }
}
