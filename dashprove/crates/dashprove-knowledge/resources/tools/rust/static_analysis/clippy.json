{
  "id": "clippy",
  "name": "Clippy",
  "category": "rust_static_analysis",
  "subcategory": "linter",

  "description": "Rust linter with 650+ lints for correctness, style, and performance",
  "long_description": "Clippy is the official Rust linter that catches common mistakes and helps write idiomatic Rust. It has over 650 lints covering correctness, suspicious code, style, complexity, performance, and more. Clippy is essential for maintaining code quality in Rust projects.",

  "capabilities": [
    "correctness_lints",
    "suspicious_code_detection",
    "style_enforcement",
    "complexity_reduction",
    "performance_suggestions",
    "pedantic_lints",
    "nursery_lints",
    "cargo_lints",
    "automatic_fixes"
  ],
  "property_types": ["lint", "style", "correctness"],
  "input_languages": ["rust"],
  "output_formats": ["diagnostic", "json", "suggestions"],

  "installation": {
    "methods": [
      {"type": "rustup", "command": "rustup component add clippy"}
    ],
    "dependencies": [],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://doc.rust-lang.org/clippy/",
    "tutorial": "https://doc.rust-lang.org/clippy/usage.html",
    "api_reference": "https://rust-lang.github.io/rust-clippy/master/index.html",
    "examples": "https://github.com/rust-lang/rust-clippy/tree/master/tests/ui"
  },

  "tactics": [
    {
      "name": "check",
      "description": "Run clippy checks",
      "syntax": "cargo clippy",
      "when_to_use": "Regular code quality checks",
      "examples": ["cargo clippy", "cargo clippy --all-targets"]
    },
    {
      "name": "deny_warnings",
      "description": "Fail on any warning",
      "syntax": "cargo clippy -- -D warnings",
      "when_to_use": "CI/CD pipelines",
      "examples": ["cargo clippy --workspace -- -D warnings"]
    },
    {
      "name": "fix",
      "description": "Automatically apply fixes",
      "syntax": "cargo clippy --fix",
      "when_to_use": "Automated code correction",
      "examples": ["cargo clippy --fix", "cargo clippy --fix --allow-dirty"]
    },
    {
      "name": "allow",
      "description": "Allow specific lint",
      "syntax": "#[allow(clippy::lint_name)]",
      "when_to_use": "Suppressing false positives",
      "examples": ["#[allow(clippy::too_many_arguments)]", "#![allow(clippy::needless_return)]"]
    },
    {
      "name": "pedantic",
      "description": "Enable pedantic lints",
      "syntax": "cargo clippy -- -W clippy::pedantic",
      "when_to_use": "Extra strict code review",
      "examples": ["cargo clippy -- -W clippy::pedantic", "#![warn(clippy::pedantic)]"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "error: this expression creates a reference which is immediately dereferenced",
      "meaning": "Unnecessary reference/dereference",
      "common_causes": ["Redundant & or *"],
      "fixes": ["Remove unnecessary reference"]
    },
    {
      "pattern": "warning: this function has too many arguments",
      "meaning": "Function API too complex",
      "common_causes": ["Poor API design"],
      "fixes": ["Use builder pattern or struct"]
    },
    {
      "pattern": "warning: use of `unwrap`",
      "meaning": "Potential panic on None/Err",
      "common_causes": ["Missing error handling"],
      "fixes": ["Use ? or expect() with message"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["lint", "style"],
    "cli_command": "dashprove verify --backend clippy"
  },

  "performance": {
    "typical_runtime": "Seconds",
    "scalability": "Scales with codebase",
    "memory_usage": "Similar to rustc"
  },

  "comparisons": {
    "similar_tools": ["rust-analyzer", "rustfmt"],
    "advantages": [
      "650+ lints",
      "Official Rust tool",
      "Auto-fix support",
      "Well-documented"
    ],
    "disadvantages": [
      "Some lints controversial",
      "Occasional false positives",
      "Pedantic can be noisy"
    ]
  },

  "metadata": {
    "version": "0.1.76",
    "last_updated": "2025-12-20",
    "maintainer": "Rust Project",
    "license": "MIT/Apache-2.0"
  }
}
