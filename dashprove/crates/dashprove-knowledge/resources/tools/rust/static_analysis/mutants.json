{
  "id": "mutants",
  "name": "cargo-mutants",
  "category": "rust_static_analysis",
  "subcategory": "mutation_testing",

  "description": "Mutation testing for Rust to measure test effectiveness",
  "long_description": "cargo-mutants performs mutation testing by making small changes (mutations) to your code and checking if your tests catch them. If a mutant survives (tests still pass), it indicates a gap in test coverage. This measures test quality beyond simple line coverage.",

  "capabilities": [
    "mutation_testing",
    "test_quality_measurement",
    "parallel_execution",
    "incremental_testing",
    "baseline_skip",
    "timeout_handling",
    "json_output",
    "filter_mutations"
  ],
  "property_types": ["test_quality", "mutation"],
  "input_languages": ["rust"],
  "output_formats": ["text", "json"],

  "installation": {
    "methods": [
      {"type": "cargo", "command": "cargo install cargo-mutants"},
      {"type": "source", "url": "https://github.com/sourcefrog/cargo-mutants"}
    ],
    "dependencies": [],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://mutants.rs/",
    "tutorial": "https://mutants.rs/getting-started.html",
    "api_reference": "https://mutants.rs/mutants.html",
    "examples": "https://github.com/sourcefrog/cargo-mutants/tree/main/testdata"
  },

  "tactics": [
    {
      "name": "run",
      "description": "Run mutation testing",
      "syntax": "cargo mutants",
      "when_to_use": "Measuring test effectiveness",
      "examples": ["cargo mutants", "cargo mutants --jobs 4"]
    },
    {
      "name": "file",
      "description": "Test specific file",
      "syntax": "cargo mutants -f FILE",
      "when_to_use": "Focused testing",
      "examples": ["cargo mutants -f src/parser.rs"]
    },
    {
      "name": "function",
      "description": "Test specific function",
      "syntax": "cargo mutants -F FUNCTION",
      "when_to_use": "Testing critical function",
      "examples": ["cargo mutants -F parse_input"]
    },
    {
      "name": "list",
      "description": "List possible mutations",
      "syntax": "cargo mutants --list",
      "when_to_use": "Seeing what will be tested",
      "examples": ["cargo mutants --list"]
    },
    {
      "name": "baseline",
      "description": "Skip baseline check",
      "syntax": "cargo mutants --no-baseline",
      "when_to_use": "When tests already known to pass",
      "examples": ["cargo mutants --no-baseline"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "SURVIVED",
      "meaning": "Mutant not caught by tests",
      "common_causes": ["Missing test case", "Weak assertion"],
      "fixes": ["Add test for the mutation"]
    },
    {
      "pattern": "TIMEOUT",
      "meaning": "Mutant caused infinite loop",
      "common_causes": ["Mutation affected termination"],
      "fixes": ["Consider this a caught mutant"]
    },
    {
      "pattern": "KILLED",
      "meaning": "Test caught the mutation",
      "common_causes": ["Good test coverage"],
      "fixes": ["None needed, test is effective"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["test_quality"],
    "cli_command": "dashprove verify --backend mutants"
  },

  "performance": {
    "typical_runtime": "Minutes to hours",
    "scalability": "Scales with test count",
    "memory_usage": "Moderate"
  },

  "comparisons": {
    "similar_tools": ["mutagen", "mutation-rs"],
    "advantages": [
      "No source modification required",
      "Good parallel support",
      "Clear output",
      "Active development"
    ],
    "disadvantages": [
      "Can be slow",
      "Many mutations to check",
      "Not all mutations meaningful"
    ]
  },

  "metadata": {
    "version": "24.3.0",
    "last_updated": "2025-12-20",
    "maintainer": "Martin Pool",
    "license": "MIT"
  }
}
