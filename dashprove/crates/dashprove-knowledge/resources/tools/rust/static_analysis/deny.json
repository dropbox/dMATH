{
  "id": "deny",
  "name": "cargo-deny",
  "category": "rust_static_analysis",
  "subcategory": "policy",

  "description": "Lint dependencies for licenses, bans, advisories, and sources",
  "long_description": "cargo-deny is a cargo plugin that checks your dependencies against configurable policies. It can deny specific licenses, ban certain crates, check for security advisories, and verify that crates come from approved sources. Essential for corporate compliance.",

  "capabilities": [
    "license_checking",
    "crate_banning",
    "advisory_checking",
    "source_verification",
    "duplicate_detection",
    "policy_enforcement",
    "ci_integration",
    "custom_advisories"
  ],
  "property_types": ["policy", "license", "security"],
  "input_languages": ["rust"],
  "output_formats": ["text", "json"],

  "installation": {
    "methods": [
      {"type": "cargo", "command": "cargo install cargo-deny"},
      {"type": "source", "url": "https://github.com/EmbarkStudios/cargo-deny"}
    ],
    "dependencies": [],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://embarkstudios.github.io/cargo-deny/",
    "tutorial": "https://embarkstudios.github.io/cargo-deny/checks/index.html",
    "api_reference": "https://embarkstudios.github.io/cargo-deny/checks/cfg.html",
    "examples": "https://github.com/EmbarkStudios/cargo-deny/tree/main/examples"
  },

  "tactics": [
    {
      "name": "check",
      "description": "Run all checks",
      "syntax": "cargo deny check",
      "when_to_use": "Full policy check",
      "examples": ["cargo deny check", "cargo deny check advisories"]
    },
    {
      "name": "init",
      "description": "Initialize deny.toml",
      "syntax": "cargo deny init",
      "when_to_use": "Setting up cargo-deny",
      "examples": ["cargo deny init"]
    },
    {
      "name": "licenses",
      "description": "Check license compliance",
      "syntax": "cargo deny check licenses",
      "when_to_use": "License audit",
      "examples": ["cargo deny check licenses"]
    },
    {
      "name": "bans",
      "description": "Check for banned crates",
      "syntax": "cargo deny check bans",
      "when_to_use": "Enforcing crate bans",
      "examples": ["cargo deny check bans"]
    },
    {
      "name": "sources",
      "description": "Verify crate sources",
      "syntax": "cargo deny check sources",
      "when_to_use": "Supply chain verification",
      "examples": ["cargo deny check sources"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "license not explicitly allowed",
      "meaning": "Dependency uses unapproved license",
      "common_causes": ["New dependency with different license"],
      "fixes": ["Add to allowed licenses or find alternative"]
    },
    {
      "pattern": "banned crate detected",
      "meaning": "Using a banned crate",
      "common_causes": ["Transitively pulling banned crate"],
      "fixes": ["Remove or replace dependency"]
    },
    {
      "pattern": "duplicate crate versions",
      "meaning": "Multiple versions of same crate",
      "common_causes": ["Dependency conflicts"],
      "fixes": ["Unify dependency versions"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["policy", "license"],
    "cli_command": "dashprove verify --backend deny"
  },

  "performance": {
    "typical_runtime": "Seconds",
    "scalability": "Fast on large projects",
    "memory_usage": "Low"
  },

  "comparisons": {
    "similar_tools": ["cargo-audit", "cargo-vet", "cargo-license"],
    "advantages": [
      "Comprehensive policy checking",
      "License AND security",
      "Highly configurable",
      "Good CI support"
    ],
    "disadvantages": [
      "Requires config file",
      "Initial setup overhead"
    ]
  },

  "metadata": {
    "version": "0.14.21",
    "last_updated": "2025-12-20",
    "maintainer": "Embark Studios",
    "license": "MIT/Apache-2.0"
  }
}
