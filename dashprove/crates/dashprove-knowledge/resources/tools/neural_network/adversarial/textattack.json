{
  "id": "textattack",
  "name": "TextAttack",
  "category": "neural_network",
  "subcategory": "adversarial",

  "description": "Framework for adversarial attacks on NLP models",
  "long_description": "TextAttack is a Python framework for adversarial attacks, adversarial training, and data augmentation in NLP. It provides a modular design with interchangeable components for goals, constraints, transformations, and search methods. Supports attacks on many models including BERT, RoBERTa, and GPT-2.",

  "capabilities": [
    "textfooler_attack",
    "bert_attack",
    "deepwordbug_attack",
    "genetic_attack",
    "adversarial_training",
    "data_augmentation",
    "custom_attacks",
    "multi_model_support"
  ],
  "property_types": ["adversarial_robustness", "semantic_preservation"],
  "input_languages": ["python", "huggingface"],
  "output_formats": ["adversarial_text", "attack_log", "metrics"],

  "installation": {
    "methods": [
      {"type": "pip", "command": "pip install textattack"},
      {"type": "source", "url": "https://github.com/QData/TextAttack"}
    ],
    "dependencies": ["transformers", "torch", "numpy", "nltk"],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://textattack.readthedocs.io/",
    "tutorial": "https://textattack.readthedocs.io/en/latest/quickstart/",
    "api_reference": "https://textattack.readthedocs.io/en/latest/api/",
    "examples": "https://github.com/QData/TextAttack/tree/master/examples"
  },

  "tactics": [
    {
      "name": "attack",
      "description": "Run adversarial attack",
      "syntax": "textattack attack --model model --recipe recipe --dataset dataset",
      "when_to_use": "Evaluating NLP model robustness",
      "examples": ["textattack attack --model bert-base-uncased-sst2 --recipe textfooler --num-examples 100"]
    },
    {
      "name": "augment",
      "description": "Augment training data",
      "syntax": "textattack augment --csv input.csv --recipe eda",
      "when_to_use": "Creating augmented training data",
      "examples": ["textattack augment --csv data.csv --recipe eda --pct-words-to-swap 0.1"]
    },
    {
      "name": "train",
      "description": "Adversarial training",
      "syntax": "textattack train --model model --attack recipe",
      "when_to_use": "Training robust NLP models",
      "examples": ["textattack train --model bert-base-uncased --attack textfooler --dataset sst2"]
    },
    {
      "name": "custom_attack",
      "description": "Build custom attack",
      "syntax": "Attack(goal, constraints, transformation, search)",
      "when_to_use": "Creating novel attack strategies",
      "examples": ["attack = Attack(goal_function, constraints, transformation, search_method)"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "Attack failed",
      "meaning": "Could not find valid adversarial example",
      "common_causes": ["Constraints too strict", "Robust model"],
      "fixes": ["Relax semantic constraints", "Try different attack"]
    },
    {
      "pattern": "Model not found",
      "meaning": "Cannot load specified model",
      "common_causes": ["Invalid model name", "Missing download"],
      "fixes": ["Check HuggingFace model name", "Download model first"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["adversarial_robustness"],
    "cli_command": "dashprove verify --backend textattack"
  },

  "performance": {
    "typical_runtime": "Seconds to minutes per sample",
    "scalability": "Depends on model and attack",
    "memory_usage": "Moderate to high (transformers)"
  },

  "comparisons": {
    "similar_tools": ["openattack", "nlpaug", "augly"],
    "advantages": [
      "Comprehensive NLP attack library",
      "Modular design",
      "Good documentation",
      "Active development"
    ],
    "disadvantages": [
      "NLP-specific (no vision)",
      "Can be slow for large models"
    ]
  },

  "metadata": {
    "version": "0.3.8",
    "last_updated": "2025-12-20",
    "maintainer": "QData Lab (UVA)",
    "license": "MIT"
  }
}
