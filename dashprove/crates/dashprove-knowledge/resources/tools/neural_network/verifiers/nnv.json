{
  "id": "nnv",
  "name": "Neural Network Verification (NNV)",
  "category": "neural_network",
  "subcategory": "verifiers",

  "description": "MATLAB/Python toolbox for neural network verification using reachability analysis",
  "long_description": "NNV is a verification toolbox for deep neural networks and learning-enabled cyber-physical systems. It implements reachability analysis methods including exact and over-approximate analysis using star sets, zonotopes, and polytopes. NNV supports feedforward, convolutional, and recurrent neural networks.",

  "capabilities": [
    "reachability_analysis",
    "star_set_propagation",
    "zonotope_abstraction",
    "polytope_analysis",
    "safety_verification",
    "robustness_verification",
    "cnn_verification",
    "rnn_verification"
  ],
  "property_types": ["safety", "robustness", "reachability"],
  "input_languages": ["onnx", "matlab", "python"],
  "output_formats": ["reachable_set", "verification_result", "counterexample"],

  "installation": {
    "methods": [
      {"type": "pip", "command": "pip install nnv"},
      {"type": "matlab", "command": "addpath(genpath('path/to/nnv'))"},
      {"type": "source", "url": "https://github.com/verivital/nnv"}
    ],
    "dependencies": ["numpy", "scipy", "onnx"],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://github.com/verivital/nnv",
    "tutorial": "https://github.com/verivital/nnv/tree/master/examples",
    "api_reference": "https://github.com/verivital/nnv/wiki",
    "examples": "https://github.com/verivital/nnv/tree/master/examples"
  },

  "tactics": [
    {
      "name": "reach_exact",
      "description": "Exact reachability analysis",
      "syntax": "nnv.reach_exact(net, input_set)",
      "when_to_use": "When exact reachable set is needed",
      "examples": ["R = net.reach(I, 'exact-star')"]
    },
    {
      "name": "reach_approx",
      "description": "Over-approximate reachability",
      "syntax": "nnv.reach_approx(net, input_set)",
      "when_to_use": "Faster analysis with sound over-approximation",
      "examples": ["R = net.reach(I, 'approx-star')"]
    },
    {
      "name": "verify_safety",
      "description": "Check safety property",
      "syntax": "nnv.verify(net, input_set, unsafe_region)",
      "when_to_use": "Checking if output avoids unsafe region",
      "examples": ["result = net.verify_safety(I, unsafe_spec)"]
    },
    {
      "name": "verify_robustness",
      "description": "Verify robustness to perturbations",
      "syntax": "nnv.verify_robustness(net, input, epsilon)",
      "when_to_use": "Checking adversarial robustness",
      "examples": ["result = net.verify_robustness(x, 0.01)"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "UNSAFE",
      "meaning": "Property violated",
      "common_causes": ["Network not robust", "Input region too large"],
      "fixes": ["Retrain network", "Reduce perturbation bound"]
    },
    {
      "pattern": "UNKNOWN",
      "meaning": "Verification inconclusive",
      "common_causes": ["Over-approximation too coarse", "Timeout"],
      "fixes": ["Use tighter approximation", "Increase timeout"]
    },
    {
      "pattern": "Memory error",
      "meaning": "Reachable set too large",
      "common_causes": ["Deep network", "Large input dimension"],
      "fixes": ["Use approximate method", "Reduce input set size"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["neural_robustness", "neural_reachability"],
    "cli_command": "dashprove verify --backend nnv"
  },

  "performance": {
    "typical_runtime": "Seconds to hours depending on network size",
    "scalability": "Exponential in network depth (exact), polynomial (approximate)",
    "memory_usage": "High for exact analysis"
  },

  "comparisons": {
    "similar_tools": ["marabou", "eran", "crown"],
    "advantages": [
      "Multiple abstraction domains",
      "Good MATLAB integration",
      "Support for RNNs and CNNs"
    ],
    "disadvantages": [
      "Slower than specialized tools",
      "MATLAB dependency for some features"
    ]
  },

  "metadata": {
    "version": "2.0",
    "last_updated": "2025-12-20",
    "maintainer": "Verivital Lab (Vanderbilt)",
    "license": "BSD-3-Clause"
  }
}
