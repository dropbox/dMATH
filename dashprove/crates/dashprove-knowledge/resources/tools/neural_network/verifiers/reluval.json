{
  "id": "reluval",
  "name": "ReluVal",
  "category": "neural_network",
  "subcategory": "verifiers",

  "description": "Interval arithmetic based DNN verifier with symbolic propagation",
  "long_description": "ReluVal is a neural network verification tool that uses interval arithmetic with symbolic equation propagation. It iteratively refines intervals by splitting input regions and uses GPU parallelization for efficiency. Designed for verifying safety properties of ReLU networks.",

  "capabilities": [
    "interval_arithmetic",
    "symbolic_propagation",
    "input_splitting",
    "parallel_verification",
    "relu_verification",
    "safety_checking"
  ],
  "property_types": ["safety", "output_bounds", "robustness"],
  "input_languages": ["nnet"],
  "output_formats": ["verification_result", "bounds"],

  "installation": {
    "methods": [
      {"type": "source", "url": "https://github.com/tcwangshiqi-columbia/ReluVal"}
    ],
    "dependencies": ["openblas", "pthread"],
    "platforms": ["linux"]
  },

  "documentation": {
    "official": "https://github.com/tcwangshiqi-columbia/ReluVal",
    "tutorial": "https://github.com/tcwangshiqi-columbia/ReluVal/blob/master/README.md",
    "api_reference": "https://github.com/tcwangshiqi-columbia/ReluVal",
    "examples": "https://github.com/tcwangshiqi-columbia/ReluVal/tree/master/examples"
  },

  "tactics": [
    {
      "name": "verify",
      "description": "Verify safety property",
      "syntax": "./reluval network.nnet property",
      "when_to_use": "Checking DNN satisfies property",
      "examples": ["./delta_network_test 1 model.nnet"]
    },
    {
      "name": "interval_prop",
      "description": "Propagate intervals through network",
      "syntax": "Internal interval propagation",
      "when_to_use": "Computing output bounds",
      "examples": ["Automatic in verification"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "Property violated",
      "meaning": "Network does not satisfy property",
      "common_causes": ["Network not robust", "Property too strict"],
      "fixes": ["Retrain network", "Adjust property bounds"]
    },
    {
      "pattern": "Undetermined",
      "meaning": "Cannot prove or disprove",
      "common_causes": ["Interval too coarse"],
      "fixes": ["Enable more bisections", "Use tighter analysis"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["neural_robustness"],
    "cli_command": "dashprove verify --backend reluval"
  },

  "performance": {
    "typical_runtime": "Seconds to minutes",
    "scalability": "Good for small to medium networks",
    "memory_usage": "Low to moderate"
  },

  "comparisons": {
    "similar_tools": ["neurify", "eran", "crown"],
    "advantages": [
      "Fast interval arithmetic",
      "Simple implementation",
      "Parallelizable"
    ],
    "disadvantages": [
      "Intervals can be loose",
      "Limited to ReLU",
      "nnet format only"
    ]
  },

  "metadata": {
    "version": "1.0",
    "last_updated": "2025-12-20",
    "maintainer": "Columbia University",
    "license": "MIT"
  }
}
