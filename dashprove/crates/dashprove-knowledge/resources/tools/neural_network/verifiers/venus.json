{
  "id": "venus",
  "name": "Venus",
  "category": "neural_network",
  "subcategory": "verifiers",

  "description": "Complete DNN verifier combining MILP with abstraction refinement",
  "long_description": "Venus is a complete neural network verification tool that encodes verification problems as Mixed Integer Linear Programs (MILP). It uses abstraction refinement to progressively tighten bounds and dependency-based branching for efficient search.",

  "capabilities": [
    "milp_encoding",
    "abstraction_refinement",
    "dependency_branching",
    "complete_verification",
    "relu_verification",
    "robustness_certification"
  ],
  "property_types": ["safety", "robustness", "output_bounds"],
  "input_languages": ["onnx", "pytorch"],
  "output_formats": ["verification_result", "counterexample", "bounds"],

  "installation": {
    "methods": [
      {"type": "pip", "command": "pip install venus-ai"},
      {"type": "source", "url": "https://github.com/vas-group-imperial/venus2"}
    ],
    "dependencies": ["pytorch", "gurobi", "numpy"],
    "platforms": ["linux", "macos"]
  },

  "documentation": {
    "official": "https://github.com/vas-group-imperial/venus2",
    "tutorial": "https://github.com/vas-group-imperial/venus2/blob/master/README.md",
    "api_reference": "https://github.com/vas-group-imperial/venus2",
    "examples": "https://github.com/vas-group-imperial/venus2/tree/master/examples"
  },

  "tactics": [
    {
      "name": "verify",
      "description": "Complete MILP-based verification",
      "syntax": "venus.verify(network, property)",
      "when_to_use": "When complete answer is needed",
      "examples": ["result = verifier.verify(net, spec)"]
    },
    {
      "name": "certify",
      "description": "Certify robustness radius",
      "syntax": "venus.certify(network, input, epsilon)",
      "when_to_use": "Finding certified robustness bounds",
      "examples": ["cert_eps = certify(net, x, 0.1)"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "UNSAFE",
      "meaning": "Counterexample found",
      "common_causes": ["Network not robust", "Large perturbation"],
      "fixes": ["Adversarial training", "Reduce epsilon"]
    },
    {
      "pattern": "Gurobi license",
      "meaning": "MILP solver license issue",
      "common_causes": ["Missing license", "Expired license"],
      "fixes": ["Obtain Gurobi license", "Use academic license"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["neural_robustness"],
    "cli_command": "dashprove verify --backend venus"
  },

  "performance": {
    "typical_runtime": "Minutes to hours",
    "scalability": "Good for medium networks",
    "memory_usage": "High (MILP solver)"
  },

  "comparisons": {
    "similar_tools": ["marabou", "verinet", "mipverify"],
    "advantages": [
      "Complete verification",
      "Effective abstraction refinement",
      "Good for targeted properties"
    ],
    "disadvantages": [
      "Requires commercial MILP solver",
      "Slower than bound propagation methods"
    ]
  },

  "metadata": {
    "version": "2.0",
    "last_updated": "2025-12-20",
    "maintainer": "Imperial College VAS Group",
    "license": "MIT"
  }
}
