{
  "id": "autolirpa",
  "name": "auto_LiRPA",
  "category": "neural_network",
  "subcategory": "verifiers",

  "description": "Automatic linear relaxation based perturbation analysis for neural networks",
  "long_description": "auto_LiRPA (Automatic Linear Relaxation based Perturbation Analysis) automatically computes certified bounds for neural networks using linear relaxation. It supports CROWN, IBP, and combinations, with efficient GPU-accelerated implementation for training certified robust networks.",

  "capabilities": [
    "bound_propagation",
    "crown_bounds",
    "ibp_bounds",
    "certified_training",
    "gpu_acceleration",
    "auto_differentiation",
    "perturbation_analysis",
    "custom_operators"
  ],
  "property_types": ["robustness", "output_bounds", "certified_radius"],
  "input_languages": ["pytorch"],
  "output_formats": ["bounds", "certified_accuracy"],

  "installation": {
    "methods": [
      {"type": "pip", "command": "pip install auto_lirpa"},
      {"type": "source", "url": "https://github.com/Verified-Intelligence/auto_LiRPA"}
    ],
    "dependencies": ["pytorch", "numpy"],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://github.com/Verified-Intelligence/auto_LiRPA",
    "tutorial": "https://auto-lirpa.readthedocs.io/",
    "api_reference": "https://auto-lirpa.readthedocs.io/en/latest/api.html",
    "examples": "https://github.com/Verified-Intelligence/auto_LiRPA/tree/main/examples"
  },

  "tactics": [
    {
      "name": "compute_bounds",
      "description": "Compute output bounds",
      "syntax": "model.compute_bounds(x, method='crown')",
      "when_to_use": "Certifying output bounds for input region",
      "examples": ["lb, ub = model.compute_bounds(x, method='crown')"]
    },
    {
      "name": "certified_training",
      "description": "Train with certified bounds",
      "syntax": "loss = criterion(model, x, y, bound_method='ibp')",
      "when_to_use": "Training certifiably robust models",
      "examples": ["loss = certified_loss(model, x, eps=0.01)"]
    },
    {
      "name": "perturb",
      "description": "Define perturbation",
      "syntax": "PerturbationLpNorm(norm=inf, eps=epsilon)",
      "when_to_use": "Specifying input perturbation region",
      "examples": ["ptb = PerturbationLpNorm(norm=np.inf, eps=0.03)"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "bounds too loose",
      "meaning": "Over-approximation not tight",
      "common_causes": ["Deep network", "Large perturbation"],
      "fixes": ["Use tighter method (CROWN vs IBP)", "Train for tighter bounds"]
    },
    {
      "pattern": "CUDA out of memory",
      "meaning": "GPU memory exhausted",
      "common_causes": ["Large batch", "Wide network"],
      "fixes": ["Reduce batch size", "Use gradient checkpointing"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["neural_robustness"],
    "cli_command": "dashprove verify --backend autolirpa"
  },

  "performance": {
    "typical_runtime": "Milliseconds to seconds per sample",
    "scalability": "Excellent with GPU",
    "memory_usage": "Moderate to high"
  },

  "comparisons": {
    "similar_tools": ["crown", "ibp", "deepz"],
    "advantages": [
      "Fast GPU implementation",
      "Automatic bound derivation",
      "Support for certified training",
      "Flexible perturbation types"
    ],
    "disadvantages": [
      "Over-approximate bounds",
      "PyTorch-only"
    ]
  },

  "metadata": {
    "version": "0.4.0",
    "last_updated": "2025-12-20",
    "maintainer": "Verified Intelligence Lab (UCLA/CMU)",
    "license": "BSD-3-Clause"
  }
}
