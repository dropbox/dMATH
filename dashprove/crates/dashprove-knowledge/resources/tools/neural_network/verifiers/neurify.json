{
  "id": "neurify",
  "name": "Neurify",
  "category": "neural_network",
  "subcategory": "verifiers",

  "description": "Scalable DNN verifier using symbolic interval analysis",
  "long_description": "Neurify is a neural network verification tool that uses symbolic interval propagation combined with linear relaxation. It employs direction-guided search and efficient GPU implementation for scalable verification of ReLU networks.",

  "capabilities": [
    "symbolic_intervals",
    "linear_relaxation",
    "directed_search",
    "gpu_acceleration",
    "relu_verification",
    "safety_verification"
  ],
  "property_types": ["safety", "robustness", "output_bounds"],
  "input_languages": ["nnet", "onnx"],
  "output_formats": ["verification_result", "counterexample"],

  "installation": {
    "methods": [
      {"type": "source", "url": "https://github.com/tcwangshiqi-columbia/Neurify"}
    ],
    "dependencies": ["openblas", "lpsolve", "cuda"],
    "platforms": ["linux"]
  },

  "documentation": {
    "official": "https://github.com/tcwangshiqi-columbia/Neurify",
    "tutorial": "https://github.com/tcwangshiqi-columbia/Neurify/blob/master/README.md",
    "api_reference": "https://github.com/tcwangshiqi-columbia/Neurify",
    "examples": "https://github.com/tcwangshiqi-columbia/Neurify/tree/master/examples"
  },

  "tactics": [
    {
      "name": "verify",
      "description": "Verify safety property",
      "syntax": "./neurify network.nnet property.txt",
      "when_to_use": "Checking DNN safety",
      "examples": ["./neurify model.nnet property.txt 0.01"]
    },
    {
      "name": "split",
      "description": "Split input region",
      "syntax": "Split heuristic configuration",
      "when_to_use": "When interval analysis is imprecise",
      "examples": ["Configure split_threshold parameter"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "unsafe",
      "meaning": "Counterexample found",
      "common_causes": ["Network not robust", "Large epsilon"],
      "fixes": ["Retrain network", "Reduce perturbation"]
    },
    {
      "pattern": "unknown",
      "meaning": "Could not determine",
      "common_causes": ["Intervals too loose", "Timeout"],
      "fixes": ["Enable more splitting", "Increase timeout"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["neural_robustness"],
    "cli_command": "dashprove verify --backend neurify"
  },

  "performance": {
    "typical_runtime": "Seconds to minutes",
    "scalability": "Good for ACAS Xu size networks",
    "memory_usage": "Moderate"
  },

  "comparisons": {
    "similar_tools": ["reluval", "marabou", "planet"],
    "advantages": [
      "Fast symbolic interval analysis",
      "GPU acceleration",
      "Good scalability"
    ],
    "disadvantages": [
      "Limited to ReLU networks",
      "C implementation (less extensible)"
    ]
  },

  "metadata": {
    "version": "1.0",
    "last_updated": "2025-12-20",
    "maintainer": "Columbia University",
    "license": "MIT"
  }
}
