{
  "id": "divine",
  "name": "DIVINE",
  "category": "model_checker",
  "subcategory": "parallel",

  "description": "Parallel explicit-state model checker for LTL properties",
  "long_description": "DIVINE is an explicit-state model checker designed for parallel and distributed verification of LTL properties. It uses shared-memory parallelism to explore large state spaces efficiently. DIVINE can verify C/C++ programs directly through LLVM bitcode.",

  "capabilities": [
    "ltl_model_checking",
    "parallel_exploration",
    "c_cpp_verification",
    "llvm_support",
    "counterexample_generation"
  ],
  "property_types": ["ltl", "safety", "liveness"],
  "input_languages": ["c", "cpp", "llvm_ir", "dve"],
  "output_formats": ["satisfied/violated", "counterexample"],

  "installation": {
    "methods": [
      {"type": "source", "command": "git clone https://divine.fi.muni.cz/divine.git && cd divine && make"}
    ],
    "dependencies": ["llvm", "cmake"],
    "platforms": ["linux"]
  },

  "documentation": {
    "official": "https://divine.fi.muni.cz/",
    "manual": "https://divine.fi.muni.cz/manual.html",
    "api_reference": "https://divine.fi.muni.cz/doxygen/"
  },

  "tactics": [
    {
      "name": "verify",
      "description": "Standard verification",
      "syntax": "divine verify program.c",
      "when_to_use": "For assertion checking",
      "examples": ["divine verify --property assert program.c"]
    },
    {
      "name": "ltl",
      "description": "LTL property verification",
      "syntax": "divine verify --property \"!ltl(formula)\"",
      "when_to_use": "For temporal properties",
      "examples": ["divine verify --property '!ltl(G(p -> F q))' model.dve"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "error found",
      "meaning": "Property violation detected",
      "common_causes": ["Bug in program", "Invalid assertion"],
      "fixes": ["Analyze counterexample"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["ltl", "safety"],
    "cli_command": "dashprove verify --backend divine"
  },

  "performance": {
    "typical_runtime": "seconds to hours",
    "scalability": "Scales with CPU cores",
    "memory_usage": "High for large state spaces"
  },

  "comparisons": {
    "similar_tools": ["spin", "ltsmin", "spot"],
    "advantages": [
      "Parallel verification",
      "Direct C/C++ support",
      "LLVM integration"
    ],
    "disadvantages": [
      "Linux only",
      "Complex setup"
    ]
  },

  "metadata": {
    "version": "4.4.4",
    "last_updated": "2025-12-21",
    "maintainer": "Masaryk University",
    "license": "ISC"
  }
}
