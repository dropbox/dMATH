{
  "id": "uppaal",
  "name": "UPPAAL",
  "category": "model_checker",
  "subcategory": "timed_automata",

  "description": "Model checker for real-time systems and timed automata",
  "long_description": "UPPAAL is a tool environment for modeling, validation and verification of real-time systems modeled as networks of timed automata. It includes a GUI for system modeling and simulation, and a model checker for verifying reachability and response time properties.",

  "capabilities": [
    "timed_automata",
    "reachability_checking",
    "simulation",
    "trace_generation",
    "statistical_model_checking"
  ],
  "property_types": ["reachability", "safety", "liveness", "response_time"],
  "input_languages": ["uppaal_xml", "uppaal_query"],
  "output_formats": ["satisfied/not_satisfied", "trace", "statistics"],

  "installation": {
    "methods": [
      {"type": "download", "command": "Download from https://uppaal.org/"}
    ],
    "dependencies": ["java"],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://uppaal.org/",
    "tutorial": "https://uppaal.org/features/",
    "api_reference": "https://docs.uppaal.org/"
  },

  "tactics": [
    {
      "name": "reachability",
      "description": "Check reachability property",
      "syntax": "E<> state_expression",
      "when_to_use": "To check if a state is reachable",
      "examples": ["E<> Process.Done"]
    },
    {
      "name": "invariant",
      "description": "Check invariant property",
      "syntax": "A[] invariant_expression",
      "when_to_use": "To verify safety properties",
      "examples": ["A[] not deadlock"]
    },
    {
      "name": "leads_to",
      "description": "Check response property",
      "syntax": "p --> q",
      "when_to_use": "For liveness properties",
      "examples": ["Request --> Response"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "Property is NOT satisfied",
      "meaning": "Property does not hold",
      "common_causes": ["Timing constraint violation", "Deadlock"],
      "fixes": ["Analyze trace", "Adjust timing constraints"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["reachability", "safety", "liveness"],
    "cli_command": "dashprove verify --backend uppaal"
  },

  "performance": {
    "typical_runtime": "seconds to hours",
    "scalability": "Good for timed systems",
    "memory_usage": "Can be high for large state spaces"
  },

  "comparisons": {
    "similar_tools": ["prism", "kronos", "times"],
    "advantages": [
      "GUI for modeling",
      "Simulation support",
      "Statistical model checking"
    ],
    "disadvantages": [
      "Free only for academic use",
      "Limited extensibility"
    ]
  },

  "metadata": {
    "version": "5.0",
    "last_updated": "2025-12-21",
    "maintainer": "Uppsala University & Aalborg University",
    "license": "Academic free"
  }
}
