{
  "id": "cpachecker",
  "name": "CPAchecker",
  "category": "model_checker",
  "subcategory": "software",

  "description": "Configurable software verification platform based on CPA",
  "long_description": "CPAchecker is a software verification framework based on the Configurable Program Analysis (CPA) concept. It provides a modular framework where different verification techniques (predicate abstraction, value analysis, symbolic execution) can be combined and configured.",

  "capabilities": [
    "predicate_abstraction",
    "value_analysis",
    "symbolic_execution",
    "bounded_model_checking",
    "cegar",
    "witness_generation"
  ],
  "property_types": ["reachability", "memory_safety", "termination"],
  "input_languages": ["c"],
  "output_formats": ["sat/unsat", "witness", "counterexample"],

  "installation": {
    "methods": [
      {"type": "download", "command": "Download from https://cpachecker.sosy-lab.org/"},
      {"type": "docker", "command": "docker pull cpachecker/cpachecker"}
    ],
    "dependencies": ["java"],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://cpachecker.sosy-lab.org/",
    "tutorial": "https://cpachecker.sosy-lab.org/tutorial.php",
    "api_reference": "https://cpachecker.sosy-lab.org/doc/"
  },

  "tactics": [
    {
      "name": "predicateAnalysis",
      "description": "CEGAR with predicate abstraction",
      "syntax": "-predicateAnalysis",
      "when_to_use": "For control-flow intensive programs",
      "examples": ["cpachecker -predicateAnalysis program.c"]
    },
    {
      "name": "valueAnalysis",
      "description": "Explicit-value analysis",
      "syntax": "-valueAnalysis",
      "when_to_use": "For data-flow intensive programs",
      "examples": ["cpachecker -valueAnalysis program.c"]
    },
    {
      "name": "bmc",
      "description": "Bounded model checking",
      "syntax": "-bmc-induction",
      "when_to_use": "For quick bug finding",
      "examples": ["cpachecker -bmc-induction program.c"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "Verification result: FALSE",
      "meaning": "Property violation found",
      "common_causes": ["Bug in program"],
      "fixes": ["Analyze counterexample witness"]
    },
    {
      "pattern": "Verification result: UNKNOWN",
      "meaning": "Could not determine result",
      "common_causes": ["Timeout", "Resource exhaustion"],
      "fixes": ["Try different configuration"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["safety", "reachability"],
    "cli_command": "dashprove verify --backend cpachecker"
  },

  "performance": {
    "typical_runtime": "seconds to hours",
    "scalability": "Competitive in SV-COMP",
    "memory_usage": "Variable based on analysis"
  },

  "comparisons": {
    "similar_tools": ["cbmc", "seahorn", "ultimate"],
    "advantages": [
      "Highly configurable",
      "Multiple analyses",
      "SV-COMP winner"
    ],
    "disadvantages": [
      "Complex configuration",
      "Java dependency"
    ]
  },

  "metadata": {
    "version": "2.2",
    "last_updated": "2025-12-21",
    "maintainer": "LMU Munich",
    "license": "Apache-2.0"
  }
}
