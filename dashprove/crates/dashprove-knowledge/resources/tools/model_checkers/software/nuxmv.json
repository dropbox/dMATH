{
  "id": "nuxmv",
  "name": "nuXmv",
  "category": "model_checker",
  "subcategory": "symbolic",

  "description": "Extended symbolic model checker supporting infinite-state systems",
  "long_description": "nuXmv extends NuSMV to support infinite-state systems through SMT-based model checking. It can verify systems with integer and real variables, making it suitable for software and hybrid systems verification. nuXmv uses IC3/PDR algorithms for infinite-state invariant checking.",

  "capabilities": [
    "ltl_model_checking",
    "ctl_model_checking",
    "infinite_state",
    "smt_based",
    "ic3_pdr",
    "k_induction",
    "interpolation"
  ],
  "property_types": ["ltl", "ctl", "invariant"],
  "input_languages": ["smv", "vmtlib"],
  "output_formats": ["sat/unsat", "counterexample", "inductive_invariant"],

  "installation": {
    "methods": [
      {"type": "download", "command": "Download from https://nuxmv.fbk.eu/"}
    ],
    "dependencies": ["mathsat"],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://nuxmv.fbk.eu/",
    "tutorial": "https://nuxmv.fbk.eu/download/nuxmv-user-manual.pdf",
    "api_reference": "https://nuxmv.fbk.eu/"
  },

  "tactics": [
    {
      "name": "ic3",
      "description": "IC3/PDR algorithm for invariant checking",
      "syntax": "go_msat; check_invar_ic3",
      "when_to_use": "For invariant verification",
      "examples": ["check_invar_ic3 -p 'x >= 0'"]
    },
    {
      "name": "k_induction",
      "description": "K-induction for safety properties",
      "syntax": "go_msat; check_invar_kinduction",
      "when_to_use": "When IC3 struggles",
      "examples": ["check_invar_kinduction -k 10"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "-- invariant .* is false",
      "meaning": "Invariant violated",
      "common_causes": ["Bug in system", "Invariant too strong"],
      "fixes": ["Analyze counterexample", "Weaken invariant"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["invariant", "ltl", "ctl"],
    "cli_command": "dashprove verify --backend nuxmv"
  },

  "performance": {
    "typical_runtime": "seconds to hours",
    "scalability": "Better than NuSMV for infinite-state",
    "memory_usage": "Moderate"
  },

  "comparisons": {
    "similar_tools": ["nusmv", "kind2", "sally"],
    "advantages": [
      "Infinite-state support",
      "IC3/PDR algorithms",
      "SMT-based"
    ],
    "disadvantages": [
      "More complex setup",
      "Proprietary license"
    ]
  },

  "metadata": {
    "version": "2.0.0",
    "last_updated": "2025-12-21",
    "maintainer": "FBK",
    "license": "Proprietary"
  }
}
