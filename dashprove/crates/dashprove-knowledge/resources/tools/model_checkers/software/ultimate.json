{
  "id": "ultimate",
  "name": "Ultimate",
  "category": "model_checker",
  "subcategory": "automata",

  "description": "Automata-based software verification framework",
  "long_description": "Ultimate is a software analysis framework from the University of Freiburg. It includes Ultimate Automizer for safety verification, Ultimate Taipan for termination analysis, and Ultimate Kojak for concurrent program analysis. It uses automata theory for trace abstraction refinement.",

  "capabilities": [
    "automata_based_verification",
    "trace_abstraction",
    "termination_analysis",
    "concurrency_analysis",
    "cegar"
  ],
  "property_types": ["safety", "termination", "memory_safety"],
  "input_languages": ["c"],
  "output_formats": ["safe/unsafe", "terminating/nonterminating", "witness"],

  "installation": {
    "methods": [
      {"type": "download", "command": "Download from https://ultimate.informatik.uni-freiburg.de/"},
      {"type": "docker", "command": "docker pull letonchanh/ultimate"}
    ],
    "dependencies": ["java"],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://ultimate.informatik.uni-freiburg.de/",
    "wiki": "https://github.com/ultimate-pa/ultimate/wiki",
    "api_reference": "https://ultimate.informatik.uni-freiburg.de/documentation.html"
  },

  "tactics": [
    {
      "name": "automizer",
      "description": "Trace abstraction for safety",
      "syntax": "Ultimate.py --spec ReachSafety --file program.c",
      "when_to_use": "For reachability safety",
      "examples": ["Ultimate.py --spec ReachSafety.prp --file program.c"]
    },
    {
      "name": "taipan",
      "description": "Termination analysis",
      "syntax": "Ultimate.py --spec Termination --file program.c",
      "when_to_use": "For proving termination",
      "examples": ["Ultimate.py --spec Termination.prp --file program.c"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "Result: UNSAFE",
      "meaning": "Property violation found",
      "common_causes": ["Bug in program"],
      "fixes": ["Analyze witness"]
    },
    {
      "pattern": "Result: UNKNOWN",
      "meaning": "Could not determine result",
      "common_causes": ["Timeout", "Resource limit"],
      "fixes": ["Increase resources"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["safety", "termination"],
    "cli_command": "dashprove verify --backend ultimate"
  },

  "performance": {
    "typical_runtime": "seconds to hours",
    "scalability": "SV-COMP winner multiple times",
    "memory_usage": "High"
  },

  "comparisons": {
    "similar_tools": ["cpachecker", "esbmc", "seahorn"],
    "advantages": [
      "Automata-based approach",
      "Strong on termination",
      "SV-COMP proven"
    ],
    "disadvantages": [
      "Java dependency",
      "Resource intensive"
    ]
  },

  "metadata": {
    "version": "0.2.4",
    "last_updated": "2025-12-21",
    "maintainer": "University of Freiburg",
    "license": "LGPL"
  }
}
