{
  "id": "infer",
  "name": "Infer",
  "category": "model_checker",
  "subcategory": "software",

  "description": "Facebook static analyzer for Java, C, C++, and Objective-C",
  "long_description": "Infer is a static analyzer developed by Meta (Facebook) that can find bugs in Java, C, C++, and Objective-C code. It uses separation logic and bi-abduction to find memory safety issues, null pointer dereferences, and resource leaks without running the code.",

  "capabilities": [
    "null_dereference_detection",
    "resource_leak_detection",
    "race_condition_detection",
    "memory_safety",
    "separation_logic",
    "bi_abduction"
  ],
  "property_types": ["memory_safety", "null_safety", "resource_management"],
  "input_languages": ["java", "c", "cpp", "objc"],
  "output_formats": ["json", "text", "sarif"],

  "installation": {
    "methods": [
      {"type": "brew", "command": "brew install infer"},
      {"type": "apt", "command": "apt install infer"},
      {"type": "opam", "command": "opam install infer"}
    ],
    "dependencies": ["opam", "ocaml"],
    "platforms": ["linux", "macos"]
  },

  "documentation": {
    "official": "https://fbinfer.com/",
    "tutorial": "https://fbinfer.com/docs/getting-started",
    "api_reference": "https://fbinfer.com/docs/",
    "examples": "https://github.com/facebook/infer/tree/main/examples"
  },

  "tactics": [
    {
      "name": "run",
      "description": "Run analysis",
      "syntax": "infer run -- make",
      "when_to_use": "Standard analysis",
      "examples": ["infer run -- javac Main.java"]
    },
    {
      "name": "capture",
      "description": "Capture compilation",
      "syntax": "infer capture -- make",
      "when_to_use": "Separate capture/analyze",
      "examples": ["infer capture -- clang -c file.c"]
    },
    {
      "name": "analyze",
      "description": "Run analyzers",
      "syntax": "infer analyze",
      "when_to_use": "After capture",
      "examples": ["infer analyze --pulse"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "NULL_DEREFERENCE",
      "meaning": "Potential null pointer dereference",
      "common_causes": ["Missing null check"],
      "fixes": ["Add null check"]
    },
    {
      "pattern": "RESOURCE_LEAK",
      "meaning": "Resource not closed",
      "common_causes": ["Missing close/free"],
      "fixes": ["Add cleanup code"]
    },
    {
      "pattern": "THREAD_SAFETY_violation",
      "meaning": "Potential data race",
      "common_causes": ["Missing synchronization"],
      "fixes": ["Add locking"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["memory_safety"],
    "cli_command": "dashprove verify --backend infer"
  },

  "performance": {
    "typical_runtime": "minutes",
    "scalability": "Good for large codebases",
    "memory_usage": "Moderate to high"
  },

  "comparisons": {
    "similar_tools": ["coverity", "codeql", "pvs-studio"],
    "advantages": [
      "Free/open source",
      "Good Java support",
      "Active development"
    ],
    "disadvantages": [
      "False positives",
      "Complex setup for some projects"
    ]
  },

  "metadata": {
    "version": "1.1.0",
    "last_updated": "2025-12-21",
    "maintainer": "Meta",
    "license": "MIT"
  }
}
