{
  "id": "nusmv",
  "name": "NuSMV",
  "category": "model_checker",
  "subcategory": "symbolic",

  "description": "Symbolic model checker for finite-state systems with LTL and CTL",
  "long_description": "NuSMV is a reimplementation and extension of SMV, the first symbolic model checker. It supports both LTL and CTL temporal logics, BDD-based and SAT-based model checking, and has been widely used in hardware verification and protocol analysis.",

  "capabilities": [
    "ltl_model_checking",
    "ctl_model_checking",
    "bdd_based",
    "sat_based",
    "counterexample_generation",
    "fairness_constraints"
  ],
  "property_types": ["ltl", "ctl", "invariant"],
  "input_languages": ["smv"],
  "output_formats": ["sat/unsat", "counterexample", "trace"],

  "installation": {
    "methods": [
      {"type": "apt", "command": "apt install nusmv"},
      {"type": "download", "command": "Download from https://nusmv.fbk.eu/"}
    ],
    "dependencies": [],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://nusmv.fbk.eu/",
    "tutorial": "https://nusmv.fbk.eu/NuSMV/tutorial/",
    "api_reference": "https://nusmv.fbk.eu/NuSMV/userman/"
  },

  "tactics": [
    {
      "name": "bdd",
      "description": "BDD-based symbolic model checking",
      "syntax": "NuSMV -bdd model.smv",
      "when_to_use": "For smaller state spaces",
      "examples": ["NuSMV model.smv"]
    },
    {
      "name": "bmc",
      "description": "SAT-based bounded model checking",
      "syntax": "NuSMV -bmc model.smv",
      "when_to_use": "For bug-finding or large state spaces",
      "examples": ["NuSMV -bmc -bmc_length 20 model.smv"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "-- specification .* is false",
      "meaning": "Property does not hold",
      "common_causes": ["Bug in model", "Missing constraints"],
      "fixes": ["Analyze counterexample", "Strengthen preconditions"]
    },
    {
      "pattern": "undefined variable",
      "meaning": "Variable not declared",
      "common_causes": ["Typo in variable name"],
      "fixes": ["Check variable declarations"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["ltl", "ctl", "invariant"],
    "cli_command": "dashprove verify --backend nusmv"
  },

  "performance": {
    "typical_runtime": "seconds to hours",
    "scalability": "Good for finite-state systems",
    "memory_usage": "Can be high for BDD mode"
  },

  "comparisons": {
    "similar_tools": ["nuxmv", "spin", "tlaplus"],
    "advantages": [
      "Mature and stable",
      "Good documentation",
      "Both BDD and SAT modes"
    ],
    "disadvantages": [
      "Limited to finite-state",
      "Superseded by nuXmv"
    ]
  },

  "metadata": {
    "version": "2.6.0",
    "last_updated": "2025-12-21",
    "maintainer": "FBK",
    "license": "LGPL"
  }
}
