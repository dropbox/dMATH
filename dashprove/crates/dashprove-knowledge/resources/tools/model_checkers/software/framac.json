{
  "id": "framac",
  "name": "Frama-C",
  "category": "model_checker",
  "subcategory": "software",

  "description": "Extensible C analysis platform with multiple plugins",
  "long_description": "Frama-C is an extensible and collaborative platform dedicated to source-code analysis of C software. It provides multiple plugins including WP (deductive verification), Eva (value analysis), E-ACSL (runtime verification), and PathCrawler (test generation). ACSL is used for specification.",

  "capabilities": [
    "deductive_verification",
    "value_analysis",
    "runtime_verification",
    "slicing",
    "test_generation"
  ],
  "property_types": ["acsl", "assertion", "loop_invariant", "contract"],
  "input_languages": ["c", "acsl"],
  "output_formats": ["proof_obligations", "value_results", "sliced_code"],

  "installation": {
    "methods": [
      {"type": "opam", "command": "opam install frama-c"},
      {"type": "apt", "command": "apt install frama-c"}
    ],
    "dependencies": ["ocaml", "why3"],
    "platforms": ["linux", "macos"]
  },

  "documentation": {
    "official": "https://frama-c.com/",
    "tutorial": "https://frama-c.com/fc-plugins/wp.html",
    "api_reference": "https://frama-c.com/html/acsl.html"
  },

  "tactics": [
    {
      "name": "wp",
      "description": "Weakest precondition calculus",
      "syntax": "frama-c -wp program.c",
      "when_to_use": "For deductive verification",
      "examples": ["frama-c -wp -wp-prover alt-ergo program.c"]
    },
    {
      "name": "eva",
      "description": "Evolved value analysis",
      "syntax": "frama-c -eva program.c",
      "when_to_use": "For automatic analysis without specs",
      "examples": ["frama-c -eva -eva-slevel 100 program.c"]
    },
    {
      "name": "eacsl",
      "description": "Runtime assertion checking",
      "syntax": "frama-c -e-acsl program.c",
      "when_to_use": "For runtime verification",
      "examples": ["frama-c -e-acsl -e-acsl-instrument all program.c"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "Goal .* Unknown",
      "meaning": "Could not prove goal",
      "common_causes": ["Insufficient invariants", "Prover timeout"],
      "fixes": ["Add loop invariants", "Increase timeout"]
    },
    {
      "pattern": "parsing error",
      "meaning": "Invalid C or ACSL syntax",
      "common_causes": ["Non-standard C", "ACSL syntax error"],
      "fixes": ["Fix syntax", "Check ACSL annotations"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["contract", "invariant", "assertion"],
    "cli_command": "dashprove verify --backend framac"
  },

  "performance": {
    "typical_runtime": "seconds to hours",
    "scalability": "Good for industrial C code",
    "memory_usage": "Moderate to high"
  },

  "comparisons": {
    "similar_tools": ["vcc", "verifast", "cbmc"],
    "advantages": [
      "Mature ecosystem",
      "Multiple analysis plugins",
      "ACSL specification language"
    ],
    "disadvantages": [
      "Complex setup",
      "Learning curve for ACSL"
    ]
  },

  "metadata": {
    "version": "27.1",
    "last_updated": "2025-12-21",
    "maintainer": "CEA LIST",
    "license": "LGPL"
  }
}
