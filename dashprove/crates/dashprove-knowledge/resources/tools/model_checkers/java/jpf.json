{
  "id": "jpf",
  "name": "Java PathFinder",
  "category": "model_checker",
  "subcategory": "java",

  "description": "Extensible Java model checker and analysis tool",
  "long_description": "Java PathFinder (JPF) is an extensible software model checker for Java bytecode. Originally developed by NASA, it systematically explores all potential execution paths of a Java program to find defects like deadlocks, race conditions, and assertion violations.",

  "capabilities": [
    "state_space_exploration",
    "deadlock_detection",
    "race_detection",
    "symbolic_execution",
    "extensible_plugins"
  ],
  "property_types": ["assertions", "deadlock_freedom", "race_freedom"],
  "input_languages": ["java", "java_bytecode"],
  "output_formats": ["error_trace", "state_graph"],

  "installation": {
    "methods": [
      {"type": "source", "command": "git clone https://github.com/javapathfinder/jpf-core && cd jpf-core && ./gradlew buildJars"}
    ],
    "dependencies": ["java", "gradle"],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://github.com/javapathfinder/jpf-core",
    "wiki": "https://github.com/javapathfinder/jpf-core/wiki",
    "api_reference": "https://javapathfinder.github.io/jpf-core/"
  },

  "tactics": [
    {
      "name": "default",
      "description": "Standard model checking",
      "syntax": "jpf MyClass",
      "when_to_use": "For systematic exploration",
      "examples": ["jpf +classpath=. MyClass"]
    },
    {
      "name": "symbolic",
      "description": "Symbolic execution with jpf-symbc",
      "syntax": "jpf +symbolic.method=test",
      "when_to_use": "For path exploration",
      "examples": ["jpf +symbolic.method=test MyClass"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "error #",
      "meaning": "Property violation found",
      "common_causes": ["Deadlock", "Race condition", "Assertion failure"],
      "fixes": ["Analyze error trace"]
    },
    {
      "pattern": "state explosion",
      "meaning": "Too many states to explore",
      "common_causes": ["Unbounded data", "Deep nesting"],
      "fixes": ["Add bounds", "Use partial order reduction"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["assertion", "concurrency_safety"],
    "cli_command": "dashprove verify --backend jpf"
  },

  "performance": {
    "typical_runtime": "seconds to hours",
    "scalability": "Limited by state space",
    "memory_usage": "Can be very high"
  },

  "comparisons": {
    "similar_tools": ["spin", "divine", "key"],
    "advantages": [
      "Direct Java support",
      "Extensible architecture",
      "Symbolic execution extension"
    ],
    "disadvantages": [
      "State explosion",
      "Complex configuration"
    ]
  },

  "metadata": {
    "version": "8.0",
    "last_updated": "2025-12-21",
    "maintainer": "NASA/Community",
    "license": "Apache-2.0"
  }
}
