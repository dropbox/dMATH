{
  "id": "tlaplus",
  "name": "TLA+/TLC",
  "category": "model_checker",
  "subcategory": "temporal",

  "description": "Temporal Logic of Actions for concurrent systems",
  "long_description": "TLA+ is a formal specification language for designing, modeling, and verifying concurrent and distributed systems. TLC is its explicit-state model checker. TLA+ is widely used in industry (Amazon, Microsoft, MongoDB) for verifying distributed protocols and algorithms.",

  "capabilities": [
    "temporal_logic",
    "model_checking",
    "state_exploration",
    "liveness_checking",
    "safety_checking",
    "refinement_checking",
    "symmetry_reduction"
  ],
  "property_types": ["invariant", "temporal", "fairness", "refinement"],
  "input_languages": ["tla+", "pluscal"],
  "output_formats": ["trace", "state_graph", "coverage"],

  "installation": {
    "methods": [
      {"type": "download", "url": "https://github.com/tlaplus/tlaplus/releases"},
      {"type": "brew", "command": "brew install tla-plus-toolbox"}
    ],
    "dependencies": ["java"],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://lamport.azurewebsites.net/tla/tla.html",
    "tutorial": "https://learntla.com/",
    "api_reference": "https://lamport.azurewebsites.net/tla/summary-standalone.pdf",
    "examples": "https://github.com/tlaplus/Examples"
  },

  "tactics": [
    {
      "name": "invariant",
      "description": "Safety property",
      "syntax": "TypeInvariant == x \\in Nat",
      "when_to_use": "For properties that must always hold",
      "examples": ["Inv == len >= 0", "NoDeadlock == ENABLED Next"]
    },
    {
      "name": "temporal",
      "description": "Temporal property",
      "syntax": "Spec => []Safety",
      "when_to_use": "For liveness and complex properties",
      "examples": ["<>Eventually", "[]<>FairAction", "[]Inv"]
    },
    {
      "name": "symmetry",
      "description": "Symmetry reduction",
      "syntax": "SYMMETRY Perms",
      "when_to_use": "To reduce state space with symmetric elements",
      "examples": ["SYMMETRY Permutations(Nodes)"]
    },
    {
      "name": "constraint",
      "description": "State constraint",
      "syntax": "CONSTRAINT StateConstraint",
      "when_to_use": "To bound state space exploration",
      "examples": ["CONSTRAINT len < 10"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "Invariant .* is violated",
      "meaning": "Safety property violated",
      "common_causes": ["Bug in protocol", "Missing synchronization"],
      "fixes": ["Examine error trace", "Fix protocol logic"]
    },
    {
      "pattern": "Temporal property .* is violated",
      "meaning": "Liveness violation",
      "common_causes": ["Unfair scheduling", "Deadlock", "Livelock"],
      "fixes": ["Add fairness constraints", "Fix blocking condition"]
    },
    {
      "pattern": "Too many states",
      "meaning": "State space explosion",
      "common_causes": ["Unbounded data", "Too many processes"],
      "fixes": ["Add constraints", "Use symmetry", "Use Apalache"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["invariant", "temporal", "refinement"],
    "cli_command": "dashprove verify --backend tlaplus"
  },

  "performance": {
    "typical_runtime": "seconds to days",
    "scalability": "10^6 - 10^9 states",
    "memory_usage": "4-128GB"
  },

  "comparisons": {
    "similar_tools": ["apalache", "spin", "nusmv", "alloy"],
    "advantages": [
      "Expressive specification language",
      "Excellent for distributed systems",
      "Industry proven",
      "PlusCal algorithmic notation"
    ],
    "disadvantages": [
      "State space explosion",
      "Learning curve",
      "Java IDE"
    ]
  },

  "metadata": {
    "version": "1.8.0",
    "last_updated": "2025-12-20",
    "maintainer": "TLA+ Community",
    "license": "MIT"
  }
}
