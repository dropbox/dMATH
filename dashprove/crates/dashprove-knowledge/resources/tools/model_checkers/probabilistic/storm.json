{
  "id": "storm",
  "name": "Storm",
  "category": "model_checkers",
  "subcategory": "probabilistic",

  "description": "Modern probabilistic model checker for DTMCs, CTMCs, MDPs, and more",
  "long_description": "Storm is a modern probabilistic model checker supporting Discrete-Time Markov Chains (DTMCs), Continuous-Time Markov Chains (CTMCs), Markov Decision Processes (MDPs), Markov Automata, and Probabilistic Programs. It features state-of-the-art algorithms for quantitative verification with excellent performance.",

  "capabilities": [
    "dtmc_analysis",
    "ctmc_analysis",
    "mdp_analysis",
    "markov_automata",
    "pctl_verification",
    "csl_verification",
    "reward_computation",
    "parameter_synthesis",
    "counterexample_generation"
  ],
  "property_types": ["probabilistic", "reward", "reachability", "expected_time"],
  "input_languages": ["prism", "jani", "explicit", "dfts", "pgcl"],
  "output_formats": ["probability", "expected_value", "counterexample", "scheduler"],

  "installation": {
    "methods": [
      {"type": "brew", "command": "brew install stormchecker"},
      {"type": "apt", "command": "apt install stormchecker"},
      {"type": "source", "url": "https://github.com/moves-rwth/storm"}
    ],
    "dependencies": ["carl", "sylvan", "z3", "eigen"],
    "platforms": ["linux", "macos"]
  },

  "documentation": {
    "official": "https://www.stormchecker.org/",
    "tutorial": "https://www.stormchecker.org/documentation/usage/running-storm.html",
    "api_reference": "https://www.stormchecker.org/documentation/reference.html",
    "examples": "https://www.stormchecker.org/benchmarks.html"
  },

  "tactics": [
    {
      "name": "check",
      "description": "Verify probabilistic property",
      "syntax": "storm --prism model.pm --prop property.pctl",
      "when_to_use": "Computing probability of property",
      "examples": ["storm --prism die.pm --prop 'P=? [F s=7]'"]
    },
    {
      "name": "bisimulation",
      "description": "Apply bisimulation minimization",
      "syntax": "storm --prism model.pm --bisimulation",
      "when_to_use": "Reducing state space",
      "examples": ["storm --prism model.pm --prop prop.pctl --bisimulation"]
    },
    {
      "name": "scheduler",
      "description": "Compute optimal scheduler",
      "syntax": "storm --prism model.pm --exportscheduler",
      "when_to_use": "Finding optimal strategy for MDP",
      "examples": ["storm --prism mdp.pm --prop 'Pmax=? [F goal]' --exportscheduler out.sched"]
    },
    {
      "name": "parametric",
      "description": "Parameter synthesis",
      "syntax": "storm-pars --prism model.pm --prop property",
      "when_to_use": "Finding parameter values satisfying property",
      "examples": ["storm-pars --prism model.pm --prop 'P>0.5 [F goal]'"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "State space explosion",
      "meaning": "Model too large to verify",
      "common_causes": ["Too many variables", "Large ranges"],
      "fixes": ["Apply bisimulation", "Abstract model", "Use symbolic engine"]
    },
    {
      "pattern": "Numerical instability",
      "meaning": "Precision issues in computation",
      "common_causes": ["Very small probabilities", "Large models"],
      "fixes": ["Use exact arithmetic", "Adjust precision settings"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["probabilistic"],
    "cli_command": "dashprove verify --backend storm"
  },

  "performance": {
    "typical_runtime": "Seconds to hours",
    "scalability": "Millions of states",
    "memory_usage": "Depends on representation (explicit vs symbolic)"
  },

  "comparisons": {
    "similar_tools": ["prism", "modest", "mcsta"],
    "advantages": [
      "State-of-the-art performance",
      "Multiple input formats",
      "Excellent MDP support",
      "Parameter synthesis"
    ],
    "disadvantages": [
      "Complex build process",
      "Fewer GUI features than PRISM"
    ]
  },

  "metadata": {
    "version": "1.8.0",
    "last_updated": "2025-12-20",
    "maintainer": "RWTH Aachen MOVES Group",
    "license": "GPL-3.0"
  }
}
