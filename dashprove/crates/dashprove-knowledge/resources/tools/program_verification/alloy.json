{
  "id": "alloy",
  "name": "Alloy Analyzer",
  "category": "program_verification",
  "subcategory": "relational_modeling",

  "description": "Lightweight formal methods tool for structural modeling and analysis",
  "long_description": "Alloy is a declarative specification language for expressing complex structural constraints and behavior. The Alloy Analyzer is a solver that takes constraints expressed in Alloy and finds structures that satisfy them. It uses SAT solving to automatically analyze models within a bounded scope, making it excellent for finding counterexamples to assertions.",

  "capabilities": [
    "relational_modeling",
    "constraint_satisfaction",
    "counterexample_generation",
    "instance_finding",
    "assertion_checking",
    "signature_inheritance",
    "transitive_closure",
    "bounded_model_checking"
  ],
  "property_types": ["invariant", "assertion", "predicate", "function"],
  "input_languages": ["alloy"],
  "output_formats": ["visualized_instance", "xml", "counterexample"],

  "installation": {
    "methods": [
      {"type": "download", "url": "https://alloytools.org/download.html"},
      {"type": "brew", "command": "brew install --cask alloy"}
    ],
    "dependencies": ["java"],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://alloytools.org/documentation.html",
    "tutorial": "https://alloytools.org/tutorials/online/",
    "api_reference": "https://alloytools.org/documentation/alloy-api/",
    "examples": "https://github.com/AlloyTools/models"
  },

  "tactics": [
    {
      "name": "check",
      "description": "Check assertion for counterexamples",
      "syntax": "check AssertionName for N",
      "when_to_use": "Verifying that no counterexamples exist within bound",
      "examples": ["check NoDeadlock for 5", "check Acyclic for 10 but 3 Node"]
    },
    {
      "name": "run",
      "description": "Find satisfying instances",
      "syntax": "run PredicateName for N",
      "when_to_use": "Finding examples that satisfy a predicate",
      "examples": ["run ValidState for 5", "run example for 3 but 2 Process"]
    },
    {
      "name": "fact",
      "description": "Define global constraints",
      "syntax": "fact FactName { formula }",
      "when_to_use": "Constraining all instances",
      "examples": ["fact Acyclic { no ^link & iden }"]
    },
    {
      "name": "assert",
      "description": "Define property to verify",
      "syntax": "assert AssertionName { formula }",
      "when_to_use": "Specifying properties to check",
      "examples": ["assert Reachable { all n: Node | n in Root.*children }"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "Counterexample found",
      "meaning": "Assertion violated within scope",
      "common_causes": ["Model specification error", "Actual bug in design"],
      "fixes": ["Examine counterexample", "Strengthen constraints", "Fix design"]
    },
    {
      "pattern": "No instance found",
      "meaning": "Constraints are unsatisfiable",
      "common_causes": ["Overconstrained model", "Inconsistent facts"],
      "fixes": ["Relax constraints", "Check for contradictions"]
    },
    {
      "pattern": "Solver timeout",
      "meaning": "Analysis took too long",
      "common_causes": ["Scope too large", "Complex constraints"],
      "fixes": ["Reduce scope", "Simplify model", "Add symmetry breaking"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["invariant", "refinement"],
    "cli_command": "dashprove verify --backend alloy"
  },

  "performance": {
    "typical_runtime": "Seconds to minutes (bounded)",
    "scalability": "Exponential in scope size",
    "memory_usage": "Moderate (SAT solver)"
  },

  "comparisons": {
    "similar_tools": ["tlaplus", "z3", "kodkod"],
    "advantages": [
      "Excellent visualization of instances",
      "Intuitive relational syntax",
      "Fast for small scopes",
      "Good for finding bugs quickly"
    ],
    "disadvantages": [
      "Bounded analysis only",
      "No infinite domain support",
      "Limited to structural properties"
    ]
  },

  "metadata": {
    "version": "6.1.0",
    "last_updated": "2025-12-20",
    "maintainer": "Alloy Team (MIT CSAIL)",
    "license": "MIT"
  }
}
