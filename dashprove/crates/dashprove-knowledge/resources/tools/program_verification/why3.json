{
  "id": "why3",
  "name": "Why3",
  "category": "program_verification",
  "subcategory": "deductive",

  "description": "Platform for deductive program verification",
  "long_description": "Why3 is a platform for deductive program verification. It provides a rich specification language (WhyML) and can interface with many theorem provers (Alt-Ergo, Z3, CVC5, Coq, etc.). Why3 is used as a backend for other verification tools like Frama-C and SPARK.",

  "capabilities": [
    "deductive_verification",
    "wp_calculus",
    "multiple_provers",
    "specification_language",
    "proof_sessions",
    "counterexample_generation"
  ],
  "property_types": ["precondition", "postcondition", "invariant", "assertion"],
  "input_languages": ["whyml"],
  "output_formats": ["proof_result", "counterexample"],

  "installation": {
    "methods": [
      {"type": "opam", "command": "opam install why3"},
      {"type": "apt", "command": "apt install why3"},
      {"type": "source", "command": "./configure && make && make install"}
    ],
    "dependencies": ["ocaml", "alt-ergo", "z3"],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://www.why3.org/",
    "tutorial": "https://www.why3.org/doc/",
    "api_reference": "https://www.why3.org/api/",
    "examples": "https://www.why3.org/doc/starting.html"
  },

  "tactics": [
    {
      "name": "split_vc",
      "description": "Split verification condition",
      "syntax": "split_vc",
      "when_to_use": "To break complex goals",
      "examples": ["split_vc"]
    },
    {
      "name": "inline_goal",
      "description": "Inline definitions",
      "syntax": "inline_goal",
      "when_to_use": "To expand definitions",
      "examples": ["inline_goal"]
    },
    {
      "name": "auto",
      "description": "Automatic proof",
      "syntax": "auto level N",
      "when_to_use": "For automation",
      "examples": ["auto level 2"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "Unknown",
      "meaning": "Prover couldn't determine result",
      "common_causes": ["Complex VC", "Missing lemma"],
      "fixes": ["Add lemma", "Try different prover"]
    },
    {
      "pattern": "Timeout",
      "meaning": "Prover exceeded time limit",
      "common_causes": ["Hard VC", "Insufficient automation"],
      "fixes": ["Split goal", "Add hints"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["contract", "invariant"],
    "cli_command": "dashprove verify --backend why3"
  },

  "performance": {
    "typical_runtime": "seconds to minutes",
    "scalability": "Good for modular verification",
    "memory_usage": "Moderate"
  },

  "comparisons": {
    "similar_tools": ["dafny", "frama-c", "spark"],
    "advantages": [
      "Multiple prover backends",
      "Rich specification language",
      "IDE support"
    ],
    "disadvantages": [
      "OCaml-based (not Rust native)",
      "Learning curve"
    ]
  },

  "metadata": {
    "version": "1.7.1",
    "last_updated": "2025-12-21",
    "maintainer": "Why3 Team (Inria)",
    "license": "LGPL-2.1"
  }
}
