{
  "id": "boogie",
  "name": "Boogie",
  "category": "program_verification",
  "subcategory": "intermediate",

  "description": "Intermediate verification language (IVL)",
  "long_description": "Boogie is an intermediate verification language that serves as a common backend for many source-level verifiers. It provides a simple imperative language with specifications (preconditions, postconditions, invariants) and interfaces with SMT solvers like Z3. Tools like Dafny, VCC, and Prusti compile to Boogie.",

  "capabilities": [
    "verification_condition_generation",
    "smt_integration",
    "modular_verification",
    "havoc_semantics",
    "quantified_assertions",
    "loop_invariants"
  ],
  "property_types": ["precondition", "postcondition", "invariant", "assertion"],
  "input_languages": ["boogie"],
  "output_formats": ["verification_result", "counterexample"],

  "installation": {
    "methods": [
      {"type": "dotnet", "command": "dotnet tool install --global Boogie"},
      {"type": "nuget", "command": "Install-Package Boogie"},
      {"type": "source", "command": "dotnet build Source/Boogie.sln"}
    ],
    "dependencies": ["dotnet", "z3"],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://github.com/boogie-org/boogie",
    "tutorial": "https://github.com/boogie-org/boogie/blob/master/Docs/Boogie2.pdf",
    "api_reference": "https://github.com/boogie-org/boogie/wiki",
    "examples": "https://github.com/boogie-org/boogie/tree/master/Test"
  },

  "tactics": [
    {
      "name": "inline",
      "description": "Inline procedures",
      "syntax": "{:inline N}",
      "when_to_use": "For small procedures",
      "examples": ["procedure {:inline 1} foo()"]
    },
    {
      "name": "verify",
      "description": "Select procedures to verify",
      "syntax": "/proc:name",
      "when_to_use": "For selective verification",
      "examples": ["boogie /proc:Main program.bpl"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "Error BP5001",
      "meaning": "Assertion might not hold",
      "common_causes": ["Missing invariant", "Bug in code"],
      "fixes": ["Add invariant", "Fix code"]
    },
    {
      "pattern": "Error BP5002",
      "meaning": "Postcondition might not hold",
      "common_causes": ["Weak precondition", "Bug in code"],
      "fixes": ["Strengthen precondition", "Fix code"]
    },
    {
      "pattern": "Error BP5003",
      "meaning": "Precondition might not hold",
      "common_causes": ["Caller doesn't establish precondition"],
      "fixes": ["Fix caller", "Weaken precondition"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["contract", "invariant"],
    "cli_command": "dashprove verify --backend boogie"
  },

  "performance": {
    "typical_runtime": "milliseconds to seconds",
    "scalability": "Excellent (modular)",
    "memory_usage": "Low"
  },

  "comparisons": {
    "similar_tools": ["why3", "viper"],
    "advantages": [
      "Simple language",
      "Fast verification",
      "Mature tooling"
    ],
    "disadvantages": [
      "Low-level (not user-facing)",
      ".NET dependency"
    ]
  },

  "metadata": {
    "version": "3.0.10",
    "last_updated": "2025-12-21",
    "maintainer": "Microsoft Research",
    "license": "MIT"
  }
}
