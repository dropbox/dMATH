{
  "id": "stainless",
  "name": "Stainless",
  "category": "program_verifier",
  "subcategory": "scala",

  "description": "Formal verification framework for Scala programs",
  "long_description": "Stainless (formerly Leon) is a verification framework for Scala. It supports both termination checking and verification of functional correctness. Stainless uses SMT solvers and supports a pure functional subset of Scala with refinement types and first-class contracts.",

  "capabilities": [
    "contract_verification",
    "termination_checking",
    "refinement_types",
    "counterexample_generation",
    "pure_functional"
  ],
  "property_types": ["contract", "measure", "invariant"],
  "input_languages": ["scala"],
  "output_formats": ["verification_result", "counterexample"],

  "installation": {
    "methods": [
      {"type": "sbt", "command": "addSbtPlugin(\"ch.epfl.lara\" % \"sbt-stainless\" % \"0.9.0\")"},
      {"type": "source", "command": "git clone https://github.com/epfl-lara/stainless && cd stainless && sbt compile"}
    ],
    "dependencies": ["sbt", "java", "z3"],
    "platforms": ["linux", "macos"]
  },

  "documentation": {
    "official": "https://epfl-lara.github.io/stainless/",
    "tutorial": "https://epfl-lara.github.io/stainless/tutorial.html",
    "api": "https://epfl-lara.github.io/stainless/api/"
  },

  "tactics": [
    {
      "name": "require",
      "description": "Precondition",
      "syntax": "require(condition)",
      "when_to_use": "To specify preconditions",
      "examples": ["require(x > 0)"]
    },
    {
      "name": "ensuring",
      "description": "Postcondition",
      "syntax": "}.ensuring(result => condition)",
      "when_to_use": "To specify postconditions",
      "examples": ["}.ensuring(res => res >= 0)"]
    },
    {
      "name": "decreases",
      "description": "Termination measure",
      "syntax": "decreases(measure)",
      "when_to_use": "To prove termination",
      "examples": ["decreases(n)"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "counterexample",
      "meaning": "Found input violating specification",
      "common_causes": ["Bug in implementation"],
      "fixes": ["Fix implementation"]
    },
    {
      "pattern": "Unknown",
      "meaning": "Solver could not decide",
      "common_causes": ["Complex specification", "Timeout"],
      "fixes": ["Simplify spec", "Add lemmas"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["contract", "termination"],
    "cli_command": "dashprove verify --backend stainless"
  },

  "performance": {
    "typical_runtime": "seconds to minutes",
    "scalability": "Good for functional Scala",
    "memory_usage": "Moderate"
  },

  "comparisons": {
    "similar_tools": ["liquid_haskell", "fstar", "dafny"],
    "advantages": [
      "Native Scala support",
      "Counterexample generation",
      "Termination checking"
    ],
    "disadvantages": [
      "Pure functional subset only",
      "Scala version constraints"
    ]
  },

  "metadata": {
    "version": "0.9.7",
    "last_updated": "2025-12-21",
    "maintainer": "EPFL LARA",
    "license": "Apache-2.0"
  }
}
