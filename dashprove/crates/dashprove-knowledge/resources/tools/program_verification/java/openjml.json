{
  "id": "openjml",
  "name": "OpenJML",
  "category": "program_verifier",
  "subcategory": "java",

  "description": "JML specification and verification tool for Java",
  "long_description": "OpenJML is a tool for checking JML specifications of Java programs. It includes a type checker, runtime assertion checker, and static verification via SMT solvers. OpenJML integrates with build tools and IDEs for practical Java verification.",

  "capabilities": [
    "jml_checking",
    "runtime_assertion_checking",
    "static_verification",
    "smt_based",
    "ide_integration"
  ],
  "property_types": ["jml_contract", "invariant", "assertion"],
  "input_languages": ["java", "jml"],
  "output_formats": ["verification_result", "counterexample"],

  "installation": {
    "methods": [
      {"type": "download", "command": "Download from https://www.openjml.org/"},
      {"type": "maven", "command": "Add OpenJML plugin to pom.xml"}
    ],
    "dependencies": ["java", "z3"],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://www.openjml.org/",
    "tutorial": "https://www.openjml.org/documentation/",
    "jml_reference": "http://www.jmlspecs.org/"
  },

  "tactics": [
    {
      "name": "esc",
      "description": "Extended static checking",
      "syntax": "openjml -esc ClassName.java",
      "when_to_use": "For static verification",
      "examples": ["openjml -esc -prover z3 MyClass.java"]
    },
    {
      "name": "rac",
      "description": "Runtime assertion checking",
      "syntax": "openjml -rac ClassName.java",
      "when_to_use": "For runtime checking",
      "examples": ["openjml -rac MyClass.java"]
    },
    {
      "name": "check",
      "description": "JML type checking",
      "syntax": "openjml -check ClassName.java",
      "when_to_use": "To validate JML syntax",
      "examples": ["openjml -check MyClass.java"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "The prover cannot establish an assertion",
      "meaning": "Cannot verify assertion",
      "common_causes": ["Missing specification", "Complex condition"],
      "fixes": ["Add helper assertions", "Simplify logic"]
    },
    {
      "pattern": "JML syntax error",
      "meaning": "Invalid JML annotation",
      "common_causes": ["Typo", "Invalid JML syntax"],
      "fixes": ["Check JML reference"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["jml", "contract"],
    "cli_command": "dashprove verify --backend openjml"
  },

  "performance": {
    "typical_runtime": "seconds to minutes",
    "scalability": "Good for Java codebases",
    "memory_usage": "Moderate"
  },

  "comparisons": {
    "similar_tools": ["key", "krakatoa", "jstar"],
    "advantages": [
      "Command-line friendly",
      "Build tool integration",
      "Runtime checking option"
    ],
    "disadvantages": [
      "Less interactive than KeY",
      "SMT limitations"
    ]
  },

  "metadata": {
    "version": "0.17.0",
    "last_updated": "2025-12-21",
    "maintainer": "David Cok",
    "license": "GPL-2.0"
  }
}
