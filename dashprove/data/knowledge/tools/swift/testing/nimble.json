{
  "id": "nimble",
  "name": "Nimble",
  "category": "assertion_library",
  "subcategory": "swift",

  "description": "Matcher-based assertion library for Swift and Objective-C tests",
  "long_description": "Nimble provides expressive matchers and expectations used with XCTest or Quick. It supports synchronous and asynchronous expectations, custom matchers, and readable failure messages.",

  "capabilities": [
    "matcher_assertions",
    "async_expectations",
    "custom_matchers",
    "xctest_integration",
    "quick_integration"
  ],
  "property_types": ["unit_test"],
  "input_languages": ["swift", "objective_c"],
  "output_formats": ["xcode_report", "text_report"],

  "installation": {
    "methods": [
      {"type": "spm", "command": "dependencies: [.package(url: \"https://github.com/Quick/Nimble.git\", from: \"13.0.0\")]"},
      {"type": "cocoapods", "command": "pod 'Nimble'"}
    ],
    "dependencies": ["xctest"],
    "platforms": ["ios", "macos", "tvos", "watchos", "linux"]
  },

  "documentation": {
    "official": "https://github.com/Quick/Nimble",
    "tutorial": "https://github.com/Quick/Nimble#documentation",
    "api_reference": "https://github.com/Quick/Nimble/blob/main/Documentation/en-us/AssertionMacros.md",
    "examples": "https://github.com/Quick/Nimble/tree/main/Examples"
  },

  "tactics": [
    {
      "name": "async_expect",
      "description": "Wait for async values",
      "syntax": "expect(value).toEventually(equal(42))",
      "when_to_use": "Testing async operations or publishers",
      "examples": ["expect(futureValue).toEventually(beTrue(), timeout: .seconds(2))"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "failed - expected to",
      "meaning": "Expectation did not match",
      "common_causes": ["Incorrect matcher", "Flaky async timing", "Wrong setup"],
      "fixes": ["Adjust matcher", "Increase timeout", "Stabilize fixtures"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["unit_test"],
    "cli_command": "dashprove verify --backend nimble"
  },

  "performance": {
    "typical_runtime": "Negligible overhead on top of XCTest",
    "scalability": "Organizes expectations cleanly in large suites",
    "memory_usage": "Low"
  },

  "comparisons": {
    "similar_tools": ["expecta", "xctest"],
    "advantages": ["Readable matchers", "Async support", "Quick integration"],
    "disadvantages": ["Adds dependency", "BDD syntax may differ from XCTest"]
  },

  "metadata": {
    "version": "13.0.0",
    "last_updated": "2025-12-23",
    "maintainer": "Quick/Nimble contributors",
    "license": "Apache-2.0"
  }
}
