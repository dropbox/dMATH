{
  "id": "swift_testing",
  "name": "Swift Testing",
  "category": "unit_testing",
  "subcategory": "swift",

  "description": "Apple's modern Swift testing framework replacing XCTest",
  "long_description": "Swift Testing is the new first-party testing framework introduced with Swift 6. It provides ergonomic APIs, async-aware tests, macros, and improved reporting over XCTest, while integrating with Swift Package Manager and Xcode.",

  "capabilities": [
    "unit_testing",
    "async_testing",
    "macro_assertions",
    "xcode_integration",
    "spm_support"
  ],
  "property_types": ["unit_test", "integration_test"],
  "input_languages": ["swift"],
  "output_formats": ["xcode_report", "text_report"],

  "installation": {
    "methods": [
      {"type": "spm", "command": "import Testing"}
    ],
    "dependencies": ["swift 6"],
    "platforms": ["macos", "ios", "linux"]
  },

  "documentation": {
    "official": "https://github.com/apple/swift-testing",
    "tutorial": "https://github.com/apple/swift-testing/blob/main/Documentation/GettingStarted.md",
    "api_reference": "https://github.com/apple/swift-testing/tree/main/Documentation",
    "examples": "https://github.com/apple/swift-testing/tree/main/Examples"
  },

  "tactics": [
    {
      "name": "define_test",
      "description": "Declare tests with @Test",
      "syntax": "@Test func testExample() async throws { /* assertions */ }",
      "when_to_use": "New Swift projects targeting Swift 6 or later",
      "examples": ["@Test func testSum() { #expect(sum(1,2) == 3) }"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "Expectation failed",
      "meaning": "#expect assertion failed",
      "common_causes": ["Logic bug", "Async timing", "Incorrect test data"],
      "fixes": ["Adjust code under test", "Await tasks properly", "Fix fixtures"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["unit_test"],
    "cli_command": "dashprove verify --backend swift-testing"
  },

  "performance": {
    "typical_runtime": "Similar to XCTest; fast for unit tests",
    "scalability": "Handles async and parallel tests",
    "memory_usage": "Low"
  },

  "comparisons": {
    "similar_tools": ["xctest", "quick"],
    "advantages": ["Modern API", "Async-first", "Macro-based assertions"],
    "disadvantages": ["Requires latest Swift toolchain", "Ecosystem still maturing"]
  },

  "metadata": {
    "version": "1.0.0",
    "last_updated": "2025-12-23",
    "maintainer": "Apple",
    "license": "Apache-2.0"
  }
}
