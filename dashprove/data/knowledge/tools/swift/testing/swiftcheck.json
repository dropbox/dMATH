{
  "id": "swiftcheck",
  "name": "SwiftCheck",
  "category": "property_testing",
  "subcategory": "swift",

  "description": "Property-based testing for Swift",
  "long_description": "SwiftCheck is a QuickCheck-inspired property testing framework for Swift. It generates random data, executes properties repeatedly, and shrinks failing examples to minimal counterexamples. It integrates with XCTest and can be used from Swift Package Manager.",

  "capabilities": [
    "property_testing",
    "shrinking",
    "custom_generators",
    "xctest_integration",
    "arbitrary_protocol"
  ],
  "property_types": ["property", "invariant"],
  "input_languages": ["swift"],
  "output_formats": ["failing_example", "xctest_report"],

  "installation": {
    "methods": [
      {"type": "spm", "command": "dependencies: [.package(url: \"https://github.com/typelift/SwiftCheck.git\", from: \"0.12.0\")]"}
    ],
    "dependencies": ["swift"],
    "platforms": ["macos", "linux"]
  },

  "documentation": {
    "official": "https://github.com/typelift/SwiftCheck",
    "tutorial": "https://github.com/typelift/SwiftCheck#usage",
    "api_reference": "https://github.com/typelift/SwiftCheck/blob/master/Documentation/Operators.md",
    "examples": "https://github.com/typelift/SwiftCheck/tree/master/Examples"
  },

  "tactics": [
    {
      "name": "property",
      "description": "Define properties with forAll",
      "syntax": "property(\"reversing twice yields original\") <- forAll { (xs: [Int]) in xs.reversed().reversed() == xs }",
      "when_to_use": "Functional properties and invariants",
      "examples": ["property(\"sorted is idempotent\") <- forAll { (xs: [Int]) in xs.sorted().sorted() == xs.sorted() }"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "Counterexample found",
      "meaning": "SwiftCheck found input that falsifies the property",
      "common_causes": ["Property not universally true", "Generator not constrained", "Edge cases not handled"],
      "fixes": ["Refine property", "Add preconditions", "Constrain generators"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["property"],
    "cli_command": "dashprove verify --backend swiftcheck"
  },

  "performance": {
    "typical_runtime": "Depends on number of test cases; seconds to minutes",
    "scalability": "Configurable max tests and shrink depth",
    "memory_usage": "Low"
  },

  "comparisons": {
    "similar_tools": ["hypothesis", "proptest", "quickcheck"],
    "advantages": ["Native Swift", "Integrates with XCTest"],
    "disadvantages": ["Smaller ecosystem", "Less tooling than Hypothesis"]
  },

  "metadata": {
    "version": "0.12.0",
    "last_updated": "2025-12-23",
    "maintainer": "Typelift",
    "license": "MIT"
  }
}
