{
  "id": "quick",
  "name": "Quick",
  "category": "bdd_testing",
  "subcategory": "swift",

  "description": "Behavior-driven development testing framework for Swift and Objective-C",
  "long_description": "Quick provides an RSpec-style DSL for writing expressive tests in Swift and Objective-C. It integrates with XCTest, supports shared examples, and works alongside Nimble for rich matchers.",

  "capabilities": [
    "bdd_style",
    "xctest_runner",
    "shared_examples",
    "before_after_hooks",
    "spm_and_cocoapods_support"
  ],
  "property_types": ["unit_test", "integration_test"],
  "input_languages": ["swift", "objective_c"],
  "output_formats": ["xcode_report", "text_report"],

  "installation": {
    "methods": [
      {"type": "spm", "command": "dependencies: [.package(url: \"https://github.com/Quick/Quick.git\", from: \"7.0.0\")]"},
      {"type": "cocoapods", "command": "pod 'Quick'"}
    ],
    "dependencies": ["xctest"],
    "platforms": ["ios", "macos", "tvos", "watchos", "linux"]
  },

  "documentation": {
    "official": "https://github.com/Quick/Quick",
    "tutorial": "https://github.com/Quick/Quick/blob/main/Documentation/en-us/GettingStarted.md",
    "api_reference": "https://github.com/Quick/Quick/tree/main/Documentation/en-us",
    "examples": "https://github.com/Quick/Quick/tree/main/Examples"
  },

  "tactics": [
    {
      "name": "describe_context",
      "description": "Structure tests with describe/it",
      "syntax": "describe(\"Math\") { it(\"adds numbers\") { expect(a + b) == c } }",
      "when_to_use": "Behavior-driven scenarios",
      "examples": ["context(\"edge cases\") { it(\"handles zero\") { expect(sum(0,0)) == 0 } }"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "Test Case '-[.*]' failed",
      "meaning": "Quick spec assertion failed",
      "common_causes": ["Expectation mismatch", "Async not handled", "Setup issues"],
      "fixes": ["Adjust Nimble matchers", "Use waitUntil for async", "Refactor shared setup"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["unit_test"],
    "cli_command": "dashprove verify --backend quick"
  },

  "performance": {
    "typical_runtime": "Comparable to XCTest; minimal overhead",
    "scalability": "Organizes large suites with nested contexts",
    "memory_usage": "Low"
  },

  "comparisons": {
    "similar_tools": ["xctest", "swift-testing"],
    "advantages": ["Expressive DSL", "Shared examples", "Works with Nimble"],
    "disadvantages": ["Another abstraction atop XCTest", "BDD style may be unfamiliar"]
  },

  "metadata": {
    "version": "7.0.0",
    "last_updated": "2025-12-23",
    "maintainer": "Quick contributors",
    "license": "Apache-2.0"
  }
}
