{
  "id": "swift_format",
  "name": "swift-format",
  "category": "formatter",
  "subcategory": "swift",

  "description": "Official Apple formatter and linter for Swift",
  "long_description": "swift-format is Apple's official formatting and linting tool for Swift. It provides a configurable formatting engine, integrates with SwiftSyntax, and supports rule-based linting aligned with Swift community standards.",

  "capabilities": [
    "formatting",
    "linting",
    "swift_syntax_based",
    "rule_configuration",
    "stdin_stdout_support"
  ],
  "property_types": ["style", "code_quality"],
  "input_languages": ["swift"],
  "output_formats": ["formatted_files", "text_report"],

  "installation": {
    "methods": [
      {"type": "brew", "command": "brew install swift-format"},
      {"type": "source", "url": "https://github.com/apple/swift-format"}
    ],
    "dependencies": ["swift"],
    "platforms": ["macos", "linux"]
  },

  "documentation": {
    "official": "https://github.com/apple/swift-format",
    "tutorial": "https://github.com/apple/swift-format#usage",
    "api_reference": "https://github.com/apple/swift-format/blob/main/Documentation/Configuration.md",
    "examples": "https://github.com/apple/swift-format/tree/main/Tests"
  },

  "tactics": [
    {
      "name": "format",
      "description": "Format files in place",
      "syntax": "swift-format format --in-place Sources",
      "when_to_use": "Apply official Swift style across a project",
      "examples": ["swift-format format --recursive Sources"]
    },
    {
      "name": "lint",
      "description": "Run lint-only mode",
      "syntax": "swift-format lint --recursive .",
      "when_to_use": "Check formatting in CI without modifying files",
      "examples": ["swift-format lint --strict ."]
    }
  ],

  "error_patterns": [
    {
      "pattern": "Parsing failed",
      "meaning": "swift-format could not parse a file",
      "common_causes": ["Syntax errors", "Unsupported Swift version"],
      "fixes": ["Fix syntax", "Set --swift-version to match compiler"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["style"],
    "cli_command": "dashprove verify --backend swift-format"
  },

  "performance": {
    "typical_runtime": "Fast; similar to compiler front-end speed",
    "scalability": "Scales with file count; supports recursion",
    "memory_usage": "Moderate"
  },

  "comparisons": {
    "similar_tools": ["swiftformat", "swiftlint"],
    "advantages": ["Official toolchain alignment", "Lint + format in one"],
    "disadvantages": ["Feature set evolving", "Fewer rules than SwiftLint"]
  },

  "metadata": {
    "version": "509.0.0",
    "last_updated": "2025-12-23",
    "maintainer": "Apple",
    "license": "Apache-2.0"
  }
}
