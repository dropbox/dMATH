{
  "id": "swiftformat",
  "name": "SwiftFormat",
  "category": "formatter",
  "subcategory": "swift",

  "description": "Fast Swift code formatter by Nick Lockwood",
  "long_description": "SwiftFormat is an opinionated code formatter for Swift that enforces consistent style, sorts imports, and offers numerous rules configurable via a .swiftformat file. It is used as a drop-in alternative to manual style enforcement.",

  "capabilities": [
    "formatting",
    "import_sorting",
    "rule_configuration",
    "xcode_integration",
    "lint_mode"
  ],
  "property_types": ["style", "code_quality"],
  "input_languages": ["swift"],
  "output_formats": ["formatted_files", "text_report"],

  "installation": {
    "methods": [
      {"type": "brew", "command": "brew install swiftformat"},
      {"type": "mint", "command": "mint install nicklockwood/SwiftFormat"}
    ],
    "dependencies": ["swift"],
    "platforms": ["macos", "linux"]
  },

  "documentation": {
    "official": "https://github.com/nicklockwood/SwiftFormat",
    "tutorial": "https://github.com/nicklockwood/SwiftFormat#command-line-usage",
    "api_reference": "https://github.com/nicklockwood/SwiftFormat/blob/master/Rules.md",
    "examples": "https://github.com/nicklockwood/SwiftFormat/tree/master/Examples"
  },

  "tactics": [
    {
      "name": "format_project",
      "description": "Format an entire codebase",
      "syntax": "swiftformat .",
      "when_to_use": "Pre-commit formatting or CI enforcement",
      "examples": ["swiftformat Sources Tests"]
    },
    {
      "name": "lint",
      "description": "Run in lint-only mode",
      "syntax": "swiftformat . --lint",
      "when_to_use": "Detect style deviations without rewriting files",
      "examples": ["swiftformat . --lint --dryrun"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "Failed to format file",
      "meaning": "Formatter encountered syntax it cannot parse",
      "common_causes": ["Invalid Swift syntax", "Unsupported Swift version"],
      "fixes": ["Run swiftformat with correct --swiftversion", "Fix syntax errors first"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["style"],
    "cli_command": "dashprove verify --backend swiftformat"
  },

  "performance": {
    "typical_runtime": "Fast on most projects",
    "scalability": "Scales linearly with file count",
    "memory_usage": "Low"
  },

  "comparisons": {
    "similar_tools": ["swift-format", "swiftlint"],
    "advantages": ["Mature rules", "Easy configuration", "Works offline"],
    "disadvantages": ["Not official formatter", "Some differences vs Swift style guide"]
  },

  "metadata": {
    "version": "0.53.11",
    "last_updated": "2025-12-23",
    "maintainer": "Nick Lockwood",
    "license": "MIT"
  }
}
