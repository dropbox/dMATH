{
  "id": "periphery",
  "name": "Periphery",
  "category": "static_analysis",
  "subcategory": "swift",

  "description": "Dead code and unused symbol detector for Swift",
  "long_description": "Periphery analyzes Swift projects to find unused code, private declarations, redundant protocols, and unreachable code paths. It integrates with Xcodebuild projects and Swift Package Manager, producing actionable reports to reduce bloat.",

  "capabilities": [
    "unused_code_detection",
    "redundant_protocols",
    "redundant_public_access",
    "report_generation"
  ],
  "property_types": ["code_quality", "maintainability"],
  "input_languages": ["swift"],
  "output_formats": ["text_report", "json"],

  "installation": {
    "methods": [
      {"type": "brew", "command": "brew install periphery"},
      {"type": "mint", "command": "mint install peripheryapp/periphery"}
    ],
    "dependencies": ["swift"],
    "platforms": ["macos", "linux"]
  },

  "documentation": {
    "official": "https://raw.githubusercontent.com/peripheryapp/periphery/master/README.md",
    "tutorial": "https://raw.githubusercontent.com/peripheryapp/periphery/master/README.md",
    "api_reference": "https://raw.githubusercontent.com/peripheryapp/periphery/master/README.md",
    "examples": "https://raw.githubusercontent.com/peripheryapp/periphery/master/README.md"
  },

  "tactics": [
    {
      "name": "spm_scan",
      "description": "Scan a Swift Package Manager project",
      "syntax": "periphery scan --workspace MyApp.xcworkspace --schemes MyApp",
      "when_to_use": "Detect unused code across modules",
      "examples": ["periphery scan --retain-public --report-exclude Tests"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "Failed to build project",
      "meaning": "Periphery could not compile sources before analysis",
      "common_causes": ["Missing build flags", "Unsupported scheme", "Xcode not configured"],
      "fixes": ["Pass correct --schemes or --targets", "Ensure dependencies build", "Use --index-store-path from xcodebuild"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["code_quality"],
    "cli_command": "dashprove verify --backend periphery"
  },

  "performance": {
    "typical_runtime": "Minutes for large workspaces due to build indexing",
    "scalability": "Depends on build graph size",
    "memory_usage": "Moderate"
  },

  "comparisons": {
    "similar_tools": ["swiftlint"],
    "advantages": ["Dead code focus", "Works with SPM and Xcode"],
    "disadvantages": ["Requires full build", "macOS centric"]
  },

  "metadata": {
    "version": "2.20.0",
    "last_updated": "2025-12-23",
    "maintainer": "PeripheryApp",
    "license": "MIT"
  }
}
