{
  "id": "swiftlint",
  "name": "SwiftLint",
  "category": "static_analysis",
  "subcategory": "swift",

  "description": "Style and lint enforcement for Swift projects",
  "long_description": "SwiftLint enforces Swift style and conventions via a large set of configurable rules. It integrates with Xcode, supports autocorrection, and can emit warnings or errors for violations such as force unwraps, naming, and complexity.",

  "capabilities": [
    "linting",
    "autocorrect",
    "custom_rules",
    "xcode_integration",
    "reporters"
  ],
  "property_types": ["code_quality", "style"],
  "input_languages": ["swift"],
  "output_formats": ["text_report", "xcode", "json"],

  "installation": {
    "methods": [
      {"type": "brew", "command": "brew install swiftlint"},
      {"type": "mint", "command": "mint install realm/SwiftLint"}
    ],
    "dependencies": ["swift"],
    "platforms": ["macos", "linux"]
  },

  "documentation": {
    "official": "https://realm.github.io/SwiftLint/",
    "tutorial": "https://realm.github.io/SwiftLint/quickstart.html",
    "api_reference": "https://realm.github.io/SwiftLint/rule-directory.html",
    "examples": "https://github.com/realm/SwiftLint/tree/master/Tests"
  },

  "tactics": [
    {
      "name": "strict_lint",
      "description": "Run SwiftLint treating warnings as errors",
      "syntax": "swiftlint lint --strict",
      "when_to_use": "CI enforcement of style and safety rules",
      "examples": ["swiftlint lint --config .swiftlint.yml"]
    },
    {
      "name": "autocorrect",
      "description": "Automatically fix violations",
      "syntax": "swiftlint autocorrect",
      "when_to_use": "Clean up formatting and common issues",
      "examples": ["swiftlint autocorrect --format"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "Force Cast Violation",
      "meaning": "Use of force casting detected",
      "common_causes": ["Using as! instead of safe casting", "Legacy code without guards"],
      "fixes": ["Use guard let or optional binding", "Refactor to avoid force cast"]
    },
    {
      "pattern": "Line Length Violation",
      "meaning": "Line exceeds configured maximum length",
      "common_causes": ["Long strings", "Complex expressions"],
      "fixes": ["Wrap expressions", "Extract helpers", "Adjust configuration where justified"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["code_quality"],
    "cli_command": "dashprove verify --backend swiftlint"
  },

  "performance": {
    "typical_runtime": "Seconds for medium Swift modules",
    "scalability": "Good; supports caching and parallelization",
    "memory_usage": "Moderate"
  },

  "comparisons": {
    "similar_tools": ["swift-format", "swiftformat"],
    "advantages": ["Large rule set", "Autocorrect", "Tight Xcode integration"],
    "disadvantages": ["Not a formatter", "Primarily macOS focused"]
  },

  "metadata": {
    "version": "0.58.0",
    "last_updated": "2025-12-23",
    "maintainer": "Realm",
    "license": "MIT"
  }
}
