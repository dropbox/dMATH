{
  "id": "oclint",
  "name": "OCLint",
  "category": "static_analysis",
  "subcategory": "objc_cpp_swift",

  "description": "Static analysis for C, C++, Objective-C, and Swift",
  "long_description": "OCLint is a clang-based static analyzer that detects code smells, potential bugs, and style issues in C, C++, Objective-C, and Swift projects. It integrates with Xcode build logs and supports customizable rule sets.",

  "capabilities": [
    "bug_finding",
    "code_smell_detection",
    "metrics",
    "xcode_integration",
    "reporters"
  ],
  "property_types": ["code_quality", "security"],
  "input_languages": ["c", "cpp", "objective_c", "swift"],
  "output_formats": ["text_report", "html", "json"],

  "installation": {
    "methods": [
      {"type": "brew", "command": "brew install oclint"},
      {"type": "source", "url": "https://github.com/oclint/oclint"}
    ],
    "dependencies": ["clang"],
    "platforms": ["macos", "linux"]
  },

  "documentation": {
    "official": "https://oclint.org/",
    "tutorial": "https://docs.oclint.org/en/stable/guide/intro.html",
    "api_reference": "https://docs.oclint.org/en/stable/usage/rc.html",
    "examples": "https://github.com/oclint/oclint/tree/master/test"
  },

  "tactics": [
    {
      "name": "analyze_build",
      "description": "Analyze Xcode build with derived data",
      "syntax": "oclint-json-compilation-database -- -report-type html -o oclint.html",
      "when_to_use": "Full project scan using compile_commands.json",
      "examples": ["oclint-json-compilation-database -- -max-priority-1 0"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "Compilation errors while building",
      "meaning": "OCLint could not compile sources to analyze",
      "common_causes": ["Missing compiler flags", "Incomplete compile_commands.json"],
      "fixes": ["Export compile commands via xcodebuild", "Pass necessary include paths"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["code_quality"],
    "cli_command": "dashprove verify --backend oclint"
  },

  "performance": {
    "typical_runtime": "Minutes for large codebases",
    "scalability": "Depends on compilation database quality",
    "memory_usage": "Moderate"
  },

  "comparisons": {
    "similar_tools": ["clang-tidy", "infer"],
    "advantages": ["Cross-language support", "Custom rules"],
    "disadvantages": ["Setup with build logs", "Performance on very large projects"]
  },

  "metadata": {
    "version": "22.10",
    "last_updated": "2025-12-23",
    "maintainer": "OCLint project",
    "license": "GPL-3.0"
  }
}
