{
  "id": "postman",
  "name": "Postman",
  "category": "testing",
  "subcategory": "api_testing",

  "description": "API development and testing platform with collaboration features",
  "long_description": "Postman is an API platform for building, testing, and documenting APIs. It provides a GUI for making requests, writing tests in JavaScript, and automating API testing with Newman CLI. Teams can collaborate on collections and share API documentation.",

  "capabilities": [
    "request_building",
    "test_scripting",
    "collection_runner",
    "environment_management",
    "mock_servers",
    "api_documentation",
    "monitoring",
    "newman_cli"
  ],
  "property_types": ["api_correctness", "integration"],
  "input_languages": ["javascript"],
  "output_formats": ["json", "junit", "html"],

  "installation": {
    "methods": [
      {"type": "download", "url": "https://www.postman.com/downloads/"},
      {"type": "npm", "command": "npm install -g newman"}
    ],
    "dependencies": [],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://learning.postman.com/docs/",
    "tutorial": "https://learning.postman.com/docs/getting-started/",
    "api_reference": "https://learning.postman.com/docs/writing-scripts/script-references/postman-sandbox-api-reference/",
    "examples": "https://www.postman.com/templates"
  },

  "tactics": [
    {
      "name": "basic_test",
      "description": "Write tests for response",
      "syntax": "pm.test('Status 200', () => pm.response.to.have.status(200))",
      "when_to_use": "Validating API responses",
      "examples": ["pm.test('Has id', () => pm.expect(pm.response.json().id).to.exist)"]
    },
    {
      "name": "newman_run",
      "description": "Run collection via CLI",
      "syntax": "newman run collection.json -e env.json",
      "when_to_use": "CI/CD automation",
      "examples": ["newman run collection.json --reporters cli,junit --reporter-junit-export results.xml"]
    },
    {
      "name": "pre_request",
      "description": "Setup before request",
      "syntax": "pm.environment.set('token', 'xxx')",
      "when_to_use": "Dynamic data setup",
      "examples": ["Fetch auth token in pre-request, use in request"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "AssertionError",
      "meaning": "Test assertion failed",
      "common_causes": ["Unexpected response"],
      "fixes": ["Fix API or update test"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["api_correctness"],
    "cli_command": "dashprove verify --backend postman"
  },

  "performance": {
    "typical_runtime": "Fast",
    "scalability": "Good with Newman",
    "memory_usage": "Moderate"
  },

  "comparisons": {
    "similar_tools": ["insomnia", "httpie", "curl", "bruno"],
    "advantages": ["User-friendly GUI", "Collaboration", "Extensive ecosystem"],
    "disadvantages": ["Cloud sync concerns", "Heavy app"]
  },

  "metadata": {
    "version": "11.x",
    "last_updated": "2025-12-22",
    "maintainer": "Postman Inc",
    "license": "Freemium"
  }
}
