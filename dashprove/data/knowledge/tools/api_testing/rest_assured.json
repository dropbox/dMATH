{
  "id": "rest_assured",
  "name": "REST Assured",
  "category": "testing",
  "subcategory": "api_testing",

  "description": "Java library for testing REST services with fluent API",
  "long_description": "REST Assured is a Java library that provides a domain-specific language (DSL) for writing powerful, maintainable tests for RESTful APIs. It simplifies testing of REST services by providing Given-When-Then syntax and integrates with JUnit/TestNG.",

  "capabilities": [
    "rest_testing",
    "fluent_api",
    "json_xml_validation",
    "schema_validation",
    "authentication_support",
    "response_extraction",
    "request_specification"
  ],
  "property_types": ["api_correctness"],
  "input_languages": ["java", "kotlin", "groovy"],
  "output_formats": ["junit", "testng"],

  "installation": {
    "methods": [
      {"type": "maven", "command": "io.rest-assured:rest-assured"},
      {"type": "gradle", "command": "testImplementation 'io.rest-assured:rest-assured:5.4.0'"}
    ],
    "dependencies": ["java"],
    "platforms": ["jvm"]
  },

  "documentation": {
    "official": "https://rest-assured.io/",
    "tutorial": "https://github.com/rest-assured/rest-assured/wiki/GettingStarted",
    "api_reference": "https://github.com/rest-assured/rest-assured/wiki/Usage",
    "examples": "https://github.com/rest-assured/rest-assured/tree/master/examples"
  },

  "tactics": [
    {
      "name": "basic_test",
      "description": "Write basic REST test",
      "syntax": "given().when().get('/users').then().statusCode(200)",
      "when_to_use": "Testing REST endpoints",
      "examples": ["given().auth().basic(\"user\", \"pass\").when().get(\"/api/users\").then().statusCode(200).body(\"size()\", greaterThan(0))"]
    },
    {
      "name": "json_path",
      "description": "Extract and validate JSON",
      "syntax": "body(\"user.name\", equalTo(\"John\"))",
      "when_to_use": "Validating response data",
      "examples": ["then().body(\"items.findAll{it.price > 10}.name\", hasItems(\"item1\"))"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "AssertionError",
      "meaning": "Assertion failed",
      "common_causes": ["Unexpected response"],
      "fixes": ["Fix API or update test"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["api_correctness"],
    "cli_command": "dashprove verify --backend rest-assured"
  },

  "performance": {
    "typical_runtime": "Fast",
    "scalability": "Good",
    "memory_usage": "JVM dependent"
  },

  "comparisons": {
    "similar_tools": ["karate", "http-client", "feign"],
    "advantages": ["Fluent API", "Mature", "JVM ecosystem"],
    "disadvantages": ["Java only", "Verbose compared to Karate"]
  },

  "metadata": {
    "version": "5.4.0",
    "last_updated": "2025-12-22",
    "maintainer": "REST Assured",
    "license": "Apache-2.0"
  }
}
