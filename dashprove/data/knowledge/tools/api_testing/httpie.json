{
  "id": "httpie",
  "name": "HTTPie",
  "category": "testing",
  "subcategory": "api_testing",

  "description": "Human-friendly command-line HTTP client for API testing",
  "long_description": "HTTPie is a command-line HTTP client designed for testing, debugging, and generally interacting with APIs and HTTP servers. It has intuitive syntax, JSON support, persistent sessions, and output coloring. It's often used as a more user-friendly alternative to curl.",

  "capabilities": [
    "http_requests",
    "json_support",
    "persistent_sessions",
    "file_uploads",
    "authentication",
    "output_formatting",
    "plugins"
  ],
  "property_types": ["api_testing"],
  "input_languages": ["cli"],
  "output_formats": ["text", "json"],

  "installation": {
    "methods": [
      {"type": "pip", "command": "pip install httpie"},
      {"type": "brew", "command": "brew install httpie", "platform": "macos"},
      {"type": "apt", "command": "apt install httpie", "platform": "linux"}
    ],
    "dependencies": ["python"],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://httpie.io/docs/cli",
    "tutorial": "https://httpie.io/docs/cli/examples",
    "api_reference": "https://httpie.io/docs/cli",
    "examples": "https://httpie.io/docs/cli/examples"
  },

  "tactics": [
    {
      "name": "get_request",
      "description": "Simple GET request",
      "syntax": "http GET https://api.example.com/users",
      "when_to_use": "Quick API testing",
      "examples": ["http https://httpbin.org/get"]
    },
    {
      "name": "post_json",
      "description": "POST with JSON body",
      "syntax": "http POST url key=value",
      "when_to_use": "Creating resources",
      "examples": ["http POST https://api.example.com/users name=John email=john@example.com"]
    },
    {
      "name": "with_auth",
      "description": "Request with authentication",
      "syntax": "http -a user:pass URL",
      "when_to_use": "Authenticated endpoints",
      "examples": ["http -A bearer -a TOKEN https://api.example.com/me"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "HTTP/1.1 4\\d\\d",
      "meaning": "Client error",
      "common_causes": ["Wrong endpoint", "Missing auth"],
      "fixes": ["Check URL", "Add authentication"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["api_testing"],
    "cli_command": "dashprove verify --backend httpie"
  },

  "performance": {
    "typical_runtime": "Fast",
    "scalability": "Single request tool",
    "memory_usage": "Low"
  },

  "comparisons": {
    "similar_tools": ["curl", "postman", "insomnia", "xh"],
    "advantages": ["Human-friendly syntax", "Pretty output", "Sessions"],
    "disadvantages": ["Less automation than Postman"]
  },

  "metadata": {
    "version": "3.2.2",
    "last_updated": "2025-12-22",
    "maintainer": "HTTPie",
    "license": "BSD-3-Clause"
  }
}
