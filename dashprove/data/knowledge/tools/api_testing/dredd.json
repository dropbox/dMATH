{
  "id": "dredd",
  "name": "Dredd",
  "category": "testing",
  "subcategory": "api_testing",

  "description": "HTTP API testing framework using API Blueprint or OpenAPI specifications",
  "long_description": "Dredd is a language-agnostic command-line tool for testing HTTP APIs. It reads your API description written in API Blueprint or OpenAPI format and validates your implementation against it. Dredd can be used in CI/CD pipelines to ensure API implementations match their specifications.",

  "capabilities": [
    "api_blueprint_support",
    "openapi_support",
    "implementation_validation",
    "hooks_system",
    "ci_integration",
    "multi_language_hooks",
    "reporting",
    "dry_run"
  ],
  "property_types": ["api_compliance", "specification_match"],
  "input_languages": ["javascript", "python", "ruby", "go", "php", "perl", "rust"],
  "output_formats": ["text", "junit", "apiary", "markdown"],

  "installation": {
    "methods": [
      {"type": "npm", "command": "npm install -g dredd"}
    ],
    "dependencies": ["nodejs"],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://dredd.org/",
    "tutorial": "https://dredd.org/en/latest/quickstart.html",
    "api_reference": "https://dredd.org/en/latest/hooks/",
    "examples": "https://github.com/apiaryio/dredd/tree/master/packages/dredd/test/fixtures"
  },

  "tactics": [
    {
      "name": "basic_test",
      "description": "Run basic API validation",
      "syntax": "dredd api-description.apib http://localhost:3000",
      "when_to_use": "Validating API against spec",
      "examples": ["dredd openapi.yaml http://localhost:8080 --reporter junit --output report.xml"]
    },
    {
      "name": "with_hooks",
      "description": "Use hooks for setup/teardown",
      "syntax": "dredd api.apib URL --hookfiles=hooks.js",
      "when_to_use": "Tests requiring setup or authentication",
      "examples": ["dredd api.yaml http://localhost:8080 --hookfiles=./test/hooks.js --hooks-worker-handler-host=localhost"]
    },
    {
      "name": "init_config",
      "description": "Initialize Dredd configuration",
      "syntax": "dredd init",
      "when_to_use": "Setting up Dredd in new project",
      "examples": ["dredd init && dredd"]
    },
    {
      "name": "dry_run",
      "description": "Validate without making requests",
      "syntax": "dredd api.apib URL --dry-run",
      "when_to_use": "Checking configuration",
      "examples": ["dredd openapi.yaml http://localhost:8080 --dry-run --names"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "fail: \\d+ failing",
      "meaning": "API doesn't match specification",
      "common_causes": ["Wrong response format", "Missing endpoints", "Status code mismatch"],
      "fixes": ["Update implementation", "Fix response format", "Update specification"]
    },
    {
      "pattern": "Error.*hook",
      "meaning": "Hook script failed",
      "common_causes": ["JavaScript error in hooks", "Missing module"],
      "fixes": ["Fix hook script", "Install dependencies"]
    },
    {
      "pattern": "ECONNREFUSED",
      "meaning": "Server not reachable",
      "common_causes": ["Server not running", "Wrong URL"],
      "fixes": ["Start server", "Check URL"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["api_compliance"],
    "cli_command": "dashprove verify --backend dredd"
  },

  "performance": {
    "typical_runtime": "Fast; sequential by default",
    "scalability": "Can parallelize with multiple instances",
    "memory_usage": "Low"
  },

  "comparisons": {
    "similar_tools": ["schemathesis", "postman", "newman", "karate"],
    "advantages": ["Spec-first testing", "Multi-language hooks", "CI-friendly"],
    "disadvantages": ["Apiary acquisition uncertainty", "Less active development"]
  },

  "metadata": {
    "version": "14.1.0",
    "last_updated": "2025-12-22",
    "maintainer": "Apiary/Oracle",
    "license": "MIT"
  }
}
