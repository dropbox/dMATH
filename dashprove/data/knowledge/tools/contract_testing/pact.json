{
  "id": "pact",
  "name": "Pact",
  "category": "testing",
  "subcategory": "contract_testing",

  "description": "Consumer-driven contract testing framework for microservices",
  "long_description": "Pact is a contract testing tool that enables consumer-driven contract testing between services. It captures interactions between a consumer and provider, generates contracts (pacts), and allows independent verification. This enables teams to test service integrations without requiring all services to be running, catching breaking changes before deployment.",

  "capabilities": [
    "consumer_driven_contracts",
    "provider_verification",
    "pact_broker_integration",
    "webhook_triggers",
    "can_i_deploy_checks",
    "versioned_contracts",
    "multi_language_support",
    "bidirectional_contracts"
  ],
  "property_types": ["api_compatibility", "integration"],
  "input_languages": ["ruby", "javascript", "java", "python", "go", "dotnet", "rust", "swift"],
  "output_formats": ["json_pact", "verification_results", "matrix_report"],

  "installation": {
    "methods": [
      {"type": "npm", "command": "npm install @pact-foundation/pact"},
      {"type": "maven", "command": "au.com.dius.pact.consumer:junit5"},
      {"type": "pip", "command": "pip install pact-python"},
      {"type": "gem", "command": "gem install pact"}
    ],
    "dependencies": [],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://docs.pact.io/",
    "tutorial": "https://docs.pact.io/implementation_guides/",
    "api_reference": "https://docs.pact.io/implementation_guides/javascript/docs/api",
    "examples": "https://github.com/pact-foundation/pact-js/tree/master/examples"
  },

  "tactics": [
    {
      "name": "consumer_test",
      "description": "Write consumer contract test",
      "syntax": "new Pact({consumer: 'A', provider: 'B'}).addInteraction({...})",
      "when_to_use": "Defining expected API behavior from consumer perspective",
      "examples": ["provider.addInteraction({state: 'user exists', uponReceiving: 'get user', withRequest: {...}, willRespondWith: {...}})"]
    },
    {
      "name": "provider_verification",
      "description": "Verify provider against contracts",
      "syntax": "pact-verifier --provider-base-url=http://localhost:8080",
      "when_to_use": "Ensuring provider meets consumer expectations",
      "examples": ["verifier.verifyProvider({provider: 'UserService', pactBrokerUrl: 'https://broker.example.com'})"]
    },
    {
      "name": "can_i_deploy",
      "description": "Check if safe to deploy",
      "syntax": "pact-broker can-i-deploy --pacticipant=X --version=Y",
      "when_to_use": "CI/CD pipeline before deployment",
      "examples": ["pact-broker can-i-deploy --pacticipant=Consumer --latest --to-environment=production"]
    },
    {
      "name": "publish_pacts",
      "description": "Publish pacts to broker",
      "syntax": "pact-broker publish ./pacts --consumer-app-version=X",
      "when_to_use": "After consumer tests pass",
      "examples": ["pact-broker publish ./pacts --consumer-app-version=$(git rev-parse HEAD) --broker-base-url=https://broker.example.com"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "Verification failed",
      "meaning": "Provider doesn't match consumer expectations",
      "common_causes": ["API changed", "Missing endpoint", "Response format mismatch"],
      "fixes": ["Update provider to match contract", "Update consumer expectations", "Version APIs properly"]
    },
    {
      "pattern": "No pacts found",
      "meaning": "No contracts to verify",
      "common_causes": ["Pacts not published", "Wrong broker URL"],
      "fixes": ["Publish consumer pacts first", "Check broker configuration"]
    },
    {
      "pattern": "State handler not found",
      "meaning": "Provider state setup missing",
      "common_causes": ["Missing state handler in provider"],
      "fixes": ["Implement state handler for the given state"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["api_compatibility"],
    "cli_command": "dashprove verify --backend pact"
  },

  "performance": {
    "typical_runtime": "Fast; mocked interactions",
    "scalability": "Scales with service count",
    "memory_usage": "Low"
  },

  "comparisons": {
    "similar_tools": ["spring-cloud-contract", "dredd", "schemathesis"],
    "advantages": ["Consumer-driven", "Multi-language", "Mature ecosystem", "Pact Broker"],
    "disadvantages": ["Requires broker for full workflow", "Learning curve"]
  },

  "metadata": {
    "version": "12.x",
    "last_updated": "2025-12-22",
    "maintainer": "Pact Foundation",
    "license": "MIT"
  }
}
