{
  "id": "openapi_diff",
  "name": "OpenAPI Diff",
  "category": "testing",
  "subcategory": "api_compatibility",

  "description": "Detect breaking changes between OpenAPI specifications",
  "long_description": "OpenAPI Diff compares two OpenAPI specifications and identifies differences. It detects breaking changes that could affect API consumers, helping maintain backward compatibility. Available as CLI tool and library.",

  "capabilities": [
    "breaking_change_detection",
    "spec_comparison",
    "html_report",
    "json_output",
    "ci_integration"
  ],
  "property_types": ["api_compatibility"],
  "input_languages": ["openapi"],
  "output_formats": ["text", "json", "html", "markdown"],

  "installation": {
    "methods": [
      {"type": "npm", "command": "npm install -g openapi-diff"},
      {"type": "docker", "command": "docker pull openapitools/openapi-diff"}
    ],
    "dependencies": ["nodejs"],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://github.com/OpenAPITools/openapi-diff",
    "tutorial": "https://github.com/OpenAPITools/openapi-diff#usage",
    "api_reference": "https://github.com/OpenAPITools/openapi-diff#options",
    "examples": "https://github.com/OpenAPITools/openapi-diff#examples"
  },

  "tactics": [
    {
      "name": "compare",
      "description": "Compare two specs",
      "syntax": "openapi-diff old.yaml new.yaml",
      "when_to_use": "Checking for breaking changes",
      "examples": ["openapi-diff v1/openapi.yaml v2/openapi.yaml --fail-on-incompatible"]
    },
    {
      "name": "ci_check",
      "description": "Fail CI on breaking changes",
      "syntax": "openapi-diff old.yaml new.yaml --fail-on-incompatible",
      "when_to_use": "CI/CD pipeline",
      "examples": ["openapi-diff main.yaml feature.yaml --fail-on-incompatible --json > diff.json"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "BREAKING",
      "meaning": "Breaking change detected",
      "common_causes": ["Removed endpoint", "Changed required field"],
      "fixes": ["Keep backward compatibility", "Version API"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["api_compatibility"],
    "cli_command": "dashprove verify --backend openapi-diff"
  },

  "performance": {
    "typical_runtime": "Fast",
    "scalability": "Good",
    "memory_usage": "Low"
  },

  "comparisons": {
    "similar_tools": ["oasdiff", "swagger-diff"],
    "advantages": ["Detailed reports", "CI integration"],
    "disadvantages": ["OpenAPI only"]
  },

  "metadata": {
    "version": "2.1.0",
    "last_updated": "2025-12-22",
    "maintainer": "OpenAPI Tools",
    "license": "Apache-2.0"
  }
}
