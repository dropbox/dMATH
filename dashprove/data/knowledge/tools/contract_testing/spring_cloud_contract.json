{
  "id": "spring_cloud_contract",
  "name": "Spring Cloud Contract",
  "category": "testing",
  "subcategory": "contract_testing",

  "description": "Consumer-driven contract testing framework for Spring/JVM applications",
  "long_description": "Spring Cloud Contract is a project that supports Consumer Driven Contracts development in the JVM ecosystem. It provides contract definition language, auto-generated tests for providers, and stubs for consumers. It integrates naturally with Spring Boot and can generate WireMock stubs from contracts.",

  "capabilities": [
    "contract_definition",
    "provider_test_generation",
    "stub_generation",
    "wiremock_integration",
    "messaging_support",
    "polyglot_contracts",
    "maven_gradle_plugins",
    "stub_runner"
  ],
  "property_types": ["api_compatibility", "contract_compliance"],
  "input_languages": ["groovy", "yaml", "kotlin", "java"],
  "output_formats": ["test_classes", "wiremock_stubs", "json"],

  "installation": {
    "methods": [
      {"type": "maven", "command": "spring-cloud-starter-contract-verifier"},
      {"type": "gradle", "command": "implementation 'org.springframework.cloud:spring-cloud-starter-contract-verifier'"}
    ],
    "dependencies": ["spring-boot", "junit"],
    "platforms": ["jvm"]
  },

  "documentation": {
    "official": "https://spring.io/projects/spring-cloud-contract",
    "tutorial": "https://cloud.spring.io/spring-cloud-contract/reference/html/",
    "api_reference": "https://cloud.spring.io/spring-cloud-contract/reference/html/project-features.html",
    "examples": "https://github.com/spring-cloud-samples/spring-cloud-contract-samples"
  },

  "tactics": [
    {
      "name": "groovy_contract",
      "description": "Define contract in Groovy DSL",
      "syntax": "Contract.make { ... }",
      "when_to_use": "Defining API expectations",
      "examples": ["Contract.make { request { method GET(); url '/users/1' } response { status OK() } }"]
    },
    {
      "name": "generate_tests",
      "description": "Generate provider tests from contracts",
      "syntax": "mvn spring-cloud-contract:generateTests",
      "when_to_use": "Provider verification",
      "examples": ["./gradlew generateContractTests"]
    },
    {
      "name": "stub_runner",
      "description": "Run stubs for consumer testing",
      "syntax": "@AutoConfigureStubRunner(stubsMode = LOCAL)",
      "when_to_use": "Consumer integration tests",
      "examples": ["@AutoConfigureStubRunner(ids = 'com.example:user-service:+:stubs:8080')"]
    },
    {
      "name": "install_stubs",
      "description": "Publish stubs to artifact repo",
      "syntax": "mvn install",
      "when_to_use": "Sharing stubs between teams",
      "examples": ["./gradlew publishStubsPublicationToMavenLocal"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "ContractVerifierTest.*failed",
      "meaning": "Provider doesn't match contract",
      "common_causes": ["API changed", "Response format mismatch"],
      "fixes": ["Update implementation or contract"]
    },
    {
      "pattern": "Stub.*not found",
      "meaning": "Consumer can't find stub",
      "common_causes": ["Stub not published", "Wrong artifact ID"],
      "fixes": ["Publish stubs", "Check configuration"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["api_compatibility"],
    "cli_command": "dashprove verify --backend spring-cloud-contract"
  },

  "performance": {
    "typical_runtime": "Fast; generated tests",
    "scalability": "Good with artifact repo",
    "memory_usage": "JVM dependent"
  },

  "comparisons": {
    "similar_tools": ["pact", "dredd", "openapi_diff"],
    "advantages": ["Spring integration", "WireMock stubs", "JVM native"],
    "disadvantages": ["JVM-centric", "Learning curve"]
  },

  "metadata": {
    "version": "4.1.0",
    "last_updated": "2025-12-22",
    "maintainer": "Spring/VMware",
    "license": "Apache-2.0"
  }
}
