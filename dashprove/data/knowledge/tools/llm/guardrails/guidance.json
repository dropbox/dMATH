{
  "id": "guidance",
  "name": "Guidance",
  "category": "llm",
  "subcategory": "generation",
  "description": "Language for controlling large language models with structured generation",
  "long_description": "Guidance is a programming language from Microsoft for controlling large language models. It enables constrained generation with templates, ensuring outputs match specified formats. Supports regex constraints, JSON schema validation, and interleaved generation with control flow.",
  "capabilities": [
    "constrained_generation",
    "template_based_prompts",
    "regex_constraints",
    "json_schema_validation",
    "interleaved_control_flow",
    "select_from_options",
    "grammar_constraints",
    "stateful_generation"
  ],
  "property_types": [
    "output_format",
    "constraint_satisfaction"
  ],
  "input_languages": [
    "python",
    "guidance_dsl"
  ],
  "output_formats": [
    "structured_text",
    "json",
    "constrained_output"
  ],
  "installation": {
    "methods": [
      {
        "type": "pip",
        "command": "pip install guidance"
      },
      {
        "type": "source",
        "url": "https://github.com/guidance-ai/guidance"
      }
    ],
    "dependencies": [
      "transformers",
      "torch"
    ],
    "platforms": [
      "linux",
      "macos",
      "windows"
    ]
  },
  "documentation": {
    "official": "https://github.com/guidance-ai/guidance",
    "tutorial": "https://github.com/guidance-ai/guidance/blob/main/notebooks/tutorials/",
    "api_reference": "https://github.com/guidance-ai/guidance/blob/main/docs/",
    "examples": "https://github.com/guidance-ai/guidance/tree/main/notebooks"
  },
  "tactics": [
    {
      "name": "template",
      "description": "Create generation template",
      "syntax": "guidance('template with {{gen}}')(llm)",
      "when_to_use": "Structured text generation",
      "examples": [
        "program = guidance('Name: {{gen \"name\" max_tokens=10}}'); result = program(llm)"
      ]
    },
    {
      "name": "select",
      "description": "Select from options",
      "syntax": "{{select 'var' options=choices}}",
      "when_to_use": "Forcing choice from set",
      "examples": [
        "guidance('Answer: {{select \"ans\" options=[\"yes\", \"no\"]}}')"
      ]
    },
    {
      "name": "json_constraint",
      "description": "Generate valid JSON",
      "syntax": "{{gen 'json' stop='}'}}",
      "when_to_use": "Structured JSON output",
      "examples": [
        "guidance('{\"name\": \"{{gen \"name\"}}\"')"
      ]
    },
    {
      "name": "regex",
      "description": "Constrain to regex pattern",
      "syntax": "{{gen 'var' pattern=regex}}",
      "when_to_use": "Enforcing format patterns",
      "examples": [
        "guidance('Email: {{gen \"email\" pattern=r\"[a-z]+@[a-z]+\\.com\"}}')"
      ]
    }
  ],
  "error_patterns": [
    {
      "pattern": "Constraint unsatisfied",
      "meaning": "Generation cannot meet constraints",
      "common_causes": [
        "Impossible constraint",
        "Conflicting requirements"
      ],
      "fixes": [
        "Relax constraints",
        "Check pattern validity"
      ]
    },
    {
      "pattern": "Model incompatible",
      "meaning": "Model doesn't support required features",
      "common_causes": [
        "Missing logit access",
        "API limitation"
      ],
      "fixes": [
        "Use compatible model",
        "Use local model"
      ]
    }
  ],
  "integration": {
    "dashprove_backend": true,
    "usl_property_types": [
      "llm_guardrails"
    ],
    "cli_command": "dashprove verify --backend guidance"
  },
  "performance": {
    "typical_runtime": "Same as base model generation",
    "scalability": "Depends on model",
    "memory_usage": "Same as model"
  },
  "comparisons": {
    "similar_tools": [
      "outlines",
      "lmql",
      "jsonformer"
    ],
    "advantages": [
      "Powerful constraint language",
      "Good Microsoft support",
      "Interleaved control flow",
      "Multiple constraint types"
    ],
    "disadvantages": [
      "Requires logit access",
      "Some models incompatible"
    ]
  },
  "metadata": {
    "version": "0.1.10",
    "last_updated": "2025-12-20",
    "maintainer": "Microsoft",
    "license": "MIT"
  }
}
