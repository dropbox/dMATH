{
  "id": "giskard",
  "name": "Giskard",
  "category": "llm_evaluation",
  "subcategory": "testing",

  "description": "Testing framework for ML models with LLM-specific features",
  "long_description": "Giskard is an open-source testing framework for ML models that provides automated vulnerability detection, bias testing, and performance evaluation. It includes LLM-specific features like hallucination detection, prompt injection testing, and RAG evaluation.",

  "capabilities": [
    "vulnerability_scanning",
    "bias_detection",
    "hallucination_testing",
    "prompt_injection_testing",
    "rag_evaluation",
    "performance_testing",
    "data_drift_detection",
    "test_suite_generation"
  ],
  "property_types": ["accuracy", "robustness", "fairness", "safety"],
  "input_languages": ["python"],
  "output_formats": ["html", "json", "jupyter"],

  "installation": {
    "methods": [
      {"type": "pip", "command": "pip install giskard"},
      {"type": "pip_llm", "command": "pip install giskard[llm]"}
    ],
    "dependencies": ["pandas", "numpy", "scikit-learn"],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://docs.giskard.ai/",
    "tutorial": "https://docs.giskard.ai/en/stable/getting-started/quickstart.html",
    "api_reference": "https://docs.giskard.ai/en/stable/reference/index.html",
    "examples": "https://docs.giskard.ai/en/stable/tutorials/index.html"
  },

  "tactics": [
    {
      "name": "scan",
      "description": "Automatic vulnerability scan",
      "syntax": "giskard.scan(model, dataset)",
      "when_to_use": "To find model vulnerabilities automatically",
      "examples": ["import giskard\nresults = giskard.scan(my_model, my_dataset)\nresults.to_html('report.html')"]
    },
    {
      "name": "llm_scan",
      "description": "LLM-specific vulnerability scan",
      "syntax": "giskard.scan(model, dataset, only=['llm'])",
      "when_to_use": "To test LLM for hallucinations, injections",
      "examples": ["results = giskard.scan(llm_model, dataset, only=['hallucination', 'prompt_injection'])"]
    },
    {
      "name": "test_suite",
      "description": "Create test suite",
      "syntax": "suite = giskard.Suite()\nsuite.add_test(test)",
      "when_to_use": "To build regression test suite",
      "examples": ["suite = giskard.Suite(name='LLM Tests')\nsuite.add_test(giskard.tests.llm.test_hallucination(model))"]
    },
    {
      "name": "rag_evaluate",
      "description": "Evaluate RAG system",
      "syntax": "giskard.rag.evaluate(qa_chain, testset)",
      "when_to_use": "To evaluate retrieval-augmented generation",
      "examples": ["from giskard.rag import evaluate, TestsetGenerator\ntestset = TestsetGenerator.generate_from_docs(docs)\nevaluate(rag_chain, testset)"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "Model wrapper.*required",
      "meaning": "Model not wrapped properly",
      "common_causes": ["Missing giskard.Model wrapper"],
      "fixes": ["Wrap model: giskard.Model(model, model_type='text_generation')"]
    },
    {
      "pattern": "Feature.*not found",
      "meaning": "Dataset schema mismatch",
      "common_causes": ["Missing columns", "Wrong feature names"],
      "fixes": ["Check dataset columns match model input"]
    },
    {
      "pattern": "LLM client.*not configured",
      "meaning": "LLM backend not set up",
      "common_causes": ["Missing API key"],
      "fixes": ["Set OPENAI_API_KEY or configure LLM client"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["robustness", "fairness", "safety"],
    "cli_command": "dashprove verify --backend giskard"
  },

  "performance": {
    "typical_runtime": "Minutes for scans, hours for comprehensive testing",
    "scalability": "Good with sampling",
    "memory_usage": "Medium"
  },

  "comparisons": {
    "similar_tools": ["deepeval", "trulens", "promptfoo"],
    "advantages": [
      "Automatic vulnerability detection",
      "LLM-specific tests",
      "RAG evaluation",
      "Beautiful reports",
      "CI/CD integration"
    ],
    "disadvantages": [
      "Newer tool, smaller community",
      "Some features require paid hub",
      "Complex setup for custom models"
    ]
  },

  "metadata": {
    "version": "2.0.0",
    "last_updated": "2025-12-22",
    "maintainer": "Giskard AI",
    "license": "Apache-2.0"
  }
}
