{
  "id": "hypothesis",
  "name": "Hypothesis",
  "category": "property_testing",
  "subcategory": "python",

  "description": "Property-based testing library for Python",
  "long_description": "Hypothesis generates randomized test inputs from declarative strategies, runs tests repeatedly, and automatically shrinks failing examples to minimal counterexamples. It supports stateful testing, ghostwriter generation, and pytest integration.",

  "capabilities": [
    "property_testing",
    "automatic_shrinking",
    "stateful_testing",
    "pytest_integration",
    "ghostwriter_generation"
  ],
  "property_types": ["property", "invariant", "fuzz"],
  "input_languages": ["python"],
  "output_formats": ["failing_example", "pytest_report"],

  "installation": {
    "methods": [
      {"type": "pip", "command": "pip install hypothesis"}
    ],
    "dependencies": [],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://hypothesis.readthedocs.io/",
    "tutorial": "https://hypothesis.readthedocs.io/en/latest/quickstart.html",
    "api_reference": "https://hypothesis.readthedocs.io/en/latest/api.html",
    "examples": "https://github.com/HypothesisWorks/hypothesis/tree/master/examples"
  },

  "tactics": [
    {
      "name": "property_test",
      "description": "Use @given with strategies for property coverage",
      "syntax": "@given(strategies.integers())",
      "when_to_use": "Functional correctness across input space",
      "examples": ["@given(st.lists(st.integers()))\ndef test_sort(lst): assert sorted(lst) == sorted(lst)"]
    },
    {
      "name": "stateful",
      "description": "Model state machines with RuleBasedStateMachine",
      "syntax": "class Model(RuleBasedStateMachine): ...",
      "when_to_use": "Protocols and mutable systems",
      "examples": ["ModelTest = Model.TestCase"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "Falsifying example",
      "meaning": "Hypothesis found a counterexample to assertions",
      "common_causes": ["Property not universally true", "Edge cases unhandled", "Shrinking reveals minimal failing input"],
      "fixes": ["Strengthen invariants", "Handle boundary cases", "Adjust strategies or assumptions"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["property", "invariant"],
    "cli_command": "dashprove verify --backend hypothesis"
  },

  "performance": {
    "typical_runtime": "Depends on number of generated examples; seconds to minutes",
    "scalability": "Configurable max examples and deadlines",
    "memory_usage": "Moderate"
  },

  "comparisons": {
    "similar_tools": ["proptest", "quickcheck", "rapid"],
    "advantages": ["Powerful shrinking", "Rich strategy library", "Ghostwriter"],
    "disadvantages": ["Randomness can mask flaky tests", "Can be slow with complex strategies"]
  },

  "metadata": {
    "version": "6.112.2",
    "last_updated": "2025-12-23",
    "maintainer": "HypothesisWorks",
    "license": "MPL-2.0"
  }
}
