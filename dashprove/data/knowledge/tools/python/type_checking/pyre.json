{
  "id": "pyre",
  "name": "Pyre",
  "category": "type_checker",
  "subcategory": "python",

  "description": "Meta's static type checker with Pysa taint analysis",
  "long_description": "Pyre is a performant static analyzer for Python that provides gradual typing and powers the Pysa security analyzer. It uses a persistent server for low-latency checks and supports strict modules, custom models, and taint flows.",

  "capabilities": [
    "gradual_typing",
    "persistent_server",
    "strict_modules",
    "taint_analysis",
    "custom_models",
    "configuration_files"
  ],
  "property_types": ["type_safety", "security"],
  "input_languages": ["python"],
  "output_formats": ["text_report", "json"],

  "installation": {
    "methods": [
      {"type": "pip", "command": "pip install pyre-check"}
    ],
    "dependencies": ["watchman"],
    "platforms": ["linux", "macos"]
  },

  "documentation": {
    "official": "https://pyre-check.org/",
    "tutorial": "https://pyre-check.org/docs/getting-started/",
    "api_reference": "https://pyre-check.org/docs/configuration/",
    "examples": "https://github.com/facebook/pyre-check/tree/main/documentation/examples"
  },

  "tactics": [
    {
      "name": "type_check",
      "description": "Run Pyre's type checker",
      "syntax": "pyre check",
      "when_to_use": "Project-wide type verification",
      "examples": ["pyre check --noninteractive"]
    },
    {
      "name": "pysa",
      "description": "Run Pysa taint analysis",
      "syntax": "pyre analyze",
      "when_to_use": "Security review of dataflow and sinks",
      "examples": ["pyre analyze --repository-root ."]
    }
  ],

  "error_patterns": [
    {
      "pattern": "Incompatible parameter type",
      "meaning": "Argument does not match annotated type",
      "common_causes": ["Missing Optional guard", "Wrong generic parameter", "Untyped third-party stub"],
      "fixes": ["Adjust annotation", "Refine protocol", "Install or author type stubs"]
    },
    {
      "pattern": "Possible taint issue",
      "meaning": "Untrusted source can reach sensitive sink",
      "common_causes": ["Missing sanitizers", "Incomplete Pysa models", "Unvalidated input"],
      "fixes": ["Add sanitizer", "Model framework functions", "Validate inputs"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["type_safety", "security"],
    "cli_command": "dashprove verify --backend pyre"
  },

  "performance": {
    "typical_runtime": "Fast incremental via server; initial cold start longer",
    "scalability": "Good on large repos with watchman",
    "memory_usage": "Moderate"
  },

  "comparisons": {
    "similar_tools": ["mypy", "pyright", "pysa"],
    "advantages": ["Persistent daemon", "Integrated taint analysis", "Strict module support"],
    "disadvantages": ["Linux/macOS focus", "Config heavier than mypy"]
  },

  "metadata": {
    "version": "0.9.23",
    "last_updated": "2025-12-23",
    "maintainer": "Meta",
    "license": "MIT"
  }
}
