{
  "id": "pyright",
  "name": "Pyright",
  "category": "type_checker",
  "subcategory": "python",

  "description": "Fast static type checker for Python from Microsoft",
  "long_description": "Pyright is a performant static type checker written in TypeScript and bundled with VS Code's Pylance. It supports PEP 561 stubs, strict optional checking, type narrowing, and fine-grained configuration per rule.",

  "capabilities": [
    "incremental_analysis",
    "type_inference",
    "strict_optional",
    "watch_mode",
    "pyproject_configuration",
    "stub_generation"
  ],
  "property_types": ["type_safety", "code_quality"],
  "input_languages": ["python"],
  "output_formats": ["text_report", "json"],

  "installation": {
    "methods": [
      {"type": "npm", "command": "npm install -g pyright"},
      {"type": "pip", "command": "pip install pyright"}
    ],
    "dependencies": [],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://raw.githubusercontent.com/microsoft/pyright/main/docs/README.md",
    "tutorial": "https://raw.githubusercontent.com/microsoft/pyright/main/docs/getting-started.md",
    "api_reference": "https://raw.githubusercontent.com/microsoft/pyright/main/docs/configuration.md",
    "examples": "https://github.com/microsoft/pyright/tree/main/packages/pyright-internal/src/tests/samples"
  },

  "tactics": [
    {
      "name": "project_check",
      "description": "Run Pyright on a project with pyproject or config",
      "syntax": "pyright",
      "when_to_use": "CI or local full project check",
      "examples": ["pyright --pythonversion 3.12"]
    },
    {
      "name": "watch",
      "description": "Continuous checking during development",
      "syntax": "pyright --watch",
      "when_to_use": "Editor-less watch mode for fast feedback",
      "examples": ["pyright --createstub package"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "reportUnknownVariableType",
      "meaning": "Variable type cannot be inferred",
      "common_causes": ["Missing annotation", "Dynamic construction", "Un-typed library"],
      "fixes": ["Add explicit type", "Import or install stubs", "Enable strict mode for narrowing"]
    },
    {
      "pattern": "Cannot access member",
      "meaning": "Attribute not present on inferred type",
      "common_causes": ["Union not narrowed", "Incorrect protocol", "Optional access"],
      "fixes": ["Add guard against None", "Use isinstance narrowing", "Adjust Protocol definition"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["type_safety"],
    "cli_command": "dashprove verify --backend pyright"
  },

  "performance": {
    "typical_runtime": "Very fast; optimized incremental engine",
    "scalability": "Handles large repos with watch caching",
    "memory_usage": "Low"
  },

  "comparisons": {
    "similar_tools": ["mypy", "pyre", "pytype"],
    "advantages": ["Speed", "Great VS Code integration", "Rich configuration"],
    "disadvantages": ["Node runtime for npm package", "Fewer plugins than mypy"]
  },

  "metadata": {
    "version": "1.1.383",
    "last_updated": "2025-12-23",
    "maintainer": "Microsoft",
    "license": "MIT"
  }
}
