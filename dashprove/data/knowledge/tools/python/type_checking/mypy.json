{
  "id": "mypy",
  "name": "mypy",
  "category": "type_checker",
  "subcategory": "python",

  "description": "Static type checker for Python using PEP 484 type hints",
  "long_description": "mypy is a gradual typing checker for Python that enforces PEP 484 style annotations. It supports incremental checking via a daemon, plugins for popular frameworks, and strict modes to harden large codebases.",

  "capabilities": [
    "gradual_typing",
    "type_inference",
    "strict_optional",
    "plugin_support",
    "incremental_daemon",
    "error_codes"
  ],
  "property_types": ["type_safety", "code_quality"],
  "input_languages": ["python"],
  "output_formats": ["text_report", "json"],

  "installation": {
    "methods": [
      {"type": "pip", "command": "pip install mypy"}
    ],
    "dependencies": [],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://mypy-lang.org/",
    "tutorial": "https://mypy.readthedocs.io/en/stable/getting_started.html",
    "api_reference": "https://mypy.readthedocs.io/en/stable/",
    "examples": "https://github.com/python/mypy/tree/master/test-data/unit"
  },

  "tactics": [
    {
      "name": "strict_project",
      "description": "Run mypy with strict settings on a package",
      "syntax": "mypy --strict src/",
      "when_to_use": "Baseline enforcement for typed packages",
      "examples": ["mypy --strict --disallow-untyped-defs src/"]
    },
    {
      "name": "daemon_incremental",
      "description": "Use dmypy daemon for incremental checks",
      "syntax": "dmypy run -- --follow-imports=silent src/",
      "when_to_use": "Large repos needing fast re-checks",
      "examples": ["dmypy run -- --namespace-packages src/"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "error: Incompatible types",
      "meaning": "Expression type does not match expected annotation",
      "common_causes": ["Missing cast", "Incorrect return annotation", "Unions not narrowed"],
      "fixes": ["Refine type hints", "Use typing.cast or protocols", "Add guards to narrow unions"]
    },
    {
      "pattern": "Name .* is not defined",
      "meaning": "Symbol missing from current module or imports",
      "common_causes": ["Forgot import", "Incorrect module path", "Conditional import not guarded"],
      "fixes": ["Add import", "Use TYPE_CHECKING guard for optional deps", "Update stub path"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["type_safety"],
    "cli_command": "dashprove verify --backend mypy"
  },

  "performance": {
    "typical_runtime": "Seconds for medium projects; faster with dmypy",
    "scalability": "Good with incremental mode and cache",
    "memory_usage": "Moderate"
  },

  "comparisons": {
    "similar_tools": ["pyright", "pyre", "pytype"],
    "advantages": ["Mature ecosystem", "Plugin system", "Strict mode controls"],
    "disadvantages": ["Slower than Pyright", "Requires type annotations for coverage"]
  },

  "metadata": {
    "version": "1.11.2",
    "last_updated": "2025-12-23",
    "maintainer": "Jukka Lehtosalo and contributors",
    "license": "MIT"
  }
}
