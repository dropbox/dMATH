{
  "id": "pylint",
  "name": "Pylint",
  "category": "static_analysis",
  "subcategory": "python",

  "description": "AST-based Python linter with extensive rules and plugin system",
  "long_description": "Pylint performs static code analysis for Python using an AST-based checker. It enforces style, detects errors, computes code quality scores, and supports custom plugins and configuration via pylintrc or pyproject.toml.",

  "capabilities": [
    "linting",
    "code_smell_detection",
    "plugin_support",
    "metrics_score",
    "pyproject_configuration",
    "refactoring_hints"
  ],
  "property_types": ["code_quality", "maintainability"],
  "input_languages": ["python"],
  "output_formats": ["text_report", "json", "pylint_score"],

  "installation": {
    "methods": [
      {"type": "pip", "command": "pip install pylint"}
    ],
    "dependencies": [],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://pylint.readthedocs.io/en/latest/index.html",
    "tutorial": "https://raw.githubusercontent.com/pylint-dev/pylint/main/doc/tutorial.rst",
    "api_reference": "https://raw.githubusercontent.com/pylint-dev/pylint/main/doc/faq.rst",
    "examples": "https://raw.githubusercontent.com/pylint-dev/pylint/main/doc/index.rst"
  },

  "tactics": [
    {
      "name": "ci_strict",
      "description": "Run pylint with failures on errors and warnings",
      "syntax": "pylint src tests",
      "when_to_use": "CI enforcement of style and errors",
      "examples": ["pylint src --output-format=json"]
    },
    {
      "name": "errors_only",
      "description": "Surface only blocking issues",
      "syntax": "pylint --errors-only src",
      "when_to_use": "Quick validation focusing on correctness",
      "examples": ["pylint --disable=all --enable=E src"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "E1101: Instance of .* has no .* member",
      "meaning": "Attribute access not found on inferred type",
      "common_causes": ["Dynamic attribute creation", "Missing stub", "Incorrect import"],
      "fixes": ["Add attribute initialization", "Provide typing information", "Refactor dynamic access"]
    },
    {
      "pattern": "C0103: Variable name \".*\" doesn't conform",
      "meaning": "Identifier violates naming style configuration",
      "common_causes": ["CamelCase vs snake_case mismatch", "Constant naming"],
      "fixes": ["Rename to configured style", "Update pylintrc naming settings"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["code_quality"],
    "cli_command": "dashprove verify --backend pylint"
  },

  "performance": {
    "typical_runtime": "Seconds to minutes depending on project size",
    "scalability": "Moderate; slower than Ruff but parallelizable",
    "memory_usage": "Moderate"
  },

  "comparisons": {
    "similar_tools": ["ruff", "flake8"],
    "advantages": ["Detailed messages", "Configurable scoring", "Robust plugin system"],
    "disadvantages": ["Slower than Ruff", "No built-in formatter"]
  },

  "metadata": {
    "version": "3.2.0",
    "last_updated": "2025-12-23",
    "maintainer": "PyCQA",
    "license": "GPL-2.0-or-later"
  }
}
