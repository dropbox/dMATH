{
  "id": "pyt",
  "name": "PyT",
  "category": "static_analysis",
  "subcategory": "security",

  "description": "Python security analyzer with taint tracking",
  "long_description": "PyT performs static taint analysis for Python code to detect injection, command execution, and other dataflow vulnerabilities. It models sources, sinks, and sanitizers to trace untrusted input through the program.",

  "capabilities": [
    "taint_analysis",
    "source_sink_modeling",
    "custom_rules",
    "report_generation"
  ],
  "property_types": ["security"],
  "input_languages": ["python"],
  "output_formats": ["text_report", "json"],

  "installation": {
    "methods": [
      {"type": "pip", "command": "pip install pyt"}
    ],
    "dependencies": [],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://github.com/python-security/pyt",
    "tutorial": "https://github.com/python-security/pyt#usage",
    "api_reference": "https://github.com/python-security/pyt#configuration",
    "examples": "https://github.com/python-security/pyt/tree/master/examples"
  },

  "tactics": [
    {
      "name": "taint_scan",
      "description": "Run PyT to detect source-sink flows",
      "syntax": "pyt --src ./src --report report.json",
      "when_to_use": "Security audit for web services",
      "examples": ["pyt --src myservice --report pyt-report.json"]
    }
  ],

