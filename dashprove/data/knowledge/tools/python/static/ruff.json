{
  "id": "ruff",
  "name": "Ruff",
  "category": "static_analysis",
  "subcategory": "python",

  "description": "Extremely fast Python linter and formatter with 800+ rules",
  "long_description": "Ruff is a Rust-based Python linter that consolidates rules from Flake8 plugins, isort, pydocstyle, and more. It offers autofix, formatter, import sorting, and fast incremental checking suitable for large repositories.",

  "capabilities": [
    "linting",
    "autofix",
    "formatter",
    "import_sorting",
    "per-file_ignores",
    "pyproject_configuration"
  ],
  "property_types": ["code_quality", "style"],
  "input_languages": ["python"],
  "output_formats": ["text_report", "json"],

  "installation": {
    "methods": [
      {"type": "pip", "command": "pip install ruff"},
      {"type": "pipx", "command": "pipx install ruff"}
    ],
    "dependencies": [],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://docs.astral.sh/ruff/",
    "tutorial": "https://docs.astral.sh/ruff/usage/",
    "api_reference": "https://docs.astral.sh/ruff/rules/",
    "examples": "https://github.com/astral-sh/ruff/tree/main/docs/examples"
  },

  "tactics": [
    {
      "name": "check_and_fix",
      "description": "Run Ruff with autofix on a project",
      "syntax": "ruff check . --fix",
      "when_to_use": "Quick cleanup of lint violations",
      "examples": ["ruff check src tests --fix"]
    },
    {
      "name": "format",
      "description": "Use Ruff's formatter and import sorter",
      "syntax": "ruff format .",
      "when_to_use": "Replace black/isort with Ruff",
      "examples": ["ruff format src"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "RUF100",
      "meaning": "Noqa directive is unused",
      "common_causes": ["Removed code but leftover noqa", "Broad ignore"],
      "fixes": ["Remove noqa comment", "Target specific rules"]
    },
    {
      "pattern": "E501",
      "meaning": "Line too long",
      "common_causes": ["Unwrapped string", "Long import path"],
      "fixes": ["Enable formatter/autofix", "Wrap string or split import"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["code_quality"],
    "cli_command": "dashprove verify --backend ruff"
  },

  "performance": {
    "typical_runtime": "Sub-second for small projects; seconds for large repos",
    "scalability": "Excellent due to Rust implementation",
    "memory_usage": "Low"
  },

  "comparisons": {
    "similar_tools": ["flake8", "pylint", "isort", "black"],
    "advantages": ["Very fast", "Consolidates many plugins", "Autofix + formatter"],
    "disadvantages": ["Rule coverage still evolving", "Some plugins not ported"]
  },

  "metadata": {
    "version": "0.7.2",
    "last_updated": "2025-12-23",
    "maintainer": "Astral Software",
    "license": "MIT"
  }
}
