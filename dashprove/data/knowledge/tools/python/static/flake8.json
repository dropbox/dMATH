{
  "id": "flake8",
  "name": "Flake8",
  "category": "static_analysis",
  "subcategory": "python",

  "description": "Python style and error checker with rich plugin ecosystem",
  "long_description": "Flake8 wraps pycodestyle, pyflakes, and mccabe to provide style enforcement and error detection. Its plugin ecosystem adds hundreds of additional checks for security, docstrings, complexity, and more.",

  "capabilities": [
    "linting",
    "complexity_checks",
    "plugin_ecosystem",
    "per_file_ignores",
    "configurable_select_ignore"
  ],
  "property_types": ["code_quality", "style"],
  "input_languages": ["python"],
  "output_formats": ["text_report"],

  "installation": {
    "methods": [
      {"type": "pip", "command": "pip install flake8"}
    ],
    "dependencies": [],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://flake8.pycqa.org/",
    "tutorial": "https://flake8.pycqa.org/en/latest/user/index.html",
    "api_reference": "https://flake8.pycqa.org/en/latest/user/options.html",
    "examples": "https://github.com/PyCQA/flake8-examples"
  },

  "tactics": [
    {
      "name": "baseline_check",
      "description": "Run flake8 with standard rules",
      "syntax": "flake8 src tests",
      "when_to_use": "CI or local linting",
      "examples": ["flake8 --max-complexity=10 src"]
    },
    {
      "name": "plugin_profiles",
      "description": "Enable plugin-specific rule sets",
      "syntax": "flake8 --select=E9,F63,F7,F82 src",
      "when_to_use": "Focus on error classes for triage",
      "examples": ["flake8 --extend-ignore=E203,W503 src"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "F401",
      "meaning": "Module imported but unused",
      "common_causes": ["Leftover debug import", "Conditional import not guarded"],
      "fixes": ["Remove unused import", "Mark intentional with noqa"]
    },
    {
      "pattern": "E302",
      "meaning": "Expected 2 blank lines",
      "common_causes": ["Missing spacing between top-level defs"],
      "fixes": ["Format code", "Configure formatter if using Ruff/Black"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["code_quality"],
    "cli_command": "dashprove verify --backend flake8"
  },

  "performance": {
    "typical_runtime": "Fast on small projects; slower than Ruff on large repos",
    "scalability": "Good with plugin selection",
    "memory_usage": "Low"
  },

  "comparisons": {
    "similar_tools": ["ruff", "pylint"],
    "advantages": ["Mature plugin ecosystem", "Simple configuration"],
    "disadvantages": ["Slower than Ruff", "No built-in autofix"]
  },

  "metadata": {
    "version": "7.1.1",
    "last_updated": "2025-12-23",
    "maintainer": "PyCQA",
    "license": "MIT"
  }
}
