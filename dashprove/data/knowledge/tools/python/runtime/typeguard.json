{
  "id": "typeguard",
  "name": "Typeguard",
  "category": "runtime_type_checking",
  "subcategory": "python",

  "description": "Runtime enforcement of Python type hints",
  "long_description": "Typeguard validates function arguments and return values at runtime using PEP 484 annotations. It provides decorators, import hooks, and pytest integration to catch type violations during tests or debugging.",

  "capabilities": [
    "runtime_type_enforcement",
    "decorator_support",
    "import_hook",
    "pytest_plugin",
    "strict_none_checks"
  ],
  "property_types": ["runtime_safety", "type_safety"],
  "input_languages": ["python"],
  "output_formats": ["exceptions", "pytest_failures"],

  "installation": {
    "methods": [
      {"type": "pip", "command": "pip install typeguard"}
    ],
    "dependencies": [],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://typeguard.readthedocs.io/",
    "tutorial": "https://typeguard.readthedocs.io/en/latest/userguide.html",
    "api_reference": "https://typeguard.readthedocs.io/en/latest/api.html",
    "examples": "https://github.com/agronholm/typeguard/tree/master/examples"
  },

  "tactics": [
    {
      "name": "decorate_function",
      "description": "Wrap functions to enforce annotations",
      "syntax": "from typeguard import typechecked",
      "when_to_use": "Runtime validation in critical boundaries",
      "examples": ["@typechecked\ndef add(x: int, y: int) -> int: ..."]
    },
    {
      "name": "pytest_hook",
      "description": "Enable typeguard for all tests",
      "syntax": "pytest -q --typeguard-packages=my_package",
      "when_to_use": "CI-time enforcement of runtime types",
      "examples": ["pytest --typeguard-packages=my_package"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "TypeCheckError",
      "meaning": "Value does not conform to annotated type",
      "common_causes": ["Incorrect return value", "Missing Optional handling", "Mutable default"],
      "fixes": ["Align runtime types", "Update annotations", "Guard optional values"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["runtime_safety"],
    "cli_command": "dashprove verify --backend typeguard"
  },

  "performance": {
    "typical_runtime": "Adds overhead proportional to call volume",
    "scalability": "Best for tests or critical paths, not every function",
    "memory_usage": "Low"
  },

  "comparisons": {
    "similar_tools": ["beartype", "pytypes"],
    "advantages": ["Simple decorator", "pytest integration"],
    "disadvantages": ["Runtime overhead", "Limited to runtime checks"]
  },

  "metadata": {
    "version": "4.3.0",
    "last_updated": "2025-12-23",
    "maintainer": "Alex Gr√∂nholm",
    "license": "MIT"
  }
}
