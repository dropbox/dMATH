{
  "id": "beartype",
  "name": "beartype",
  "category": "runtime_type_checking",
  "subcategory": "python",

  "description": "O(1) runtime type checking for Python callables",
  "long_description": "beartype provides runtime enforcement of Python type hints with minimal overhead. It decorates functions and classes to validate arguments and return types, supports PEP 563/649, and can generate exceptions with human-friendly diagnostics.",

  "capabilities": [
    "runtime_type_enforcement",
    "class_and_function_decorators",
    "pep_compliance",
    "numpy_and_pandas_support",
    "typing_extensions_support"
  ],
  "property_types": ["runtime_safety", "type_safety"],
  "input_languages": ["python"],
  "output_formats": ["exceptions", "logging"],

  "installation": {
    "methods": [
      {"type": "pip", "command": "pip install beartype"}
    ],
    "dependencies": [],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://beartype.readthedocs.io/",
    "tutorial": "https://beartype.readthedocs.io/en/latest/#getting-started",
    "api_reference": "https://beartype.readthedocs.io/en/latest/api/beartype.html",
    "examples": "https://github.com/beartype/beartype/tree/main/examples"
  },

  "tactics": [
    {
      "name": "decorate",
      "description": "Wrap functions or classes with @beartype",
      "syntax": "from beartype import beartype",
      "when_to_use": "Enforce runtime types on public APIs",
      "examples": ["@beartype\ndef foo(x: int) -> int: return x"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "BeartypeCallHintParamViolation",
      "meaning": "Argument violates type hint",
      "common_causes": ["Wrong runtime type", "Optional missing", "Container element type mismatch"],
      "fixes": ["Pass correct type", "Adjust annotations", "Wrap conversions before call"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["runtime_safety"],
    "cli_command": "dashprove verify --backend beartype"
  },

  "performance": {
    "typical_runtime": "O(1) overhead per check",
    "scalability": "Suitable for targeted enforcement; avoid hot loops",
    "memory_usage": "Low"
  },

  "comparisons": {
    "similar_tools": ["typeguard", "pytypes"],
    "advantages": ["Fast runtime checks", "Rich error messages", "PEP 563/649 aware"],
    "disadvantages": ["Runtime overhead vs static typing", "Decorator-based instrumentation"]
  },

  "metadata": {
    "version": "0.18.5",
    "last_updated": "2025-12-23",
    "maintainer": "beartype authors",
    "license": "MIT"
  }
}
