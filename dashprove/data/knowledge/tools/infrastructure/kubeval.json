{
  "id": "kubeval",
  "name": "Kubeval",
  "category": "static_analysis",
  "subcategory": "kubernetes_validation",

  "description": "Kubernetes YAML manifest validator against schemas",
  "long_description": "Kubeval validates Kubernetes configuration files against the published Kubernetes OpenAPI schema. It catches common errors like typos in field names, wrong types, and invalid values before deployment. Works with any Kubernetes version.",

  "capabilities": [
    "schema_validation",
    "multi_version_support",
    "ci_integration",
    "offline_mode",
    "strict_mode"
  ],
  "property_types": ["schema_compliance", "configuration"],
  "input_languages": ["yaml", "json"],
  "output_formats": ["text", "json", "tap"],

  "installation": {
    "methods": [
      {"type": "brew", "command": "brew install kubeval", "platform": "macos"},
      {"type": "binary", "url": "https://github.com/instrumenta/kubeval/releases"}
    ],
    "dependencies": [],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://www.kubeval.com/",
    "tutorial": "https://www.kubeval.com/installation/",
    "api_reference": "https://www.kubeval.com/usage/",
    "examples": "https://github.com/instrumenta/kubeval#usage"
  },

  "tactics": [
    {
      "name": "validate",
      "description": "Validate manifest",
      "syntax": "kubeval deployment.yaml",
      "when_to_use": "Checking K8s manifests",
      "examples": ["kubeval --kubernetes-version 1.28.0 deployment.yaml"]
    },
    {
      "name": "strict",
      "description": "Strict validation",
      "syntax": "kubeval --strict manifest.yaml",
      "when_to_use": "Reject unknown fields",
      "examples": ["kubeval --strict --kubernetes-version 1.28.0 *.yaml"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "Invalid type",
      "meaning": "Field has wrong type",
      "common_causes": ["String instead of int", "Typo"],
      "fixes": ["Fix field type"]
    },
    {
      "pattern": "Additional property.*not allowed",
      "meaning": "Unknown field in manifest",
      "common_causes": ["Typo", "Wrong API version"],
      "fixes": ["Check field name", "Update API version"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["schema_compliance"],
    "cli_command": "dashprove verify --backend kubeval"
  },

  "performance": {
    "typical_runtime": "Very fast",
    "scalability": "Excellent",
    "memory_usage": "Low"
  },

  "comparisons": {
    "similar_tools": ["kubeconform", "kube-linter", "polaris"],
    "advantages": ["Simple", "Fast", "Multi-version"],
    "disadvantages": ["Archived, kubeconform is successor"]
  },

  "metadata": {
    "version": "0.16.1",
    "last_updated": "2025-12-22",
    "maintainer": "Instrumenta",
    "license": "Apache-2.0"
  }
}
