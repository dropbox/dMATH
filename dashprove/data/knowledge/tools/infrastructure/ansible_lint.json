{
  "id": "ansible_lint",
  "name": "Ansible Lint",
  "category": "static_analysis",
  "subcategory": "iac_linting",

  "description": "Linter for Ansible playbooks, roles, and collections",
  "long_description": "Ansible Lint checks playbooks for practices and behavior that could potentially be improved. It has default rules covering best practices, deprecation warnings, and common mistakes. Custom rules can be added. It integrates with CI/CD and editors.",

  "capabilities": [
    "playbook_linting",
    "role_linting",
    "custom_rules",
    "autofix",
    "sarif_output",
    "ide_integration"
  ],
  "property_types": ["code_quality", "best_practices"],
  "input_languages": ["yaml", "ansible"],
  "output_formats": ["text", "json", "sarif", "codeclimate"],

  "installation": {
    "methods": [
      {"type": "pip", "command": "pip install ansible-lint"}
    ],
    "dependencies": ["ansible"],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://ansible.readthedocs.io/projects/lint/",
    "tutorial": "https://ansible.readthedocs.io/projects/lint/usage/",
    "api_reference": "https://ansible.readthedocs.io/projects/lint/rules/",
    "examples": "https://github.com/ansible/ansible-lint/tree/main/examples"
  },

  "tactics": [
    {
      "name": "lint_playbook",
      "description": "Lint a playbook",
      "syntax": "ansible-lint playbook.yml",
      "when_to_use": "Checking playbook quality",
      "examples": ["ansible-lint site.yml roles/"]
    },
    {
      "name": "fix",
      "description": "Auto-fix issues",
      "syntax": "ansible-lint --fix",
      "when_to_use": "Auto-correcting issues",
      "examples": ["ansible-lint --fix playbook.yml"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "yaml\\[truthy\\]",
      "meaning": "Use true/false instead of yes/no",
      "common_causes": ["Legacy syntax"],
      "fixes": ["Use true/false"]
    },
    {
      "pattern": "name\\[missing\\]",
      "meaning": "Task missing name",
      "common_causes": ["Unnamed task"],
      "fixes": ["Add descriptive name"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["code_quality"],
    "cli_command": "dashprove verify --backend ansible-lint"
  },

  "performance": {
    "typical_runtime": "Fast",
    "scalability": "Good",
    "memory_usage": "Low"
  },

  "comparisons": {
    "similar_tools": ["yamllint", "ansible-review"],
    "advantages": ["Ansible-specific", "Auto-fix", "Extensible"],
    "disadvantages": ["Ansible only"]
  },

  "metadata": {
    "version": "24.10.0",
    "last_updated": "2025-12-22",
    "maintainer": "Ansible/Red Hat",
    "license": "MIT"
  }
}
