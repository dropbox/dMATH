{
  "id": "kube_linter",
  "name": "KubeLinter",
  "category": "security",
  "subcategory": "kubernetes_security",

  "description": "Static analysis tool for Kubernetes YAML files and Helm charts",
  "long_description": "KubeLinter by StackRox/Red Hat analyzes Kubernetes YAML files and Helm charts for security and production readiness. It checks for common misconfigurations and security issues. It's fast, configurable, and integrates easily into CI/CD pipelines.",

  "capabilities": [
    "security_checks",
    "helm_chart_analysis",
    "custom_checks",
    "ci_integration",
    "sarif_output"
  ],
  "property_types": ["security", "configuration"],
  "input_languages": ["yaml", "helm"],
  "output_formats": ["text", "json", "sarif"],

  "installation": {
    "methods": [
      {"type": "brew", "command": "brew install kube-linter", "platform": "macos"},
      {"type": "go", "command": "go install golang.stackrox.io/kube-linter/cmd/kube-linter@latest"},
      {"type": "binary", "url": "https://github.com/stackrox/kube-linter/releases"}
    ],
    "dependencies": [],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://raw.githubusercontent.com/stackrox/kube-linter/main/docs/README.md",
    "tutorial": "https://raw.githubusercontent.com/stackrox/kube-linter/main/docs/using-kubelinter.md",
    "api_reference": "https://raw.githubusercontent.com/stackrox/kube-linter/main/docs/generated/checks.md",
    "examples": "https://github.com/stackrox/kube-linter/tree/main/e2etests"
  },

  "tactics": [
    {
      "name": "lint",
      "description": "Lint manifests",
      "syntax": "kube-linter lint path/to/manifests",
      "when_to_use": "Pre-deployment validation",
      "examples": ["kube-linter lint ./k8s/ --config .kube-linter.yaml"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "no-read-only-root-fs",
      "meaning": "Root filesystem is writable",
      "common_causes": ["Missing readOnlyRootFilesystem"],
      "fixes": ["Set readOnlyRootFilesystem: true"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["security"],
    "cli_command": "dashprove verify --backend kube-linter"
  },

  "performance": {
    "typical_runtime": "Very fast",
    "scalability": "Excellent",
    "memory_usage": "Low"
  },

  "comparisons": {
    "similar_tools": ["polaris", "kubeaudit", "checkov"],
    "advantages": ["Fast", "Helm support", "Easy to configure"],
    "disadvantages": ["Less checks than some alternatives"]
  },

  "metadata": {
    "version": "0.6.8",
    "last_updated": "2025-12-22",
    "maintainer": "StackRox/Red Hat",
    "license": "Apache-2.0"
  }
}
