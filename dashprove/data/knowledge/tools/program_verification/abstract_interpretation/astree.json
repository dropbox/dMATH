{
  "id": "astree",
  "name": "Astree",
  "category": "abstract_interpretation",
  "subcategory": "c_static_analysis",
  "description": "Sound static analyzer for runtime errors in C",
  "long_description": "Astree is an abstract interpretation based analyzer for detecting runtime errors (overflows, division by zero, invalid memory accesses) in safety-critical C code. It targets embedded and avionics software with precise modeling of floating-point, interrupts, and concurrency.",
  "capabilities": [
    "runtime_error_detection",
    "overflow_checking",
    "floating_point_analysis",
    "concurrency_analysis",
    "assume_guarantee_partitioning"
  ],
  "property_types": [
    "safety",
    "runtime_error"
  ],
  "input_languages": [
    "c"
  ],
  "output_formats": [
    "alarm_report",
    "html_report"
  ],
  "installation": {
    "methods": [
      {
        "type": "commercial",
        "command": "Install from AbsInt distribution"
      }
    ],
    "dependencies": [],
    "platforms": [
      "linux",
      "windows"
    ]
  },
  "documentation": {
    "official": "https://www.absint.com/astree/",
    "tutorial": "https://www.absint.com/astree/tutorials/",
    "api_reference": "https://www.absint.com/astree/manual/",
    "examples": "https://www.absint.com/astree/samples/"
  },
  "tactics": [
    {
      "name": "tune_domains",
      "description": "Adjust abstract domains for precision",
      "syntax": "set option precision.domain <name>",
      "when_to_use": "Reducing false positives on complex loops",
      "examples": [
        "set option precision.domain octagon"
      ]
    },
    {
      "name": "user_annotations",
      "description": "Add loop invariants and assumptions",
      "syntax": "//@ assert <expr>;",
      "when_to_use": "Guiding analysis for tight bounds",
      "examples": [
        "//@ assert i < 1024;"
      ]
    },
    {
      "name": "partitioning",
      "description": "Split analysis per task or mode",
      "syntax": "set option partitioning on",
      "when_to_use": "Large embedded projects with multiple tasks",
      "examples": [
        "set option partitioning on"
      ]
    }
  ],
  "error_patterns": [
    {
      "pattern": "Alarm: possible overflow",
      "meaning": "Analyzer could not prove bound",
      "common_causes": [
        "Missing invariant",
        "Wide ranges"
      ],
      "fixes": [
        "Strengthen annotations",
        "Tighten input ranges"
      ]
    },
    {
      "pattern": "Unsupported construct",
      "meaning": "Code uses unsupported C features",
      "common_causes": [
        "setjmp/longjmp",
        "inline assembly"
      ],
      "fixes": [
        "Provide stubs",
        "Refactor code"
      ]
    }
  ],
  "integration": {
    "dashprove_backend": true,
    "usl_property_types": [
      "runtime_error"
    ],
    "cli_command": "dashprove verify --backend astree"
  },
  "performance": {
    "typical_runtime": "minutes on embedded projects",
    "scalability": "Scales with sound abstractions and partitioning",
    "memory_usage": "Moderate"
  },
  "comparisons": {
