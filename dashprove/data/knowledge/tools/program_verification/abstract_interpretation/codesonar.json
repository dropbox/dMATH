{
  "id": "codesonar",
  "name": "CodeSonar",
  "category": "abstract_interpretation",
  "subcategory": "c_static_analysis",
  "description": "Static analysis platform for C/C++ and embedded code",
  "long_description": "CodeSonar (CodeSecure/GrammaTech) is a static analyzer that finds defects and security issues in C/C++ and other languages. It uses abstract interpretation and path-sensitive analysis to detect concurrency issues, memory safety problems, and coding standard violations, and integrates with CI pipelines.",
  "capabilities": [
    "bug_detection",
    "security_vulnerability_scanning",
    "concurrency_checks",
    "taint_analysis",
    "coding_standards",
    "callgraph_visualization"
  ],
  "property_types": [
    "safety",
    "security",
    "coding_standard"
  ],
  "input_languages": [
    "c",
    "c++",
    "java",
    "python"
  ],
  "output_formats": [
    "html_report",
    "sarif",
    "ide_annotations"
  ],
  "installation": {
    "methods": [
      {
        "type": "commercial",
        "command": "Install from CodeSonar distribution"
      }
    ],
    "dependencies": [],
    "platforms": [
      "linux",
      "windows"
    ]
  },
  "documentation": {
    "official": "https://www.codesecure.com/codesonar",
    "tutorial": "https://support.grammatech.com/display/CS6/Getting+Started",
    "api_reference": "https://support.grammatech.com/",
    "examples": "https://support.grammatech.com/display/CS6/Examples"
  },
  "tactics": [
    {
      "name": "blame_reports",
      "description": "Track defect provenance",
      "syntax": "codesonar analyze --provenance",
      "when_to_use": "Understanding root causes and ownership",
      "examples": [
        "codesonar analyze --provenance project.gtp"
      ]
    },
    {
      "name": "taint_sources",
      "description": "Configure taint sources/sinks",
      "syntax": "taint add source <symbol>",
      "when_to_use": "Security dataflow checks",
      "examples": [
        "taint add source recv"
      ]
    },
    {
      "name": "ci_gate",
      "description": "Enforce quality gates in CI",
      "syntax": "codesonar-cli --fail-on sev>=warning",
      "when_to_use": "Blocking merges with critical findings",
      "examples": [
        "codesonar-cli --fail-on sev>=medium"
      ]
    }
  ],
  "error_patterns": [
