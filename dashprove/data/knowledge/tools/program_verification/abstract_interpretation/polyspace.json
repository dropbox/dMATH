{
  "id": "polyspace",
  "name": "Polyspace",
  "category": "abstract_interpretation",
  "subcategory": "c_static_analysis",
  "description": "MathWorks static analyzer for proving absence of run-time errors",
  "long_description": "Polyspace (Bug Finder and Code Prover) uses abstract interpretation to detect runtime errors and prove the absence of overflows, divide-by-zero, and buffer overruns in C/C++ code. It integrates with Simulink and supports MISRA compliance reporting.",
  "capabilities": [
    "runtime_error_proof",
    "static_bug_finding",
    "misra_compliance",
    "code_metrics",
    "concurrency_checks"
  ],
  "property_types": [
    "safety",
    "coding_standard"
  ],
  "input_languages": [
    "c",
    "c++"
  ],
  "output_formats": [
    "html_report",
    "sarif",
    "ide_annotations"
  ],
  "installation": {
    "methods": [
      {
        "type": "commercial",
        "command": "Install via MATLAB/Polyspace distribution"
      }
    ],
    "dependencies": [
      "matlab_runtime"
    ],
    "platforms": [
      "linux",
      "windows"
    ]
  },
  "documentation": {
    "official": "https://www.mathworks.com/products/polyspace.html",
    "tutorial": "https://www.mathworks.com/help/polyspace/gs/",
    "api_reference": "https://www.mathworks.com/help/polyspace/index.html",
    "examples": "https://www.mathworks.com/help/polyspace/examples.html"
  },
  "tactics": [
    {
      "name": "code_prover",
      "description": "Run exhaustive proof engine",
      "syntax": "polyspace-code-prover -setup opts.cfg",
      "when_to_use": "Proving absence of runtime errors",
      "examples": [
        "polyspace-code-prover -setup project.psprj"
      ]
    },
    {
      "name": "bug_finder",
      "description": "Lightweight bug detection",
      "syntax": "polyspace-bug-finder -setup opts.cfg",
      "when_to_use": "Early defect screening",
      "examples": [
        "polyspace-bug-finder -setup project.psprj"
      ]
    },
    {
      "name": "misra_checking",
      "description": "Generate MISRA compliance reports",
      "syntax": "polyspace-code-prover -misra",
      "when_to_use": "Standards compliance",
      "examples": [
        "polyspace-code-prover -misra project.psprj"
      ]
    }
  ],
  "error_patterns": [
    {
      "pattern": "Unproven",
      "meaning": "Property neither proved nor refuted",
      "common_causes": [
        "Complex loop",
        "Insufficient annotations"
      ],
      "fixes": [
        "Add preconditions",
        "Split function",
        "Increase analysis depth"
      ]
    },
    {
      "pattern": "Configuration error",
      "meaning": "Project setup invalid",
      "common_causes": [
        "Missing compiler flags",
        "Unsupported target"
      ],
      "fixes": [
        "Match build settings",
        "Use supported compiler"
      ]
    }
  ],
  "integration": {
    "dashprove_backend": true,
    "usl_property_types": [
      "safety",
      "compliance"
    ],
    "cli_command": "dashprove verify --backend polyspace"
  },
  "performance": {
    "typical_runtime": "minutes to hours depending on proof depth",
    "scalability": "Scales with modular proofs and stubbing",
    "memory_usage": "High for large projects"
  },
  "comparisons": {
    "similar_tools": [
      "astree",
      "codesonar",
      "frama_ceva"
    ],
    "advantages": [
      "MISRA reporting",
      "Good IDE integration"
    ],
    "disadvantages": [
      "Commercial",
      "MATLAB dependency"
    ]
  },
  "metadata": {
    "version": "2025b",
    "last_updated": "2025-12-22",
    "maintainer": "MathWorks",
    "license": "Commercial"
  }
}
