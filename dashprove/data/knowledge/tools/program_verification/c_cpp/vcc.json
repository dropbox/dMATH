{
  "id": "vcc",
  "name": "VCC",
  "category": "program_verifier",
  "subcategory": "c",
  "description": "Microsoft C verifier for concurrent, low-level systems code",
  "long_description": "VCC (Verified C Compiler) is a verifier for concurrent C code developed by Microsoft Research. It uses Boogie/Z3 as backend and supports verification of systems code including memory-mapped I/O, volatile accesses, and low-level concurrency. VCC was used to verify core components of the Hyper-V hypervisor.",
  "capabilities": [
    "concurrent_verification",
    "memory_model",
    "ghost_code",
    "two_state_invariants",
    "ownership_model"
  ],
  "property_types": [
    "contract",
    "invariant",
    "assertion"
  ],
  "input_languages": [
    "c",
    "vcc_annotations"
  ],
  "output_formats": [
    "verification_result",
    "counterexample"
  ],
  "installation": {
    "methods": [
      {
        "type": "download",
        "command": "Download from https://github.com/nickvcc/vcc"
      }
    ],
    "dependencies": [
      "z3",
      "boogie"
    ],
    "platforms": [
      "windows"
    ]
  },
  "documentation": {
    "official": "https://vcc.codeplex.com/",
    "tutorial": "https://github.com/nickvcc/vcc/wiki",
    "manual": "https://research.microsoft.com/en-us/projects/vcc/"
  },
  "tactics": [
    {
      "name": "requires",
      "description": "Precondition",
      "syntax": "_(requires condition)",
      "when_to_use": "To specify function preconditions",
      "examples": [
        "_(requires x > 0)"
      ]
    },
    {
      "name": "ensures",
      "description": "Postcondition",
      "syntax": "_(ensures condition)",
      "when_to_use": "To specify function postconditions",
      "examples": [
        "_(ensures \\result >= 0)"
      ]
    },
    {
      "name": "invariant",
      "description": "Object invariant",
      "syntax": "_(invariant condition)",
      "when_to_use": "For data structure invariants",
      "examples": [
        "_(invariant count <= MAX)"
      ]
    }
  ],
  "error_patterns": [
    {
      "pattern": "Assertion might not hold",
      "meaning": "Cannot verify assertion",
      "common_causes": [
        "Missing invariant",
        "Incorrect precondition"
      ],
      "fixes": [
        "Add loop invariant",
        "Strengthen precondition"
      ]
    }
  ],
  "integration": {
    "dashprove_backend": true,
    "usl_property_types": [
      "contract",
      "invariant"
    ],
    "cli_command": "dashprove verify --backend vcc"
  },
  "performance": {
    "typical_runtime": "seconds to minutes",
    "scalability": "Verified hypervisor code",
    "memory_usage": "Moderate"
  },
  "comparisons": {
    "similar_tools": [
      "framac",
      "verifast",
      "cbmc"
    ],
    "advantages": [
      "Concurrency support",
      "Ownership model",
      "Industrial use"
    ],
    "disadvantages": [
      "Windows only",
      "Less active development"
    ]
  },
  "metadata": {
    "version": "2.3.1",
    "last_updated": "2025-12-21",
    "maintainer": "Microsoft Research",
    "license": "MIT"
  }
}
