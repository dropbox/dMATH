{
  "id": "framac",
  "name": "Frama-C",
  "category": "program_verifier",
  "subcategory": "c",

  "description": "Framework for C code analysis with ACSL specifications",
  "long_description": "Frama-C (Framework for Modular Analysis of C programs) is an extensible platform for source-code analysis of C programs. It uses ACSL (ANSI/ISO C Specification Language) for annotations and supports multiple analysis plugins including WP for deductive verification and EVA for value analysis.",

  "capabilities": [
    "deductive_verification",
    "value_analysis",
    "dependency_analysis",
    "slicing",
    "runtime_verification"
  ],
  "property_types": ["contract", "assertion", "invariant", "termination"],
  "input_languages": ["c", "acsl"],
  "output_formats": ["proof_obligations", "counterexample", "report"],

  "installation": {
    "methods": [
      {"type": "opam", "command": "opam install frama-c"},
      {"type": "apt", "command": "apt install frama-c"},
      {"type": "source", "url": "https://git.frama-c.com/pub/frama-c"}
    ],
    "dependencies": ["ocaml", "alt-ergo", "z3"],
    "platforms": ["linux", "macos"]
  },

  "documentation": {
    "official": "https://frama-c.com/",
    "tutorial": "https://frama-c.com/html/tutorials.html",
    "api_reference": "https://frama-c.com/html/acsl.html",
    "examples": "https://github.com/Frama-C/open-source-case-studies"
  },

  "tactics": [
    {
      "name": "wp",
      "description": "Weakest precondition plugin",
      "syntax": "frama-c -wp file.c",
      "when_to_use": "For deductive verification",
      "examples": ["frama-c -wp -wp-prover alt-ergo program.c"]
    },
    {
      "name": "eva",
      "description": "Evolved Value Analysis",
      "syntax": "frama-c -eva file.c",
      "when_to_use": "For runtime error detection",
      "examples": ["frama-c -eva program.c"]
    },
    {
      "name": "split",
      "description": "Split verification conditions",
      "syntax": "-wp-split",
      "when_to_use": "For complex proofs",
      "examples": ["frama-c -wp -wp-split program.c"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "Unknown",
      "meaning": "Proof obligation not discharged",
      "common_causes": ["Incomplete spec", "Solver timeout"],
      "fixes": ["Add lemmas", "Try different prover"]
    },
    {
      "pattern": "Invalid",
      "meaning": "Property violated",
      "common_causes": ["Bug or incorrect spec"],
      "fixes": ["Fix code or specification"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["contract", "assertion"],
    "cli_command": "dashprove verify --backend framac"
  },

  "performance": {
    "typical_runtime": "seconds to hours",
    "scalability": "Good with proper specs",
    "memory_usage": "Moderate"
  },

  "comparisons": {
    "similar_tools": ["vcc", "verifast", "dafny"],
    "advantages": [
      "Multiple plugins",
      "Industrial-strength",
      "ACSL standard"
    ],
    "disadvantages": [
      "C only",
      "Learning curve"
    ]
  },

  "metadata": {
    "version": "28.1",
    "last_updated": "2025-12-22",
    "maintainer": "CEA LIST",
    "license": "LGPL-2.1"
  }
}
