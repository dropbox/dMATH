{
  "id": "dafny",
  "name": "Dafny",
  "category": "program_verifier",
  "subcategory": "design_by_contract",

  "description": "Verification-aware programming language with SMT-based proofs",
  "long_description": "Dafny is a programming language with built-in support for formal verification. Programs include specifications (preconditions, postconditions, invariants) that are automatically verified using Z3. Dafny compiles to C#, Java, JavaScript, and Go.",

  "capabilities": [
    "design_by_contract",
    "automated_verification",
    "ghost_code",
    "termination_checking",
    "multi_target_compilation"
  ],
  "property_types": ["requires", "ensures", "invariant", "decreases"],
  "input_languages": ["dafny"],
  "output_formats": ["csharp", "java", "javascript", "go", "python"],

  "installation": {
    "methods": [
      {"type": "dotnet", "command": "dotnet tool install --global dafny"},
      {"type": "brew", "command": "brew install dafny"},
      {"type": "source", "url": "https://github.com/dafny-lang/dafny"}
    ],
    "dependencies": ["dotnet", "z3"],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://dafny.org/",
    "tutorial": "https://dafny.org/dafny/OnlineTutorial/guide",
    "api_reference": "https://dafny.org/latest/DafnyRef/DafnyRef",
    "examples": "https://github.com/dafny-lang/dafny/tree/master/Test"
  },

  "tactics": [
    {
      "name": "assert",
      "description": "Add intermediate assertion",
      "syntax": "assert condition;",
      "when_to_use": "To help prover",
      "examples": ["assert x > 0;"]
    },
    {
      "name": "calc",
      "description": "Calculational proof",
      "syntax": "calc { expr1; == expr2; }",
      "when_to_use": "For equality chains",
      "examples": ["calc { x + y; == { lemma(); } y + x; }"]
    },
    {
      "name": "forall",
      "description": "Prove for all values",
      "syntax": "forall x :: ensures P(x) { ... }",
      "when_to_use": "To prove universal statements",
      "examples": []
    }
  ],

  "error_patterns": [
    {
      "pattern": "assertion might not hold",
      "meaning": "Property not proved",
      "common_causes": ["Missing invariant", "Weak precondition"],
      "fixes": ["Strengthen precondition", "Add invariant"]
    },
    {
      "pattern": "decreases clause might not decrease",
      "meaning": "Termination not proved",
      "common_causes": ["Wrong decreases clause"],
      "fixes": ["Fix decreases expression"]
    },
    {
      "pattern": "postcondition might not hold",
      "meaning": "Ensures not satisfied",
      "common_causes": ["Implementation bug", "Weak postcondition"],
      "fixes": ["Fix implementation", "Strengthen invariants"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["contract", "invariant"],
    "cli_command": "dashprove verify --backend dafny"
  },

  "performance": {
    "typical_runtime": "seconds",
    "scalability": "Good for programs",
    "memory_usage": "Moderate"
  },

  "comparisons": {
    "similar_tools": ["fstar", "spark", "why3"],
    "advantages": [
      "Easy to learn",
      "Good automation",
      "Multi-target"
    ],
    "disadvantages": [
      "SMT unpredictability",
      "C# toolchain"
    ]
  },

  "metadata": {
    "version": "4.4.0",
    "last_updated": "2025-12-22",
    "maintainer": "AWS and Microsoft",
    "license": "MIT"
  }
}
