{
  "id": "liquidhaskell",
  "name": "LiquidHaskell",
  "category": "program_verifier",
  "subcategory": "haskell",

  "description": "Refinement types for Haskell",
  "long_description": "LiquidHaskell is a static verifier for Haskell based on refinement types. It uses SMT solving to verify that programs satisfy their specifications.",

  "capabilities": ["refinement_types", "automatic_verification", "termination"],
  "property_types": ["refinement", "termination"],
  "input_languages": ["haskell"],
  "output_formats": ["verification_result"],

  "installation": {
    "methods": [{"type": "cabal", "command": "cabal install liquidhaskell"}],
    "dependencies": ["ghc", "z3"],
    "platforms": ["linux", "macos"]
  },

  "documentation": {
    "official": "https://ucsd-progsys.github.io/liquidhaskell/",
    "tutorial": "https://ucsd-progsys.github.io/liquidhaskell/tutorial/",
    "api_reference": "https://ucsd-progsys.github.io/liquidhaskell/",
    "examples": "https://github.com/ucsd-progsys/liquidhaskell/tree/develop/tests"
  },

  "tactics": [],

  "error_patterns": [],

  "integration": {"dashprove_backend": true, "usl_property_types": ["refinement"], "cli_command": "dashprove verify --backend liquidhaskell"},

  "performance": {"typical_runtime": "seconds to minutes", "scalability": "Good", "memory_usage": "Moderate"},

  "comparisons": {"similar_tools": ["fstar", "dafny"], "advantages": ["Haskell native", "Automatic"], "disadvantages": ["GHC integration challenges"]},

  "metadata": {"version": "0.9.0", "last_updated": "2025-12-22", "maintainer": "UCSD", "license": "BSD-3"}
}
