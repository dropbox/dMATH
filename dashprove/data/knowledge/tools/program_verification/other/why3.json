{
  "id": "why3",
  "name": "Why3",
  "category": "program_verifier",
  "subcategory": "intermediate",

  "description": "Platform for deductive program verification",
  "long_description": "Why3 is a platform for deductive program verification. It provides WhyML specification language and can dispatch proof obligations to many automatic and interactive provers.",

  "capabilities": ["deductive_verification", "multi_prover", "proof_management"],
  "property_types": ["contract", "lemma"],
  "input_languages": ["whyml"],
  "output_formats": ["proof_obligations"],

  "installation": {
    "methods": [{"type": "opam", "command": "opam install why3"}],
    "dependencies": ["ocaml", "alt-ergo"],
    "platforms": ["linux", "macos"]
  },

  "documentation": {
    "official": "http://why3.lri.fr/",
    "tutorial": "http://why3.lri.fr/doc/",
    "api_reference": "http://why3.lri.fr/doc/",
    "examples": "https://gitlab.inria.fr/why3/why3/-/tree/master/examples"
  },

  "tactics": [],

  "error_patterns": [],

  "integration": {"dashprove_backend": true, "usl_property_types": ["contract"], "cli_command": "dashprove verify --backend why3"},

