{
  "id": "stainless",
  "name": "Stainless",
  "category": "program_verifier",
  "subcategory": "scala",

  "description": "Verification framework for Scala",
  "long_description": "Stainless is a verification framework for a subset of Scala. It can verify functional correctness properties and termination for pure Scala programs.",

  "capabilities": ["verification", "termination_checking", "counterexamples"],
  "property_types": ["contract", "termination"],
  "input_languages": ["scala"],
  "output_formats": ["verification_result"],

  "installation": {
    "methods": [{"type": "sbt", "command": "Add stainless plugin"}],
    "dependencies": ["scala", "z3"],
    "platforms": ["linux", "macos"]
  },

  "documentation": {
    "official": "https://stainless.epfl.ch/",
    "tutorial": "https://epfl-lara.github.io/stainless/",
    "api_reference": "https://epfl-lara.github.io/stainless/",
    "examples": "https://github.com/epfl-lara/stainless/tree/main/frontends/benchmarks"
  },

  "tactics": [],

  "error_patterns": [],

  "integration": {"dashprove_backend": true, "usl_property_types": ["contract"], "cli_command": "dashprove verify --backend stainless"},

  "performance": {"typical_runtime": "seconds to minutes", "scalability": "Good", "memory_usage": "Moderate"},

  "comparisons": {"similar_tools": ["dafny", "fstar"], "advantages": ["Scala native", "Counterexamples"], "disadvantages": ["Subset of Scala"]},

  "metadata": {"version": "0.9.8", "last_updated": "2025-12-22", "maintainer": "EPFL LARA", "license": "Apache-2.0"}
