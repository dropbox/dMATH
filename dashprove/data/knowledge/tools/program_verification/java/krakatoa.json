{
  "id": "krakatoa",
  "name": "Krakatoa",
  "category": "program_verifier",
  "subcategory": "java",
  "description": "Java verification tool using Why3 and JML",
  "long_description": "Krakatoa is a verification tool for Java programs that translates JML-annotated Java code to Why3 for verification. It supports the full Java language and interfaces with multiple automated theorem provers through Why3.",
  "capabilities": [
    "jml_support",
    "why3_backend",
    "multi_prover",
    "full_java",
    "memory_model"
  ],
  "property_types": [
    "jml_contract",
    "invariant",
    "assertion"
  ],
  "input_languages": [
    "java",
    "jml"
  ],
  "output_formats": [
    "why3",
    "verification_result"
  ],
  "installation": {
    "methods": [
      {
        "type": "opam",
        "command": "opam install why3 krakatoa"
      }
    ],
    "dependencies": [
      "ocaml",
      "why3",
      "java"
    ],
    "platforms": [
      "linux",
      "macos"
    ]
  },
  "documentation": {
    "official": "http://krakatoa.lri.fr/",
    "manual": "http://krakatoa.lri.fr/krakatoa.pdf",
    "why3": "http://why3.lri.fr/"
  },
  "tactics": [
    {
      "name": "requires",
      "description": "JML precondition",
      "syntax": "//@ requires condition;",
      "when_to_use": "For preconditions",
      "examples": [
        "//@ requires x > 0;"
      ]
    },
    {
      "name": "ensures",
      "description": "JML postcondition",
      "syntax": "//@ ensures condition;",
      "when_to_use": "For postconditions",
      "examples": [
        "//@ ensures \\result >= 0;"
      ]
    }
  ],
  "error_patterns": [
    {
      "pattern": "goal not proved",
      "meaning": "Verification condition not proven",
      "common_causes": [
        "Missing invariant",
        "Prover timeout"
      ],
      "fixes": [
        "Add annotations",
        "Try different prover"
      ]
    }
  ],
  "integration": {
    "dashprove_backend": true,
    "usl_property_types": [
      "jml",
      "contract"
    ],
    "cli_command": "dashprove verify --backend krakatoa"
  },
  "performance": {
    "typical_runtime": "seconds to minutes",
    "scalability": "Good for Java programs",
    "memory_usage": "Moderate"
  },
  "comparisons": {
    "similar_tools": [
      "key",
      "openjml",
      "jstar"
    ],
    "advantages": [
      "Why3 integration",
      "Multiple provers",
      "Full Java support"
    ],
    "disadvantages": [
      "Complex toolchain",
      "Less active than alternatives"
    ]
  },
  "metadata": {
    "version": "0.1",
    "last_updated": "2025-12-21",
    "maintainer": "LRI",
    "license": "LGPL"
  }
}
