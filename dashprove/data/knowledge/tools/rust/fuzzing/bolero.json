{
  "id": "bolero",
  "name": "Bolero",
  "category": "fuzzer",
  "subcategory": "unified",

  "description": "Unified Rust fuzzing and property testing framework",
  "long_description": "Bolero is a Rust crate that provides a unified interface for fuzzing, property-based testing, and test case generators. It can use multiple backends including LibFuzzer, AFL, and Honggfuzz, and seamlessly integrates with cargo test.",

  "capabilities": [
    "unified_interface",
    "multiple_backends",
    "property_testing",
    "value_generation",
    "shrinking"
  ],
  "property_types": ["crash_detection", "property_violation"],
  "input_languages": ["rust"],
  "output_formats": ["crash_artifact", "shrunk_input"],

  "installation": {
    "methods": [
      {"type": "cargo", "command": "cargo add bolero"}
    ],
    "dependencies": ["nightly_rust"],
    "platforms": ["linux", "macos"]
  },

  "documentation": {
    "official": "https://camshaft.github.io/bolero/",
    "tutorial": "https://camshaft.github.io/bolero/getting-started.html",
    "api_reference": "https://docs.rs/bolero/",
    "examples": "https://github.com/camshaft/bolero/tree/master/examples"
  },

  "tactics": [
    {
      "name": "check",
      "description": "Property test mode",
      "syntax": "bolero::check!()",
      "when_to_use": "For cargo test",
      "examples": ["check!().with_arbitrary::<String>().for_each(|s| { ... })"]
    },
    {
      "name": "fuzz",
      "description": "Fuzzing mode",
      "syntax": "cargo bolero fuzz",
      "when_to_use": "For fuzzing",
      "examples": ["cargo bolero fuzz target --engine libfuzzer"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "property violated",
      "meaning": "Test failed",
      "common_causes": ["Bug found"],
      "fixes": ["Fix bug using shrunk input"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["crash_freedom", "property"],
    "cli_command": "dashprove verify --backend bolero"
  },

  "performance": {
    "typical_runtime": "varies by backend",
    "scalability": "Backend dependent",
    "memory_usage": "Backend dependent"
  },

  "comparisons": {
    "similar_tools": ["proptest", "libfuzzer", "afl"],
    "advantages": [
      "Unified interface",
      "Multiple backends",
      "Good shrinking"
    ],
    "disadvantages": [
      "Extra abstraction layer"
    ]
  },

  "metadata": {
    "version": "0.10.0",
    "last_updated": "2025-12-22",
    "maintainer": "Cameron Bytheway",
    "license": "Apache-2.0/MIT"
  }
}
