{
  "id": "honggfuzz",
  "name": "Honggfuzz",
  "category": "fuzzer",
  "subcategory": "coverage_guided",

  "description": "Security-oriented coverage-guided fuzzer",
  "long_description": "Honggfuzz is a security-oriented, feedback-driven fuzzer. It supports hardware-based instrumentation (Intel PT), software coverage via sanitizers, and includes unique features like comparison operand tracking.",

  "capabilities": [
    "coverage_guided_fuzzing",
    "hardware_instrumentation",
    "persistent_mode",
    "comparison_feedback"
  ],
  "property_types": ["crash_detection", "security_bugs"],
  "input_languages": ["rust", "c", "cpp"],
  "output_formats": ["crash_artifact", "corpus"],

  "installation": {
    "methods": [
      {"type": "cargo", "command": "cargo install honggfuzz"},
      {"type": "apt", "command": "apt install honggfuzz"}
    ],
    "dependencies": ["clang", "llvm"],
    "platforms": ["linux"]
  },

  "documentation": {
    "official": "https://honggfuzz.dev/",
    "tutorial": "https://github.com/rust-fuzz/honggfuzz-rs",
    "api_reference": "https://github.com/google/honggfuzz",
    "examples": "https://github.com/rust-fuzz/honggfuzz-rs"
  },

  "tactics": [
    {
      "name": "basic",
      "description": "Basic fuzzing",
      "syntax": "cargo hfuzz run target",
      "when_to_use": "For general fuzzing",
      "examples": ["cargo hfuzz run my_target"]
    },
    {
      "name": "persistent",
      "description": "Persistent mode",
      "syntax": "HF_ITER in code",
      "when_to_use": "For speed",
      "examples": []
    }
  ],

  "error_patterns": [
    {
      "pattern": "CRASH",
      "meaning": "Crash detected",
      "common_causes": ["Memory bug"],
      "fixes": ["Fix bug"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["crash_freedom"],
    "cli_command": "dashprove verify --backend honggfuzz"
  },

  "performance": {
    "typical_runtime": "continuous",
    "scalability": "Very fast",
    "memory_usage": "Low"
  },

  "comparisons": {
    "similar_tools": ["libfuzzer", "afl"],
    "advantages": [
      "Intel PT support",
      "Comparison feedback"
    ],
    "disadvantages": [
      "Less documentation",
      "Linux focused"
    ]
  },

  "metadata": {
    "version": "2.6",
    "last_updated": "2025-12-22",
    "maintainer": "Google",
    "license": "Apache-2.0"
  }
}
