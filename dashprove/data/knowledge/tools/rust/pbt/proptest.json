{
  "id": "proptest",
  "name": "proptest",
  "category": "property_testing",
  "subcategory": "rust",

  "description": "Property-based testing framework for Rust",
  "long_description": "proptest is a property testing framework for Rust inspired by Hypothesis. It generates arbitrary inputs, runs tests, and automatically shrinks failing cases to minimal reproductions. It integrates with cargo test.",

  "capabilities": [
    "property_testing",
    "arbitrary_generation",
    "shrinking",
    "reproducible_failures",
    "strategies"
  ],
  "property_types": ["property", "invariant"],
  "input_languages": ["rust"],
  "output_formats": ["minimal_failure", "seed"],

  "installation": {
    "methods": [
      {"type": "cargo", "command": "cargo add proptest --dev"}
    ],
    "dependencies": [],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://proptest-rs.github.io/proptest/",
    "tutorial": "https://proptest-rs.github.io/proptest/proptest/getting-started.html",
    "api_reference": "https://docs.rs/proptest/",
    "examples": "https://github.com/proptest-rs/proptest/tree/master/proptest/examples"
  },

  "tactics": [
    {
      "name": "proptest",
      "description": "Property test macro",
      "syntax": "proptest! { |input: Type| { ... } }",
      "when_to_use": "For property tests",
      "examples": ["proptest! { |(a: u32, b: u32)| prop_assert!(a + b >= a); }"]
    },
    {
      "name": "strategy",
      "description": "Custom generators",
      "syntax": "any::<T>() or prop::...",
      "when_to_use": "For custom input generation",
      "examples": ["any::<String>().prop_filter(|s| !s.is_empty())"]
    },
    {
      "name": "prop_compose",
      "description": "Compose strategies",
      "syntax": "prop_compose! { ... }",
      "when_to_use": "For complex types",
      "examples": []
    }
  ],

  "error_patterns": [
    {
      "pattern": "proptest: test failed",
      "meaning": "Property violated",
      "common_causes": ["Bug found"],
      "fixes": ["Use minimal case to debug"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["property"],
    "cli_command": "dashprove verify --backend proptest"
  },

  "performance": {
    "typical_runtime": "seconds",
    "scalability": "Good",
    "memory_usage": "Low"
  },

  "comparisons": {
    "similar_tools": ["quickcheck", "bolero", "hypothesis"],
    "advantages": [
      "Good shrinking",
      "Strategies system",
      "Derive macro"
    ],
    "disadvantages": [
      "Compile time overhead"
    ]
  },

  "metadata": {
    "version": "1.4.0",
    "last_updated": "2025-12-22",
    "maintainer": "Proptest Team",
    "license": "Apache-2.0/MIT"
  }
}
