{
  "id": "deadlinks",
  "name": "cargo-deadlinks",
  "category": "rust_doc_quality",
  "subcategory": "link_checker",
  "description": "Checks generated Rust documentation for broken links",
  "long_description": "cargo-deadlinks scans rustdoc output to find missing or broken links, catching documentation regressions early in CI.",
  "capabilities": [
    "rustdoc_link_checking",
    "offline_validation",
    "ci_integration"
  ],
  "property_types": [
    "documentation"
  ],
  "input_languages": [
    "rustdoc"
  ],
  "output_formats": [
    "console",
    "json_report"
  ],
  "installation": {
    "methods": [
      {
        "type": "cargo",
        "command": "cargo install cargo-deadlinks"
      }
    ],
    "dependencies": [],
    "platforms": [
      "linux",
      "macos",
      "windows"
    ]
  },
  "documentation": {
    "official": "https://github.com/deadlinks/cargo-deadlinks",
    "tutorial": "https://github.com/deadlinks/cargo-deadlinks#usage",
    "api_reference": "https://docs.rs/cargo-deadlinks/",
    "examples": "https://github.com/deadlinks/cargo-deadlinks#usage"
  },
  "tactics": [
    {
      "name": "check",
      "description": "Run link checker after building docs",
      "syntax": "cargo deadlinks --dir target/doc",
      "when_to_use": "Validating documentation in CI",
      "examples": [
        "cargo doc && cargo deadlinks"
      ]
    }
  ],
  "error_patterns": [
    {
      "pattern": "Broken link",
      "meaning": "URL missing or unreachable",
      "common_causes": [
        "Outdated references",
        "Private paths"
      ],
      "fixes": [
        "Update links",
        "Exclude private docs"
      ]
    }
  ],
  "integration": {
    "dashprove_backend": true,
    "usl_property_types": [
      "documentation"
    ],
    "cli_command": "dashprove verify --backend deadlinks"
  },
  "performance": {
    "typical_runtime": "Seconds on medium crates",
    "scalability": "Linear in doc size",
    "memory_usage": "Low"
  },
  "comparisons": {
    "similar_tools": [
      "cargo-spellcheck",
      "mdbook-linkcheck"
    ],
    "advantages": [
      "Rustdoc aware",
      "Easy to run"
    ],
    "disadvantages": [
      "Requires built docs"
    ]
  },
  "metadata": {
    "version": "0.8.0",
    "last_updated": "2025-12-22",
    "maintainer": "Deadlinks Team",
    "license": "MIT"
  }
}
