{
  "id": "spellcheck",
  "name": "cargo-spellcheck",
  "category": "rust_doc_quality",
  "subcategory": "spelling",
  "description": "Spell checker for Rust source code and documentation",
  "long_description": "cargo-spellcheck checks comments and documentation for spelling mistakes. It supports hunspell dictionaries, custom allowlists, and interactive corrections.",
  "capabilities": [
    "spell_checking",
    "dictionary_customization",
    "interactive_fixes",
    "ci_integration"
  ],
  "property_types": [
    "documentation"
  ],
  "input_languages": [
    "rust",
    "markdown"
  ],
  "output_formats": [
    "console"
  ],
  "installation": {
    "methods": [
      {
        "type": "cargo",
        "command": "cargo install cargo-spellcheck"
      }
    ],
    "dependencies": [
      "hunspell"
    ],
    "platforms": [
      "linux",
      "macos",
      "windows"
    ]
  },
  "documentation": {
    "official": "https://github.com/drahnr/cargo-spellcheck",
    "tutorial": "https://github.com/drahnr/cargo-spellcheck#usage",
    "api_reference": "https://docs.rs/cargo-spellcheck/",
    "examples": "https://github.com/drahnr/cargo-spellcheck#usage"
  },
  "tactics": [
    {
      "name": "fix",
      "description": "Run interactive spellcheck",
      "syntax": "cargo spellcheck fix",
      "when_to_use": "Cleaning documentation typos",
      "examples": [
        "cargo spellcheck fix --cfg=.config/spellcheck.toml"
      ]
    }
  ],
  "error_patterns": [
    {
      "pattern": "Dictionary missing",
      "meaning": "hunspell dictionary not found",
      "common_causes": [
        "Dictionary not installed"
      ],
      "fixes": [
        "Install language dictionaries",
        "Configure path"
      ]
    }
  ],
  "integration": {
    "dashprove_backend": true,
    "usl_property_types": [
      "documentation"
    ],
    "cli_command": "dashprove verify --backend spellcheck"
  },
  "performance": {
    "typical_runtime": "Seconds",
    "scalability": "Linear in lines scanned",
    "memory_usage": "Low"
  },
  "comparisons": {
    "similar_tools": [
      "codespell"
    ],
    "advantages": [
      "Rustdoc aware",
      "Interactive mode"
    ],
    "disadvantages": [
      "Requires dictionaries"
    ]
  },
  "metadata": {
    "version": "0.15.0",
    "last_updated": "2025-12-22",
    "maintainer": "Daniel Martinez",
    "license": "Apache-2.0/MIT"
  }
}
