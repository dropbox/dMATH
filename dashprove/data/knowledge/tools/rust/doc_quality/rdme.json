{
  "id": "rdme",
  "name": "cargo-rdme",
  "category": "rust_doc_quality",
  "subcategory": "readme_sync",
  "description": "Synchronize README from crate-level documentation",
  "long_description": "cargo-rdme extracts documentation comments from lib.rs and generates a README, keeping crate docs and repository README in sync to reduce drift.",
  "capabilities": [
    "readme_generation",
    "doc_sync",
    "markdown_rendering",
    "ci_integration"
  ],
  "property_types": [
    "documentation"
  ],
  "input_languages": [
    "rust",
    "markdown"
  ],
  "output_formats": [
    "markdown"
  ],
  "installation": {
    "methods": [
      {
        "type": "cargo",
        "command": "cargo install cargo-rdme"
      }
    ],
    "dependencies": [],
    "platforms": [
      "linux",
      "macos",
      "windows"
    ]
  },
  "documentation": {
    "official": "https://github.com/orium/cargo-rdme",
    "tutorial": "https://github.com/orium/cargo-rdme#usage",
    "api_reference": "https://docs.rs/cargo-rdme/",
    "examples": "https://github.com/orium/cargo-rdme#usage"
  },
  "tactics": [
    {
      "name": "generate",
      "description": "Generate README from lib.rs",
      "syntax": "cargo rdme",
      "when_to_use": "Ensuring README matches crate docs",
      "examples": [
        "cargo rdme --force"
      ]
    }
  ],
  "error_patterns": [
    {
      "pattern": "Cannot find lib.rs",
      "meaning": "Tool not run in crate root",
      "common_causes": [
        "Wrong working directory"
      ],
      "fixes": [
        "Run inside crate root",
        "Set --manifest-path"
      ]
    }
  ],
  "integration": {
    "dashprove_backend": true,
    "usl_property_types": [
      "documentation"
    ],
    "cli_command": "dashprove verify --backend rdme"
  },
  "performance": {
    "typical_runtime": "Very fast",
    "scalability": "Linear in doc size",
    "memory_usage": "Low"
  },
  "comparisons": {
    "similar_tools": [
      "cargo-readme"
    ],
    "advantages": [
      "Simple",
      "Keeps docs DRY"
    ],
    "disadvantages": [
      "Only for Rust crates"
    ]
  },
  "metadata": {
    "version": "1.7.0",
    "last_updated": "2025-12-22",
    "maintainer": "orium",
    "license": "Apache-2.0/MIT"
  }
}
