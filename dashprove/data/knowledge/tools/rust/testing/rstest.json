{
  "id": "rstest",
  "name": "rstest",
  "category": "testing",
  "subcategory": "fixtures",
  "description": "Rust test framework with fixtures and parametrization",
  "long_description": "rstest provides procedural macros to create table-driven tests, fixtures, and async tests. It integrates with cargo test and supports combining fixtures with parameters for concise coverage.",
  "capabilities": [
    "parameterized_tests",
    "fixtures",
    "async_tests",
    "combination_testing"
  ],
  "property_types": [
    "test"
  ],
  "input_languages": [
    "rust"
  ],
  "output_formats": [
    "console",
    "junit"
  ],
  "installation": {
    "methods": [
      {
        "type": "cargo",
        "command": "cargo add rstest --dev"
      }
    ],
    "dependencies": [],
    "platforms": [
      "linux",
      "macos",
      "windows"
    ]
  },
  "documentation": {
    "official": "https://github.com/la10736/rstest",
    "tutorial": "https://github.com/la10736/rstest/blob/master/README.md",
    "api_reference": "https://docs.rs/rstest/latest/rstest/",
    "examples": "https://github.com/la10736/rstest/blob/master/examples"
  },
  "tactics": [
    {
      "name": "rstest_macro",
      "description": "Define parameterized test",
      "syntax": "#[rstest(input, case(1), case(2))]",
      "when_to_use": "Running same logic over multiple cases",
      "examples": [
        "#[rstest(a, case(1), case(2))]\nfn test_add(a: i32) { assert!(a > 0); }"
      ]
    },
    {
      "name": "fixture",
      "description": "Share setup code",
      "syntax": "#[fixture] fn config() -> Config { ... }",
      "when_to_use": "Expensive setup reused by tests",
      "examples": [
        "#[fixture] fn user() -> User { ... }"
      ]
    }
  ],
  "error_patterns": [
    {
      "pattern": "conflicting names",
      "meaning": "Fixture or case name collision",
      "common_causes": [
        "Duplicate identifiers"
      ],
      "fixes": [
        "Rename fixtures",
        "Simplify macros"
      ]
    }
  ],
  "integration": {
    "dashprove_backend": true,
    "usl_property_types": [
      "test"
    ],
    "cli_command": "dashprove verify --backend rstest"
  },
  "performance": {
    "typical_runtime": "Same as cargo test",
    "scalability": "Scales with number of cases",
    "memory_usage": "Low"
  },
  "comparisons": {
    "similar_tools": [
      "testcase",
      "rstest_reuse"
    ],
    "advantages": [
      "Clean macros",
      "Fixture support"
    ],
    "disadvantages": [
      "Macro compile time",
      "IDE hinting sometimes limited"
    ]
  },
  "metadata": {
    "version": "0.22.0",
    "last_updated": "2025-12-22",
    "maintainer": "Andrea Longhi",
    "license": "Apache-2.0/MIT"
  }
}
