{
  "id": "testcase",
  "name": "test-case",
  "category": "testing",
  "subcategory": "parameterized",
  "description": "Attribute macro for table-driven Rust tests",
  "long_description": "The test-case crate adds a #[test_case] attribute to define multiple input/output combinations for a single test function. It keeps tests DRY while exercising edge cases, and integrates with cargo test output.",
  "capabilities": [
    "parameterized_tests",
    "table_driven_testing",
    "async_support"
  ],
  "property_types": [
    "test"
  ],
  "input_languages": [
    "rust"
  ],
  "output_formats": [
    "console"
  ],
  "installation": {
    "methods": [
      {
        "type": "cargo",
        "command": "cargo add test-case --dev"
      }
    ],
    "dependencies": [],
    "platforms": [
      "linux",
      "macos",
      "windows"
    ]
  },
  "documentation": {
    "official": "https://github.com/frondeus/test-case",
    "tutorial": "https://github.com/frondeus/test-case#usage",
    "api_reference": "https://docs.rs/test-case/latest/test_case/",
    "examples": "https://github.com/frondeus/test-case/tree/master/examples"
  },
  "tactics": [
    {
      "name": "test_case_macro",
      "description": "Define multiple cases",
      "syntax": "#[test_case(input, expected; \"label\")]",
      "when_to_use": "Covering multiple inputs without duplicating code",
      "examples": [
        "#[test_case(2, 4; \"double\")]"
      ]
    },
    {
      "name": "matrix",
      "description": "Cross product of parameters",
      "syntax": "#[test_matrix(args=[...], ...)]",
      "when_to_use": "Expanding combinations automatically",
      "examples": [
        "#[test_matrix(foo: [1,2], bar: [true,false])]"
      ]
    }
  ],
  "error_patterns": [
    {
      "pattern": "attribute panicked",
      "meaning": "Macro expansion failed",
      "common_causes": [
        "Invalid syntax",
        "Mismatched parameter count"
      ],
      "fixes": [
        "Match function signature",
        "Check macro arguments"
      ]
    }
  ],
  "integration": {
    "dashprove_backend": true,
    "usl_property_types": [
      "test"
    ],
    "cli_command": "dashprove verify --backend testcase"
  },
  "performance": {
    "typical_runtime": "Same as cargo test",
    "scalability": "Number of generated cases multiplies runtime",
    "memory_usage": "Low"
  },
  "comparisons": {
    "similar_tools": [
      "rstest"
    ],
    "advantages": [
      "Minimal API",
      "Lightweight"
    ],
    "disadvantages": [
      "No fixtures",
      "Less composable"
    ]
  },
  "metadata": {
    "version": "3.3.1",
    "last_updated": "2025-12-22",
    "maintainer": "Lukasz Frondeus",
    "license": "Apache-2.0/MIT"
  }
}
