{
  "id": "audit",
  "name": "cargo-audit",
  "category": "static_analysis",
  "subcategory": "security",

  "description": "Audit Cargo.lock for known security vulnerabilities",
  "long_description": "cargo-audit scans dependencies for known security vulnerabilities using the RustSec Advisory Database. It's essential for security-conscious Rust projects.",

  "capabilities": [
    "vulnerability_scanning",
    "advisory_database",
    "ci_integration"
  ],
  "property_types": ["security"],
  "input_languages": ["rust"],
  "output_formats": ["diagnostic", "json"],

  "installation": {
    "methods": [
      {"type": "cargo", "command": "cargo install cargo-audit"}
    ],
    "dependencies": [],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://github.com/rustsec/rustsec",
    "tutorial": "https://github.com/rustsec/rustsec#readme",
    "api_reference": "https://rustsec.org/",
    "examples": "https://github.com/rustsec/rustsec"
  },

  "tactics": [
    {
      "name": "audit",
      "description": "Scan for vulnerabilities",
      "syntax": "cargo audit",
      "when_to_use": "Regular security check",
      "examples": ["cargo audit --deny warnings"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "RUSTSEC-",
      "meaning": "Vulnerability found",
      "common_causes": ["Outdated dependency"],
      "fixes": ["Update dependency", "Apply patch"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["security"],
    "cli_command": "dashprove verify --backend audit"
  },

  "performance": {
    "typical_runtime": "seconds",
    "scalability": "Fast",
    "memory_usage": "Low"
  },

  "comparisons": {
    "similar_tools": ["cargo-deny", "npm-audit"],
    "advantages": [
      "RustSec database",
      "Simple to use"
    ],
    "disadvantages": [
      "Database coverage"
    ]
  },

  "metadata": {
    "version": "0.18.3",
    "last_updated": "2025-12-22",
    "maintainer": "RustSec",
    "license": "Apache-2.0/MIT"
  }
}
