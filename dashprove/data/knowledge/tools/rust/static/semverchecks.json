{
  "id": "semverchecks",
  "name": "cargo-semver-checks",
  "category": "static_analysis",
  "subcategory": "compatibility",

  "description": "Lint for semver violations in Rust crates",
  "long_description": "cargo-semver-checks scans Rust crate for API changes that violate semantic versioning. It detects breaking changes in public APIs that should trigger a major version bump.",

  "capabilities": [
    "semver_checking",
    "api_diff",
    "breaking_change_detection",
    "ci_integration"
  ],
  "property_types": ["api_compatibility"],
  "input_languages": ["rust"],
  "output_formats": ["diagnostic", "json"],

  "installation": {
    "methods": [
      {"type": "cargo", "command": "cargo install cargo-semver-checks"}
    ],
    "dependencies": [],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://github.com/obi1kenobi/cargo-semver-checks",
    "tutorial": "https://github.com/obi1kenobi/cargo-semver-checks#readme",
    "api_reference": "https://docs.rs/cargo-semver-checks/",
    "examples": "https://github.com/obi1kenobi/cargo-semver-checks"
  },

  "tactics": [
    {
      "name": "check",
      "description": "Check for violations",
      "syntax": "cargo semver-checks",
      "when_to_use": "Before publishing",
      "examples": ["cargo semver-checks check-release"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "BREAKING",
      "meaning": "Breaking change detected",
      "common_causes": ["API change without major bump"],
      "fixes": ["Bump major version", "Revert change"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["api_compatibility"],
    "cli_command": "dashprove verify --backend semverchecks"
  },

  "performance": {
    "typical_runtime": "seconds",
    "scalability": "Good",
    "memory_usage": "Moderate"
  },

  "comparisons": {
    "similar_tools": ["rust-semverver"],
    "advantages": [
      "Easy to use",
      "Good CI support"
    ],
    "disadvantages": [
      "May miss some cases"
    ]
  },

  "metadata": {
    "version": "0.28.0",
    "last_updated": "2025-12-22",
    "maintainer": "Predrag Gruevski",
    "license": "Apache-2.0/MIT"
  }
}
