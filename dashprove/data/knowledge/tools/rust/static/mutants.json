{
  "id": "mutants",
  "name": "cargo-mutants",
  "category": "testing",
  "subcategory": "mutation",

  "description": "Mutation testing for Rust to assess test quality",
  "long_description": "cargo-mutants applies mutations (small changes) to source code and runs tests to see if they catch the mutations. This measures test suite effectiveness - if a mutation survives, tests may be inadequate.",

  "capabilities": [
    "mutation_testing",
    "test_quality_assessment",
    "parallel_execution"
  ],
  "property_types": ["test_quality"],
  "input_languages": ["rust"],
  "output_formats": ["report", "json"],

  "installation": {
    "methods": [
      {"type": "cargo", "command": "cargo install cargo-mutants"}
    ],
    "dependencies": [],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://mutants.rs/",
    "tutorial": "https://mutants.rs/",
    "api_reference": "https://docs.rs/cargo-mutants/",
    "examples": "https://github.com/sourcefrog/cargo-mutants"
  },

  "tactics": [
    {
      "name": "mutate",
      "description": "Run mutation testing",
      "syntax": "cargo mutants",
      "when_to_use": "To assess test quality",
      "examples": ["cargo mutants -- --all-features"]
    },
    {
      "name": "diff",
      "description": "Test changed code only",
      "syntax": "--diff",
      "when_to_use": "For incremental testing",
      "examples": ["cargo mutants --diff main"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "survived",
      "meaning": "Mutation not caught",
      "common_causes": ["Missing test coverage"],
      "fixes": ["Add test for mutation"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["test_quality"],
    "cli_command": "dashprove verify --backend mutants"
  },

  "performance": {
    "typical_runtime": "minutes to hours",
    "scalability": "Parallel support",
    "memory_usage": "Moderate"
  },

  "comparisons": {
    "similar_tools": ["mutagen"],
    "advantages": [
      "Easy to use",
      "Good reporting"
    ],
    "disadvantages": [
      "Can be slow"
    ]
  },

  "metadata": {
    "version": "24.2.1",
    "last_updated": "2025-12-22",
    "maintainer": "Martin Pool",
    "license": "MIT"
  }
}
