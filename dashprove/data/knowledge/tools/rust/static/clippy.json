{
  "id": "clippy",
  "name": "Clippy",
  "category": "static_analysis",
  "subcategory": "rust",

  "description": "Official Rust linter with 700+ lints",
  "long_description": "Clippy is the official linter for Rust, containing over 700 lints to catch common mistakes, improve code quality, and enforce idioms. It integrates with cargo and is widely used in Rust projects.",

  "capabilities": [
    "lint_detection",
    "auto_fix",
    "multiple_lint_levels",
    "custom_configuration"
  ],
  "property_types": ["code_quality", "correctness"],
  "input_languages": ["rust"],
  "output_formats": ["diagnostic", "json"],

  "installation": {
    "methods": [
      {"type": "rustup", "command": "rustup component add clippy"}
    ],
    "dependencies": [],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://doc.rust-lang.org/clippy/",
    "tutorial": "https://doc.rust-lang.org/clippy/usage.html",
    "api_reference": "https://rust-lang.github.io/rust-clippy/master/",
    "examples": "https://github.com/rust-lang/rust-clippy"
  },

  "tactics": [
    {
      "name": "check",
      "description": "Run clippy",
      "syntax": "cargo clippy",
      "when_to_use": "For lint checking",
      "examples": ["cargo clippy -- -W clippy::all"]
    },
    {
      "name": "fix",
      "description": "Auto-fix lints",
      "syntax": "cargo clippy --fix",
      "when_to_use": "To apply fixes",
      "examples": ["cargo clippy --fix --allow-dirty"]
    },
    {
      "name": "pedantic",
      "description": "Strict lints",
      "syntax": "#![warn(clippy::pedantic)]",
      "when_to_use": "For strict checking",
      "examples": []
    }
  ],

  "error_patterns": [
    {
      "pattern": "warning: ",
      "meaning": "Lint triggered",
      "common_causes": ["Non-idiomatic code"],
      "fixes": ["Follow suggestion"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["code_quality"],
    "cli_command": "dashprove verify --backend clippy"
  },

  "performance": {
    "typical_runtime": "seconds",
    "scalability": "Good",
    "memory_usage": "Low"
  },

  "comparisons": {
    "similar_tools": ["rustc_warnings", "rust-analyzer"],
    "advantages": [
      "Official tool",
      "700+ lints",
      "Auto-fix"
    ],
    "disadvantages": [
      "Some false positives"
    ]
  },

  "metadata": {
    "version": "via rustup",
    "last_updated": "2025-12-22",
    "maintainer": "Rust Project",
    "license": "Apache-2.0/MIT"
  }
}
