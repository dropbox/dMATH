{
  "id": "geiger",
  "name": "cargo-geiger",
  "category": "static_analysis",
  "subcategory": "unsafe",

  "description": "Count and display unsafe code in Rust projects",
  "long_description": "cargo-geiger detects usage of unsafe Rust code in a project and its dependencies. It provides metrics on how much unsafe code exists, helping assess security risk.",

  "capabilities": [
    "unsafe_detection",
    "dependency_scanning",
    "metrics_reporting"
  ],
  "property_types": ["safety_metrics"],
  "input_languages": ["rust"],
  "output_formats": ["table", "json"],

  "installation": {
    "methods": [
      {"type": "cargo", "command": "cargo install cargo-geiger"}
    ],
    "dependencies": [],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://github.com/rust-secure-code/cargo-geiger",
    "tutorial": "https://github.com/rust-secure-code/cargo-geiger#readme",
    "api_reference": "https://docs.rs/cargo-geiger/",
    "examples": "https://github.com/rust-secure-code/cargo-geiger"
  },

  "tactics": [
    {
      "name": "scan",
      "description": "Scan for unsafe",
      "syntax": "cargo geiger",
      "when_to_use": "For safety audit",
      "examples": ["cargo geiger --all-features"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "unsafe",
      "meaning": "Unsafe code found",
      "common_causes": ["FFI", "Performance", "Raw pointers"],
      "fixes": ["Review unsafe usage"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["safety"],
    "cli_command": "dashprove verify --backend geiger"
  },

  "performance": {
    "typical_runtime": "seconds",
    "scalability": "Good",
    "memory_usage": "Low"
  },

  "comparisons": {
    "similar_tools": ["cargo-crev"],
    "advantages": [
      "Clear metrics",
      "Dependency aware"
    ],
    "disadvantages": [
      "Metrics only"
    ]
  },

  "metadata": {
    "version": "0.11.6",
    "last_updated": "2025-12-22",
    "maintainer": "Rust Secure Code WG",
    "license": "Apache-2.0/MIT"
  }
}
