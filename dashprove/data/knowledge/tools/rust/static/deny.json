{
  "id": "deny",
  "name": "cargo-deny",
  "category": "static_analysis",
  "subcategory": "policy",

  "description": "Lint dependencies for licenses, security, and more",
  "long_description": "cargo-deny is a cargo plugin for linting dependencies. It checks licenses, bans specific crates, detects duplicates, and integrates security advisories. Highly configurable for policy enforcement.",

  "capabilities": [
    "license_checking",
    "crate_banning",
    "duplicate_detection",
    "advisory_checking"
  ],
  "property_types": ["policy", "security", "license"],
  "input_languages": ["rust"],
  "output_formats": ["diagnostic", "json"],

  "installation": {
    "methods": [
      {"type": "cargo", "command": "cargo install cargo-deny"}
    ],
    "dependencies": [],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://github.com/EmbarkStudios/cargo-deny",
    "tutorial": "https://embarkstudios.github.io/cargo-deny/",
    "api_reference": "https://embarkstudios.github.io/cargo-deny/checks/",
    "examples": "https://github.com/EmbarkStudios/cargo-deny"
  },

  "tactics": [
    {
      "name": "check",
      "description": "Run all checks",
      "syntax": "cargo deny check",
      "when_to_use": "For full policy check",
      "examples": ["cargo deny check licenses bans advisories"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "licenses FAILED",
      "meaning": "License policy violation",
      "common_causes": ["Incompatible license"],
      "fixes": ["Update deny.toml", "Find alternative"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["policy"],
    "cli_command": "dashprove verify --backend deny"
  },

  "performance": {
    "typical_runtime": "seconds",
    "scalability": "Fast",
    "memory_usage": "Low"
  },

  "comparisons": {
    "similar_tools": ["cargo-audit", "cargo-license"],
    "advantages": [
      "Comprehensive",
      "Configurable"
    ],
    "disadvantages": [
      "Config complexity"
    ]
  },

  "metadata": {
    "version": "0.14.16",
    "last_updated": "2025-12-22",
    "maintainer": "Embark Studios",
    "license": "Apache-2.0/MIT"
  }
}
