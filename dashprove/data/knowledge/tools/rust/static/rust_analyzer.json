{
  "id": "rust_analyzer",
  "name": "rust-analyzer",
  "category": "ide_language_server",
  "subcategory": "rust",

  "description": "Language Server Protocol implementation for Rust with fast incremental analysis",
  "long_description": "rust-analyzer provides semantic analysis, diagnostics, completions, and code actions for Rust. It powers modern Rust IDE integrations, expands macros, offers inlay hints, and enables precise navigation across large workspaces.",

  "capabilities": [
    "lsp_server",
    "incremental_analysis",
    "inlay_hints",
    "code_actions",
    "semantic_tokens",
    "macro_expansion",
    "diagnostics"
  ],
  "property_types": ["developer_experience", "code_quality"],
  "input_languages": ["rust"],
  "output_formats": ["lsp_diagnostics", "json"],

  "installation": {
    "methods": [
      {"type": "rustup", "command": "rustup component add rust-analyzer"},
      {"type": "brew", "command": "brew install rust-analyzer"}
    ],
    "dependencies": ["rustc", "cargo"],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://rust-analyzer.github.io/manual.html",
    "tutorial": "https://rust-analyzer.github.io/manual.html#installation",
    "api_reference": "https://rust-analyzer.github.io/manual.html#features",
    "examples": "https://github.com/rust-lang/rust-analyzer/tree/master/crates/rust-analyzer/src/bin"
  },

  "tactics": [
    {
      "name": "analysis_stats",
      "description": "Measure project analysis status from CLI",
      "syntax": "rust-analyzer analysis-stats .",
      "when_to_use": "Debugging performance or coverage of the analyzer",
      "examples": ["rust-analyzer analysis-stats crates/"]
    },
    {
      "name": "editor_integration",
      "description": "Enable rust-analyzer in editor via LSP",
      "syntax": "Configure LSP client to run rust-analyzer",
      "when_to_use": "Day-to-day development for completions and fixes",
      "examples": ["VS Code: install rust-analyzer extension"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "unresolved import",
      "meaning": "Module or crate path not found during analysis",
      "common_causes": ["Missing dependency", "Incorrect module path", "Not running cargo check recently"],
      "fixes": ["Add dependency to Cargo.toml", "Fix module paths", "Run cargo fetch/build"]
    },
    {
      "pattern": "mismatched types",
      "meaning": "Inferred type differs from expected",
      "common_causes": ["Missing trait import", "Wrong generic parameter", "Lifetime mismatch"],
      "fixes": ["Bring trait into scope", "Adjust generics", "Add explicit type annotations"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["code_quality"],
    "cli_command": "dashprove verify --backend rust-analyzer"
  },

  "performance": {
    "typical_runtime": "Interactive; incremental updates in milliseconds",
    "scalability": "Handles large workspaces with on-demand analysis",
    "memory_usage": "Moderate to high depending on project size"
  },

  "comparisons": {
    "similar_tools": ["rls", "clippy"],
    "advantages": ["Fast incremental engine", "Great macro support", "Rich IDE features"],
    "disadvantages": ["High memory on large projects", "Not a full compiler"]
  },

  "metadata": {
    "version": "2025-12-01",
    "last_updated": "2025-12-23",
    "maintainer": "Rust Language Team",
    "license": "Apache-2.0 OR MIT"
  }
}
