{
  "id": "cdschecker",
  "name": "CDSChecker",
  "category": "concurrency_testing",
  "subcategory": "model_checking",

  "description": "Model checker for C11/C++11 memory models",
  "long_description": "CDSChecker is a model checker for C11/C++11 relaxed memory models. It systematically explores all possible interleavings and memory orderings to find concurrency bugs that may only manifest under weak memory models.",

  "capabilities": [
    "memory_model_checking",
    "relaxed_memory",
    "systematic_exploration",
    "c11_cpp11_support"
  ],
  "property_types": ["concurrency_safety"],
  "input_languages": ["c", "cpp"],
  "output_formats": ["counterexample_trace"],

  "installation": {
    "methods": [
      {"type": "source", "url": "https://github.com/computersforpeace/cdschecker"}
    ],
    "dependencies": ["gcc", "make"],
    "platforms": ["linux"]
  },

  "documentation": {
    "official": "http://demsky.eecs.uci.edu/c11modelchecker.html",
    "tutorial": "http://demsky.eecs.uci.edu/c11modelchecker.html",
    "api_reference": "https://github.com/computersforpeace/cdschecker",
    "examples": "https://github.com/computersforpeace/cdschecker/tree/master/test"
  },

  "tactics": [
    {
      "name": "systematic",
      "description": "Full exploration",
      "syntax": "./run.sh test",
      "when_to_use": "For complete coverage",
      "examples": ["./run.sh ./mytest"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "assertion failed",
      "meaning": "Concurrency bug found",
      "common_causes": ["Data race", "Memory ordering bug"],
      "fixes": ["Fix synchronization"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["concurrency_safety"],
    "cli_command": "dashprove verify --backend cdschecker"
  },

  "performance": {
    "typical_runtime": "seconds to hours",
    "scalability": "Limited by state space",
    "memory_usage": "Moderate"
  },

  "comparisons": {
    "similar_tools": ["genmc", "loom"],
    "advantages": [
      "C11 memory model",
      "Complete exploration"
    ],
    "disadvantages": [
      "C/C++ only",
      "State explosion"
    ]
  },

  "metadata": {
    "version": "0.4",
    "last_updated": "2025-12-22",
    "maintainer": "UC Irvine",
    "license": "GPL-2.0"
  }
}
