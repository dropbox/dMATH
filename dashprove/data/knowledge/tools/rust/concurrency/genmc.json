{
  "id": "genmc",
  "name": "GenMC",
  "category": "concurrency_testing",
  "subcategory": "model_checking",

  "description": "Model checker for concurrent programs under various memory models",
  "long_description": "GenMC is a stateless model checker that can verify concurrent programs under various memory models including SC, TSO, PSO, and RC11. It uses LLVM-based instrumentation for efficient exploration.",

  "capabilities": [
    "memory_model_checking",
    "multiple_memory_models",
    "llvm_based",
    "optimal_dpor"
  ],
  "property_types": ["concurrency_safety"],
  "input_languages": ["c", "cpp"],
  "output_formats": ["counterexample_trace"],

  "installation": {
    "methods": [
      {"type": "source", "url": "https://github.com/MPI-SWS/genmc"}
    ],
    "dependencies": ["llvm", "cmake"],
    "platforms": ["linux"]
  },

  "documentation": {
    "official": "https://plv.mpi-sws.org/genmc/",
    "tutorial": "https://github.com/MPI-SWS/genmc#readme",
    "api_reference": "https://github.com/MPI-SWS/genmc",
    "examples": "https://github.com/MPI-SWS/genmc/tree/master/tests"
  },

  "tactics": [
    {
      "name": "rc11",
      "description": "RC11 memory model",
      "syntax": "-rc11",
      "when_to_use": "For C11 atomics",
      "examples": ["genmc -rc11 test.c"]
    },
    {
      "name": "tso",
      "description": "x86-TSO model",
      "syntax": "-tso",
      "when_to_use": "For x86 programs",
      "examples": ["genmc -tso test.c"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "Error detected",
      "meaning": "Bug found",
      "common_causes": ["Data race", "Memory model violation"],
      "fixes": ["Add proper atomics"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["concurrency_safety"],
    "cli_command": "dashprove verify --backend genmc"
  },

  "performance": {
    "typical_runtime": "seconds to hours",
    "scalability": "Good with DPOR",
    "memory_usage": "Moderate"
  },

  "comparisons": {
    "similar_tools": ["cdschecker", "loom"],
    "advantages": [
      "Multiple memory models",
      "Optimal DPOR"
    ],
    "disadvantages": [
      "C/C++ only",
      "Complex setup"
    ]
  },

  "metadata": {
    "version": "0.7",
    "last_updated": "2025-12-22",
    "maintainer": "MPI-SWS",
    "license": "GPL-3.0"
  }
}
