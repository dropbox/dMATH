{
  "id": "llvmcov",
  "name": "cargo-llvm-cov",
  "category": "coverage",
  "subcategory": "rust",

  "description": "LLVM-based code coverage for Rust",
  "long_description": "cargo-llvm-cov uses LLVM's source-based code coverage instrumentation for accurate coverage reports. It's faster than tarpaulin and works on more platforms.",

  "capabilities": ["source_based_coverage", "branch_coverage", "multiple_output_formats"],
  "property_types": ["coverage"],
  "input_languages": ["rust"],
  "output_formats": ["html", "lcov", "json"],

  "installation": {
    "methods": [{"type": "cargo", "command": "cargo install cargo-llvm-cov"}],
    "dependencies": ["llvm-tools"],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://github.com/taiki-e/cargo-llvm-cov",
    "tutorial": "https://github.com/taiki-e/cargo-llvm-cov#readme",
    "api_reference": "https://docs.rs/cargo-llvm-cov/",
    "examples": "https://github.com/taiki-e/cargo-llvm-cov"
  },

  "tactics": [
    {"name": "basic", "description": "Run coverage", "syntax": "cargo llvm-cov", "when_to_use": "For coverage", "examples": ["cargo llvm-cov --html"]}
  ],

  "error_patterns": [],

  "integration": {"dashprove_backend": true, "usl_property_types": ["coverage"], "cli_command": "dashprove verify --backend llvmcov"},

  "performance": {"typical_runtime": "seconds to minutes", "scalability": "Excellent", "memory_usage": "Low"},

  "comparisons": {"similar_tools": ["tarpaulin", "grcov"], "advantages": ["Fast", "Cross-platform"], "disadvantages": ["Needs llvm-tools"]},

  "metadata": {"version": "0.6.0", "last_updated": "2025-12-22", "maintainer": "Taiki Endo", "license": "Apache-2.0/MIT"}
}
