{
  "id": "valgrind",
  "name": "Valgrind",
  "category": "sanitizer",
  "subcategory": "memory",

  "description": "Dynamic analysis framework for memory debugging",
  "long_description": "Valgrind is a programming tool for memory debugging, memory leak detection, and profiling. Its Memcheck tool detects memory management problems including use of uninitialized memory, reading/writing freed memory, and memory leaks.",

  "capabilities": [
    "memory_error_detection",
    "leak_detection",
    "use_after_free",
    "uninitialized_read",
    "profiling"
  ],
  "property_types": ["memory_safety"],
  "input_languages": ["rust", "c", "cpp"],
  "output_formats": ["error_report", "xml_report"],

  "installation": {
    "methods": [
      {"type": "apt", "command": "apt install valgrind"},
      {"type": "brew", "command": "brew install valgrind"}
    ],
    "dependencies": [],
    "platforms": ["linux", "macos"]
  },

  "documentation": {
    "official": "https://valgrind.org/",
    "tutorial": "https://valgrind.org/docs/manual/quick-start.html",
    "api_reference": "https://valgrind.org/docs/manual/manual.html",
    "examples": "https://valgrind.org/docs/manual/mc-manual.html"
  },

  "tactics": [
    {
      "name": "memcheck",
      "description": "Memory error detection",
      "syntax": "valgrind --tool=memcheck",
      "when_to_use": "For memory bugs",
      "examples": ["valgrind --tool=memcheck ./target/debug/myapp"]
    },
    {
      "name": "leak-check",
      "description": "Full leak checking",
      "syntax": "--leak-check=full",
      "when_to_use": "For detailed leak info",
      "examples": ["valgrind --leak-check=full ./target/debug/myapp"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "Invalid read",
      "meaning": "Reading invalid memory",
      "common_causes": ["Buffer overflow", "Use after free"],
      "fixes": ["Fix bounds", "Fix lifetime"]
    },
    {
      "pattern": "definitely lost",
      "meaning": "Memory leak",
      "common_causes": ["Missing free/drop"],
      "fixes": ["Free memory"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["memory_safety"],
    "cli_command": "dashprove verify --backend valgrind"
  },

  "performance": {
    "typical_runtime": "20-50x slowdown",
    "scalability": "Moderate",
    "memory_usage": "2x increase"
  },

  "comparisons": {
    "similar_tools": ["asan", "miri"],
    "advantages": [
      "No recompilation needed",
      "Mature and reliable"
    ],
    "disadvantages": [
      "Very slow",
      "macOS support limited"
    ]
  },

  "metadata": {
    "version": "3.22.0",
    "last_updated": "2025-12-22",
    "maintainer": "Valgrind Developers",
    "license": "GPL-2.0"
  }
}
