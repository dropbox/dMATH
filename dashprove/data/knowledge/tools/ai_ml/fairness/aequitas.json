{
  "id": "aequitas",
  "name": "Aequitas",
  "category": "ai_ml",
  "subcategory": "fairness",
  "description": "Bias and fairness audit toolkit for machine learning",
  "long_description": "Aequitas is an open-source bias audit toolkit developed at University of Chicago. It helps data scientists and policymakers audit machine learning models for discrimination and bias. Provides group fairness metrics, disparity analysis, and visualization tools.",
  "capabilities": [
    "group_fairness_metrics",
    "disparity_analysis",
    "bias_audit",
    "fairness_visualization",
    "webapp_interface",
    "multiple_protected_attributes",
    "threshold_analysis"
  ],
  "property_types": [
    "fairness",
    "disparity",
    "bias"
  ],
  "input_languages": [
    "python"
  ],
  "output_formats": [
    "report",
    "visualization",
    "json"
  ],
  "installation": {
    "methods": [
      {
        "type": "pip",
        "command": "pip install aequitas"
      },
      {
        "type": "source",
        "url": "https://github.com/dssg/aequitas"
      }
    ],
    "dependencies": [
      "pandas",
      "numpy",
      "matplotlib"
    ],
    "platforms": [
      "linux",
      "macos",
      "windows"
    ]
  },
  "documentation": {
    "official": "http://www.datasciencepublicpolicy.org/our-work/tools-guides/aequitas/",
    "tutorial": "https://github.com/dssg/aequitas/blob/master/docs/",
    "api_reference": "https://aequitas.readthedocs.io/",
    "examples": "https://github.com/dssg/aequitas/tree/master/notebooks"
  },
  "tactics": [
    {
      "name": "group_metrics",
      "description": "Calculate group fairness metrics",
      "syntax": "Group().get_crosstabs(df)",
      "when_to_use": "Analyzing fairness across groups",
      "examples": [
        "g = Group(); xtab, _ = g.get_crosstabs(df)"
      ]
    },
    {
      "name": "bias_audit",
      "description": "Calculate bias metrics",
      "syntax": "Bias().get_disparity_predefined_groups(xtab)",
      "when_to_use": "Computing disparities",
      "examples": [
        "b = Bias(); bdf = b.get_disparity_predefined_groups(xtab, ref_group='majority')"
      ]
    },
    {
      "name": "fairness_check",
      "description": "Check fairness criteria",
      "syntax": "Fairness().get_group_value_fairness(bdf)",
      "when_to_use": "Determining if model is fair",
      "examples": [
        "f = Fairness(); fdf = f.get_group_value_fairness(bdf)"
      ]
    },
    {
      "name": "plot",
      "description": "Visualize disparities",
      "syntax": "Plot().plot_group_metric(xtab, metric)",
      "when_to_use": "Understanding bias visually",
      "examples": [
        "p = Plot(); p.plot_group_metric(xtab, 'fpr')"
      ]
    }
  ],
  "error_patterns": [
    {
      "pattern": "Fairness criteria failed",
      "meaning": "Model exhibits bias",
      "common_causes": [
        "Training data bias",
        "Feature selection"
      ],
      "fixes": [
        "Rebalance training data",
        "Remove biased features",
        "Apply fairness constraints"
      ]
    },
    {
      "pattern": "Insufficient samples",
      "meaning": "Not enough data for group",
      "common_causes": [
        "Small minority group",
        "Data imbalance"
      ],
      "fixes": [
        "Collect more data",
        "Use bootstrapping"
      ]
    }
  ],
  "integration": {
    "dashprove_backend": true,
    "usl_property_types": [
      "fairness"
    ],
    "cli_command": "dashprove verify --backend aequitas"
  },
  "performance": {
    "typical_runtime": "Seconds",
    "scalability": "Good for typical datasets",
    "memory_usage": "Low"
  },
  "comparisons": {
    "similar_tools": [
      "fairlearn",
      "aif360",
      "themis_ml"
    ],
    "advantages": [
      "Simple API",
      "Good visualizations",
      "Web interface available",
      "Policy-focused"
    ],
    "disadvantages": [
      "Fewer mitigation methods",
      "Less active development"
    ]
  },
  "metadata": {
    "version": "0.42.0",
    "last_updated": "2025-12-20",
    "maintainer": "University of Chicago DSSG",
    "license": "MIT"
  }
}
