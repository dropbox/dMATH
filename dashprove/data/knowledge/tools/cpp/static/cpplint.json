{
  "id": "cpplint",
  "name": "cpplint",
  "category": "static_analysis",
  "subcategory": "cpp_style",

  "description": "Google C++ style checker",
  "long_description": "cpplint checks C++ source files for conformance to the Google C++ Style Guide. It enforces whitespace, naming, include ordering, and other style conventions, and can be tuned via filters and NOLINT comments.",

  "capabilities": [
    "style_enforcement",
    "include_ordering",
    "naming_rules",
    "configurable_filters",
    "reporting"
  ],
  "property_types": ["code_quality", "style"],
  "input_languages": ["c", "cpp"],
  "output_formats": ["text_report"],

  "installation": {
    "methods": [
      {"type": "pip", "command": "pip install cpplint"}
    ],
    "dependencies": [],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://github.com/cpplint/cpplint",
    "tutorial": "https://github.com/cpplint/cpplint#usage",
    "api_reference": "https://github.com/cpplint/cpplint/blob/master/README.md#filtering",
    "examples": "https://github.com/cpplint/cpplint/tree/master/cpplint/tests"
  },

  "tactics": [
    {
      "name": "style_check",
      "description": "Run cpplint on source tree",
      "syntax": "cpplint --recursive src",
      "when_to_use": "Style enforcement in CI",
      "examples": ["cpplint --filter=-whitespace/line_length src"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "whitespace/line_length",
      "meaning": "Line exceeds configured maximum length",
      "common_causes": ["Long strings", "Chained expressions"],
      "fixes": ["Wrap lines", "Refactor expressions", "Adjust filter when justified"]
    },
    {
      "pattern": "build/include_order",
      "meaning": "Include statements not in preferred order",
      "common_causes": ["Local vs system ordering issues"],
      "fixes": ["Reorder includes to match style", "Group headers properly"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["code_quality"],
    "cli_command": "dashprove verify --backend cpplint"
  },

  "performance": {
    "typical_runtime": "Fast; linear in file count",
    "scalability": "Good for large codebases with recursion",
    "memory_usage": "Low"
  },

  "comparisons": {
    "similar_tools": ["clang-tidy", "clang-format"],
    "advantages": ["Simple setup", "Matches Google style"],
    "disadvantages": ["Limited semantic checks", "Style focused"]
  },

  "metadata": {
    "version": "1.6.1",
    "last_updated": "2025-12-23",
    "maintainer": "cpplint contributors",
    "license": "BSD-3-Clause"
  }
}
