{
  "id": "pvs_studio",
  "name": "PVS-Studio",
  "category": "static_analysis",
  "subcategory": "cpp_commercial",

  "description": "Commercial static analyzer for C, C++, C#, and Java with deep bug detection",
  "long_description": "PVS-Studio is a commercial static analysis tool that detects bugs, security vulnerabilities, and potential issues in C, C++, C#, and Java code. It has over 900 diagnostic rules covering 64-bit issues, copy-paste errors, security vulnerabilities (CWE, MISRA, AUTOSAR, OWASP), and general bugs. It integrates with popular IDEs and CI systems.",

  "capabilities": [
    "deep_static_analysis",
    "64bit_portability_checking",
    "copy_paste_detection",
    "security_vulnerability_detection",
    "misra_compliance",
    "autosar_compliance",
    "cert_compliance",
    "owasp_checking",
    "ide_integration"
  ],
  "property_types": ["correctness", "security", "portability", "code_quality"],
  "input_languages": ["c", "cpp", "csharp", "java"],
  "output_formats": ["html", "xml", "json", "csv", "sarif"],

  "installation": {
    "methods": [
      {"type": "installer", "url": "https://pvs-studio.com/en/pvs-studio/download/"},
      {"type": "package", "command": "apt install pvs-studio", "platform": "linux"}
    ],
    "dependencies": [],
    "platforms": ["linux", "macos", "windows"],
    "license": "commercial"
  },

  "documentation": {
    "official": "https://pvs-studio.com/en/docs/",
    "tutorial": "https://pvs-studio.com/en/docs/manual/",
    "api_reference": "https://pvs-studio.com/en/docs/warnings/",
    "examples": "https://pvs-studio.com/en/blog/posts/"
  },

  "tactics": [
    {
      "name": "cmake_analysis",
      "description": "Analyze CMake project",
      "syntax": "pvs-studio-analyzer analyze -f compile_commands.json -o PVS.log",
      "when_to_use": "Analyzing CMake-based projects",
      "examples": ["cmake -DCMAKE_EXPORT_COMPILE_COMMANDS=ON . && pvs-studio-analyzer analyze"]
    },
    {
      "name": "security_scan",
      "description": "Focus on security vulnerabilities",
      "syntax": "pvs-studio-analyzer analyze -a SECURITY",
      "when_to_use": "Security audit",
      "examples": ["pvs-studio-analyzer analyze -a SECURITY -o security.log"]
    },
    {
      "name": "misra_check",
      "description": "Check MISRA compliance",
      "syntax": "pvs-studio-analyzer analyze -a MISRA",
      "when_to_use": "Automotive/embedded development",
      "examples": ["pvs-studio-analyzer analyze -a MISRA -o misra.log"]
    },
    {
      "name": "html_report",
      "description": "Generate HTML report",
      "syntax": "plog-converter -t html -o report.html PVS.log",
      "when_to_use": "Sharing results with team",
      "examples": ["plog-converter -t fullhtml -o ./reports PVS.log"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "V501",
      "meaning": "Identical sub-expressions to left and right of operator",
      "common_causes": ["Copy-paste error", "Typo"],
      "fixes": ["Review and fix the duplicated expression"]
    },
    {
      "pattern": "V512",
      "meaning": "Buffer underrun/overrun possible",
      "common_causes": ["Wrong size calculation", "Off-by-one"],
      "fixes": ["Fix buffer size", "Use safe functions"]
    },
    {
      "pattern": "V595",
      "meaning": "Pointer used before null check",
      "common_causes": ["Incorrect check order"],
      "fixes": ["Move null check before use"]
    },
    {
      "pattern": "V1001",
      "meaning": "Variable assigned but not used",
      "common_causes": ["Dead code", "Logic error"],
      "fixes": ["Remove dead assignment or fix logic"]
    },
    {
      "pattern": "V5xxx",
      "meaning": "OWASP/Security vulnerability",
      "common_causes": ["Insecure API usage", "Input validation missing"],
      "fixes": ["Use secure alternatives", "Add validation"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["correctness", "security"],
    "cli_command": "dashprove verify --backend pvs-studio"
  },

  "performance": {
    "typical_runtime": "Moderate; faster than some deep analyzers",
    "scalability": "Good; supports incremental analysis",
    "memory_usage": "Moderate"
  },

  "comparisons": {
    "similar_tools": ["coverity", "clang-analyzer", "cppcheck", "klocwork"],
    "advantages": ["900+ diagnostics", "Excellent blog with examples", "Multi-language", "Good IDE integration"],
    "disadvantages": ["Commercial license required", "Cost for large teams"]
  },

  "metadata": {
    "version": "7.28",
    "last_updated": "2025-12-22",
    "maintainer": "PVS-Studio",
    "license": "Commercial"
  }
}
