{
  "id": "flyway",
  "name": "Flyway",
  "category": "database",
  "subcategory": "database_migrations",

  "description": "Database migration tool with version control for schemas",
  "long_description": "Flyway is a database migration tool that makes database changes version controlled and repeatable. It supports SQL and Java migrations and works with many databases. It can validate migrations, repair failed states, and integrates with build tools.",

  "capabilities": [
    "schema_migrations",
    "version_control",
    "migration_validation",
    "baseline_support",
    "undo_migrations",
    "callbacks",
    "multi_database"
  ],
  "property_types": ["schema_management", "database_correctness"],
  "input_languages": ["sql", "java"],
  "output_formats": ["text", "json"],

  "installation": {
    "methods": [
      {"type": "brew", "command": "brew install flyway", "platform": "macos"},
      {"type": "download", "url": "https://flywaydb.org/download/"},
      {"type": "maven", "command": "org.flywaydb:flyway-maven-plugin"}
    ],
    "dependencies": ["java"],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://flywaydb.org/documentation/",
    "tutorial": "https://flywaydb.org/documentation/getstarted/",
    "api_reference": "https://flywaydb.org/documentation/usage/commandline/",
    "examples": "https://github.com/flyway/flyway/tree/main/flyway-commandline/src/main/assembly/sql"
  },

  "tactics": [
    {
      "name": "migrate",
      "description": "Apply pending migrations",
      "syntax": "flyway migrate",
      "when_to_use": "Updating database schema",
      "examples": ["flyway -url=jdbc:postgresql://localhost/mydb migrate"]
    },
    {
      "name": "validate",
      "description": "Validate applied migrations",
      "syntax": "flyway validate",
      "when_to_use": "Checking migration integrity",
      "examples": ["flyway validate"]
    },
    {
      "name": "info",
      "description": "Show migration status",
      "syntax": "flyway info",
      "when_to_use": "Checking migration state",
      "examples": ["flyway info"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "Validate failed",
      "meaning": "Migration checksum mismatch",
      "common_causes": ["Modified applied migration"],
      "fixes": ["Don't modify applied migrations", "Use repair if needed"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["schema_management"],
    "cli_command": "dashprove verify --backend flyway"
  },

  "performance": {
    "typical_runtime": "Fast",
    "scalability": "Good",
    "memory_usage": "Low"
  },

  "comparisons": {
    "similar_tools": ["liquibase", "alembic", "db-migrate", "goose"],
    "advantages": ["Simple", "SQL-first", "Wide database support"],
    "disadvantages": ["Some features need paid version"]
  },

  "metadata": {
    "version": "10.0.0",
    "last_updated": "2025-12-22",
    "maintainer": "Redgate",
    "license": "Apache-2.0 (Community)"
  }
}
