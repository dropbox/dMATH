{
  "id": "liquibase",
  "name": "Liquibase",
  "category": "database",
  "subcategory": "database_migrations",

  "description": "Database schema change management and version control",
  "long_description": "Liquibase is an open-source database schema change management solution that enables you to manage database changes through a changelog. It supports SQL, XML, YAML, and JSON formats for defining changes. Liquibase tracks and deploys database changes with rollback capabilities.",

  "capabilities": [
    "schema_migrations",
    "rollback_support",
    "multi_format_changelogs",
    "diff_generation",
    "database_snapshots",
    "preconditions",
    "contexts_labels"
  ],
  "property_types": ["schema_management", "database_correctness"],
  "input_languages": ["sql", "xml", "yaml", "json"],
  "output_formats": ["text", "json"],

  "installation": {
    "methods": [
      {"type": "brew", "command": "brew install liquibase", "platform": "macos"},
      {"type": "download", "url": "https://www.liquibase.org/download"},
      {"type": "maven", "command": "org.liquibase:liquibase-maven-plugin"}
    ],
    "dependencies": ["java"],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://docs.liquibase.com/",
    "tutorial": "https://docs.liquibase.com/start/home.html",
    "api_reference": "https://docs.liquibase.com/change-types/home.html",
    "examples": "https://github.com/liquibase/liquibase/tree/master/liquibase-standard/src/test/resources/liquibase"
  },

  "tactics": [
    {
      "name": "update",
      "description": "Apply pending changes",
      "syntax": "liquibase update",
      "when_to_use": "Applying database changes",
      "examples": ["liquibase --url=jdbc:postgresql://localhost/mydb update"]
    },
    {
      "name": "rollback",
      "description": "Rollback changes",
      "syntax": "liquibase rollbackCount 1",
      "when_to_use": "Reverting database changes",
      "examples": ["liquibase rollbackToDate 2025-01-01"]
    },
    {
      "name": "validate",
      "description": "Validate changelog",
      "syntax": "liquibase validate",
      "when_to_use": "Checking changelog validity",
      "examples": ["liquibase validate"]
    },
    {
      "name": "diff",
      "description": "Generate diff between databases",
      "syntax": "liquibase diff",
      "when_to_use": "Comparing schemas",
      "examples": ["liquibase --referenceUrl=jdbc:... diff"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "Validation Failed",
      "meaning": "Changelog validation error",
      "common_causes": ["Syntax error", "Missing changeSet"],
      "fixes": ["Fix changelog syntax"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["schema_management"],
    "cli_command": "dashprove verify --backend liquibase"
  },

  "performance": {
    "typical_runtime": "Fast",
    "scalability": "Good",
    "memory_usage": "Low"
  },

  "comparisons": {
    "similar_tools": ["flyway", "alembic", "db-migrate"],
    "advantages": ["Rollback support", "Multi-format", "Diff generation"],
    "disadvantages": ["More complex than Flyway"]
  },

  "metadata": {
    "version": "4.26.0",
    "last_updated": "2025-12-22",
    "maintainer": "Liquibase",
    "license": "Apache-2.0"
  }
}
