{
  "id": "sqlfluff",
  "name": "SQLFluff",
  "category": "static_analysis",
  "subcategory": "sql_linting",

  "description": "SQL linter and auto-formatter supporting multiple dialects",
  "long_description": "SQLFluff is a dialect-flexible and configurable SQL linter and auto-formatter. It supports multiple SQL dialects (ANSI, BigQuery, Postgres, MySQL, etc.) and can fix common style issues automatically. It integrates with CI/CD pipelines and editors, helping teams maintain consistent SQL code quality.",

  "capabilities": [
    "sql_linting",
    "auto_formatting",
    "multi_dialect_support",
    "custom_rules",
    "templating_support",
    "dbt_integration",
    "ci_integration"
  ],
  "property_types": ["code_quality", "style"],
  "input_languages": ["sql"],
  "output_formats": ["text", "json", "github-annotation", "junit"],

  "installation": {
    "methods": [
      {"type": "pip", "command": "pip install sqlfluff"},
      {"type": "brew", "command": "brew install sqlfluff", "platform": "macos"}
    ],
    "dependencies": ["python>=3.7"],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://docs.sqlfluff.com/",
    "tutorial": "https://docs.sqlfluff.com/en/stable/gettingstarted.html",
    "api_reference": "https://raw.githubusercontent.com/sqlfluff/sqlfluff/main/docs/source/reference/rules.rst",
    "examples": "https://github.com/sqlfluff/sqlfluff/tree/main/examples"
  },

  "tactics": [
    {
      "name": "lint",
      "description": "Lint SQL files",
      "syntax": "sqlfluff lint path/to/file.sql",
      "when_to_use": "Checking SQL quality",
      "examples": ["sqlfluff lint . --dialect postgres"]
    },
    {
      "name": "fix",
      "description": "Auto-fix linting issues",
      "syntax": "sqlfluff fix path/to/file.sql",
      "when_to_use": "Auto-formatting SQL",
      "examples": ["sqlfluff fix . --dialect bigquery"]
    },
    {
      "name": "parse",
      "description": "Parse SQL and show structure",
      "syntax": "sqlfluff parse path/to/file.sql",
      "when_to_use": "Debugging SQL parsing",
      "examples": ["sqlfluff parse query.sql --dialect snowflake"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "L001",
      "meaning": "Unnecessary trailing whitespace",
      "common_causes": ["Editor artifacts"],
      "fixes": ["Use fix command", "Configure editor"]
    },
    {
      "pattern": "L010",
      "meaning": "Inconsistent keyword capitalization",
      "common_causes": ["Mixed casing"],
      "fixes": ["Standardize to UPPER or lower"]
    },
    {
      "pattern": "L042",
      "meaning": "Subquery without alias",
      "common_causes": ["Missing AS clause"],
      "fixes": ["Add alias to subquery"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["code_quality"],
    "cli_command": "dashprove verify --backend sqlfluff"
  },

  "performance": {
    "typical_runtime": "Fast",
    "scalability": "Good",
    "memory_usage": "Low"
  },

  "comparisons": {
    "similar_tools": ["sql-lint", "sqlfmt", "pg_format"],
    "advantages": ["Multi-dialect", "Auto-fix", "Highly configurable", "dbt support"],
    "disadvantages": ["Some rules dialect-specific"]
  },

  "metadata": {
    "version": "2.5.0",
    "last_updated": "2025-12-22",
    "maintainer": "SQLFluff maintainers",
    "license": "MIT"
  }
}
