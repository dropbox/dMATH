{
  "id": "k6",
  "name": "k6",
  "category": "testing",
  "subcategory": "performance_testing",

  "description": "Modern load testing tool for developers with JavaScript scripting",
  "long_description": "k6 is a modern load testing tool built for developer happiness. Tests are written in JavaScript, making them easy to version control and integrate into CI/CD pipelines. k6 focuses on performance testing with features for load testing, stress testing, and soak testing. It can export metrics to various backends.",

  "capabilities": [
    "load_testing",
    "stress_testing",
    "soak_testing",
    "spike_testing",
    "javascript_scripting",
    "http_testing",
    "websocket_testing",
    "grpc_testing",
    "browser_testing",
    "metrics_export"
  ],
  "property_types": ["performance", "reliability"],
  "input_languages": ["javascript"],
  "output_formats": ["text", "json", "csv", "influxdb", "prometheus"],

  "installation": {
    "methods": [
      {"type": "brew", "command": "brew install k6", "platform": "macos"},
      {"type": "apt", "command": "apt install k6", "platform": "linux"},
      {"type": "binary", "url": "https://github.com/grafana/k6/releases"}
    ],
    "dependencies": [],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://k6.io/docs/",
    "tutorial": "https://k6.io/docs/getting-started/running-k6/",
    "api_reference": "https://k6.io/docs/javascript-api/",
    "examples": "https://github.com/grafana/k6/tree/master/examples"
  },

  "tactics": [
    {
      "name": "basic_test",
      "description": "Run basic load test",
      "syntax": "k6 run script.js",
      "when_to_use": "Running load tests",
      "examples": ["k6 run --vus 10 --duration 30s script.js"]
    },
    {
      "name": "stages",
      "description": "Ramping virtual users",
      "syntax": "stages: [{duration: '30s', target: 100}]",
      "when_to_use": "Gradual load increase",
      "examples": ["k6 run --stage 30s:100,1m:100,30s:0 script.js"]
    },
    {
      "name": "thresholds",
      "description": "Set pass/fail criteria",
      "syntax": "thresholds: { http_req_duration: ['p(95)<500'] }",
      "when_to_use": "CI/CD quality gates",
      "examples": ["Set threshold for 95th percentile response time"]
    },
    {
      "name": "cloud_run",
      "description": "Run in Grafana Cloud",
      "syntax": "k6 cloud script.js",
      "when_to_use": "Distributed load testing",
      "examples": ["K6_CLOUD_TOKEN=xxx k6 cloud script.js"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "threshold.*crossed",
      "meaning": "Performance threshold exceeded",
      "common_causes": ["Slow endpoint", "Resource exhaustion"],
      "fixes": ["Optimize endpoint", "Scale resources"]
    },
    {
      "pattern": "request.*failed",
      "meaning": "HTTP request failed",
      "common_causes": ["Server error", "Timeout"],
      "fixes": ["Check server logs", "Increase timeout"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["performance"],
    "cli_command": "dashprove verify --backend k6"
  },

  "performance": {
    "typical_runtime": "User-defined duration",
    "scalability": "Excellent; can generate massive load",
    "memory_usage": "Efficient"
  },

  "comparisons": {
    "similar_tools": ["jmeter", "locust", "gatling", "artillery"],
    "advantages": ["JavaScript tests", "Developer-friendly", "CI/CD integration", "Efficient"],
    "disadvantages": ["Limited JS ecosystem access"]
  },

  "metadata": {
    "version": "0.49.0",
    "last_updated": "2025-12-22",
    "maintainer": "Grafana Labs",
    "license": "AGPL-3.0"
  }
}
