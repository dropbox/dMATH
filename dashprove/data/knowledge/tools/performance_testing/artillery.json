{
  "id": "artillery",
  "name": "Artillery",
  "category": "testing",
  "subcategory": "performance_testing",

  "description": "Cloud-native load testing platform with YAML/JavaScript tests",
  "long_description": "Artillery is a modern, powerful load testing toolkit. Tests are written in YAML with JavaScript hooks for complex scenarios. It supports HTTP, WebSocket, Socket.io, and more. Artillery Cloud provides distributed testing at scale with rich dashboards.",

  "capabilities": [
    "load_testing",
    "stress_testing",
    "yaml_scripting",
    "javascript_hooks",
    "http_testing",
    "websocket_testing",
    "socketio_testing",
    "cloud_distributed",
    "custom_engines"
  ],
  "property_types": ["performance", "reliability"],
  "input_languages": ["yaml", "javascript"],
  "output_formats": ["json", "html"],

  "installation": {
    "methods": [
      {"type": "npm", "command": "npm install -g artillery"}
    ],
    "dependencies": ["nodejs>=16"],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://www.artillery.io/docs",
    "tutorial": "https://www.artillery.io/docs/get-started/first-test",
    "api_reference": "https://www.artillery.io/docs/reference/test-script",
    "examples": "https://github.com/artilleryio/artillery/tree/main/examples"
  },

  "tactics": [
    {
      "name": "quick_test",
      "description": "Quick load test",
      "syntax": "artillery quick --count 10 -n 20 URL",
      "when_to_use": "Quick API testing",
      "examples": ["artillery quick --count 100 -n 50 https://api.example.com/health"]
    },
    {
      "name": "run_script",
      "description": "Run test script",
      "syntax": "artillery run test.yml",
      "when_to_use": "Comprehensive testing",
      "examples": ["artillery run --output report.json test.yml"]
    },
    {
      "name": "report",
      "description": "Generate HTML report",
      "syntax": "artillery report report.json",
      "when_to_use": "Visualizing results",
      "examples": ["artillery report --output report.html results.json"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "errors\\.ETIMEDOUT",
      "meaning": "Connection timeout",
      "common_causes": ["Server overloaded", "Network issues"],
      "fixes": ["Scale server", "Check network"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["performance"],
    "cli_command": "dashprove verify --backend artillery"
  },

  "performance": {
    "typical_runtime": "User-defined",
    "scalability": "Excellent with Artillery Cloud",
    "memory_usage": "Moderate"
  },

  "comparisons": {
    "similar_tools": ["k6", "locust", "jmeter", "gatling"],
    "advantages": ["YAML tests", "Cloud offering", "Plugin ecosystem"],
    "disadvantages": ["Node.js dependency"]
  },

  "metadata": {
    "version": "2.0.5",
    "last_updated": "2025-12-22",
    "maintainer": "Artillery.io",
    "license": "MPL-2.0"
  }
}
