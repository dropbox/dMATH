{
  "id": "locust",
  "name": "Locust",
  "category": "testing",
  "subcategory": "performance_testing",

  "description": "Python-based load testing tool with real-time web UI",
  "long_description": "Locust is an easy-to-use, scriptable, and scalable performance testing tool. Test scenarios are written in Python code, giving full access to Python's ecosystem. It has a real-time web UI showing test progress and can be distributed across multiple machines for generating massive load.",

  "capabilities": [
    "load_testing",
    "distributed_testing",
    "python_scripting",
    "web_ui",
    "http_testing",
    "custom_clients",
    "event_hooks",
    "statistics_export"
  ],
  "property_types": ["performance", "scalability"],
  "input_languages": ["python"],
  "output_formats": ["web_ui", "csv", "json"],

  "installation": {
    "methods": [
      {"type": "pip", "command": "pip install locust"}
    ],
    "dependencies": ["python>=3.8"],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://docs.locust.io/",
    "tutorial": "https://docs.locust.io/en/stable/quickstart.html",
    "api_reference": "https://docs.locust.io/en/stable/api.html",
    "examples": "https://github.com/locustio/locust/tree/master/examples"
  },

  "tactics": [
    {
      "name": "basic_test",
      "description": "Run basic load test",
      "syntax": "locust -f locustfile.py",
      "when_to_use": "Interactive load testing",
      "examples": ["locust -f locustfile.py --host=https://api.example.com"]
    },
    {
      "name": "headless",
      "description": "Run without web UI",
      "syntax": "locust -f locustfile.py --headless -u 100 -r 10",
      "when_to_use": "CI/CD automation",
      "examples": ["locust -f locustfile.py --headless -u 100 -r 10 -t 60s"]
    },
    {
      "name": "distributed",
      "description": "Run distributed across workers",
      "syntax": "locust -f locustfile.py --master / --worker",
      "when_to_use": "High load generation",
      "examples": ["locust -f locustfile.py --master --expect-workers=4"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "# failures.*> 0",
      "meaning": "Some requests failed",
      "common_causes": ["Server errors", "Timeouts"],
      "fixes": ["Check server capacity", "Optimize endpoints"]
    },
    {
      "pattern": "ConnectionError",
      "meaning": "Cannot connect to target",
      "common_causes": ["Wrong host", "Server down"],
      "fixes": ["Check host URL", "Verify server is running"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["performance"],
    "cli_command": "dashprove verify --backend locust"
  },

  "performance": {
    "typical_runtime": "User-defined",
    "scalability": "Excellent with distributed mode",
    "memory_usage": "Moderate"
  },

  "comparisons": {
    "similar_tools": ["k6", "jmeter", "gatling", "artillery"],
    "advantages": ["Pure Python", "Full Python ecosystem", "Web UI", "Easy distribution"],
    "disadvantages": ["GIL limits single-process throughput"]
  },

  "metadata": {
    "version": "2.24.0",
    "last_updated": "2025-12-22",
    "maintainer": "Locust.io",
    "license": "MIT"
  }
}
