{
  "id": "cadp",
  "name": "CADP",
  "category": "distributed_verification",
  "subcategory": "process_algebra",
  "description": "Construction and Analysis of Distributed Processes toolbox",
  "long_description": "CADP is a comprehensive toolbox for designing and verifying asynchronous distributed systems. It supports LOTOS and LNT specifications, generates labeled transition systems, and provides model checking, equivalence checking, and counterexample visualization tools such as EVALUATOR and BISIMULATOR.",
  "capabilities": [
    "lnt_lotos_specification",
    "lts_generation",
    "on_the_fly_model_checking",
    "equivalence_checking",
    "partial_order_reduction",
    "counterexample_traces",
    "probabilistic_analysis"
  ],
  "property_types": [
    "safety",
    "liveness",
    "equivalence"
  ],
  "input_languages": [
    "lnt",
    "lotos",
    "bcg"
  ],
  "output_formats": [
    "counterexample_trace",
    "lts",
    "equivalence_report"
  ],
  "installation": {
    "methods": [
      {
        "type": "download",
        "url": "https://cadp.inria.fr/download/"
      },
      {
        "type": "env",
        "command": "export CADP=/path/to/cadp"
      }
    ],
    "dependencies": [
      "ocaml",
      "gcc"
    ],
    "platforms": [
      "linux",
      "macos"
    ]
  },
  "documentation": {
    "official": "https://cadp.inria.fr/",
    "tutorial": "https://cadp.inria.fr/resources/tutorial/",
    "api_reference": "https://cadp.inria.fr/man/",
    "examples": "https://cadp.inria.fr/examples/"
  },
  "tactics": [
    {
      "name": "evaluator4",
      "description": "On-the-fly model checking of LNT/LOTOS models",
      "syntax": "evaluator4 -ta spec.lnt",
      "when_to_use": "Checking temporal properties with counterexample traces",
      "examples": [
        "evaluator4 -ta system.lnt",
        "evaluator4 -s property.lotos"
      ]
    },
    {
      "name": "bisimulator",
      "description": "Equivalence checking between LTSs",
      "syntax": "bisimulator system1.bcg system2.bcg",
      "when_to_use": "Proving observational equivalence or refinement",
      "examples": [
        "bisimulator impl.bcg spec.bcg"
      ]
    },
    {
      "name": "reductions",
      "description": "Apply minimization or partial-order reductions",
      "syntax": "bcg_min system.bcg",
      "when_to_use": "Reducing state space before model checking",
      "examples": [
        "bcg_min -branching system.bcg"
      ]
    }
  ],
  "error_patterns": [
    {
      "pattern": "CADP not found",
      "meaning": "Tooling cannot locate the CADP installation",
      "common_causes": [
        "CADP environment variable unset",
        "Incorrect install path"
      ],
      "fixes": [
        "Install CADP and set $CADP",
        "Pass cadp_path in configuration"
      ]
    },
    {
      "pattern": "No initial state",
      "meaning": "Model generation failed",
      "common_causes": [
        "Ill-formed specification",
        "Unsupported construct"
      ],
      "fixes": [
        "Validate LNT/LOTOS syntax",
        "Simplify specification"
      ]
    },
    {
      "pattern": "Timeout in evaluator",
      "meaning": "State space too large",
      "common_causes": [
        "Unbounded processes",
        "Missing reductions"
      ],
      "fixes": [
        "Tighten bounds",
        "Use reductions",
        "Decompose system"
      ]
    }
  ],
  "integration": {
    "dashprove_backend": true,
    "usl_property_types": [
      "distributed",
      "protocol"
    ],
    "cli_command": "dashprove verify --backend cadp"
  },
  "performance": {
    "typical_runtime": "seconds to tens of minutes depending on state space",
    "scalability": "Good with reductions; exponential without abstractions",
    "memory_usage": "Proportional to explored state space"
  },
  "comparisons": {
    "similar_tools": [
      "mcrl2",
      "spin",
      "uppaal"
    ],
    "advantages": [
      "Rich toolbox",
      "Strong equivalence checking",
      "Good counterexample traces"
    ],
    "disadvantages": [
      "License approval required",
      "Setup via $CADP",
      "Steep learning curve"
    ]
  },
  "metadata": {
    "version": "2025.1",
    "last_updated": "2025-12-22",
    "maintainer": "INRIA",
    "license": "Academic/Commercial"
  }
}
