{
  "id": "boolector",
  "name": "Boolector",
  "category": "smt_solver",
  "subcategory": "bit_vectors",

  "description": "SMT solver specialized for bit-vectors and arrays",
  "long_description": "Boolector is an SMT solver optimized for the theories of bit-vectors and arrays. It uses Lemmas on Demand and various preprocessing techniques. Boolector has won several SMT-COMP competitions in the QF_BV division. Its successor is Bitwuzla.",

  "capabilities": [
    "sat_solving",
    "bit_vectors",
    "arrays",
    "model_generation",
    "incremental_solving",
    "lemmas_on_demand"
  ],
  "property_types": ["formula", "assertion", "constraint"],
  "input_languages": ["smtlib2", "btor2"],
  "output_formats": ["sat/unsat", "model", "btor_witness"],

  "installation": {
    "methods": [
      {"type": "source", "url": "https://github.com/Boolector/boolector"},
      {"type": "apt", "command": "apt install boolector"}
    ],
    "dependencies": ["cmake", "python"],
    "platforms": ["linux", "macos"]
  },

  "documentation": {
    "official": "https://boolector.github.io/",
    "tutorial": "https://boolector.github.io/docs/",
    "api_reference": "https://boolector.github.io/docs/cboolector.html",
    "examples": "https://github.com/Boolector/boolector/tree/master/examples"
  },

  "tactics": [
    {
      "name": "aigvec",
      "description": "AIG-based bit-blasting",
      "syntax": "Internal optimization",
      "when_to_use": "Automatically applied to bit-vectors",
      "examples": []
    },
    {
      "name": "dual-prop",
      "description": "Dual propagation",
      "syntax": "--dp",
      "when_to_use": "For satisfiability queries",
      "examples": ["boolector --dp file.smt2"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "unsupported",
      "meaning": "Theory or feature not supported",
      "common_causes": ["Non bit-vector theory", "Quantifiers"],
      "fixes": ["Use Z3 or CVC5 for other theories"]
    },
    {
      "pattern": "parse error",
      "meaning": "Invalid input syntax",
      "common_causes": ["Wrong SMT-LIB version", "Invalid BTOR format"],
      "fixes": ["Check input format", "Use SMT-LIB 2"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["constraint", "assertion"],
    "cli_command": "dashprove verify --backend boolector"
  },

  "performance": {
    "typical_runtime": "milliseconds to seconds",
    "scalability": "Excellent for bit-vectors",
    "memory_usage": "Low"
  },

  "comparisons": {
    "similar_tools": ["bitwuzla", "z3", "yices"],
    "advantages": [
      "Top performance for bit-vectors",
      "Efficient lemmas on demand",
      "Small memory footprint"
    ],
    "disadvantages": [
      "Limited to BV and arrays",
      "Superseded by Bitwuzla"
    ]
  },

  "metadata": {
    "version": "3.2.2",
    "last_updated": "2025-12-22",
    "maintainer": "Johannes Kepler University",
    "license": "MIT"
  }
}
