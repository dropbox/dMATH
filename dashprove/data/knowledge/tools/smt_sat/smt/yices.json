{
  "id": "yices",
  "name": "Yices",
  "category": "smt_solver",
  "subcategory": "general",

  "description": "High-performance SMT solver from SRI International",
  "long_description": "Yices is a high-performance SMT solver developed at SRI International. It excels at linear arithmetic and bit-vectors, and was historically one of the fastest SMT solvers. Yices 2 supports SMT-LIB 2 format and provides both a command-line interface and programmatic APIs.",

  "capabilities": [
    "sat_solving",
    "linear_arithmetic",
    "bit_vectors",
    "arrays",
    "uninterpreted_functions",
    "model_generation",
    "incremental_solving"
  ],
  "property_types": ["formula", "assertion", "constraint"],
  "input_languages": ["smtlib2", "yices_native", "c"],
  "output_formats": ["sat/unsat", "model"],

  "installation": {
    "methods": [
      {"type": "brew", "command": "brew install yices"},
      {"type": "apt", "command": "apt install yices2"},
      {"type": "source", "url": "https://github.com/SRI-CSL/yices2"}
    ],
    "dependencies": ["gmp"],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://yices.csl.sri.com/",
    "tutorial": "https://yices.csl.sri.com/doc.html",
    "api_reference": "https://github.com/SRI-CSL/yices2/blob/master/doc/yices2-manual.pdf",
    "examples": "https://github.com/SRI-CSL/yices2/tree/master/examples"
  },

  "tactics": [
    {
      "name": "mcsat",
      "description": "Model-constructing satisfiability",
      "syntax": "(set-option :solver mcsat)",
      "when_to_use": "For nonlinear arithmetic",
      "examples": ["(set-option :solver mcsat)"]
    },
    {
      "name": "simplex",
      "description": "Linear arithmetic solver",
      "syntax": "default for linear problems",
      "when_to_use": "For linear arithmetic",
      "examples": []
    }
  ],

  "error_patterns": [
    {
      "pattern": "timeout",
      "meaning": "Solver exceeded time limit",
      "common_causes": ["Hard problem", "Large formula"],
      "fixes": ["Simplify formula", "Increase timeout"]
    },
    {
      "pattern": "syntax error",
      "meaning": "Invalid input format",
      "common_causes": ["SMT-LIB version mismatch", "Unsupported feature"],
      "fixes": ["Check SMT-LIB compatibility", "Use Yices native format"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["constraint", "assertion"],
    "cli_command": "dashprove verify --backend yices"
  },

  "performance": {
    "typical_runtime": "milliseconds to minutes",
    "scalability": "Excellent for linear arithmetic",
    "memory_usage": "Low to moderate"
  },

  "comparisons": {
    "similar_tools": ["z3", "cvc5", "mathsat"],
    "advantages": [
      "Very fast for linear arithmetic",
      "Low memory usage",
      "MCSAT for nonlinear"
    ],
    "disadvantages": [
      "Smaller theory support than Z3",
      "Less active development"
    ]
  },

  "metadata": {
    "version": "2.6.4",
    "last_updated": "2025-12-22",
    "maintainer": "SRI International",
    "license": "GPL-3.0"
  }
}
