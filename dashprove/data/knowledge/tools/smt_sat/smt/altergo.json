{
  "id": "altergo",
  "name": "Alt-Ergo",
  "category": "smt_solver",
  "subcategory": "general",

  "description": "SMT solver designed for program verification (Why3, Frama-C)",
  "long_description": "Alt-Ergo is an automatic theorem prover designed for program verification. It is the default solver for Why3 and Frama-C, supporting polymorphic first-order logic with theories including linear arithmetic, arrays, records, and enumerated datatypes.",

  "capabilities": [
    "sat_solving",
    "linear_arithmetic",
    "arrays",
    "records",
    "polymorphism",
    "quantifiers",
    "triggers"
  ],
  "property_types": ["formula", "assertion", "constraint", "verification_condition"],
  "input_languages": ["smtlib2", "altergo_native", "why3"],
  "output_formats": ["sat/unsat", "model", "counterexample"],

  "installation": {
    "methods": [
      {"type": "opam", "command": "opam install alt-ergo"},
      {"type": "apt", "command": "apt install alt-ergo"},
      {"type": "source", "url": "https://github.com/OCamlPro/alt-ergo"}
    ],
    "dependencies": ["ocaml", "dune"],
    "platforms": ["linux", "macos"]
  },

  "documentation": {
    "official": "https://alt-ergo.ocamlpro.com/",
    "tutorial": "https://ocamlpro.github.io/alt-ergo/latest/",
    "api_reference": "https://ocamlpro.github.io/alt-ergo/latest/",
    "examples": "https://github.com/OCamlPro/alt-ergo/tree/main/rsc"
  },

  "tactics": [
    {
      "name": "triggers",
      "description": "Quantifier instantiation patterns",
      "syntax": "[| pattern |]",
      "when_to_use": "To guide quantifier instantiation",
      "examples": ["axiom a: forall x:int [| f(x) |]. f(x) >= 0"]
    },
    {
      "name": "case-split",
      "description": "Case splitting on disjunctions",
      "syntax": "--case-split-policy",
      "when_to_use": "For disjunctive formulas",
      "examples": ["alt-ergo --case-split-policy after-theory file.ae"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "Timeout",
      "meaning": "Solver could not decide in time",
      "common_causes": ["Complex quantifiers", "Missing triggers"],
      "fixes": ["Add trigger patterns", "Increase timeout", "Simplify"]
    },
    {
      "pattern": "Unknown",
      "meaning": "Result unknown",
      "common_causes": ["Incomplete theory", "Quantifier instantiation limit"],
      "fixes": ["Try different solver", "Add lemmas"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["constraint", "assertion"],
    "cli_command": "dashprove verify --backend altergo"
  },

  "performance": {
    "typical_runtime": "milliseconds to seconds",
    "scalability": "Good for verification conditions",
    "memory_usage": "Low to moderate"
  },

  "comparisons": {
    "similar_tools": ["z3", "cvc5", "verit"],
    "advantages": [
      "Designed for program verification",
      "Good Why3 integration",
      "Polymorphic types"
    ],
    "disadvantages": [
      "Smaller theory support",
      "Less competitive on SMT-COMP"
    ]
  },

  "metadata": {
    "version": "2.5.4",
    "last_updated": "2025-12-22",
    "maintainer": "OCamlPro",
    "license": "Apache-2.0"
  }
}
