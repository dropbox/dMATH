{
  "id": "verit",
  "name": "veriT",
  "category": "smt_solver",
  "subcategory": "general",

  "description": "SMT solver with proof production for proof assistants",
  "long_description": "veriT is an SMT solver designed for integration with proof assistants like Isabelle and Coq. It provides detailed proof certificates that can be checked by external tools, making it useful for verified decision procedures.",

  "capabilities": [
    "sat_solving",
    "linear_arithmetic",
    "uninterpreted_functions",
    "quantifiers",
    "proof_production",
    "model_generation"
  ],
  "property_types": ["formula", "assertion", "constraint"],
  "input_languages": ["smtlib2"],
  "output_formats": ["sat/unsat", "model", "proof"],

  "installation": {
    "methods": [
      {"type": "source", "url": "https://verit.loria.fr/"}
    ],
    "dependencies": ["ocaml", "gmp"],
    "platforms": ["linux", "macos"]
  },

  "documentation": {
    "official": "https://verit.loria.fr/",
    "tutorial": "https://verit.loria.fr/documentation.html",
    "api_reference": "https://verit.loria.fr/documentation.html",
    "examples": "https://verit.loria.fr/examples.html"
  },

  "tactics": [
    {
      "name": "proof-output",
      "description": "Output detailed proofs",
      "syntax": "--proof",
      "when_to_use": "For proof assistant integration",
      "examples": ["verit --proof file.smt2"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "timeout",
      "meaning": "Solver exceeded time limit",
      "common_causes": ["Complex quantifiers", "Large formula"],
      "fixes": ["Increase timeout", "Simplify formula"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["constraint", "assertion"],
    "cli_command": "dashprove verify --backend verit"
  },

  "performance": {
    "typical_runtime": "milliseconds to minutes",
    "scalability": "Good for first-order logic",
    "memory_usage": "Moderate"
  },

  "comparisons": {
    "similar_tools": ["z3", "cvc5", "e-prover"],
    "advantages": [
      "Proof certificates for proof assistants",
      "Good quantifier handling"
    ],
    "disadvantages": [
      "Limited theory support",
      "Slower than Z3 on some benchmarks"
    ]
  },

  "metadata": {
    "version": "2021.06.2",
    "last_updated": "2025-12-22",
    "maintainer": "LORIA/Inria",
    "license": "BSD-2"
  }
}
