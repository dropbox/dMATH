{
  "id": "opensmt",
  "name": "OpenSMT",
  "category": "smt_solver",
  "subcategory": "general",

  "description": "Open-source SMT solver with interpolation and proof production",
  "long_description": "OpenSMT2 is an open-source SMT solver supporting linear real and integer arithmetic, uninterpreted functions, and their combinations. It features strong support for interpolation and proof production, making it suitable for software model checking.",

  "capabilities": [
    "sat_solving",
    "linear_arithmetic",
    "uninterpreted_functions",
    "interpolation",
    "proof_production",
    "incremental_solving"
  ],
  "property_types": ["formula", "assertion", "constraint"],
  "input_languages": ["smtlib2"],
  "output_formats": ["sat/unsat", "model", "interpolant", "proof"],

  "installation": {
    "methods": [
      {"type": "source", "url": "https://github.com/usi-verification-and-security/opensmt"}
    ],
    "dependencies": ["cmake", "gmp", "flex", "bison"],
    "platforms": ["linux", "macos"]
  },

  "documentation": {
    "official": "https://verify.inf.usi.ch/opensmt",
    "tutorial": "https://github.com/usi-verification-and-security/opensmt#readme",
    "api_reference": "https://github.com/usi-verification-and-security/opensmt/wiki",
    "examples": "https://github.com/usi-verification-and-security/opensmt/tree/master/examples"
  },

  "tactics": [
    {
      "name": "interpolation",
      "description": "Compute sequence interpolants",
      "syntax": "(get-interpolants)",
      "when_to_use": "For abstraction refinement in CEGAR",
      "examples": ["(get-interpolants (A B C))"]
    },
    {
      "name": "proof",
      "description": "Generate resolution proofs",
      "syntax": "(set-option :produce-proofs true)",
      "when_to_use": "For certifying results",
      "examples": ["(set-option :produce-proofs true)"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "unsupported",
      "meaning": "Theory not supported",
      "common_causes": ["Bit-vectors", "Arrays"],
      "fixes": ["Use Z3 or CVC5 for BV/arrays"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["constraint", "assertion"],
    "cli_command": "dashprove verify --backend opensmt"
  },

  "performance": {
    "typical_runtime": "milliseconds to seconds",
    "scalability": "Good for LIA/LRA",
    "memory_usage": "Low"
  },

  "comparisons": {
    "similar_tools": ["z3", "mathsat", "smtinterpol"],
    "advantages": [
      "Strong interpolation",
      "Fully open source",
      "Lightweight"
    ],
    "disadvantages": [
      "Limited theory support",
      "Smaller community"
    ]
  },

  "metadata": {
    "version": "2.5.2",
    "last_updated": "2025-12-22",
    "maintainer": "USI Verification and Security",
    "license": "MIT"
  }
}
