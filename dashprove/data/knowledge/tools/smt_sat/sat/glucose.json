{
  "id": "glucose",
  "name": "Glucose",
  "category": "sat_solver",
  "subcategory": "cdcl",

  "description": "SAT solver with aggressive clause deletion (MiniSat fork)",
  "long_description": "Glucose is a SAT solver based on MiniSat that introduced aggressive clause deletion using the Literal Block Distance (LBD) metric. This innovation significantly improves performance on industrial benchmarks. Glucose has won multiple SAT Competition tracks.",

  "capabilities": [
    "sat_solving",
    "conflict_driven_clause_learning",
    "lbd_clause_management",
    "parallel_solving",
    "model_generation"
  ],
  "property_types": ["cnf_formula"],
  "input_languages": ["dimacs_cnf"],
  "output_formats": ["sat/unsat", "model"],

  "installation": {
    "methods": [
      {"type": "apt", "command": "apt install glucose"},
      {"type": "source", "url": "https://github.com/audemard/glucose"}
    ],
    "dependencies": ["zlib"],
    "platforms": ["linux", "macos"]
  },

  "documentation": {
    "official": "https://www.labri.fr/perso/lsimon/glucose/",
    "tutorial": "https://www.labri.fr/perso/lsimon/glucose/",
    "api_reference": "https://github.com/audemard/glucose",
    "examples": "https://github.com/audemard/glucose"
  },

  "tactics": [
    {
      "name": "lbd",
      "description": "Literal Block Distance clause quality",
      "syntax": "Internal metric",
      "when_to_use": "Automatically used for clause deletion",
      "examples": []
    },
    {
      "name": "parallel",
      "description": "Multi-threaded solving",
      "syntax": "-ncores=N",
      "when_to_use": "For multi-core machines",
      "examples": ["glucose-syrup -ncores=4 input.cnf"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "UNSATISFIABLE",
      "meaning": "No satisfying assignment exists",
      "common_causes": ["Contradictory constraints"],
      "fixes": ["Check encoding", "Relax constraints"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["boolean_satisfiability"],
    "cli_command": "dashprove verify --backend glucose"
  },

  "performance": {
    "typical_runtime": "milliseconds to hours",
    "scalability": "Excellent for industrial SAT",
    "memory_usage": "Low (aggressive deletion)"
  },

  "comparisons": {
    "similar_tools": ["minisat", "cadical", "kissat"],
    "advantages": [
      "LBD-based clause management",
      "Parallel version (Syrup)",
      "Competition winner"
    ],
    "disadvantages": [
      "Based on older MiniSat",
      "Less active development than CaDiCaL"
    ]
  },

  "metadata": {
    "version": "4.2.1",
    "last_updated": "2025-12-22",
    "maintainer": "Gilles Audemard and Laurent Simon",
    "license": "MIT"
  }
}
