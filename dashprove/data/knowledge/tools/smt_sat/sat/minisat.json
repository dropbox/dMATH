{
  "id": "minisat",
  "name": "MiniSat",
  "category": "sat_solver",
  "subcategory": "cdcl",

  "description": "Minimalistic high-performance CDCL SAT solver",
  "long_description": "MiniSat is a minimalistic yet highly efficient SAT solver that pioneered many techniques used in modern CDCL solvers. Its clean design and small codebase make it ideal for education and as a base for solver research. Many modern solvers are derived from MiniSat.",

  "capabilities": [
    "sat_solving",
    "conflict_driven_clause_learning",
    "model_generation",
    "incremental_solving",
    "proof_logging"
  ],
  "property_types": ["cnf_formula"],
  "input_languages": ["dimacs_cnf"],
  "output_formats": ["sat/unsat", "model", "proof_trace"],

  "installation": {
    "methods": [
      {"type": "apt", "command": "apt install minisat"},
      {"type": "brew", "command": "brew install minisat"},
      {"type": "source", "url": "https://github.com/niklasso/minisat"}
    ],
    "dependencies": ["zlib"],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "http://minisat.se/",
    "tutorial": "http://minisat.se/MiniSat.html",
    "api_reference": "https://github.com/niklasso/minisat/blob/master/minisat/core/Solver.h",
    "examples": "https://github.com/niklasso/minisat/tree/master/examples"
  },

  "tactics": [
    {
      "name": "restart",
      "description": "Search restart strategy",
      "syntax": "-luby or -no-luby",
      "when_to_use": "Luby for structured, geometric for random",
      "examples": ["minisat -luby input.cnf"]
    },
    {
      "name": "phase-saving",
      "description": "Variable phase selection",
      "syntax": "-phase-saving=0|1|2",
      "when_to_use": "2 (default) for most problems",
      "examples": ["minisat -phase-saving=2 input.cnf"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "UNSATISFIABLE",
      "meaning": "No satisfying assignment exists",
      "common_causes": ["Contradictory constraints"],
      "fixes": ["Check encoding", "Relax constraints"]
    },
    {
      "pattern": "out of memory",
      "meaning": "Memory exhausted",
      "common_causes": ["Too many learned clauses", "Large formula"],
      "fixes": ["Increase clause deletion", "Simplify formula"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["boolean_satisfiability"],
    "cli_command": "dashprove verify --backend minisat"
  },

  "performance": {
    "typical_runtime": "milliseconds to hours",
    "scalability": "Good for industrial SAT",
    "memory_usage": "Moderate"
  },

  "comparisons": {
    "similar_tools": ["glucose", "cadical", "kissat"],
    "advantages": [
      "Clean readable code",
      "Educational value",
      "Good baseline performance"
    ],
    "disadvantages": [
      "Superseded by modern solvers",
      "No longer actively developed"
    ]
  },

  "metadata": {
    "version": "2.2.0",
    "last_updated": "2025-12-22",
    "maintainer": "Niklas Een and Niklas Sorensson",
    "license": "MIT"
  }
}
