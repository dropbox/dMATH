{
  "id": "hol4",
  "name": "HOL4",
  "category": "theorem_prover",
  "subcategory": "classical",

  "description": "Higher-order logic theorem prover (ML implementation)",
  "long_description": "HOL4 is an interactive theorem prover for higher-order logic. It's a descendant of the original HOL system and features an LCF-style architecture ensuring soundness. HOL4 has been used for verified OS kernels (seL4) and processor verification.",

  "capabilities": [
    "higher_order_logic",
    "lcf_soundness",
    "tactic_proofs",
    "proof_scripts",
    "code_extraction"
  ],
  "property_types": ["theorem", "definition", "inductive"],
  "input_languages": ["sml", "hol"],
  "output_formats": ["proof_object", "sml_code"],

  "installation": {
    "methods": [
      {"type": "source", "url": "https://github.com/HOL-Theorem-Prover/HOL"}
    ],
    "dependencies": ["polyml", "mlton"],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://hol-theorem-prover.org/",
    "tutorial": "https://hol-theorem-prover.org/documentation.html",
    "api_reference": "https://hol-theorem-prover.org/kananaskis-14-helpdocs/",
    "examples": "https://github.com/HOL-Theorem-Prover/HOL/tree/develop/examples"
  },

  "tactics": [
    {
      "name": "Induct_on",
      "description": "Structural induction",
      "syntax": "Induct_on `term`",
      "when_to_use": "For inductive types",
      "examples": ["Induct_on `n`"]
    },
    {
      "name": "rw",
      "description": "Rewrite tactic",
      "syntax": "rw [thms]",
      "when_to_use": "To rewrite with equalities",
      "examples": ["rw [ADD_COMM]"]
    },
    {
      "name": "metis_tac",
      "description": "First-order automation",
      "syntax": "metis_tac [thms]",
      "when_to_use": "For automatic proofs",
      "examples": ["metis_tac [lemma1, lemma2]"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "proof failed",
      "meaning": "Tactic didn't succeed",
      "common_causes": ["Wrong tactic", "Missing lemma"],
      "fixes": ["Try different tactic", "Add lemmas"]
    },
    {
      "pattern": "type unification failed",
      "meaning": "Type error",
      "common_causes": ["Wrong types"],
      "fixes": ["Check types", "Add annotations"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["theorem"],
    "cli_command": "dashprove verify --backend hol4"
  },

  "performance": {
    "typical_runtime": "seconds to minutes",
    "scalability": "Large proofs (seL4)",
    "memory_usage": "Moderate"
  },

  "comparisons": {
    "similar_tools": ["isabelle", "coq", "lean4"],
    "advantages": [
      "LCF-style soundness",
      "seL4 verification",
      "Clean HOL logic"
    ],
    "disadvantages": [
      "SML learning curve",
      "Less automation"
    ]
  },

  "metadata": {
    "version": "Kananaskis-14",
    "last_updated": "2025-12-22",
    "maintainer": "HOL Team",
    "license": "BSD-3"
  }
}
