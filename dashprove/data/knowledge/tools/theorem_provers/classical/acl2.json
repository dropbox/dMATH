{
  "id": "acl2",
  "name": "ACL2",
  "category": "theorem_prover",
  "subcategory": "classical",

  "description": "Automated theorem prover for computational logic",
  "long_description": "ACL2 (A Computational Logic for Applicative Common Lisp) is an automated theorem prover and programming language. It's been used extensively in industry for hardware and software verification, including AMD processor verification.",

  "capabilities": [
    "automated_reasoning",
    "induction",
    "rewriting",
    "industrial_verification",
    "hardware_verification"
  ],
  "property_types": ["theorem", "defthm", "rule"],
  "input_languages": ["acl2_lisp"],
  "output_formats": ["proof_output"],

  "installation": {
    "methods": [
      {"type": "source", "url": "https://github.com/acl2/acl2"},
      {"type": "apt", "command": "apt install acl2"}
    ],
    "dependencies": ["sbcl", "ccl"],
    "platforms": ["linux", "macos"]
  },

  "documentation": {
    "official": "https://www.cs.utexas.edu/users/moore/acl2/",
    "tutorial": "http://www.cs.utexas.edu/users/moore/acl2/v8-5/combined-manual/",
    "api_reference": "http://www.cs.utexas.edu/users/moore/acl2/manuals/current/manual/",
    "examples": "https://github.com/acl2/acl2/tree/master/books"
  },

  "tactics": [
    {
      "name": "induct",
      "description": "Proof by induction",
      "syntax": ":induct scheme",
      "when_to_use": "For recursive definitions",
      "examples": []
    },
    {
      "name": "enable/disable",
      "description": "Control rule usage",
      "syntax": ":in-theory (enable rule)",
      "when_to_use": "To guide rewriting",
      "examples": ["(in-theory (enable my-lemma))"]
    },
    {
      "name": "hints",
      "description": "Proof hints",
      "syntax": ":hints ((\"Goal\" :use lemma))",
      "when_to_use": "To suggest lemmas",
      "examples": ["(defthm thm :hints ((\"Goal\" :use (:instance lemma))))"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "The proof of ... has failed",
      "meaning": "Theorem not proved",
      "common_causes": ["Missing lemma", "Wrong induction"],
      "fixes": ["Add helper lemmas", "Adjust hints"]
    },
    {
      "pattern": "ACL2 Warning",
      "meaning": "Potential issue",
      "common_causes": ["Non-terminating recursion", "Guard violation"],
      "fixes": ["Fix guards", "Prove termination"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["theorem"],
    "cli_command": "dashprove verify --backend acl2"
  },

  "performance": {
    "typical_runtime": "seconds to hours",
    "scalability": "Industrial-grade",
    "memory_usage": "Moderate"
  },

  "comparisons": {
    "similar_tools": ["coq", "isabelle", "pvs"],
    "advantages": [
      "High automation",
      "Industrial track record",
      "Decidable logic"
    ],
    "disadvantages": [
      "First-order only",
      "Lisp syntax"
    ]
  },

  "metadata": {
    "version": "8.5",
    "last_updated": "2025-12-22",
    "maintainer": "Matt Kaufmann and J Strother Moore",
    "license": "BSD-3"
  }
}
