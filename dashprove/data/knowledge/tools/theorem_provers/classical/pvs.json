{
  "id": "pvs",
  "name": "PVS",
  "category": "theorem_prover",
  "subcategory": "classical",

  "description": "Specification and verification system with rich type system",
  "long_description": "PVS (Prototype Verification System) is an environment for specification and verification combining a rich type system with powerful automation. It's been widely used in aerospace and safety-critical systems verification.",

  "capabilities": [
    "higher_order_logic",
    "dependent_types",
    "type_checking_proofs",
    "decision_procedures",
    "model_checking"
  ],
  "property_types": ["lemma", "theorem", "formula"],
  "input_languages": ["pvs_spec"],
  "output_formats": ["proof_script"],

  "installation": {
    "methods": [
      {"type": "download", "url": "https://pvs.csl.sri.com/"}
    ],
    "dependencies": ["lisp", "emacs"],
    "platforms": ["linux", "macos"]
  },

  "documentation": {
    "official": "https://pvs.csl.sri.com/",
    "tutorial": "https://pvs.csl.sri.com/documentation.html",
    "api_reference": "https://pvs.csl.sri.com/documentation.html",
    "examples": "https://shemesh.larc.nasa.gov/fm/pvs/examples/"
  },

  "tactics": [
    {
      "name": "grind",
      "description": "Powerful automation",
      "syntax": "(grind)",
      "when_to_use": "For most goals",
      "examples": ["(grind)"]
    },
    {
      "name": "induct",
      "description": "Induction",
      "syntax": "(induct \"var\")",
      "when_to_use": "For inductive proofs",
      "examples": ["(induct \"n\")"]
    },
    {
      "name": "expand",
      "description": "Expand definition",
      "syntax": "(expand \"name\")",
      "when_to_use": "To unfold definitions",
      "examples": ["(expand \"append\")"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "No change",
      "meaning": "Tactic had no effect",
      "common_causes": ["Wrong tactic"],
      "fixes": ["Try different command"]
    },
    {
      "pattern": "Typecheck error",
      "meaning": "Type doesn't match",
      "common_causes": ["Type mismatch"],
      "fixes": ["Fix types"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["theorem"],
    "cli_command": "dashprove verify --backend pvs"
  },

  "performance": {
    "typical_runtime": "seconds to minutes",
    "scalability": "Good for medium specs",
    "memory_usage": "Moderate"
  },

  "comparisons": {
    "similar_tools": ["isabelle", "coq", "acl2"],
    "advantages": [
      "Rich type system",
      "Good automation",
      "NASA heritage"
    ],
    "disadvantages": [
      "Older interface",
      "Emacs-centric"
    ]
  },

  "metadata": {
    "version": "7.1",
    "last_updated": "2025-12-22",
    "maintainer": "SRI International",
    "license": "GPL"
  }
}
