{
  "id": "hollight",
  "name": "HOL Light",
  "category": "theorem_prover",
  "subcategory": "classical",

  "description": "Minimalist HOL theorem prover in OCaml",
  "long_description": "HOL Light is a member of the HOL family of theorem provers, distinguished by its simple and clean implementation. It has been used for major mathematical formalizations including the proof of the Kepler conjecture (Flyspeck project).",

  "capabilities": [
    "higher_order_logic",
    "small_kernel",
    "mathematical_formalization",
    "tactic_proofs"
  ],
  "property_types": ["theorem"],
  "input_languages": ["ocaml", "hol"],
  "output_formats": ["proof_term"],

  "installation": {
    "methods": [
      {"type": "source", "url": "https://github.com/jrh13/hol-light"}
    ],
    "dependencies": ["ocaml", "camlp5"],
    "platforms": ["linux", "macos"]
  },

  "documentation": {
    "official": "https://www.cl.cam.ac.uk/~jrh13/hol-light/",
    "tutorial": "https://www.cl.cam.ac.uk/~jrh13/hol-light/tutorial.pdf",
    "api_reference": "https://www.cl.cam.ac.uk/~jrh13/hol-light/reference.html",
    "examples": "https://github.com/jrh13/hol-light"
  },

  "tactics": [
    {
      "name": "REWRITE_TAC",
      "description": "Rewriting tactic",
      "syntax": "REWRITE_TAC[thms]",
      "when_to_use": "For simplification",
      "examples": ["REWRITE_TAC[ADD_COMM]"]
    },
    {
      "name": "MESON_TAC",
      "description": "First-order prover",
      "syntax": "MESON_TAC[thms]",
      "when_to_use": "For FOL goals",
      "examples": ["MESON_TAC[lemma]"]
    },
    {
      "name": "ARITH_TAC",
      "description": "Linear arithmetic",
      "syntax": "ARITH_TAC",
      "when_to_use": "For arithmetic",
      "examples": ["ARITH_TAC"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "no_tac",
      "meaning": "Tactic failed",
      "common_causes": ["Wrong goal"],
      "fixes": ["Try different approach"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["theorem"],
    "cli_command": "dashprove verify --backend hollight"
  },

  "performance": {
    "typical_runtime": "seconds to minutes",
    "scalability": "Large math proofs",
    "memory_usage": "Moderate"
  },

  "comparisons": {
    "similar_tools": ["hol4", "isabelle", "coq"],
    "advantages": [
      "Simple kernel",
      "Flyspeck project",
      "Clean OCaml impl"
    ],
    "disadvantages": [
      "Less infrastructure",
      "Smaller community"
    ]
  },

  "metadata": {
    "version": "2.1.0",
    "last_updated": "2025-12-22",
    "maintainer": "John Harrison",
    "license": "BSD-2"
  }
}
