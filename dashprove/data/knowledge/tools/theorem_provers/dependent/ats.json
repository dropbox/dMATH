{
  "id": "ats",
  "name": "ATS",
  "category": "theorem_prover",
  "subcategory": "dependent_types",

  "description": "Dependently typed language with theorem proving and C interop",
  "long_description": "ATS (Applied Type System) is a statically typed programming language that combines dependent types with linear types for systems programming. It compiles to C and can use theorem proving to eliminate array bounds checks and other runtime overhead.",

  "capabilities": [
    "dependent_types",
    "linear_types",
    "theorem_proving",
    "c_interop",
    "memory_safety"
  ],
  "property_types": ["type_proof", "linear_constraint"],
  "input_languages": ["ats"],
  "output_formats": ["c"],

  "installation": {
    "methods": [
      {"type": "source", "url": "https://github.com/ats-lang/ats-lang.github.io"}
    ],
    "dependencies": ["gcc"],
    "platforms": ["linux", "macos"]
  },

  "documentation": {
    "official": "http://www.ats-lang.org/",
    "tutorial": "http://ats-lang.sourceforge.net/DOCUMENT/INT2PROGINATS/HTML/",
    "api_reference": "http://www.ats-lang.org/DOCUMENT/",
    "examples": "https://github.com/ats-lang/ats-lang.github.io/tree/master/EXAMPLE"
  },

  "tactics": [
    {
      "name": "prfun",
      "description": "Proof function",
      "syntax": "prfun proof_name: prop",
      "when_to_use": "To define proof terms",
      "examples": ["prfun lemma_add_comm {m,n:int}: ADD(m,n,m+n)"]
    },
    {
      "name": "praxi",
      "description": "Axiom (unproved)",
      "syntax": "praxi axiom_name: prop",
      "when_to_use": "For trusted assumptions",
      "examples": []
    }
  ],

  "error_patterns": [
    {
      "pattern": "unsolved constraint",
      "meaning": "Type constraint not satisfied",
      "common_causes": ["Missing proof", "Wrong type"],
      "fixes": ["Add proof term", "Fix types"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["theorem", "type_constraint"],
    "cli_command": "dashprove verify --backend ats"
  },

  "performance": {
    "typical_runtime": "seconds",
    "scalability": "Good for systems code",
    "memory_usage": "Low (compiles to C)"
  },

  "comparisons": {
    "similar_tools": ["rust", "idris", "fstar"],
    "advantages": [
      "Zero-cost abstractions",
      "Direct C interop",
      "Linear types"
    ],
    "disadvantages": [
      "Steep learning curve",
      "Small community"
    ]
  },

  "metadata": {
    "version": "0.4.2",
    "last_updated": "2025-12-22",
    "maintainer": "Hongwei Xi",
    "license": "GPL-3.0"
  }
}
