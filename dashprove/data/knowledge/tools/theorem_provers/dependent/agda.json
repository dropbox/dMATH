{
  "id": "agda",
  "name": "Agda",
  "category": "theorem_prover",
  "subcategory": "dependent_types",

  "description": "Dependently typed functional programming language and proof assistant",
  "long_description": "Agda is a dependently typed functional programming language and proof assistant. It features a clean, expressive syntax and strong support for interactive development through its Emacs mode. Agda is widely used for formalization of mathematics and verified programming.",

  "capabilities": [
    "dependent_types",
    "proof_assistant",
    "type_driven_development",
    "pattern_matching",
    "unicode_support",
    "mixfix_operators"
  ],
  "property_types": ["theorem", "proposition", "type_equality"],
  "input_languages": ["agda"],
  "output_formats": ["proof_term", "haskell_code"],

  "installation": {
    "methods": [
      {"type": "cabal", "command": "cabal install Agda"},
      {"type": "apt", "command": "apt install agda"},
      {"type": "brew", "command": "brew install agda"}
    ],
    "dependencies": ["ghc", "emacs"],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://wiki.portal.chalmers.se/agda/",
    "tutorial": "https://agda.readthedocs.io/en/latest/getting-started/tutorial-list.html",
    "api_reference": "https://agda.readthedocs.io/en/latest/language/",
    "examples": "https://github.com/agda/agda-stdlib"
  },

  "tactics": [
    {
      "name": "case-split",
      "description": "Split on variable (C-c C-c)",
      "syntax": "C-c C-c in Emacs",
      "when_to_use": "When pattern matching needed",
      "examples": []
    },
    {
      "name": "refine",
      "description": "Refine goal (C-c C-r)",
      "syntax": "C-c C-r in Emacs",
      "when_to_use": "To fill in constructor",
      "examples": []
    },
    {
      "name": "auto",
      "description": "Auto-solve (C-c C-a)",
      "syntax": "C-c C-a in Emacs",
      "when_to_use": "For simple goals",
      "examples": []
    },
    {
      "name": "rewrite",
      "description": "Rewrite with equality",
      "syntax": "rewrite eq",
      "when_to_use": "To use equality proofs",
      "examples": ["rewrite sym xâ‰¡y"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "termination checking failed",
      "meaning": "Function might not terminate",
      "common_causes": ["Non-structural recursion"],
      "fixes": ["Use well-founded recursion", "Add {-# TERMINATING #-}"]
    },
    {
      "pattern": "cannot be inferred",
      "meaning": "Type inference failed",
      "common_causes": ["Ambiguous types"],
      "fixes": ["Add type annotations"]
    },
    {
      "pattern": "not in scope",
      "meaning": "Identifier not found",
      "common_causes": ["Missing import", "Typo"],
      "fixes": ["Add import", "Check spelling"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["theorem", "proposition"],
    "cli_command": "dashprove verify --backend agda"
  },

  "performance": {
    "typical_runtime": "seconds to minutes",
    "scalability": "Good for medium proofs",
    "memory_usage": "Moderate"
  },

  "comparisons": {
    "similar_tools": ["coq", "lean4", "idris"],
    "advantages": [
      "Clean syntax",
      "Unicode support",
      "Excellent Emacs mode"
    ],
    "disadvantages": [
      "Less automation than Coq",
      "Smaller community"
    ]
  },

  "metadata": {
