{
  "id": "idris",
  "name": "Idris 2",
  "category": "theorem_prover",
  "subcategory": "dependent_types",

  "description": "Dependently typed language with focus on practical programming",
  "long_description": "Idris 2 is a dependently typed programming language focused on practical programming with dependent types. Unlike purely theorem-proving focused languages, Idris emphasizes using dependent types for verified programming with good performance through quantitative type theory.",

  "capabilities": [
    "dependent_types",
    "linear_types",
    "effect_system",
    "interactive_editing",
    "code_generation"
  ],
  "property_types": ["type_specification", "proof"],
  "input_languages": ["idris"],
  "output_formats": ["scheme", "javascript", "refcounted_c"],

  "installation": {
    "methods": [
      {"type": "pack", "command": "pack install idris2"},
      {"type": "source", "url": "https://github.com/idris-lang/Idris2"}
    ],
    "dependencies": ["chez-scheme"],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://idris2.readthedocs.io/",
    "tutorial": "https://idris2.readthedocs.io/en/latest/tutorial/",
    "api_reference": "https://idris2.readthedocs.io/en/latest/reference/",
    "examples": "https://github.com/idris-lang/Idris2/tree/main/tests"
  },

  "tactics": [
    {
      "name": "case-split",
      "description": "Split on variable",
      "syntax": ":cs var",
      "when_to_use": "For pattern matching",
      "examples": [":cs n"]
    },
    {
      "name": "proof-search",
      "description": "Auto-fill holes",
      "syntax": ":ps hole",
      "when_to_use": "For simple proofs",
      "examples": [":ps ?goal"]
    },
    {
      "name": "generate-def",
      "description": "Generate function skeleton",
      "syntax": ":gd name",
      "when_to_use": "To start implementation",
      "examples": [":gd myFunc"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "Mismatch between",
      "meaning": "Type mismatch",
      "common_causes": ["Wrong type in expression"],
      "fixes": ["Fix type or expression"]
    },
    {
      "pattern": "Can't find an implementation",
      "meaning": "Missing interface implementation",
      "common_causes": ["Interface not implemented"],
      "fixes": ["Implement interface", "Add implementation"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["theorem", "specification"],
    "cli_command": "dashprove verify --backend idris"
  },

  "performance": {
    "typical_runtime": "seconds",
    "scalability": "Good for programs",
    "memory_usage": "Moderate"
  },

  "comparisons": {
    "similar_tools": ["agda", "fstar", "lean4"],
    "advantages": [
      "Linear types",
      "Practical focus",
      "Good code generation"
    ],
    "disadvantages": [
      "Smaller library ecosystem",
      "Less proof automation"
    ]
  },

  "metadata": {
    "version": "0.7.0",
    "last_updated": "2025-12-22",
    "maintainer": "Edwin Brady",
    "license": "BSD-3"
  }
}
