{
  "id": "nuclei",
  "name": "Nuclei",
  "category": "security",
  "subcategory": "vulnerability_scanner",

  "description": "Fast template-based vulnerability scanner with community templates",
  "long_description": "Nuclei is a fast, template-based vulnerability scanner by ProjectDiscovery. It uses YAML templates to define vulnerability checks, allowing for easy customization and community contribution. Nuclei can scan for CVEs, misconfigurations, exposed panels, takeovers, and more. It's designed for speed and can scan thousands of hosts efficiently.",

  "capabilities": [
    "template_based_scanning",
    "cve_detection",
    "misconfiguration_detection",
    "takeover_detection",
    "exposed_panel_detection",
    "custom_templates",
    "workflow_support",
    "headless_browser",
    "bulk_scanning"
  ],
  "property_types": ["security", "vulnerability_detection"],
  "input_languages": ["yaml_templates"],
  "output_formats": ["json", "jsonl", "markdown", "sarif"],

  "installation": {
    "methods": [
      {"type": "go", "command": "go install -v github.com/projectdiscovery/nuclei/v3/cmd/nuclei@latest"},
      {"type": "brew", "command": "brew install nuclei", "platform": "macos"},
      {"type": "binary", "url": "https://github.com/projectdiscovery/nuclei/releases"}
    ],
    "dependencies": [],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://docs.projectdiscovery.io/tools/nuclei/",
    "tutorial": "https://docs.projectdiscovery.io/tools/nuclei/getting-started",
    "api_reference": "https://docs.projectdiscovery.io/templates/introduction",
    "examples": "https://github.com/projectdiscovery/nuclei-templates"
  },

  "tactics": [
    {
      "name": "basic_scan",
      "description": "Scan target with all templates",
      "syntax": "nuclei -u https://target.com",
      "when_to_use": "Comprehensive vulnerability scan",
      "examples": ["nuclei -u https://example.com -o results.txt"]
    },
    {
      "name": "specific_tags",
      "description": "Scan with specific vulnerability types",
      "syntax": "nuclei -u URL -tags cve,rce",
      "when_to_use": "Focused scanning",
      "examples": ["nuclei -u https://example.com -tags cve,sqli,xss"]
    },
    {
      "name": "severity_filter",
      "description": "Scan only for high/critical issues",
      "syntax": "nuclei -u URL -severity critical,high",
      "when_to_use": "Prioritizing critical issues",
      "examples": ["nuclei -l targets.txt -severity critical,high -o critical.txt"]
    },
    {
      "name": "bulk_scan",
      "description": "Scan multiple targets",
      "syntax": "nuclei -l targets.txt -c 50",
      "when_to_use": "Scanning at scale",
      "examples": ["cat subdomains.txt | nuclei -c 100 -rate-limit 1000"]
    },
    {
      "name": "custom_template",
      "description": "Use custom templates",
      "syntax": "nuclei -u URL -t my-templates/",
      "when_to_use": "Custom vulnerability checks",
      "examples": ["nuclei -u https://example.com -t ~/custom-templates/ -t nuclei-templates/"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "\\[critical\\]",
      "meaning": "Critical vulnerability found",
      "common_causes": ["Unpatched CVE", "Severe misconfiguration"],
      "fixes": ["Apply patch immediately", "Fix configuration"]
    },
    {
      "pattern": "\\[high\\]",
      "meaning": "High severity issue",
      "common_causes": ["Exploitable vulnerability"],
      "fixes": ["Prioritize remediation"]
    },
    {
      "pattern": "rate limit",
      "meaning": "Target rate limiting scans",
      "common_causes": ["Too many requests"],
      "fixes": ["Reduce -rate-limit value", "Add delays"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["security"],
    "cli_command": "dashprove verify --backend nuclei"
  },

  "performance": {
    "typical_runtime": "Fast; designed for scale",
    "scalability": "Excellent; handles thousands of targets",
    "memory_usage": "Low"
  },

  "comparisons": {
    "similar_tools": ["zap", "nmap_scripts", "nikto", "wapiti"],
    "advantages": ["Very fast", "Community templates", "Easy customization", "Active development"],
    "disadvantages": ["Template quality varies", "Requires template maintenance"]
  },

  "metadata": {
    "version": "3.2.0",
    "last_updated": "2025-12-22",
    "maintainer": "ProjectDiscovery",
    "license": "MIT"
  }
}
