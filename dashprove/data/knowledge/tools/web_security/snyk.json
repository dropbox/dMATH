{
  "id": "snyk",
  "name": "Snyk",
  "category": "security",
  "subcategory": "developer_security",

  "description": "Developer-first security platform for code, dependencies, containers, and IaC",
  "long_description": "Snyk is a developer security platform that scans code (SAST), open source dependencies (SCA), containers, and Infrastructure as Code for security vulnerabilities. It integrates into the development workflow with IDE plugins, CLI, and CI/CD integrations, providing fix recommendations and automated remediation.",

  "capabilities": [
    "sast_scanning",
    "dependency_scanning",
    "container_scanning",
    "iac_scanning",
    "license_compliance",
    "fix_suggestions",
    "priority_scoring",
    "sbom_generation"
  ],
  "property_types": ["security", "compliance"],
  "input_languages": ["javascript", "python", "java", "go", "ruby", "php", "dotnet", "scala"],
  "output_formats": ["text", "json", "sarif", "html"],

  "installation": {
    "methods": [
      {"type": "npm", "command": "npm install -g snyk"},
      {"type": "brew", "command": "brew install snyk", "platform": "macos"},
      {"type": "binary", "url": "https://github.com/snyk/cli/releases"}
    ],
    "dependencies": [],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://docs.snyk.io/",
    "tutorial": "https://docs.snyk.io/getting-started",
    "api_reference": "https://docs.snyk.io/snyk-api/",
    "examples": "https://github.com/snyk/cli/tree/main/test"
  },

  "tactics": [
    {
      "name": "test_deps",
      "description": "Test dependencies for vulnerabilities",
      "syntax": "snyk test",
      "when_to_use": "Checking project dependencies",
      "examples": ["snyk test --severity-threshold=high"]
    },
    {
      "name": "test_code",
      "description": "Test code for vulnerabilities",
      "syntax": "snyk code test",
      "when_to_use": "SAST scanning",
      "examples": ["snyk code test --sarif-file-output=results.sarif"]
    },
    {
      "name": "container",
      "description": "Test container images",
      "syntax": "snyk container test image:tag",
      "when_to_use": "Container security",
      "examples": ["snyk container test myapp:latest --file=Dockerfile"]
    },
    {
      "name": "iac",
      "description": "Test Infrastructure as Code",
      "syntax": "snyk iac test",
      "when_to_use": "IaC security scanning",
      "examples": ["snyk iac test ./terraform/"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "High severity vulnerability",
      "meaning": "Critical security issue",
      "common_causes": ["Vulnerable dependency", "Insecure code"],
      "fixes": ["Upgrade package", "Apply suggested fix"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["security"],
    "cli_command": "dashprove verify --backend snyk"
  },

  "performance": {
    "typical_runtime": "Fast for deps, moderate for code",
    "scalability": "Good",
    "memory_usage": "Moderate"
  },

  "comparisons": {
    "similar_tools": ["dependabot", "sonarqube", "trivy", "semgrep"],
    "advantages": ["All-in-one", "Fix suggestions", "Developer workflow", "Good DB"],
    "disadvantages": ["Freemium model", "Some features paid"]
  },

  "metadata": {
    "version": "1.1200.0",
    "last_updated": "2025-12-22",
    "maintainer": "Snyk",
    "license": "Apache-2.0"
  }
}
