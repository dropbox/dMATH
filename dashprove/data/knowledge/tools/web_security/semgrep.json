{
  "id": "semgrep",
  "name": "Semgrep",
  "category": "security",
  "subcategory": "sast",

  "description": "Fast, open-source static analysis tool for finding bugs and enforcing code standards",
  "long_description": "Semgrep is a fast, open-source static analysis engine for finding bugs, detecting vulnerabilities, and enforcing code standards. It supports 30+ languages and uses a pattern syntax similar to the code being analyzed. Semgrep has an extensive rule registry and integrates easily into CI/CD pipelines.",

  "capabilities": [
    "sast_scanning",
    "pattern_matching",
    "multi_language",
    "custom_rules",
    "autofix",
    "secrets_detection",
    "ci_integration",
    "ide_integration"
  ],
  "property_types": ["security", "code_quality"],
  "input_languages": ["python", "javascript", "typescript", "java", "go", "ruby", "php", "c", "cpp", "rust", "scala", "kotlin"],
  "output_formats": ["text", "json", "sarif", "gitlab-sast", "junit-xml"],

  "installation": {
    "methods": [
      {"type": "pip", "command": "pip install semgrep"},
      {"type": "brew", "command": "brew install semgrep", "platform": "macos"},
      {"type": "docker", "command": "docker pull returntocorp/semgrep"}
    ],
    "dependencies": [],
    "platforms": ["linux", "macos"]
  },

  "documentation": {
    "official": "https://semgrep.dev/docs/",
    "tutorial": "https://semgrep.dev/learn",
    "api_reference": "https://semgrep.dev/docs/writing-rules/rule-syntax/",
    "examples": "https://semgrep.dev/r"
  },

  "tactics": [
    {
      "name": "scan_default",
      "description": "Scan with recommended rules",
      "syntax": "semgrep scan --config auto",
      "when_to_use": "Quick security scan",
      "examples": ["semgrep scan --config auto ."]
    },
    {
      "name": "specific_rules",
      "description": "Scan with specific ruleset",
      "syntax": "semgrep scan --config p/owasp-top-ten",
      "when_to_use": "Targeted scanning",
      "examples": ["semgrep scan --config p/security-audit --config p/secrets"]
    },
    {
      "name": "custom_rules",
      "description": "Run custom rules",
      "syntax": "semgrep scan --config rules.yaml",
      "when_to_use": "Organization-specific checks",
      "examples": ["semgrep scan --config ./my-rules/ src/"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "error.*sql.*injection",
      "meaning": "SQL injection vulnerability",
      "common_causes": ["String concatenation in queries"],
      "fixes": ["Use parameterized queries"]
    },
    {
      "pattern": "error.*hardcoded.*secret",
      "meaning": "Hardcoded secret detected",
      "common_causes": ["Credentials in code"],
      "fixes": ["Use secret management"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["security"],
    "cli_command": "dashprove verify --backend semgrep"
  },

  "performance": {
    "typical_runtime": "Fast",
    "scalability": "Excellent",
    "memory_usage": "Moderate"
  },

  "comparisons": {
    "similar_tools": ["codeql", "sonarqube", "snyk_code", "checkmarx"],
    "advantages": ["Fast", "Easy rule writing", "Free community rules", "Multi-language"],
    "disadvantages": ["Some features paid"]
  },

  "metadata": {
    "version": "1.60.0",
    "last_updated": "2025-12-22",
    "maintainer": "Semgrep (r2c)",
    "license": "LGPL-2.1"
  }
}
