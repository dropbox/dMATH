{
  "id": "sonarqube",
  "name": "SonarQube",
  "category": "static_analysis",
  "subcategory": "code_quality",

  "description": "Continuous code quality and security inspection platform",
  "long_description": "SonarQube is a platform for continuous inspection of code quality and security. It performs static analysis to detect bugs, code smells, and security vulnerabilities. It supports 30+ languages and provides quality gates for CI/CD integration.",

  "capabilities": [
    "static_analysis",
    "bug_detection",
    "vulnerability_detection",
    "code_smell_detection",
    "coverage_reporting",
    "quality_gates",
    "multi_language",
    "branch_analysis"
  ],
  "property_types": ["code_quality", "security"],
  "input_languages": ["java", "javascript", "typescript", "python", "cpp", "csharp", "go", "php", "ruby", "kotlin", "scala"],
  "output_formats": ["web_dashboard", "json"],

  "installation": {
    "methods": [
      {"type": "docker", "command": "docker pull sonarqube"},
      {"type": "download", "url": "https://www.sonarsource.com/products/sonarqube/downloads/"}
    ],
    "dependencies": ["java", "database"],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://docs.sonarqube.org/",
    "tutorial": "https://docs.sonarqube.org/latest/try-out-sonarqube/",
    "api_reference": "https://docs.sonarqube.org/latest/analyzing-source-code/",
    "examples": "https://github.com/SonarSource/sonar-scanning-examples"
  },

  "tactics": [
    {
      "name": "scan_maven",
      "description": "Scan Maven project",
      "syntax": "mvn sonar:sonar",
      "when_to_use": "Analyzing Java projects",
      "examples": ["mvn sonar:sonar -Dsonar.host.url=http://localhost:9000"]
    },
    {
      "name": "scan_cli",
      "description": "Scan with SonarScanner",
      "syntax": "sonar-scanner",
      "when_to_use": "Non-Maven projects",
      "examples": ["sonar-scanner -Dsonar.projectKey=myproject"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "Quality Gate.*FAILED",
      "meaning": "Code doesn't meet quality standards",
      "common_causes": ["Too many bugs", "Low coverage"],
      "fixes": ["Fix reported issues"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["code_quality", "security"],
    "cli_command": "dashprove verify --backend sonarqube"
  },

  "performance": {
    "typical_runtime": "Moderate",
    "scalability": "Enterprise grade",
    "memory_usage": "High"
  },

  "comparisons": {
    "similar_tools": ["codeclimate", "semgrep", "snyk_code"],
    "advantages": ["Comprehensive", "Quality gates", "Dashboard"],
    "disadvantages": ["Resource intensive", "Complex setup"]
  },

  "metadata": {
    "version": "10.4",
    "last_updated": "2025-12-22",
    "maintainer": "SonarSource",
    "license": "LGPL-3.0 (Community)"
  }
}
