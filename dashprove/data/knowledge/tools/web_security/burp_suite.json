{
  "id": "burp_suite",
  "name": "Burp Suite",
  "category": "security",
  "subcategory": "web_security",

  "description": "Industry-standard web application security testing platform",
  "long_description": "Burp Suite is the industry-standard toolkit for web application security testing. It includes a proxy for intercepting traffic, an automated scanner, and tools for manual testing. The Community Edition is free; Professional and Enterprise add automation and CI/CD features.",

  "capabilities": [
    "proxy_interception",
    "active_scanning",
    "passive_scanning",
    "intruder_attacks",
    "repeater_testing",
    "sequencer_analysis",
    "decoder_encoder",
    "extender_plugins"
  ],
  "property_types": ["security", "vulnerability_detection"],
  "input_languages": ["http"],
  "output_formats": ["html", "xml", "json"],

  "installation": {
    "methods": [
      {"type": "download", "url": "https://portswigger.net/burp/releases"}
    ],
    "dependencies": ["java"],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://portswigger.net/burp/documentation",
    "tutorial": "https://portswigger.net/web-security",
    "api_reference": "https://portswigger.net/burp/documentation/desktop/extensions/creating",
    "examples": "https://portswigger.net/burp/documentation/desktop/scanning"
  },

  "tactics": [
    {
      "name": "proxy_intercept",
      "description": "Intercept and modify requests",
      "syntax": "Configure browser proxy to 127.0.0.1:8080",
      "when_to_use": "Manual testing and exploration",
      "examples": ["Intercept login request and test for SQLi"]
    },
    {
      "name": "active_scan",
      "description": "Automated vulnerability scanning",
      "syntax": "Right-click target -> Scan",
      "when_to_use": "Finding common vulnerabilities",
      "examples": ["Scan authenticated area after recording session"]
    },
    {
      "name": "intruder",
      "description": "Automated customized attacks",
      "syntax": "Send to Intruder -> Configure payloads -> Start",
      "when_to_use": "Fuzzing parameters",
      "examples": ["Brute force login, parameter fuzzing"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "High.*SQL injection",
      "meaning": "SQL injection vulnerability",
      "common_causes": ["Unsanitized input"],
      "fixes": ["Use parameterized queries"]
    },
    {
      "pattern": "High.*XSS",
      "meaning": "Cross-site scripting",
      "common_causes": ["Unescaped output"],
      "fixes": ["Escape output, implement CSP"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["security"],
    "cli_command": "dashprove verify --backend burp"
  },

  "performance": {
    "typical_runtime": "Depends on scan scope",
    "scalability": "Enterprise for scale",
    "memory_usage": "High"
  },

  "comparisons": {
    "similar_tools": ["zap", "caido", "mitmproxy"],
    "advantages": ["Industry standard", "Extensive features", "Large extension ecosystem"],
    "disadvantages": ["Pro version expensive", "Resource heavy"]
  },

