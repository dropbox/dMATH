{
  "id": "ktlint",
  "name": "ktlint",
  "category": "kotlin_static_analysis",
  "subcategory": "formatter",

  "description": "Anti-bikeshedding Kotlin linter with built-in formatter",
  "long_description": "ktlint is an opinionated Kotlin linter and formatter that enforces the official Kotlin coding conventions and Android Kotlin style guide. It's designed to be fast and have zero configuration while still allowing customization. ktlint can automatically fix most style issues and integrates with all major build systems and IDEs.",

  "capabilities": [
    "code_formatting",
    "style_enforcement",
    "auto_fixing",
    "import_ordering",
    "spacing_rules",
    "indentation_rules",
    "custom_rules",
    "editor_config_support"
  ],
  "property_types": ["style_rule", "format_rule"],
  "input_languages": ["kotlin"],
  "output_formats": ["console", "json", "sarif", "checkstyle", "html"],

  "installation": {
    "methods": [
      {"type": "brew", "command": "brew install ktlint"},
      {"type": "gradle", "command": "id(\"org.jlleitschuh.gradle.ktlint\") version \"12.1.0\""},
      {"type": "manual", "command": "curl -sSLO https://github.com/pinterest/ktlint/releases/download/1.3.0/ktlint && chmod a+x ktlint"}
    ],
    "dependencies": ["kotlin"],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://pinterest.github.io/ktlint/",
    "rules": "https://pinterest.github.io/ktlint/latest/rules/standard/",
    "configuration": "https://pinterest.github.io/ktlint/latest/rules/configuration-ktlint/",
    "examples": "https://github.com/pinterest/ktlint"
  },

  "rules": [
    {
      "name": "standard",
      "description": "Official Kotlin coding conventions",
      "examples": ["indentation", "no-wildcard-imports", "max-line-length", "trailing-comma"]
    },
    {
      "name": "experimental",
      "description": "Newer rules not yet in standard set",
      "examples": ["function-signature", "property-naming"]
    }
  ],

  "tactics": [
    {
      "name": "check_files",
      "description": "Check files for style issues",
      "syntax": "ktlint",
      "when_to_use": "CI/CD lint check",
      "examples": ["ktlint", "ktlint \"src/**/*.kt\"", "./gradlew ktlintCheck"]
    },
    {
      "name": "format_files",
      "description": "Auto-fix style issues",
      "syntax": "ktlint -F",
      "when_to_use": "Formatting code before commit",
      "examples": ["ktlint -F", "ktlint --format", "./gradlew ktlintFormat"]
    },
    {
      "name": "generate_baseline",
      "description": "Create baseline for existing issues",
      "syntax": "ktlint --baseline=baseline.xml",
      "when_to_use": "Adopting ktlint in existing project",
      "examples": ["ktlint --baseline=ktlint-baseline.xml"]
    },
    {
      "name": "git_hook",
      "description": "Install git pre-commit hook",
      "syntax": "ktlint installGitPreCommitHook",
      "when_to_use": "Enforce formatting on commit",
      "examples": ["ktlint installGitPreCommitHook", "ktlint installGitPrePushHook"]
    },
    {
      "name": "editor_config",
      "description": "Configure via .editorconfig",
      "syntax": ".editorconfig file",
      "when_to_use": "Project-wide configuration",
      "examples": ["[*.kt]\nktlint_standard_no-wildcard-imports = disabled\nmax_line_length = 120"]
    },
    {
      "name": "suppress_rule",
      "description": "Suppress specific rule",
      "syntax": "@Suppress(\"ktlint:rule-id\")",
      "when_to_use": "Intentional violations",
      "examples": ["@Suppress(\"ktlint:standard:max-line-length\")"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "Exceeded max line length",
      "meaning": "Line is too long",
      "common_causes": ["Long string", "Complex expression", "Many parameters"],
      "fixes": ["Break into multiple lines", "Extract variable", "Use ktlint -F"]
    },
    {
      "pattern": "Unexpected indentation",
      "meaning": "Indentation doesn't match style",
      "common_causes": ["Mixed tabs/spaces", "Wrong indent size"],
      "fixes": ["Run ktlint -F", "Configure editor for 4 spaces"]
    },
    {
      "pattern": "Wildcard import",
      "meaning": "Import uses wildcard (*)",
      "common_causes": ["IDE auto-import settings"],
      "fixes": ["Use explicit imports", "Run ktlint -F"]
    },
    {
      "pattern": "Missing trailing comma",
      "meaning": "Multi-line list/call missing trailing comma",
      "common_causes": ["Style preference"],
      "fixes": ["Add trailing comma", "Run ktlint -F"]
    }
  ],

  "configuration_example": {
    "filename": ".editorconfig",
    "content": "[*.{kt,kts}]\nindent_size = 4\nindent_style = space\nmax_line_length = 120\nktlint_standard_no-wildcard-imports = disabled\nktlint_standard_trailing-comma-on-call-site = enabled\nktlint_standard_trailing-comma-on-declaration-site = enabled"
  },

  "integration": {
    "dashprove_backend": false,
    "ide_support": ["intellij", "android_studio", "vscode"],
    "ci_integration": ["github_actions", "gitlab_ci", "jenkins", "bitrise"]
  },

  "performance": {
    "typical_runtime": "milliseconds to seconds",
    "scalability": "Very fast, handles large codebases",
    "memory_usage": "Low"
  },

  "comparisons": {
    "similar_tools": ["detekt", "android_lint", "spotless"],
    "advantages": [
      "Fast - built for speed",
      "Zero configuration needed",
      "Built-in formatter",
      "Official Kotlin style"
    ],
    "disadvantages": [
      "Formatting only - no code analysis",
      "Less customizable than detekt",
      "Some rules can conflict with team preferences"
    ]
  },

  "metadata": {
    "version": "1.3.0",
    "last_updated": "2025-12-22",
    "maintainer": "Pinterest",
    "license": "MIT"
  }
}
