{
  "id": "detekt",
  "name": "Detekt",
  "category": "kotlin_static_analysis",
  "subcategory": "linter",

  "description": "Static code analysis for Kotlin with 200+ rules",
  "long_description": "Detekt is a static code analysis tool for Kotlin that helps enforce coding standards and detect code smells. It provides over 200 built-in rules covering complexity, naming, style, performance, and potential bugs. Detekt integrates with Gradle, Maven, and IntelliJ IDEA, and supports custom rules written in Kotlin.",

  "capabilities": [
    "code_smell_detection",
    "complexity_analysis",
    "style_enforcement",
    "naming_conventions",
    "performance_issues",
    "potential_bugs",
    "custom_rules",
    "baseline_support"
  ],
  "property_types": ["lint_rule", "code_smell", "complexity_metric"],
  "input_languages": ["kotlin"],
  "output_formats": ["console", "xml", "html", "sarif", "md"],

  "installation": {
    "methods": [
      {"type": "gradle", "command": "id(\"io.gitlab.arturbosch.detekt\") version \"1.23.6\""},
      {"type": "cli", "command": "brew install detekt"},
      {"type": "intellij", "command": "Install 'Detekt' plugin"}
    ],
    "dependencies": ["kotlin"],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://detekt.dev/",
    "rules": "https://detekt.dev/docs/rules/",
    "configuration": "https://detekt.dev/docs/introduction/configurations",
    "examples": "https://github.com/detekt/detekt/tree/main/detekt-sample-extensions"
  },

  "rule_sets": [
    {
      "name": "complexity",
      "description": "Rules about code complexity",
      "examples": ["ComplexMethod", "LongMethod", "LongParameterList", "TooManyFunctions"]
    },
    {
      "name": "coroutines",
      "description": "Rules for Kotlin coroutines",
      "examples": ["GlobalCoroutineUsage", "RedundantSuspendModifier", "SuspendFunWithFlowReturnType"]
    },
    {
      "name": "empty-blocks",
      "description": "Rules about empty code blocks",
      "examples": ["EmptyCatchBlock", "EmptyFunctionBlock", "EmptyIfBlock"]
    },
    {
      "name": "exceptions",
      "description": "Rules about exception handling",
      "examples": ["TooGenericExceptionCaught", "SwallowedException", "ThrowingExceptionsWithoutMessageOrCause"]
    },
    {
      "name": "naming",
      "description": "Rules about naming conventions",
      "examples": ["FunctionNaming", "VariableNaming", "ClassNaming", "PackageNaming"]
    },
    {
      "name": "performance",
      "description": "Rules about performance issues",
      "examples": ["SpreadOperator", "UnnecessaryTemporaryInstantiation", "ArrayPrimitive"]
    },
    {
      "name": "style",
      "description": "Rules about code style",
      "examples": ["MagicNumber", "MaxLineLength", "WildcardImport", "NewLineAtEndOfFile"]
    },
    {
      "name": "potential-bugs",
      "description": "Rules detecting potential bugs",
      "examples": ["EqualsAlwaysReturnsTrueOrFalse", "UnusedPrivateMember", "LateinitUsage"]
    }
  ],

  "tactics": [
    {
      "name": "run_detekt",
      "description": "Run detekt analysis",
      "syntax": "./gradlew detekt",
      "when_to_use": "CI/CD and local analysis",
      "examples": ["./gradlew detekt", "./gradlew detektMain", "./gradlew detektTest"]
    },
    {
      "name": "generate_baseline",
      "description": "Create baseline for existing issues",
      "syntax": "./gradlew detektBaseline",
      "when_to_use": "Adopting detekt in existing project",
      "examples": ["./gradlew detektBaseline"]
    },
    {
      "name": "auto_correct",
      "description": "Auto-fix formatting issues",
      "syntax": "./gradlew detekt --auto-correct",
      "when_to_use": "Fixing formatting automatically",
      "examples": ["./gradlew detekt --auto-correct"]
    },
    {
      "name": "suppress_rule",
      "description": "Suppress specific rule",
      "syntax": "@Suppress(\"RuleName\")",
      "when_to_use": "False positives or intentional violations",
      "examples": ["@Suppress(\"MagicNumber\")\nfun calculate() = 42"]
    },
    {
      "name": "custom_config",
      "description": "Use custom configuration",
      "syntax": "detekt.yml",
      "when_to_use": "Project-specific rules",
      "examples": ["detekt {\n  config = files(\"config/detekt.yml\")\n}"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "ComplexMethod",
      "meaning": "Method is too complex",
      "common_causes": ["Many branches", "Deeply nested code", "Too many conditions"],
      "fixes": ["Extract smaller methods", "Use when expressions", "Simplify logic"]
    },
    {
      "pattern": "MagicNumber",
      "meaning": "Unexplained numeric literal",
      "common_causes": ["Hardcoded values", "Missing constants"],
      "fixes": ["Extract to named constant", "Add explanation comment", "Use enum"]
    },
    {
      "pattern": "TooGenericExceptionCaught",
      "meaning": "Catching too broad exception type",
      "common_causes": ["catch(Exception)", "catch(Throwable)"],
      "fixes": ["Catch specific exception types", "Document why generic catch is needed"]
    },
    {
      "pattern": "UnusedPrivateMember",
      "meaning": "Private member is never used",
      "common_causes": ["Dead code", "Refactoring leftover"],
      "fixes": ["Remove unused code", "Make public if needed externally"]
    }
  ],

  "configuration_example": {
    "filename": "detekt.yml",
    "content": "complexity:\n  ComplexMethod:\n    threshold: 15\n  LongMethod:\n    threshold: 60\n\nstyle:\n  MagicNumber:\n    ignoreNumbers:\n      - '-1'\n      - '0'\n      - '1'\n      - '2'\n  MaxLineLength:\n    maxLineLength: 120\n\nnaming:\n  FunctionNaming:\n    functionPattern: '[a-z][a-zA-Z0-9]*'"
  },

  "integration": {
    "dashprove_backend": false,
    "ide_support": ["intellij", "android_studio"],
    "ci_integration": ["github_actions", "gitlab_ci", "jenkins", "bitrise"]
  },

  "performance": {
    "typical_runtime": "seconds to minutes",
    "scalability": "Handles large codebases with type resolution",
    "memory_usage": "Moderate"
  },

  "comparisons": {
    "similar_tools": ["ktlint", "android_lint", "spotbugs"],
    "advantages": [
      "Comprehensive rule set for Kotlin",
      "Highly configurable",
      "Custom rules support",
      "Good IDE integration"
    ],
    "disadvantages": [
      "Kotlin only",
      "Can be slow with type resolution",
      "Some rules can be noisy"
    ]
  },

  "metadata": {
    "version": "1.23.6",
    "last_updated": "2025-12-22",
    "maintainer": "detekt team",
    "license": "Apache-2.0"
  }
}
