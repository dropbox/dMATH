{
  "id": "proverif",
  "name": "ProVerif",
  "category": "security_protocol",
  "subcategory": "symbolic",

  "description": "Automatic cryptographic protocol verifier",
  "long_description": "ProVerif is an automatic cryptographic protocol verifier based on the formal model of the applied pi-calculus. It can prove secrecy, authentication, and observational equivalence properties.",

  "capabilities": ["protocol_verification", "secrecy", "authentication", "equivalence"],
  "property_types": ["secrecy", "authentication", "equivalence"],
  "input_languages": ["proverif"],
  "output_formats": ["verification_result", "attack_trace"],

  "installation": {
    "methods": [{"type": "source", "url": "https://bblanche.gitlabpages.inria.fr/proverif/"}, {"type": "opam", "command": "opam install proverif"}],
    "dependencies": ["ocaml"],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://bblanche.gitlabpages.inria.fr/proverif/",
    "tutorial": "https://bblanche.gitlabpages.inria.fr/proverif/manual.pdf",
    "api_reference": "https://bblanche.gitlabpages.inria.fr/proverif/",
    "examples": "https://bblanche.gitlabpages.inria.fr/proverif/examples/"
  },

  "tactics": [
    {"name": "query", "description": "Specify property", "syntax": "query attacker(secret).", "when_to_use": "For secrecy queries", "examples": []}
  ],

  "error_patterns": [{"pattern": "RESULT not attacker", "meaning": "Attack found", "common_causes": ["Protocol flaw"], "fixes": ["Review protocol"]}],

  "integration": {"dashprove_backend": true, "usl_property_types": ["security"], "cli_command": "dashprove verify --backend proverif"},

  "performance": {"typical_runtime": "seconds to minutes", "scalability": "Good for unbounded", "memory_usage": "Moderate"},

  "comparisons": {"similar_tools": ["tamarin", "verifpal"], "advantages": ["Unbounded sessions", "Automatic"], "disadvantages": ["False positives"]},

  "metadata": {"version": "2.05", "last_updated": "2025-12-22", "maintainer": "Bruno Blanchet", "license": "GPL-2.0"}
}
