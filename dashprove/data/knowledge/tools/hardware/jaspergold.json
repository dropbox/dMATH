{
  "id": "jaspergold",
  "name": "JasperGold",
  "category": "hardware_verification",
  "subcategory": "formal_property_checking",
  "description": "Cadence formal verification platform for RTL and SoC designs",
  "long_description": "JasperGold is Cadence's commercial formal verification suite for SystemVerilog and VHDL designs. It provides property checking, CDC/RDC analysis, sequential equivalence checking, and app-based flows for security and X-propagation. It integrates with SVA/PSL assertions and produces counterexample waveforms.",
  "capabilities": [
    "formal_property_checking",
    "assertion_based_verification",
    "equivalence_checking",
    "cdc_rdc_analysis",
    "apps_for_security",
    "bounded_proof",
    "cover_property_analysis"
  ],
  "property_types": [
    "assertion",
    "cover",
    "sequential_equivalence"
  ],
  "input_languages": [
    "systemverilog",
    "verilog",
    "vhdl",
    "psl"
  ],
  "output_formats": [
    "counterexample_trace",
    "coverage_report",
    "proof"
  ],
  "installation": {
    "methods": [
      {
        "type": "commercial",
        "command": "Contact Cadence for installation"
      }
    ],
    "dependencies": [
      "license_server"
    ],
    "platforms": [
      "linux"
    ]
  },
  "documentation": {
    "official": "https://www.cadence.com/en_US/home/tools/system-design-and-verification/formal-and-static-verification/jaspergold-verification-platform.html",
    "tutorial": "https://resources.cadence.com/",
    "api_reference": "https://community.cadence.com/cadence_blogs_8/b/sd/posts/what-is-the-cadence-jaspergold-formal-verification-platform",
    "examples": "https://community.cadence.com/cadence_blogs_8/b/formal_verification"
  },
  "tactics": [
    {
      "name": "formal_apps",
      "description": "Use domain-specific apps (CDC, Security, X-prop)",
      "syntax": "jg -apps cdc",
      "when_to_use": "Leverage tuned engines for common property classes",
      "examples": [
        "jg -apps cdc -input design.sv"
      ]
    },
    {
      "name": "assume_guarantee",
      "description": "Decompose proof with assume-guarantee",
      "syntax": "set_proof_strategy assume_guarantee",
      "when_to_use": "Breaking complex SoC proofs into blocks",
      "examples": [
        "set_proof_strategy assume_guarantee"
      ]
    },
    {
      "name": "sequential_equivalence",
      "description": "Compare RTL revisions or ECOs",
      "syntax": "jg -seq_equiv ref.v impl.v",
      "when_to_use": "ECO validation and retiming changes",
      "examples": [
        "jg -seq_equiv golden.sv revised.sv"
      ]
    }
  ],
  "error_patterns": [
    {
      "pattern": "Vacuous pass",
      "meaning": "Assertion passed without being exercised",
      "common_causes": [
        "Disabled clock/reset",
        "Unreachable antecedent"
      ],
      "fixes": [
        "Add cover properties",
        "Check constraints",
        "Improve stimulus"
      ]
    },
    {
      "pattern": "Cone too large",
      "meaning": "State space explosion",
      "common_causes": [
        "Wide datapaths",
        "No abstractions"
      ],
      "fixes": [
        "Abstract memories",
        "Add cutpoints",
        "Strengthen assumptions"
      ]
    },
    {
      "pattern": "Unconstrained inputs",
      "meaning": "Environment not modeled",
      "common_causes": [
        "Missing assumptions",
        "Incorrect reset"
      ],
      "fixes": [
        "Add assume properties",
        "Constrain resets/clocks"
      ]
    }
  ],
  "integration": {
    "dashprove_backend": true,
    "usl_property_types": [
      "hardware_assertion",
      "equivalence"
    ],
    "cli_command": "dashprove verify --backend jaspergold"
  },
  "performance": {
    "typical_runtime": "minutes to hours depending on design size",
    "scalability": "Strong engines with compositional flows",
    "memory_usage": "High for large SoCs"
  },
  "comparisons": {
    "similar_tools": [
      "onespin",
      "symbiyosys",
      "questa_formal"
    ],
    "advantages": [
      "App-based flows",
      "Production support",
      "GUI+batch"
    ],
    "disadvantages": [
      "Commercial licensing",
      "Limited portability"
    ]
  },
  "metadata": {
    "version": "2025.06",
    "last_updated": "2025-12-22",
    "maintainer": "Cadence",
    "license": "Proprietary"
  }
}
