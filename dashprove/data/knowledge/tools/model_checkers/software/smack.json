{
  "id": "smack",
  "name": "SMACK",
  "category": "model_checker",
  "subcategory": "boogie_based",

  "description": "LLVM-to-Boogie verifier for C/C++ and Rust",
  "long_description": "SMACK is a software verification toolchain that translates LLVM bitcode to Boogie, an intermediate verification language. It can verify C, C++, and Rust programs and leverages various back-end verifiers including Corral and Boogie.",

  "capabilities": [
    "llvm_translation",
    "boogie_encoding",
    "assertion_checking",
    "memory_modeling",
    "concurrency_verification"
  ],
  "property_types": ["assertion", "memory_safety"],
  "input_languages": ["c", "cpp", "rust", "llvm_ir"],
  "output_formats": ["counterexample", "boogie_program"],

  "installation": {
    "methods": [
      {"type": "docker", "command": "docker pull smackers/smack"},
      {"type": "source", "url": "https://github.com/smackers/smack"}
    ],
    "dependencies": ["llvm", "boogie", "corral"],
    "platforms": ["linux"]
  },

  "documentation": {
    "official": "https://smackers.github.io/",
    "tutorial": "https://github.com/smackers/smack/blob/main/docs/installation.md",
    "api_reference": "https://smackers.github.io/smack-docs/",
    "examples": "https://github.com/smackers/smack/tree/main/test"
  },

  "tactics": [
    {
      "name": "corral",
      "description": "Use Corral backend",
      "syntax": "--verifier=corral",
      "when_to_use": "For bounded verification",
      "examples": ["smack --verifier=corral program.c"]
    },
    {
      "name": "boogie",
      "description": "Use Boogie backend",
      "syntax": "--verifier=boogie",
      "when_to_use": "For unbounded verification",
      "examples": ["smack --verifier=boogie program.c"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "SMACK found an error",
      "meaning": "Assertion violated",
      "common_causes": ["Bug in program"],
      "fixes": ["Examine counterexample"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["safety", "assertion"],
    "cli_command": "dashprove verify --backend smack"
  },

  "performance": {
    "typical_runtime": "seconds to minutes",
    "scalability": "Good with Boogie",
    "memory_usage": "Moderate"
  },

  "comparisons": {
    "similar_tools": ["seahorn", "cbmc", "kani"],
    "advantages": [
      "Boogie backend flexibility",
      "Rust support",
      "LLVM-based"
    ],
    "disadvantages": [
      "Complex dependencies",
      "Linux only"
    ]
  },

  "metadata": {
    "version": "2.8.0",
    "last_updated": "2025-12-22",
    "maintainer": "University of Utah",
    "license": "MIT"
  }
}
