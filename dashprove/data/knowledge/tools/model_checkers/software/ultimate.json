{
  "id": "ultimate",
  "name": "Ultimate Automizer",
  "category": "model_checker",
  "subcategory": "automata_based",

  "description": "Automata-based software verification framework",
  "long_description": "Ultimate is a program analysis framework that uses automata-based techniques for software verification. Ultimate Automizer is its flagship tool that combines trace abstraction, interpolation, and automata learning for proving safety and termination.",

  "capabilities": [
    "trace_abstraction",
    "interpolation",
    "termination_analysis",
    "memory_safety",
    "cegar"
  ],
  "property_types": ["safety", "termination", "memory_safety"],
  "input_languages": ["c", "boogie"],
  "output_formats": ["counterexample", "witness", "statistics"],

  "installation": {
    "methods": [
      {"type": "download", "url": "https://ultimate.informatik.uni-freiburg.de/"}
    ],
    "dependencies": ["java", "z3"],
    "platforms": ["linux", "windows"]
  },

  "documentation": {
    "official": "https://ultimate.informatik.uni-freiburg.de/",
    "tutorial": "https://github.com/ultimate-pa/ultimate/wiki",
    "api_reference": "https://github.com/ultimate-pa/ultimate/wiki",
    "examples": "https://github.com/ultimate-pa/ultimate/tree/dev/trunk/examples"
  },

  "tactics": [
    {
      "name": "automizer",
      "description": "Trace abstraction algorithm",
      "syntax": "Ultimate Automizer settings",
      "when_to_use": "For safety verification",
      "examples": []
    },
    {
      "name": "taipan",
      "description": "Termination analysis",
      "syntax": "Ultimate Taipan settings",
      "when_to_use": "For termination proofs",
      "examples": []
    }
  ],

  "error_patterns": [
    {
      "pattern": "Result: FALSE",
      "meaning": "Property violated",
      "common_causes": ["Bug found"],
      "fixes": ["Examine counterexample"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["safety", "termination"],
    "cli_command": "dashprove verify --backend ultimate"
  },

  "performance": {
    "typical_runtime": "seconds to hours",
    "scalability": "SV-COMP competitive",
    "memory_usage": "High (Java)"
  },

  "comparisons": {
    "similar_tools": ["cpachecker", "seahorn", "cbmc"],
    "advantages": [
      "Termination analysis",
      "Automata-based abstraction",
      "SV-COMP winner"
    ],
    "disadvantages": [
      "Java overhead",
      "Complex architecture"
    ]
  },

