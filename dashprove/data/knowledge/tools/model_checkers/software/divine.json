{
  "id": "divine",
  "name": "DIVINE",
  "category": "model_checker",
  "subcategory": "explicit_state",

  "description": "Parallel explicit-state model checker",
  "long_description": "DIVINE is a modern explicit-state model checker designed for parallel and distributed verification. It verifies LTL properties and supports C/C++ programs via LLVM. DIVINE excels at finding concurrency bugs through systematic state space exploration.",

  "capabilities": [
    "explicit_state_checking",
    "parallel_verification",
    "ltl_model_checking",
    "concurrency_verification",
    "llvm_verification"
  ],
  "property_types": ["ltl", "assertion", "reachability"],
  "input_languages": ["c", "cpp", "llvm_ir", "divine_dve"],
  "output_formats": ["counterexample_trace", "statistics"],

  "installation": {
    "methods": [
      {"type": "source", "url": "https://divine.fi.muni.cz/"}
    ],
    "dependencies": ["llvm", "cmake"],
    "platforms": ["linux"]
  },

  "documentation": {
    "official": "https://divine.fi.muni.cz/",
    "tutorial": "https://divine.fi.muni.cz/manual.html",
    "api_reference": "https://divine.fi.muni.cz/manual.html",
    "examples": "https://divine.fi.muni.cz/examples.html"
  },

  "tactics": [
    {
      "name": "verify",
      "description": "Full state space exploration",
      "syntax": "divine verify program",
      "when_to_use": "For complete verification",
      "examples": ["divine verify program.c"]
    },
    {
      "name": "sim",
      "description": "Interactive simulation",
      "syntax": "divine sim program",
      "when_to_use": "For debugging",
      "examples": ["divine sim program.c"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "assertion failed",
      "meaning": "Assertion violated",
      "common_causes": ["Bug in program"],
      "fixes": ["Examine trace"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["safety", "liveness"],
    "cli_command": "dashprove verify --backend divine"
  },

  "performance": {
    "typical_runtime": "seconds to hours",
    "scalability": "Good with parallelism",
    "memory_usage": "High for large state spaces"
  },

  "comparisons": {
    "similar_tools": ["spin", "cbmc", "esbmc"],
    "advantages": [
      "Parallel verification",
      "LLVM-based",
      "Good for concurrency"
    ],
    "disadvantages": [
      "Linux only",
      "Complex setup"
    ]
  },

  "metadata": {
    "version": "4.4.2",
    "last_updated": "2025-12-22",
    "maintainer": "Masaryk University",
    "license": "ISC"
  }
}
