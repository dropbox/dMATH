{
  "id": "cpachecker",
  "name": "CPAchecker",
  "category": "model_checker",
  "subcategory": "configurable",

  "description": "Configurable software verification framework",
  "long_description": "CPAchecker is a highly configurable framework for software verification. It implements the Configurable Program Analysis (CPA) concept, allowing different analysis techniques to be combined. It has won multiple SV-COMP competitions.",

  "capabilities": [
    "predicate_abstraction",
    "value_analysis",
    "bdd_based_analysis",
    "cegar",
    "bmc",
    "k_induction",
    "symbolic_execution"
  ],
  "property_types": ["reachability", "memory_safety", "overflow", "termination"],
  "input_languages": ["c"],
  "output_formats": ["counterexample_trace", "witness", "statistics"],

  "installation": {
    "methods": [
      {"type": "download", "url": "https://cpachecker.sosy-lab.org/download.php"},
      {"type": "source", "url": "https://github.com/sosy-lab/cpachecker"}
    ],
    "dependencies": ["java", "python"],
    "platforms": ["linux", "macos"]
  },

  "documentation": {
    "official": "https://cpachecker.sosy-lab.org/",
    "tutorial": "https://cpachecker.sosy-lab.org/doc.php",
    "api_reference": "https://cpachecker.sosy-lab.org/doc/Configuration.html",
    "examples": "https://github.com/sosy-lab/cpachecker/tree/trunk/test/programs"
  },

  "tactics": [
    {
      "name": "predicateAnalysis",
      "description": "Predicate abstraction with CEGAR",
      "syntax": "-predicateAnalysis",
      "when_to_use": "For complex control flow",
      "examples": ["cpachecker -predicateAnalysis program.c"]
    },
    {
      "name": "valueAnalysis",
      "description": "Explicit value tracking",
      "syntax": "-valueAnalysis",
      "when_to_use": "For data-dependent bugs",
      "examples": ["cpachecker -valueAnalysis program.c"]
    },
    {
      "name": "bmc",
      "description": "Bounded model checking",
      "syntax": "-bmc-incremental",
      "when_to_use": "For quick bug finding",
      "examples": ["cpachecker -bmc-incremental program.c"]
    },
    {
      "name": "kInduction",
      "description": "K-induction",
      "syntax": "-kInduction",
      "when_to_use": "For proving safety",
      "examples": ["cpachecker -kInduction program.c"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "Verification result: FALSE",
      "meaning": "Property violated",
      "common_causes": ["Bug in program"],
      "fixes": ["Examine counterexample"]
    },
    {
      "pattern": "Verification result: UNKNOWN",
      "meaning": "Could not determine",
      "common_causes": ["Timeout", "Precision issue"],
      "fixes": ["Try different analysis", "Increase resources"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["safety", "reachability"],
    "cli_command": "dashprove verify --backend cpachecker"
  },

  "performance": {
    "typical_runtime": "seconds to hours",
    "scalability": "Good with right configuration",
    "memory_usage": "Variable"
  },

  "comparisons": {
    "similar_tools": ["ultimate", "seahorn", "cbmc"],
    "advantages": [
      "Highly configurable",
      "SV-COMP winner",
      "Multiple algorithms"
    ],
    "disadvantages": [
      "Configuration complexity",
      "Java overhead"
    ]
  },

  "metadata": {
    "version": "2.3",
    "last_updated": "2025-12-22",
    "maintainer": "LMU Munich",
    "license": "Apache-2.0"
  }
}
