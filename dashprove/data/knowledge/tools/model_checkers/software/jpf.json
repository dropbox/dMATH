{
  "id": "jpf",
  "name": "Java PathFinder",
  "category": "model_checker",
  "subcategory": "java",

  "description": "Explicit-state model checker for Java bytecode",
  "long_description": "Java PathFinder (JPF) is an extensible software verification framework for Java bytecode. It executes Java programs on a special JVM that can systematically explore all execution paths, enabling verification of multi-threaded Java programs.",

  "capabilities": [
    "java_verification",
    "concurrency_checking",
    "symbolic_execution",
    "state_matching",
    "choice_generation"
  ],
  "property_types": ["assertion", "deadlock", "race_condition"],
  "input_languages": ["java_bytecode"],
  "output_formats": ["counterexample_trace", "statistics"],

  "installation": {
    "methods": [
      {"type": "source", "url": "https://github.com/javapathfinder/jpf-core"}
    ],
    "dependencies": ["java", "gradle"],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://github.com/javapathfinder/jpf-core/wiki",
    "tutorial": "https://github.com/javapathfinder/jpf-core/wiki/How-to-use-JPF",
    "api_reference": "https://github.com/javapathfinder/jpf-core/wiki",
    "examples": "https://github.com/javapathfinder/jpf-core/tree/master/src/examples"
  },

  "tactics": [
    {
      "name": "search",
      "description": "Search strategy",
      "syntax": "search.class = .search.DFSearch",
      "when_to_use": "Configure search algorithm",
      "examples": ["search.class = .search.BFSHeuristic"]
    },
    {
      "name": "listener",
      "description": "Add verification listener",
      "syntax": "listener = .listener.PreciseRaceDetector",
      "when_to_use": "Enable specific checks",
      "examples": ["listener = .listener.DeadlockAnalyzer"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "error: assertion violated",
      "meaning": "Assertion failed",
      "common_causes": ["Bug in program"],
      "fixes": ["Examine trace"]
    },
    {
      "pattern": "error: deadlock detected",
      "meaning": "Deadlock found",
      "common_causes": ["Lock ordering bug"],
      "fixes": ["Fix lock ordering"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["safety", "concurrency"],
    "cli_command": "dashprove verify --backend jpf"
  },

  "performance": {
    "typical_runtime": "seconds to hours",
    "scalability": "Limited by state space",
    "memory_usage": "High for large programs"
  },

  "comparisons": {
    "similar_tools": ["key", "openjml", "chess"],
    "advantages": [
      "JVM-level verification",
      "Extensible architecture",
      "Mature tool"
    ],
    "disadvantages": [
      "State explosion",
      "Complex configuration"
    ]
  },

  "metadata": {
    "version": "8.0",
    "last_updated": "2025-12-22",
    "maintainer": "NASA Ames",
    "license": "Apache-2.0"
  }
}
