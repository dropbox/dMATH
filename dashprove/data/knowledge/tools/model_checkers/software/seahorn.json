{
  "id": "seahorn",
  "name": "SeaHorn",
  "category": "model_checker",
  "subcategory": "horn_clause",

  "description": "Verification framework based on Horn clause solving",
  "long_description": "SeaHorn is an automated analysis framework for LLVM-based languages. It uses Constrained Horn Clauses (CHC) as an intermediate representation and supports various back-end solvers including Spacer (IC3/PDR) and Z3.",

  "capabilities": [
    "horn_clause_solving",
    "ic3_pdr",
    "abstract_interpretation",
    "property_directed_reachability",
    "llvm_verification"
  ],
  "property_types": ["safety", "assertion", "memory_safety"],
  "input_languages": ["c", "cpp", "llvm_ir"],
  "output_formats": ["counterexample", "invariant"],

  "installation": {
    "methods": [
      {"type": "docker", "command": "docker pull seahorn/seahorn"},
      {"type": "source", "url": "https://github.com/seahorn/seahorn"}
    ],
    "dependencies": ["llvm", "z3", "cmake"],
    "platforms": ["linux"]
  },

  "documentation": {
    "official": "https://seahorn.github.io/",
    "tutorial": "https://seahorn.github.io/seahorn/tutorial.html",
    "api_reference": "https://github.com/seahorn/seahorn/wiki",
    "examples": "https://github.com/seahorn/seahorn/tree/main/test"
  },

  "tactics": [
    {
      "name": "spacer",
      "description": "IC3/PDR-based solver",
      "syntax": "--horn-pdr",
      "when_to_use": "For safety verification",
      "examples": ["sea pf --horn-pdr program.c"]
    },
    {
      "name": "bmc",
      "description": "Bounded model checking",
      "syntax": "--bmc",
      "when_to_use": "For bug finding",
      "examples": ["sea bpf program.c"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "sat",
      "meaning": "Property violated (bug found)",
      "common_causes": ["Bug in program"],
      "fixes": ["Examine counterexample"]
    },
    {
      "pattern": "unsat",
      "meaning": "Property verified",
      "common_causes": [],
      "fixes": []
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["safety", "assertion"],
    "cli_command": "dashprove verify --backend seahorn"
  },

  "performance": {
    "typical_runtime": "seconds to hours",
    "scalability": "Good with CHC encoding",
    "memory_usage": "Moderate"
  },

  "comparisons": {
    "similar_tools": ["cpachecker", "eldarica", "z3"],
    "advantages": [
      "LLVM-based (language agnostic)",
      "CHC standard",
      "Efficient Spacer backend"
    ],
    "disadvantages": [
      "Complex setup",
      "Linux only"
    ]
  },

  "metadata": {
    "version": "0.1.0",
    "last_updated": "2025-12-22",
    "maintainer": "University of Waterloo",
    "license": "BSD-3"
  }
}
