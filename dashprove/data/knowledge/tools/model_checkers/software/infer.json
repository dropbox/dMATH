{
  "id": "infer",
  "name": "Infer",
  "category": "model_checker",
  "subcategory": "abstract_interpretation",

  "description": "Facebook's static analyzer for mobile and systems code",
  "long_description": "Infer is a static analysis tool developed by Facebook (Meta) that uses separation logic and bi-abduction to find bugs in Java, C, C++, and Objective-C code. It can detect null pointer dereferences, memory leaks, data races, and other issues.",

  "capabilities": [
    "null_pointer_detection",
    "memory_leak_detection",
    "race_detection",
    "resource_leak_detection",
    "separation_logic"
  ],
  "property_types": ["memory_safety", "null_safety", "resource_safety"],
  "input_languages": ["c", "cpp", "java", "objective_c"],
  "output_formats": ["json_report", "text_report"],

  "installation": {
    "methods": [
      {"type": "brew", "command": "brew install infer"},
      {"type": "apt", "command": "apt install infer"},
      {"type": "source", "url": "https://github.com/facebook/infer"}
    ],
    "dependencies": ["opam", "clang"],
    "platforms": ["linux", "macos"]
  },

  "documentation": {
    "official": "https://fbinfer.com/",
    "tutorial": "https://fbinfer.com/docs/getting-started",
    "api_reference": "https://fbinfer.com/docs/all-issue-types",
    "examples": "https://github.com/facebook/infer/tree/main/infer/tests"
  },

  "tactics": [
    {
      "name": "biabduction",
      "description": "Bi-abductive analysis",
      "syntax": "--biabduction",
      "when_to_use": "For memory bugs",
      "examples": ["infer run --biabduction -- make"]
    },
    {
      "name": "racerd",
      "description": "Race condition detection",
      "syntax": "--racerd",
      "when_to_use": "For concurrency bugs",
      "examples": ["infer run --racerd -- javac Main.java"]
    },
    {
      "name": "nullsafe",
      "description": "Null safety analysis",
      "syntax": "--nullsafe",
      "when_to_use": "For null pointer issues",
      "examples": ["infer run --nullsafe -- javac Main.java"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "NULL_DEREFERENCE",
      "meaning": "Potential null pointer dereference",
      "common_causes": ["Missing null check"],
      "fixes": ["Add null check"]
    },
    {
      "pattern": "RESOURCE_LEAK",
      "meaning": "Resource not closed",
      "common_causes": ["Missing close/free"],
      "fixes": ["Add resource cleanup"]
    },
    {
      "pattern": "THREAD_SAFETY_VIOLATION",
      "meaning": "Potential data race",
      "common_causes": ["Missing synchronization"],
      "fixes": ["Add proper locking"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["memory_safety", "resource_safety"],
    "cli_command": "dashprove verify --backend infer"
  },

  "performance": {
    "typical_runtime": "minutes",
    "scalability": "Millions of lines of code",
    "memory_usage": "Moderate"
  },

  "comparisons": {
    "similar_tools": ["coverity", "codesonar", "pvs-studio"],
    "advantages": [
      "Incremental analysis",
      "Separation logic precision",
      "Used at Facebook scale"
    ],
    "disadvantages": [
      "False positives",
      "Configuration complexity"
    ]
  },

  "metadata": {
    "version": "1.1.0",
    "last_updated": "2025-12-22",
    "maintainer": "Meta",
    "license": "MIT"
  }
}
