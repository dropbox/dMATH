{
  "id": "prism",
  "name": "PRISM Model Checker",
  "category": "model_checkers",
  "subcategory": "probabilistic",
  "description": "Probabilistic model checker for DTMCs, MDPs, CTMCs with GUI",
  "long_description": "PRISM is a probabilistic model checker for analyzing systems with stochastic or random behavior. It supports Discrete-Time Markov Chains (DTMCs), Continuous-Time Markov Chains (CTMCs), Markov Decision Processes (MDPs), and Probabilistic Timed Automata. Features symbolic model representation and graphical interface.",
  "capabilities": [
    "dtmc_verification",
    "ctmc_verification",
    "mdp_verification",
    "pta_verification",
    "pctl_checking",
    "csl_checking",
    "ltl_checking",
    "reward_analysis",
    "simulation",
    "statistical_model_checking"
  ],
  "property_types": [
    "probabilistic",
    "reward",
    "steady_state",
    "transient"
  ],
  "input_languages": [
    "prism"
  ],
  "output_formats": [
    "probability",
    "expected_value",
    "trace",
    "graph"
  ],
  "installation": {
    "methods": [
      {
        "type": "download",
        "url": "https://www.prismmodelchecker.org/download.php"
      },
      {
        "type": "source",
        "url": "https://github.com/prismmodelchecker/prism"
      }
    ],
    "dependencies": [
      "java"
    ],
    "platforms": [
      "linux",
      "macos",
      "windows"
    ]
  },
  "documentation": {
    "official": "https://www.prismmodelchecker.org/",
    "tutorial": "https://www.prismmodelchecker.org/tutorial/",
    "api_reference": "https://www.prismmodelchecker.org/manual/",
    "examples": "https://www.prismmodelchecker.org/casestudies/"
  },
  "tactics": [
    {
      "name": "check",
      "description": "Verify PCTL/CSL property",
      "syntax": "prism model.pm property.pctl",
      "when_to_use": "Computing probability of property",
      "examples": [
        "prism dice.pm -pf 'P=? [F s=7]'"
      ]
    },
    {
      "name": "simulate",
      "description": "Statistical model checking",
      "syntax": "prism model.pm -sim -simsamples N",
      "when_to_use": "When exact analysis is too expensive",
      "examples": [
        "prism model.pm -sim -simsamples 10000 -pf 'P=? [F goal]'"
      ]
    },
    {
      "name": "steady_state",
      "description": "Compute steady-state probabilities",
      "syntax": "prism model.pm -ss",
      "when_to_use": "Analyzing long-run behavior",
      "examples": [
        "prism model.pm -ss -pf 'S=? [error]'"
      ]
    },
    {
      "name": "export",
      "description": "Export model",
      "syntax": "prism model.pm -exportmodel out",
      "when_to_use": "Saving model for other tools",
      "examples": [
        "prism model.pm -exportmodel model.dot -exporttarget dot"
      ]
    }
  ],
  "error_patterns": [
    {
      "pattern": "Out of memory",
      "meaning": "State space too large",
      "common_causes": [
        "Large parameter ranges",
        "Many variables"
      ],
      "fixes": [
        "Use hybrid engine",
        "Reduce scope",
        "Abstract model"
      ]
    },
    {
      "pattern": "Model deadlock",
      "meaning": "No transitions from some state",
      "common_causes": [
        "Missing guards",
        "Incomplete specification"
      ],
      "fixes": [
        "Add missing transitions",
        "Use 'nondeterminism' option"
      ]
    },
    {
      "pattern": "Property error",
      "meaning": "Invalid property specification",
      "common_causes": [
        "Syntax error",
        "Wrong operator for model type"
      ],
      "fixes": [
        "Check property syntax",
        "Match operator to model type"
      ]
    }
  ],
  "integration": {
    "dashprove_backend": true,
    "usl_property_types": [
      "probabilistic"
    ],
    "cli_command": "dashprove verify --backend prism"
  },
  "performance": {
    "typical_runtime": "Seconds to hours",
    "scalability": "Millions of states (symbolic)",
    "memory_usage": "Depends on engine (MTBDD vs explicit)"
  },
  "comparisons": {
    "similar_tools": [
      "storm",
      "modest",
      "plasma"
    ],
    "advantages": [
      "Mature and well-documented",
      "GUI for model development",
      "Large case study library",
      "Statistical model checking"
    ],
    "disadvantages": [
      "Slower than Storm for some cases",
      "Less flexible than newer tools"
    ]
  },
  "metadata": {
    "version": "4.8",
    "last_updated": "2025-12-20",
    "maintainer": "University of Oxford / University of Birmingham",
    "license": "GPL-2.0"
  }
}
