{
  "id": "apalache",
  "name": "Apalache",
  "category": "model_checker",
  "subcategory": "symbolic",

  "description": "Symbolic model checker for TLA+",
  "long_description": "Apalache is a symbolic model checker for TLA+ that uses SMT solving instead of explicit state enumeration. It can handle unbounded verification problems that would cause state explosion in TLC, and provides bounded model checking with much better scalability for complex specifications.",

  "capabilities": [
    "symbolic_model_checking",
    "smt_based",
    "bounded_verification",
    "type_checking",
    "unbounded_data",
    "counterexample_generation"
  ],
  "property_types": ["invariant", "temporal", "type"],
  "input_languages": ["tla+"],
  "output_formats": ["counterexample", "json", "itf"],

  "installation": {
    "methods": [
      {"type": "brew", "command": "brew install apalache"},
      {"type": "download", "url": "https://github.com/informalsystems/apalache/releases"}
    ],
    "dependencies": ["java", "z3"],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://apalache.informal.systems/",
    "tutorial": "https://apalache.informal.systems/docs/tutorials/",
    "api_reference": "https://apalache.informal.systems/docs/apalache/",
    "examples": "https://github.com/informalsystems/apalache/tree/main/test/tla"
  },

  "tactics": [
    {
      "name": "check",
      "description": "Check invariant",
      "syntax": "apalache-mc check --inv=Inv spec.tla",
      "when_to_use": "For bounded model checking",
      "examples": ["apalache-mc check --inv=Safety --length=10 Spec.tla"]
    },
    {
      "name": "typecheck",
      "description": "Type check specification",
      "syntax": "apalache-mc typecheck spec.tla",
      "when_to_use": "To find type errors before model checking",
      "examples": ["apalache-mc typecheck Spec.tla"]
    },
    {
      "name": "simulate",
      "description": "Random simulation",
      "syntax": "apalache-mc simulate spec.tla",
      "when_to_use": "For quick exploration",
      "examples": ["apalache-mc simulate --length=20 Spec.tla"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "Invariant violation",
      "meaning": "Property doesn't hold within bound",
      "common_causes": ["Bug in spec", "Property too strong"],
      "fixes": ["Examine counterexample", "Fix spec"]
    },
    {
      "pattern": "Type error",
      "meaning": "Type annotation mismatch",
      "common_causes": ["Missing type annotation", "Wrong type"],
      "fixes": ["Add @type annotations", "Fix type mismatch"]
    },
    {
      "pattern": "SMT timeout",
      "meaning": "SMT solver couldn't decide",
      "common_causes": ["Complex arithmetic", "Large formula"],
      "fixes": ["Simplify spec", "Reduce bound"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["invariant", "temporal"],
    "cli_command": "dashprove verify --backend apalache"
  },

  "performance": {
    "typical_runtime": "seconds to hours",
    "scalability": "Better than TLC for complex specs",
    "memory_usage": "4-32GB"
  },

  "comparisons": {
    "similar_tools": ["tlc", "spin", "nusmv"],
    "advantages": [
      "Handles unbounded data",
      "Type checking",
      "SMT-based (no state enumeration)",
      "Good counterexamples"
    ],
    "disadvantages": [
      "Bounded checking",
      "Not all TLA+ features supported",
      "Slower for finite state specs"
    ]
  },

  "metadata": {
    "version": "0.44.0",
    "last_updated": "2025-12-20",
    "maintainer": "Informal Systems",
    "license": "Apache-2.0"
  }
}
