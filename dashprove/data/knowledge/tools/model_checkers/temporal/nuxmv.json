{
  "id": "nuxmv",
  "name": "nuXmv",
  "category": "model_checker",
  "subcategory": "symbolic",

  "description": "Extended NuSMV with infinite-state and SMT-based verification",
  "long_description": "nuXmv extends NuSMV with support for infinite-state systems using SMT-based model checking techniques including IC3/PDR. It supports integer and real arithmetic, making it suitable for hybrid and software systems.",

  "capabilities": [
    "ctl_model_checking",
    "ltl_model_checking",
    "infinite_state",
    "ic3_pdr",
    "smt_based_bmc",
    "k_induction",
    "interpolation"
  ],
  "property_types": ["ctl", "ltl", "invar", "ltlf"],
  "input_languages": ["smv", "vmt"],
  "output_formats": ["counterexample_trace", "invariant_certificate"],

  "installation": {
    "methods": [
      {"type": "download", "url": "https://nuxmv.fbk.eu/download.html"}
    ],
    "dependencies": ["mathsat"],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://nuxmv.fbk.eu/",
    "tutorial": "https://nuxmv.fbk.eu/pmwiki.php?n=Download.Download",
    "api_reference": "https://nuxmv.fbk.eu/pmwiki.php?n=Documentation.Documentation",
    "examples": "https://nuxmv.fbk.eu/examples/"
  },

  "tactics": [
    {
      "name": "ic3",
      "description": "Property-directed reachability",
      "syntax": "check_invar_ic3 -p \"property\"",
      "when_to_use": "For invariant checking",
      "examples": ["check_invar_ic3 -p \"x >= 0\""]
    },
    {
      "name": "kind",
      "description": "K-induction",
      "syntax": "check_invar_kind -k N",
      "when_to_use": "For inductive invariants",
      "examples": ["check_invar_kind -k 10 -p \"inv\""]
    },
    {
      "name": "bmc_smt",
      "description": "SMT-based bounded model checking",
      "syntax": "msat_check_ltlspec_bmc",
      "when_to_use": "For infinite-state systems",
      "examples": ["msat_check_ltlspec_bmc -k 50"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "is false",
      "meaning": "Property violated",
      "common_causes": ["Design bug"],
      "fixes": ["Analyze counterexample"]
    },
    {
      "pattern": "timeout",
      "meaning": "Verification exceeded time limit",
      "common_causes": ["Complex property", "Large state space"],
      "fixes": ["Increase timeout", "Simplify model", "Try different algorithm"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["temporal", "safety", "invariant"],
    "cli_command": "dashprove verify --backend nuxmv"
  },

  "performance": {
    "typical_runtime": "seconds to hours",
    "scalability": "Good for infinite-state",
    "memory_usage": "Moderate"
  },

  "comparisons": {
    "similar_tools": ["nusmv", "kind2", "ic3ref"],
    "advantages": [
      "IC3/PDR support",
      "Infinite-state verification",
      "Multiple algorithms"
    ],
    "disadvantages": [
      "Non-commercial license",
      "Learning curve"
    ]
  },

  "metadata": {
    "version": "2.0.0",
    "last_updated": "2025-12-22",
    "maintainer": "FBK",
    "license": "Non-commercial"
  }
}
