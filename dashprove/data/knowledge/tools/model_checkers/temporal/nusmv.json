{
  "id": "nusmv",
  "name": "NuSMV",
  "category": "model_checker",
  "subcategory": "symbolic",

  "description": "Symbolic model checker for CTL and LTL properties",
  "long_description": "NuSMV is a reimplementation and extension of SMV (Symbolic Model Verifier). It supports both Binary Decision Diagram (BDD)-based symbolic model checking and SAT-based bounded model checking for CTL and LTL specifications.",

  "capabilities": [
    "ctl_model_checking",
    "ltl_model_checking",
    "bdd_symbolic_checking",
    "bounded_model_checking",
    "counterexample_generation",
    "fairness_constraints"
  ],
  "property_types": ["ctl", "ltl", "invar", "compute"],
  "input_languages": ["smv"],
  "output_formats": ["counterexample_trace", "witness"],

  "installation": {
    "methods": [
      {"type": "apt", "command": "apt install nusmv"},
      {"type": "source", "url": "https://nusmv.fbk.eu/"}
    ],
    "dependencies": ["cudd"],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://nusmv.fbk.eu/",
    "tutorial": "https://nusmv.fbk.eu/NuSMV/tutorial/v26/tutorial.pdf",
    "api_reference": "https://nusmv.fbk.eu/NuSMV/userman/v26/nusmv.pdf",
    "examples": "https://nusmv.fbk.eu/examples/examples.html"
  },

  "tactics": [
    {
      "name": "check_ctlspec",
      "description": "Verify CTL property",
      "syntax": "check_ctlspec -p \"formula\"",
      "when_to_use": "For branching time properties",
      "examples": ["check_ctlspec -p \"AG !error\""]
    },
    {
      "name": "check_ltlspec",
      "description": "Verify LTL property",
      "syntax": "check_ltlspec -p \"formula\"",
      "when_to_use": "For linear time properties",
      "examples": ["check_ltlspec -p \"G F done\""]
    },
    {
      "name": "bmc",
      "description": "Bounded model checking",
      "syntax": "check_ltlspec_bmc -k N",
      "when_to_use": "For large state spaces",
      "examples": ["check_ltlspec_bmc -k 30 -p \"G !error\""]
    },
    {
      "name": "cone_of_influence",
      "description": "Automatic abstraction",
      "syntax": "set cone_of_influence",
      "when_to_use": "To focus on relevant variables",
      "examples": ["set cone_of_influence"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "is false",
      "meaning": "Property violated",
      "common_causes": ["Design bug", "Incomplete spec"],
      "fixes": ["Review counterexample", "Fix model"]
    },
    {
      "pattern": "too many BDD nodes",
      "meaning": "State explosion",
      "common_causes": ["Large state space", "Many variables"],
      "fixes": ["Use BMC", "Apply abstraction", "Reorder variables"]
    },
    {
      "pattern": "parse error",
      "meaning": "Invalid input syntax",
      "common_causes": ["Syntax error in SMV file"],
      "fixes": ["Check SMV syntax"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["temporal", "safety", "liveness"],
    "cli_command": "dashprove verify --backend nusmv"
  },

  "performance": {
    "typical_runtime": "seconds to hours",
    "scalability": "Good with symbolic methods",
    "memory_usage": "Variable (BDD size)"
  },

  "comparisons": {
    "similar_tools": ["nuxmv", "spin", "ic3"],
    "advantages": [
      "Both BDD and SAT backends",
      "CTL and LTL support",
      "Mature tool"
    ],
    "disadvantages": [
      "Superseded by nuXmv",
      "Limited expressiveness"
    ]
  },

  "metadata": {
    "version": "2.6.0",
    "last_updated": "2025-12-22",
    "maintainer": "FBK",
    "license": "LGPL"
  }
}
