{
  "id": "uppaal",
  "name": "UPPAAL",
  "category": "model_checker",
  "subcategory": "timed_automata",

  "description": "Model checker for real-time systems with timed automata",
  "long_description": "UPPAAL is an integrated tool environment for modeling, validation, and verification of real-time systems modeled as networks of timed automata. It supports TCTL (Timed CTL) properties and provides a graphical simulator and verifier.",

  "capabilities": [
    "timed_automata",
    "tctl_verification",
    "reachability_analysis",
    "simulation",
    "graphical_modeling",
    "clock_constraints"
  ],
  "property_types": ["tctl", "reachability", "safety", "liveness"],
  "input_languages": ["uppaal_xml", "uppaal_ta"],
  "output_formats": ["counterexample_trace", "diagnostic_trace"],

  "installation": {
    "methods": [
      {"type": "download", "url": "https://uppaal.org/downloads/"}
    ],
    "dependencies": ["java"],
    "platforms": ["linux", "macos", "windows"]
  },

  "documentation": {
    "official": "https://uppaal.org/",
    "tutorial": "https://uppaal.org/learning/",
    "api_reference": "https://docs.uppaal.org/",
    "examples": "https://uppaal.org/examples/"
  },

  "tactics": [
    {
      "name": "reachability",
      "description": "Check if state is reachable",
      "syntax": "E<> condition",
      "when_to_use": "For deadlock detection, error reachability",
      "examples": ["E<> Process.error", "E<> deadlock"]
    },
    {
      "name": "safety",
      "description": "Check invariant holds",
      "syntax": "A[] condition",
      "when_to_use": "For safety properties",
      "examples": ["A[] not Process.error", "A[] clock <= 10"]
    },
    {
      "name": "liveness",
      "description": "Eventually condition holds",
      "syntax": "A<> condition or condition --> condition",
      "when_to_use": "For liveness properties",
      "examples": ["A<> Process.done", "request --> granted"]
    }
  ],

  "error_patterns": [
    {
      "pattern": "Property is NOT satisfied",
      "meaning": "TCTL property violated",
      "common_causes": ["Timing constraint violated", "Race condition"],
      "fixes": ["Adjust timing constraints", "Fix synchronization"]
    },
    {
      "pattern": "State space too large",
      "meaning": "Verification exceeded resources",
      "common_causes": ["Too many clocks", "Unbounded variables"],
      "fixes": ["Reduce clocks", "Use abstractions"]
    }
  ],

  "integration": {
    "dashprove_backend": true,
    "usl_property_types": ["temporal", "timed", "real_time"],
    "cli_command": "dashprove verify --backend uppaal"
  },

  "performance": {
    "typical_runtime": "seconds to hours",
    "scalability": "Limited by clock count",
    "memory_usage": "High for many clocks"
  },

  "comparisons": {
    "similar_tools": ["kronos", "red", "prism"],
    "advantages": [
      "Excellent GUI",
      "Widely used in industry",
      "Good documentation"
    ],
    "disadvantages": [
      "Closed source engine",
      "Limited expressiveness",
      "Academic license required"
    ]
  },

  "metadata": {
    "version": "5.0",
    "last_updated": "2025-12-22",
    "maintainer": "Uppsala University and Aalborg University",
    "license": "Academic"
  }
}
