{
  "tool": "sharp",
  "category": "image_processing",
  "description": "High-performance Node.js image processing",
  "errors": [
    {
      "pattern": "Could not load the \"sharp\" module|Cannot find module 'sharp'",
      "meaning": "Sharp native module not installed",
      "causes": ["Native bindings not compiled", "Platform mismatch", "npm install failed"],
      "solutions": ["Run npm rebuild sharp", "Delete node_modules and reinstall", "Check platform compatibility"]
    },
    {
      "pattern": "Input file is missing|Input buffer contains unsupported image format",
      "meaning": "Invalid or missing input",
      "causes": ["Empty buffer", "Unsupported format", "Corrupted image"],
      "solutions": ["Verify input file exists", "Check supported formats", "Validate image before processing"]
    },
    {
      "pattern": "Invalid.*width|Invalid.*height",
      "meaning": "Invalid dimensions specified",
      "causes": ["Zero or negative dimensions", "Non-integer values", "String instead of number"],
      "solutions": ["Use positive integer dimensions", "Parse strings to integers", "Validate dimensions before use"]
    },
    {
      "pattern": "VipsJpeg.*Premature end of input",
      "meaning": "Truncated/corrupted JPEG",
      "causes": ["Incomplete file", "Corrupted image data", "Interrupted download"],
      "solutions": ["Re-obtain image file", "Use failOn option", "Validate image completeness"]
    },
    {
      "pattern": "memory allocation failed|heap out of memory",
      "meaning": "Insufficient memory",
      "causes": ["Image too large", "Too many concurrent operations", "Memory leak"],
      "solutions": ["Increase Node.js memory: node --max-old-space-size=4096", "Process images sequentially", "Use streaming for large images"]
    },
    {
      "pattern": "Expected.*but received.*instead",
      "meaning": "Pipeline configuration error",
      "causes": ["Chaining methods incorrectly", "Missing required method", "Type mismatch"],
      "solutions": ["Check method chaining order", "Review sharp API docs", "Ensure correct parameter types"]
    },
    {
      "pattern": "libvips.*not found|VIPS.*error",
      "meaning": "libvips dependency issue",
      "causes": ["libvips not installed", "Version mismatch", "Platform binary missing"],
      "solutions": ["Reinstall sharp (includes libvips)", "Update sharp to latest", "Check platform support"]
    },
    {
      "pattern": "Output file.*ENOENT|EACCES",
      "meaning": "Cannot write output file",
      "causes": ["Output directory doesn't exist", "No write permission", "Invalid path"],
      "solutions": ["Create output directory first", "Check directory permissions", "Use valid file path"]
    }
  ]
}
