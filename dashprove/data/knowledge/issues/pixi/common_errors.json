{
  "tool": "pixi",
  "category": "python_packaging",
  "common_errors": [
    {
      "id": "pixi_install",
      "pattern": "pixi not found|install pixi|curl install",
      "severity": "error",
      "causes": [
        "Pixi not installed",
        "Not in PATH",
        "Platform issues"
      ],
      "solutions": [
        "Install: curl -fsSL https://pixi.sh/install.sh | bash",
        "Or: brew install pixi (macOS)",
        "Windows: iwr -useb https://pixi.sh/install.ps1 | iex"
      ]
    },
    {
      "id": "pixi_init",
      "pattern": "pixi init|pixi.toml|new project",
      "severity": "info",
      "causes": [
        "Starting new project",
        "Initialize pixi",
        "Config generation"
      ],
      "solutions": [
        "Init: pixi init",
        "Creates pixi.toml and pixi.lock",
        "Uses conda-forge by default"
      ]
    },
    {
      "id": "pixi_add",
      "pattern": "pixi add|add package|conda package",
      "severity": "info",
      "causes": [
        "Adding dependency",
        "Conda vs PyPI",
        "Platform-specific"
      ],
      "solutions": [
        "Conda: pixi add numpy",
        "PyPI: pixi add --pypi package",
        "Platform: pixi add --platform linux-64 pkg"
      ]
    },
    {
      "id": "pixi_run",
      "pattern": "pixi run|run command|task",
      "severity": "info",
      "causes": [
        "Running in environment",
        "Execute task",
        "Custom command"
      ],
      "solutions": [
        "Run: pixi run python script.py",
        "Task: pixi run task_name",
        "Define tasks in pixi.toml"
      ]
    },
    {
      "id": "pixi_shell",
      "pattern": "pixi shell|activate|interactive",
      "severity": "info",
      "causes": [
        "Interactive shell",
        "Activate environment",
        "Explore packages"
      ],
      "solutions": [
        "Shell: pixi shell",
        "Opens subshell with env activated",
        "Exit with 'exit' command"
      ]
    },
    {
      "id": "pixi_channels",
      "pattern": "channel|conda-forge|channel priority",
      "severity": "warning",
      "causes": [
        "Package not found",
        "Wrong channel",
        "Channel configuration"
      ],
      "solutions": [
        "Add channel in pixi.toml: channels = ['conda-forge', 'pytorch']",
        "Default is conda-forge only",
        "Order matters for priority"
      ]
    },
    {
      "id": "pixi_features",
      "pattern": "feature|optional feature|environment feature",
      "severity": "info",
      "causes": [
        "Optional dependencies",
        "Development deps",
        "Platform-specific"
      ],
      "solutions": [
        "Define: [feature.dev.dependencies]",
        "Use: pixi run --environment dev",
        "Combine features in environments"
      ]
    },
    {
      "id": "pixi_lock",
      "pattern": "pixi.lock|lock resolution|update lock",
      "severity": "info",
      "causes": [
        "Lock out of sync",
        "Resolution issues",
        "Update dependencies"
      ],
      "solutions": [
        "Update: pixi update",
        "Specific: pixi update numpy",
        "Lock file tracks all platforms"
      ]
    }
  ]
}
