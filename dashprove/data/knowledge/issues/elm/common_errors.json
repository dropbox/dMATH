{
  "tool": "elm",
  "version": "0.19.1",
  "last_updated": "2025-12-23",
  "errors": [
    {
      "id": "type_mismatch",
      "pattern": "TYPE MISMATCH|expected.*but found",
      "message": "Type mismatch",
      "cause": "Expression type doesn't match expected type",
      "solutions": [
        {
          "approach": "Check function signature",
          "code": "myFunc : Int -> String\nmyFunc n = String.fromInt n",
          "when": "Function type unclear"
        },
        {
          "approach": "Use conversion function",
          "code": "String.fromInt, String.toInt, toFloat, round",
          "when": "Need type conversion"
        },
        {
          "approach": "Check record field types",
          "code": "type alias Model = { count : Int, name : String }",
          "when": "Record field type mismatch"
        }
      ]
    },
    {
      "id": "naming_error",
      "pattern": "NAMING ERROR|I cannot find",
      "message": "Name not found",
      "cause": "Variable, function, or module not in scope",
      "solutions": [
        {
          "approach": "Import module",
          "code": "import Html exposing (..)\nimport Html.Events exposing (onClick)",
          "when": "Function in another module"
        },
        {
          "approach": "Check spelling",
          "code": "-- Elm is case-sensitive, check capitals",
          "when": "Typo in name"
        },
        {
          "approach": "Install package",
          "code": "elm install elm/json",
          "when": "Package not installed"
        }
      ]
    },
    {
      "id": "missing_patterns",
      "pattern": "MISSING PATTERNS|does not cover all cases",
      "message": "Non-exhaustive case expression",
      "cause": "Case expression doesn't handle all possible values",
      "solutions": [
        {
          "approach": "Add missing cases",
          "code": "case msg of\n  Increment -> ...\n  Decrement -> ...  -- Add all Msg variants",
          "when": "Custom type cases missing"
        },
        {
          "approach": "Use Maybe helpers",
          "code": "Maybe.withDefault default maybeValue",
          "when": "Handling Maybe values"
        },
        {
          "approach": "Add wildcard",
          "code": "case x of\n  1 -> \"one\"\n  _ -> \"other\"",
          "when": "Want catch-all for primitives"
        }
      ]
    },
    {
      "id": "bad_recursion",
      "pattern": "BAD RECURSION|cycle.*in type aliases",
      "message": "Type alias recursion",
      "cause": "Type alias references itself without indirection",
      "solutions": [
        {
          "approach": "Use custom type",
          "code": "type Tree a = Leaf a | Branch (Tree a) (Tree a)",
          "when": "Need recursive structure"
        },
        {
          "approach": "Add indirection",
          "code": "type alias List a = { items : ListItems a }\ntype ListItems a = ListItems (List_ a)\ntype List_ a = Nil | Cons a (ListItems a)",
          "when": "Must use alias"
        }
      ]
    },
    {
      "id": "json_decode_error",
      "pattern": "PROBLEM WITH FLAGS|JSON.*decode",
      "message": "JSON decoding failed",
      "cause": "JSON structure doesn't match decoder",
      "solutions": [
        {
          "approach": "Use field decoder",
          "code": "Decode.field \"name\" Decode.string",
          "when": "Accessing object field"
        },
        {
          "approach": "Handle optional fields",
          "code": "Decode.maybe (Decode.field \"optional\" Decode.int)",
          "when": "Field may be missing"
        },
        {
          "approach": "Use decodeValue for debugging",
          "code": "Json.Decode.decodeString decoder jsonString\n|> Result.mapError Debug.toString",
          "when": "Debugging decode failures"
        }
      ]
    },
    {
      "id": "port_mismatch",
      "pattern": "PORT PROBLEM|port.*mismatch",
      "message": "Port type mismatch",
      "cause": "Port signature doesn't match JavaScript value",
      "solutions": [
        {
          "approach": "Check port direction",
          "code": "port sendMessage : String -> Cmd msg  -- outgoing\nport receiveMessage : (String -> msg) -> Sub msg  -- incoming",
          "when": "Wrong port type"
        },
        {
          "approach": "Use supported types",
          "code": "-- Ports support: Int, Float, Bool, String, Maybe, List, Array, tuples, records, Json.Value",
          "when": "Unsupported type in port"
        },
        {
          "approach": "Use Json.Value for complex data",
          "code": "port complexData : (Json.Decode.Value -> msg) -> Sub msg",
          "when": "Complex JavaScript object"
        }
      ]
    },
    {
      "id": "package_problem",
      "pattern": "PACKAGE PROBLEM|cannot find.*package",
      "message": "Package resolution error",
      "cause": "Package not found or version conflict",
      "solutions": [
        {
          "approach": "Install package",
          "code": "elm install author/package",
          "when": "Package not installed"
        },
        {
          "approach": "Check elm.json",
          "code": "// Verify package in dependencies",
          "when": "Package removed from elm.json"
        },
        {
          "approach": "Clear elm-stuff",
          "code": "rm -rf elm-stuff && elm make src/Main.elm",
          "when": "Corrupted cache"
        }
      ]
    }
  ]
}
