{
  "tool": "maturin",
  "category": "rust_python",
  "common_errors": [
    {
      "id": "maturin_install",
      "pattern": "maturin not found|install maturin|pip install",
      "severity": "error",
      "causes": [
        "Maturin not installed",
        "Wrong environment",
        "Path issues"
      ],
      "solutions": [
        "Install: pip install maturin",
        "Or: pipx install maturin",
        "Or: cargo install maturin"
      ]
    },
    {
      "id": "maturin_init",
      "pattern": "maturin init|new project|pyo3",
      "severity": "info",
      "causes": [
        "Starting new project",
        "Choose binding type",
        "Project structure"
      ],
      "solutions": [
        "Init: maturin init",
        "Choose bindings: pyo3, rust-cpython, cffi, bin",
        "Creates Cargo.toml and pyproject.toml"
      ]
    },
    {
      "id": "maturin_develop",
      "pattern": "maturin develop|dev install|hot reload",
      "severity": "info",
      "causes": [
        "Development workflow",
        "Install editable",
        "Test changes"
      ],
      "solutions": [
        "Develop: maturin develop",
        "Installs to current venv",
        "With release: maturin develop --release"
      ]
    },
    {
      "id": "maturin_build",
      "pattern": "maturin build|wheel|distribution",
      "severity": "info",
      "causes": [
        "Build wheel",
        "Create distribution",
        "Cross-compile"
      ],
      "solutions": [
        "Build: maturin build --release",
        "Output in target/wheels/",
        "Specify target: --target x86_64-unknown-linux-gnu"
      ]
    },
    {
      "id": "maturin_pyo3_version",
      "pattern": "pyo3 version|abi3|python version",
      "severity": "error",
      "causes": [
        "PyO3 version mismatch",
        "Python version incompatible",
        "ABI issues"
      ],
      "solutions": [
        "Check PyO3 version matches Python",
        "Use abi3 for compatibility: features = ['abi3-py38']",
        "Update PyO3 in Cargo.toml"
      ]
    },
    {
      "id": "maturin_cargo_toml",
      "pattern": "Cargo.toml|crate-type|cdylib",
      "severity": "error",
      "causes": [
        "Wrong crate type",
        "Missing config",
        "Library type"
      ],
      "solutions": [
        "Set: [lib] crate-type = ['cdylib']",
        "Name should match: name = 'mymodule'",
        "For PyO3: pyo3 = { version = '0.20', features = ['extension-module'] }"
      ]
    },
    {
      "id": "maturin_publish",
      "pattern": "maturin publish|pypi|upload",
      "severity": "info",
      "causes": [
        "Publishing to PyPI",
        "Authentication",
        "Multiple platforms"
      ],
      "solutions": [
        "Publish: maturin publish",
        "Test PyPI: maturin publish -r testpypi",
        "Token: MATURIN_PYPI_TOKEN env var"
      ]
    },
    {
      "id": "maturin_cross_compile",
      "pattern": "cross compile|linux|manylinux",
      "severity": "info",
      "causes": [
        "Build for different platform",
        "manylinux compatibility",
        "CI builds"
      ],
      "solutions": [
        "Use maturin docker: maturin build --zig",
        "Or: maturin build --container",
        "Zig for cross-compile without docker"
      ]
    }
  ]
}
