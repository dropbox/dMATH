{
  "tool": "testcontainers",
  "category": "local_development",
  "common_errors": [
    {
      "pattern": "Could not connect to Docker daemon",
      "cause": "Docker not running or not accessible",
      "solutions": [
        "Start Docker daemon",
        "Check DOCKER_HOST environment variable",
        "On Mac: ensure Docker Desktop is running"
      ]
    },
    {
      "pattern": "Container.*did not start correctly",
      "cause": "Container failed health check or startup",
      "solutions": [
        "Check container logs: container.get_logs()",
        "Increase wait timeout",
        "Verify image exists and is pullable"
      ]
    },
    {
      "pattern": "TimeoutException.*waiting for container",
      "cause": "Container startup exceeds timeout",
      "solutions": [
        "Increase timeout: with_timeout()",
        "Pre-pull images: docker pull <image>",
        "Check resource constraints"
      ]
    },
    {
      "pattern": "Port.*not exposed",
      "cause": "Container port not mapped to host",
      "solutions": [
        "Use with_exposed_ports()",
        "Get mapped port: container.get_exposed_port()",
        "Check port is exposed in image"
      ]
    },
    {
      "pattern": "Image.*not found",
      "cause": "Docker image doesn't exist or can't be pulled",
      "solutions": [
        "Check image name spelling",
        "Verify registry access",
        "Pull image manually first"
      ]
    },
    {
      "pattern": "Connection refused.*database",
      "cause": "Database not ready despite container running",
      "solutions": [
        "Use wait_for_logs() strategy",
        "Implement custom wait condition",
        "Add delay after container start"
      ]
    },
    {
      "pattern": "Container.*already stopped",
      "cause": "Container exited unexpectedly",
      "solutions": [
        "Check container logs for errors",
        "Verify image health check",
        "Check for OOM killer"
      ]
    },
    {
      "pattern": "Ryuk.*unable to start",
      "cause": "Resource reaper container failed",
      "solutions": [
        "Set TESTCONTAINERS_RYUK_DISABLED=true",
        "Check Docker permissions",
        "Verify network access"
      ]
    },
    {
      "pattern": "Network.*not created",
      "cause": "Custom network creation failed",
      "solutions": [
        "Check Docker network permissions",
        "Use default bridge network",
        "Clean up orphaned networks"
      ]
    },
    {
      "pattern": "Volume mount.*failed",
      "cause": "Path doesn't exist or permission denied",
      "solutions": [
        "Use absolute paths for volumes",
        "Check path exists on host",
        "Verify Docker has path access (Mac/Windows)"
      ]
    }
  ]
}
