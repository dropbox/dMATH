{
  "tool": "cat",
  "version": "9.4",
  "last_updated": "2025-12-23",
  "errors": [
    {
      "id": "permission_denied",
      "pattern": "Permission denied|cannot open",
      "message": "Cannot read file",
      "cause": "Insufficient permissions",
      "solutions": [
        {
          "approach": "Use sudo",
          "code": "sudo cat /etc/shadow",
          "when": "Need elevated"
        },
        {
          "approach": "Check permissions",
          "code": "ls -la file.txt",
          "when": "Verify access"
        }
      ]
    },
    {
      "id": "binary_garbage",
      "pattern": "binary|garbage|non-printable|corrupted display",
      "message": "Binary content displayed",
      "cause": "Displaying binary file as text",
      "solutions": [
        {
          "approach": "Check type first",
          "code": "file filename  # Determine file type",
          "when": "Verify format"
        },
        {
          "approach": "Use hexdump",
          "code": "xxd file.bin | head\nhexdump -C file.bin | head",
          "when": "View binary"
        },
        {
          "approach": "Use strings",
          "code": "strings file.bin",
          "when": "Extract text"
        }
      ]
    },
    {
      "id": "show_special_chars",
      "pattern": "whitespace|tabs|invisible|line endings|special characters",
      "message": "Want to see invisible characters",
      "cause": "Need to see whitespace and control chars",
      "solutions": [
        {
          "approach": "Show all",
          "code": "cat -A file.txt  # All: tabs, line endings, non-printing",
          "when": "Everything"
        },
        {
          "approach": "Show tabs",
          "code": "cat -T file.txt  # Tabs as ^I",
          "when": "Just tabs"
        },
        {
          "approach": "Show endings",
          "code": "cat -E file.txt  # Line ends as $",
          "when": "Line endings"
        },
        {
          "approach": "Non-printing",
          "code": "cat -v file.txt  # Non-printing as ^X or M-X",
          "when": "Control chars"
        }
      ]
    },
    {
      "id": "line_numbers",
      "pattern": "line numbers|number.*lines",
      "message": "Want line numbers",
      "cause": "Need to see line numbers",
      "solutions": [
        {
          "approach": "All lines",
          "code": "cat -n file.txt  # Number all lines",
          "when": "Every line"
        },
        {
          "approach": "Non-blank only",
          "code": "cat -b file.txt  # Number non-blank lines",
          "when": "Skip blank"
        },
        {
          "approach": "Use nl",
          "code": "nl file.txt  # More formatting options",
          "when": "Advanced numbering"
        }
      ]
    },
    {
      "id": "large_file",
      "pattern": "large file|too big|slow|memory",
      "message": "File too large to cat",
      "cause": "Attempting to display huge file",
      "solutions": [
        {
          "approach": "Use less",
          "code": "less file.txt  # Paginate",
          "when": "Browse large"
        },
        {
          "approach": "Use head/tail",
          "code": "head -100 file.txt\ntail -100 file.txt",
          "when": "See portion"
        },
        {
          "approach": "Stream process",
          "code": "cat file.txt | grep pattern",
          "when": "Filter output"
        }
      ]
    },
    {
      "id": "concatenate_files",
      "pattern": "concatenate|combine|merge|multiple files",
      "message": "Combining multiple files",
      "cause": "Want to join files together",
      "solutions": [
        {
          "approach": "Simple concat",
          "code": "cat file1.txt file2.txt file3.txt > combined.txt",
          "when": "Join files"
        },
        {
          "approach": "Append",
          "code": "cat newdata.txt >> existing.txt",
          "when": "Add to file"
        },
        {
          "approach": "With separator",
          "code": "for f in *.txt; do cat \"$f\"; echo '---'; done > combined.txt",
          "when": "Add separators"
        }
      ]
    }
  ]
}
