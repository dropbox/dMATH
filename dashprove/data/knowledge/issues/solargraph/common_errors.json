{
  "tool": "solargraph",
  "version": "0.50+",
  "last_updated": "2025-12-23",
  "errors": [
    {
      "id": "gem_not_installed",
      "pattern": "solargraph.*not found|command not found|gem.*missing",
      "message": "Solargraph gem not installed",
      "cause": "Solargraph not installed in Ruby environment",
      "solutions": [
        {
          "approach": "Install globally",
          "code": "gem install solargraph",
          "when": "Global installation"
        },
        {
          "approach": "Add to Gemfile",
          "code": "gem 'solargraph', group: :development",
          "when": "Project dependency"
        },
        {
          "approach": "Install with bundler",
          "code": "bundle add solargraph --group development",
          "when": "Using bundler"
        }
      ]
    },
    {
      "id": "core_not_downloaded",
      "pattern": "core documentation.*not found|yard.*not downloaded|stdlib.*missing",
      "message": "Core documentation not downloaded",
      "cause": "Ruby stdlib documentation not cached",
      "solutions": [
        {
          "approach": "Download core",
          "code": "solargraph download-core",
          "when": "Core not downloaded"
        },
        {
          "approach": "Update core",
          "code": "solargraph download-core --update",
          "when": "Core outdated"
        },
        {
          "approach": "Set Ruby version",
          "code": "solargraph download-core 3.2.0",
          "when": "Specific version needed"
        }
      ]
    },
    {
      "id": "gems_not_documented",
      "pattern": "gem.*not documented|completion.*missing for gem|unresolved.*require",
      "message": "Gem documentation not available",
      "cause": "Gem yard docs not generated",
      "solutions": [
        {
          "approach": "Document gems",
          "code": "solargraph bundle",
          "when": "Bundle gems not documented"
        },
        {
          "approach": "Build yard docs",
          "code": "yard gems",
          "when": "Generate all gem docs"
        },
        {
          "approach": "Configure requires",
          "code": "# .solargraph.yml\nrequire:\n  - activerecord\n  - activesupport",
          "when": "Specific gems needed"
        }
      ]
    },
    {
      "id": "config_not_found",
      "pattern": ".solargraph.yml.*not found|configuration.*missing",
      "message": "Configuration file not found",
      "cause": "No .solargraph.yml in project",
      "solutions": [
        {
          "approach": "Create config",
          "code": "solargraph config",
          "when": "Generate config"
        },
        {
          "approach": "Minimal config",
          "code": "# .solargraph.yml\ninclude:\n  - \"**/*.rb\"\nexclude:\n  - spec/**/*\n  - test/**/*\n  - vendor/**/*",
          "when": "Basic setup"
        },
        {
          "approach": "Rails config",
          "code": "# .solargraph.yml\ninclude:\n  - \"app/**/*.rb\"\n  - \"lib/**/*.rb\"\nplugins:\n  - solargraph-rails",
          "when": "Rails project"
        }
      ]
    },
    {
      "id": "rails_support",
      "pattern": "rails.*not recognized|ActiveRecord.*unknown|rails methods.*missing",
      "message": "Rails support not working",
      "cause": "Rails plugin not installed",
      "solutions": [
        {
          "approach": "Install rails plugin",
          "code": "gem install solargraph-rails",
          "when": "Plugin not installed"
        },
        {
          "approach": "Enable plugin",
          "code": "# .solargraph.yml\nplugins:\n  - solargraph-rails",
          "when": "Plugin not enabled"
        },
        {
          "approach": "Run bin/rails",
          "code": "bin/rails runner 'puts Rails.version'",
          "when": "Rails not loaded"
        }
      ]
    },
    {
      "id": "slow_analysis",
      "pattern": "slow|analyzing|high memory|loading",
      "message": "Analysis slow or high memory",
      "cause": "Large codebase or many gems",
      "solutions": [
        {
          "approach": "Exclude directories",
          "code": "# .solargraph.yml\nexclude:\n  - node_modules/**/*\n  - vendor/**/*\n  - tmp/**/*",
          "when": "Too many files"
        },
        {
          "approach": "Limit reporters",
          "code": "# .solargraph.yml\nreporters:\n  - rubocop",
          "when": "Too many reporters"
        },
        {
          "approach": "Restart server",
          "code": "// Restart Solargraph from editor",
          "when": "Memory accumulated"
        }
      ]
    },
    {
      "id": "rubocop_integration",
      "pattern": "rubocop.*error|diagnostics.*rubocop|cop.*not found",
      "message": "RuboCop integration error",
      "cause": "RuboCop not installed or configured",
      "solutions": [
        {
          "approach": "Install rubocop",
          "code": "gem install rubocop",
          "when": "RuboCop not installed"
        },
        {
          "approach": "Enable rubocop reporter",
          "code": "# .solargraph.yml\nreporters:\n  - rubocop",
          "when": "Reporter not enabled"
        },
        {
          "approach": "Disable rubocop",
          "code": "# .solargraph.yml\nreporters: []",
          "when": "Don't want rubocop"
        }
      ]
    },
    {
      "id": "type_inference_wrong",
      "pattern": "type.*incorrect|wrong.*type|inference.*failed",
      "message": "Type inference incorrect",
      "cause": "Solargraph can't infer type correctly",
      "solutions": [
        {
          "approach": "Add YARD annotation",
          "code": "# @param name [String]\n# @return [Integer]\ndef method(name); end",
          "when": "Add type hints"
        },
        {
          "approach": "Use @type annotation",
          "code": "# @type [Array<String>]\n@names = []",
          "when": "Variable type hint"
        },
        {
          "approach": "Document class",
          "code": "# @!attribute [rw] name\n#   @return [String]\nattr_accessor :name",
          "when": "Attribute types"
        }
      ]
    },
    {
      "id": "workspace_error",
      "pattern": "workspace.*error|folder.*not recognized|project.*not found",
      "message": "Workspace not recognized",
      "cause": "Wrong directory opened or no Ruby files",
      "solutions": [
        {
          "approach": "Open project root",
          "code": "// Open folder containing .solargraph.yml or Gemfile",
          "when": "Wrong directory"
        },
        {
          "approach": "Configure workspace",
          "code": "# .solargraph.yml\ninclude:\n  - \"**/*.rb\"",
          "when": "Files not included"
        },
        {
          "approach": "Check Ruby version",
          "code": "ruby --version  # Ensure Ruby is available",
          "when": "Ruby not in PATH"
        }
      ]
    },
    {
      "id": "completion_missing",
      "pattern": "completion.*empty|autocomplete.*not working|no suggestions",
      "message": "Code completion not working",
      "cause": "Documentation not loaded or server issue",
      "solutions": [
        {
          "approach": "Rebuild cache",
          "code": "solargraph clear\nsolargraph bundle",
          "when": "Cache corrupted"
        },
        {
          "approach": "Check server running",
          "code": "solargraph socket",
          "when": "Server not running"
        },
        {
          "approach": "Restart server",
          "code": "// Restart Solargraph from editor",
          "when": "Server state issue"
        }
      ]
    }
  ]
}
