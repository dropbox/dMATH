{
  "tool": "gitleaks",
  "category": "secret_scanning",
  "errors": [
    {
      "pattern": "WRN.*no config file",
      "cause": "No .gitleaks.toml configuration file found",
      "solutions": [
        "Create .gitleaks.toml in repo root",
        "Use --config flag to specify config path",
        "Use --no-banner to suppress warning"
      ]
    },
    {
      "pattern": "error opening file.*permission denied",
      "cause": "Insufficient permissions to read repository files",
      "solutions": [
        "Run with appropriate permissions",
        "Check file ownership and modes",
        "Exclude inaccessible paths in config"
      ]
    },
    {
      "pattern": "fatal: not a git repository",
      "cause": "Running gitleaks in a non-git directory",
      "solutions": [
        "Run from within a git repository",
        "Use --no-git flag for non-git directories",
        "Initialize git repository with git init"
      ]
    },
    {
      "pattern": "leaks found: (\\d+)",
      "cause": "Secrets detected in repository",
      "solutions": [
        "Remove secrets from code and history",
        "Use git-filter-repo to rewrite history",
        "Add false positives to .gitleaksignore",
        "Rotate compromised credentials immediately"
      ]
    },
    {
      "pattern": "error cloning repo",
      "cause": "Failed to clone repository for scanning",
      "solutions": [
        "Check repository URL is correct",
        "Verify network connectivity",
        "Ensure authentication credentials are valid"
      ]
    },
    {
      "pattern": "invalid regex",
      "cause": "Malformed regular expression in custom rules",
      "solutions": [
        "Validate regex syntax",
        "Escape special characters properly",
        "Test regex with online regex tester"
      ]
    },
    {
      "pattern": "baseline file not found",
      "cause": "Specified baseline file does not exist",
      "solutions": [
        "Create baseline with gitleaks detect --report-path",
        "Check baseline file path is correct",
        "Generate new baseline"
      ]
    },
    {
      "pattern": "error decoding",
      "cause": "Failed to decode file content",
      "solutions": [
        "Check file encoding (UTF-8 expected)",
        "Exclude binary files in config",
        "Use --max-target-megabytes to skip large files"
      ]
    }
  ]
}
