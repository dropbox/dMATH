{
  "tool": "styled_components",
  "category": "css_in_js",
  "errors": [
    {
      "pattern": "Cannot find module 'styled-components'",
      "meaning": "Package not installed",
      "causes": ["Not in dependencies", "Typo in import", "Wrong node_modules"],
      "solutions": ["Run npm install styled-components", "Check import statement", "Reinstall dependencies"]
    },
    {
      "pattern": "invalid.*template literal",
      "meaning": "Template literal syntax error",
      "causes": ["Unclosed template string", "Invalid CSS syntax", "Missing semicolons in CSS"],
      "solutions": ["Close template literals", "Validate CSS syntax", "Add semicolons after properties"]
    },
    {
      "pattern": "Prop.*did not match|hydration",
      "meaning": "Server/client style mismatch",
      "causes": ["SSR className mismatch", "Missing ServerStyleSheet", "Dynamic styles without suppressHydrationWarning"],
      "solutions": ["Use ServerStyleSheet for SSR", "Configure babel-plugin-styled-components", "Add suppressHydrationWarning if needed"]
    },
    {
      "pattern": "styled.*is not a function",
      "meaning": "Import error or version mismatch",
      "causes": ["Wrong import syntax", "Package version issue", "TypeScript types mismatch"],
      "solutions": ["Use import styled from 'styled-components'", "Check package version", "Update @types/styled-components"]
    },
    {
      "pattern": "Cannot.*styled.*component",
      "meaning": "Cannot style target component",
      "causes": ["Component doesn't forward className", "Using non-DOM component", "ref forwarding issue"],
      "solutions": ["Pass className prop to child element", "Use styled.attrs() for styling", "Forward ref in component"]
    },
    {
      "pattern": "Trying to insert.*rule.*without.*StyleSheet",
      "meaning": "StyleSheet not in document",
      "causes": ["SSR without StyleSheetManager", "Rendering outside document", "Testing environment issue"],
      "solutions": ["Wrap with StyleSheetManager", "Configure SSR correctly", "Use testing utilities"]
    },
    {
      "pattern": "Multiple.*styled-components.*loaded",
      "meaning": "Duplicate styled-components instances",
      "causes": ["Multiple versions in node_modules", "Bundler not deduping", "Monorepo issue"],
      "solutions": ["Check npm ls styled-components", "Use resolutions in package.json", "Configure bundler aliases"]
    },
    {
      "pattern": "Theme.*undefined|cannot.*theme",
      "meaning": "Theme not available in context",
      "causes": ["Component outside ThemeProvider", "Theme not passed to provider", "Context issue"],
      "solutions": ["Wrap with ThemeProvider", "Pass theme prop to provider", "Check component hierarchy"]
    }
  ]
}
