{
  "tool": "boxen",
  "category": "terminal",
  "common_errors": [
    {
      "id": "boxen_esm_only",
      "pattern": "ERR_REQUIRE_ESM|not a function|boxen undefined",
      "severity": "error",
      "causes": [
        "boxen v7+ is ESM-only",
        "Using require() in CommonJS",
        "Package not updated for ESM"
      ],
      "solutions": [
        "v7+: import boxen from 'boxen'",
        "Use v6.x for CommonJS: npm i boxen@6",
        "Or dynamic import: const boxen = (await import('boxen')).default",
        "Update project to ESM if possible"
      ]
    },
    {
      "id": "boxen_width_overflow",
      "pattern": "text overflows|box too wide|terminal width",
      "severity": "warning",
      "causes": [
        "Content wider than terminal",
        "Not accounting for box padding/border",
        "Fixed width too large"
      ],
      "solutions": [
        "Use term-size to get terminal width",
        "Content width = terminal - 2*padding - 2*border",
        "Use wordwrap before boxen for long text",
        "Consider responsive width based on terminal"
      ]
    },
    {
      "id": "boxen_colors_not_showing",
      "pattern": "borderColor not working|no colors|plain border",
      "severity": "warning",
      "causes": [
        "Terminal doesn't support colors",
        "Using invalid color name",
        "chalk disabled globally"
      ],
      "solutions": [
        "Use standard color names: red, green, yellow, etc.",
        "Or hex: borderColor: '#ff0000'",
        "Check FORCE_COLOR env var",
        "Verify terminal supports ANSI colors"
      ]
    },
    {
      "id": "boxen_title_alignment",
      "pattern": "title position wrong|titleAlignment|title cut off",
      "severity": "warning",
      "causes": [
        "Title longer than box width",
        "titleAlignment not set",
        "Conflicting with float option"
      ],
      "solutions": [
        "Use titleAlignment: 'left' | 'center' | 'right'",
        "Ensure title fits in box width",
        "Title appears on top border by default",
        "Truncate long titles or increase box width"
      ]
    }
  ]
}
