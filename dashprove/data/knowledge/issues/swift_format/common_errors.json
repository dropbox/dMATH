{
  "tool": "swift-format",
  "version": "509.0.0",
  "last_updated": "2025-12-22",
  "errors": [
    {
      "id": "parsing_error",
      "pattern": "error: .* parsing|syntax error|unexpected token",
      "message": "Swift parsing error",
      "cause": "Source file contains invalid Swift syntax",
      "solutions": [
        {
          "approach": "Fix syntax errors first",
          "code": "swiftc -parse file.swift",
          "when": "Code has syntax errors"
        },
        {
          "approach": "Check Swift version compatibility",
          "code": "swift --version",
          "when": "Using newer Swift features"
        },
        {
          "approach": "Exclude problematic files",
          "code": "swift-format --ignore-file .swift-format-ignore",
          "when": "Generated code causing issues"
        }
      ]
    },
    {
      "id": "configuration_not_found",
      "pattern": "configuration.*not found|no .swift-format|missing configuration",
      "message": "Configuration file not found",
      "cause": "No .swift-format file in directory hierarchy",
      "solutions": [
        {
          "approach": "Create configuration file",
          "code": "swift-format dump-configuration > .swift-format",
          "when": "Need custom configuration"
        },
        {
          "approach": "Use default configuration",
          "code": "swift-format format file.swift",
          "when": "Defaults are acceptable"
        },
        {
          "approach": "Specify configuration path",
          "code": "swift-format --configuration /path/to/.swift-format",
          "when": "Config in non-standard location"
        }
      ]
    },
    {
      "id": "invalid_configuration",
      "pattern": "invalid configuration|configuration error|bad value",
      "message": "Invalid configuration file",
      "cause": "Configuration JSON is malformed or has invalid values",
      "solutions": [
        {
          "approach": "Validate JSON syntax",
          "code": "python3 -m json.tool .swift-format",
          "when": "JSON may be malformed"
        },
        {
          "approach": "Regenerate defaults",
          "code": "swift-format dump-configuration > .swift-format.new",
          "when": "Start fresh"
        },
        {
          "approach": "Check option names",
          "code": "swift-format --help",
          "when": "Option may have changed"
        }
      ]
    },
    {
      "id": "line_length_violation",
      "pattern": "line length|exceeds.*characters|MaximumLineLength",
      "message": "Line too long",
      "cause": "Line exceeds configured maximum length",
      "solutions": [
        {
          "approach": "Break line at appropriate point",
          "code": "// Break after comma, operator, or opening bracket",
          "when": "Manual intervention needed"
        },
        {
          "approach": "Increase line length limit",
          "code": "\"lineLength\": 120",
          "when": "Default 100 too restrictive"
        },
        {
          "approach": "Auto-format",
          "code": "swift-format format --in-place file.swift",
          "when": "Let formatter fix it"
        }
      ]
    },
    {
      "id": "indentation_error",
      "pattern": "indentation|indent.*wrong|spacing",
      "message": "Incorrect indentation",
      "cause": "Code not indented according to configuration",
      "solutions": [
        {
          "approach": "Auto-format file",
          "code": "swift-format format --in-place file.swift",
          "when": "Let formatter fix indentation"
        },
        {
          "approach": "Configure indent width",
          "code": "\"indentation\": {\"spaces\": 4}",
          "when": "Change indent style"
        },
        {
          "approach": "Use tabs",
          "code": "\"indentation\": {\"tabs\": 1}",
          "when": "Prefer tabs"
        }
      ]
    },
    {
      "id": "lint_mode_failure",
      "pattern": "lint.*failed|would be reformatted|changes required",
      "message": "Lint mode detected formatting issues",
      "cause": "File doesn't match formatter's output",
      "solutions": [
        {
          "approach": "Apply formatting",
          "code": "swift-format format --in-place *.swift",
          "when": "Want to auto-fix"
        },
        {
          "approach": "View proposed changes",
          "code": "swift-format format file.swift | diff - file.swift",
          "when": "Review before applying"
        },
        {
          "approach": "Fix in CI",
          "code": "swift-format format --in-place . && git diff --exit-code",
          "when": "CI verification"
        }
      ]
    },
    {
      "id": "file_not_found",
      "pattern": "file not found|no such file|cannot open",
      "message": "Input file not found",
      "cause": "Specified file path doesn't exist",
      "solutions": [
        {
          "approach": "Check file path",
          "code": "ls -la file.swift",
          "when": "Typo in filename"
        },
        {
          "approach": "Use recursive mode",
          "code": "swift-format format --recursive .",
          "when": "Format entire directory"
        },
        {
          "approach": "Check working directory",
          "code": "pwd",
          "when": "Wrong directory"
        }
      ]
    },
    {
      "id": "version_mismatch",
      "pattern": "version.*mismatch|incompatible|requires swift",
      "message": "Swift version mismatch",
      "cause": "swift-format version incompatible with Swift toolchain",
      "solutions": [
        {
          "approach": "Update swift-format",
          "code": "brew upgrade swift-format",
          "when": "Using Homebrew"
        },
        {
          "approach": "Match toolchain version",
          "code": "git checkout swift-5.9-RELEASE",
          "when": "Building from source"
        },
        {
          "approach": "Use Xcode's bundled version",
          "code": "/Applications/Xcode.app/.../swift-format",
          "when": "Xcode project"
        }
      ]
    }
  ]
}
