{
  "tool": "biome",
  "category": "linter_formatter",
  "common_errors": [
    {
      "id": "biome_config_not_found",
      "pattern": "biome.json not found|configuration file missing|no config",
      "severity": "error",
      "causes": [
        "Missing biome.json in project root",
        "Running from wrong directory",
        "Config file has wrong name"
      ],
      "solutions": [
        "Run: biome init to create config",
        "Create biome.json manually in project root",
        "Use --config-path to specify location"
      ]
    },
    {
      "id": "biome_migration_eslint",
      "pattern": "migrate from eslint|eslint rules|eslint equivalent",
      "severity": "info",
      "causes": [
        "Moving from ESLint to Biome",
        "Need equivalent rules",
        "Different rule names"
      ],
      "solutions": [
        "Run: biome migrate eslint --write",
        "Check docs for rule name mappings",
        "Biome combines linting + formatting (no need for Prettier)"
      ]
    },
    {
      "id": "biome_parser_error",
      "pattern": "parse error|syntax error|unexpected token",
      "severity": "error",
      "causes": [
        "Invalid JavaScript/TypeScript syntax",
        "Unsupported syntax features",
        "File encoding issues"
      ],
      "solutions": [
        "Check file for syntax errors",
        "Ensure file extension matches content (.ts, .tsx, .js, .jsx)",
        "Update Biome for latest syntax support"
      ]
    },
    {
      "id": "biome_vcs_ignore",
      "pattern": "files not ignored|gitignore not respected|node_modules checked",
      "severity": "warning",
      "causes": [
        "VCS integration not enabled",
        "Files not in .gitignore",
        "Default ignore patterns differ"
      ],
      "solutions": [
        "Set vcs.enabled: true in biome.json",
        "Set vcs.useIgnoreFile: true",
        "Add patterns to files.ignore in config"
      ]
    },
    {
      "id": "biome_formatter_conflicts",
      "pattern": "formatter conflict|style inconsistent|tabs vs spaces",
      "severity": "warning",
      "causes": [
        "Editor settings conflict with Biome",
        "Multiple formatters configured",
        "editorconfig conflicts"
      ],
      "solutions": [
        "Disable other formatters (Prettier)",
        "Configure formatter section in biome.json",
        "Set indentStyle, indentWidth, lineWidth explicitly"
      ]
    },
    {
      "id": "biome_organize_imports",
      "pattern": "import order|organize imports|import sorting",
      "severity": "info",
      "causes": [
        "Imports not sorted consistently",
        "Want automatic import organization",
        "ESLint import plugin replacement"
      ],
      "solutions": [
        "Enable organizeImports in biome.json",
        "Run: biome check --apply",
        "Configure import groups if needed"
      ]
    },
    {
      "id": "biome_ci_setup",
      "pattern": "ci check|github actions|exit code|ci fails",
      "severity": "info",
      "causes": [
        "Need to run Biome in CI",
        "Want non-zero exit on errors",
        "Formatter check without writing"
      ],
      "solutions": [
        "Use: biome ci (designed for CI)",
        "Or: biome check (exits non-zero on issues)",
        "biome format --check for format-only check"
      ]
    }
  ]
}
