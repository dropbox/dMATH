{
  "tool": "valibot",
  "category": "data_validation",
  "common_errors": [
    {
      "error_pattern": "ValiError.*Invalid type",
      "description": "Type mismatch in validation",
      "causes": [
        "Wrong type passed to schema",
        "Expected string, got number",
        "Type coercion not configured"
      ],
      "solutions": [
        "Provide correct type",
        "Use coerce() wrapper for coercion",
        "Check input data types"
      ]
    },
    {
      "error_pattern": "Invalid.*required",
      "description": "Required field missing",
      "causes": [
        "Field not provided",
        "Undefined value"
      ],
      "solutions": [
        "Provide required field",
        "Use optional() for optional fields",
        "Use nullable() if null allowed"
      ]
    },
    {
      "error_pattern": "Invalid string.*minLength",
      "description": "String too short",
      "causes": [
        "String shorter than minLength()",
        "Empty string provided"
      ],
      "solutions": [
        "Provide longer string",
        "Use v.string([v.minLength(n)])",
        "Adjust minimum length"
      ]
    },
    {
      "error_pattern": "Invalid string.*maxLength",
      "description": "String too long",
      "causes": [
        "String exceeds maxLength()",
        "Unexpected content"
      ],
      "solutions": [
        "Shorten input string",
        "Increase maxLength() limit",
        "Trim input before validation"
      ]
    },
    {
      "error_pattern": "Invalid email",
      "description": "Email format invalid",
      "causes": [
        "Email doesn't match format",
        "Using v.email() validation"
      ],
      "solutions": [
        "Provide valid email",
        "Use v.string([v.email()])",
        "Custom regex if needed"
      ]
    },
    {
      "error_pattern": "Invalid url",
      "description": "URL format invalid",
      "causes": [
        "Missing protocol",
        "Invalid URL structure"
      ],
      "solutions": [
        "Include http:// or https://",
        "Use v.string([v.url()])",
        "Validate format before parsing"
      ]
    },
    {
      "error_pattern": "Invalid.*enum",
      "description": "Value not in enum",
      "causes": [
        "Input not in picklist()",
        "Case mismatch"
      ],
      "solutions": [
        "Use one of picklist values",
        "Check v.picklist(['a', 'b'])",
        "Convert case before validation"
      ]
    },
    {
      "error_pattern": "Invalid object.*unknown.*key",
      "description": "Extra key in object",
      "causes": [
        "Key not defined in object schema",
        "Using strict mode"
      ],
      "solutions": [
        "Add key to object schema",
        "Use passthrough() to allow extras",
        "Use strip() to remove unknowns"
      ]
    },
    {
      "error_pattern": "Invalid array.*minLength",
      "description": "Array too short",
      "causes": [
        "Array has fewer items than required",
        "Empty array"
      ],
      "solutions": [
        "Add more array items",
        "Use v.array(itemSchema, [v.minLength(n)])",
        "Use nonEmpty() for non-empty requirement"
      ]
    },
    {
      "error_pattern": "Invalid union",
      "description": "No union variant matched",
      "causes": [
        "Input matches no variant in union()",
        "All validations failed"
      ],
      "solutions": [
        "Ensure input matches one variant",
        "Check variant definitions",
        "Use v.variant() for discriminated unions"
      ]
    },
    {
      "error_pattern": "Invalid literal",
      "description": "Value doesn't match literal",
      "causes": [
        "Input not equal to literal()",
        "Type or value mismatch"
      ],
      "solutions": [
        "Use exact literal value",
        "Check v.literal() definition"
      ]
    },
    {
      "error_pattern": "custom.*validation.*failed",
      "description": "Custom validation failed",
      "causes": [
        "custom() returned false",
        "Custom check failed"
      ],
      "solutions": [
        "Review custom validation logic",
        "Provide input that passes check",
        "Add appropriate error message"
      ]
    }
  ]
}
