{
  "tool": "ktlint",
  "version": "1.1.0",
  "last_updated": "2025-12-22",
  "errors": [
    {
      "id": "standard_no_wildcard_imports",
      "pattern": "no-wildcard-imports|Wildcard import",
      "message": "Wildcard imports are not allowed",
      "cause": "Using import statements with * instead of explicit imports",
      "solutions": [
        {
          "approach": "Use explicit imports",
          "code": "import kotlin.collections.List\nimport kotlin.collections.Map",
          "when": "Most cases"
        },
        {
          "approach": "Configure exceptions in .editorconfig",
          "code": "[*.kt]\nktlint_standard_no-wildcard-imports = disabled",
          "when": "Team prefers wildcards"
        },
        {
          "approach": "Run ktlint --format",
          "code": "ktlint --format \"src/**/*.kt\"",
          "when": "Auto-fix available"
        }
      ]
    },
    {
      "id": "standard_indent",
      "pattern": "indent|Unexpected indentation",
      "message": "Incorrect indentation",
      "cause": "Indentation doesn't match configured style (spaces vs tabs, size)",
      "solutions": [
        {
          "approach": "Configure in .editorconfig",
          "code": "[*.kt]\nindent_size = 4\nindent_style = space",
          "when": "Standard Kotlin style"
        },
        {
          "approach": "Run formatter",
          "code": "ktlint --format",
          "when": "Auto-fix indentation"
        },
        {
          "approach": "Use continuation indent",
          "code": "[*.kt]\nktlint_standard_indent = disabled\n# Then use IDE formatting",
          "when": "Complex expression indentation"
        }
      ]
    },
    {
      "id": "standard_no_blank_line_before_rbrace",
      "pattern": "no-blank-line-before-rbrace|Unexpected blank line",
      "message": "No blank line allowed before closing brace",
      "cause": "Blank line before } is unnecessary whitespace",
      "solutions": [
        {
          "approach": "Remove blank line",
          "code": "fun example() {\n    doSomething()\n}  // No blank line above",
          "when": "Most cases"
        },
        {
          "approach": "Auto-format",
          "code": "ktlint --format",
          "when": "Multiple occurrences"
        }
      ]
    },
    {
      "id": "standard_no_consecutive_blank_lines",
      "pattern": "no-consecutive-blank-lines|Needless blank line",
      "message": "Multiple consecutive blank lines not allowed",
      "cause": "More than one blank line between code blocks",
      "solutions": [
        {
          "approach": "Reduce to single blank line",
          "code": "fun first() { ... }\n\nfun second() { ... }  // Only one blank line",
          "when": "Between functions"
        },
        {
          "approach": "Run formatter",
          "code": "ktlint --format",
          "when": "Auto-fix"
        }
      ]
    },
    {
      "id": "standard_final_newline",
      "pattern": "final-newline|File must end with a newline",
      "message": "File must end with a single newline",
      "cause": "File missing trailing newline or has multiple trailing newlines",
      "solutions": [
        {
          "approach": "Add single trailing newline",
          "code": "// Last line of code\n<newline here>",
          "when": "File missing newline"
        },
        {
          "approach": "Configure editor",
          "code": "# In .editorconfig\ninsert_final_newline = true",
          "when": "Configure for all files"
        }
      ]
    },
    {
      "id": "standard_no_trailing_spaces",
      "pattern": "no-trailing-spaces|Trailing space",
      "message": "Lines must not end with trailing whitespace",
      "cause": "Spaces or tabs at end of line",
      "solutions": [
        {
          "approach": "Remove trailing whitespace",
          "code": "val x = 1  // No spaces after semicolon",
          "when": "Most cases"
        },
        {
          "approach": "Configure editor to trim",
          "code": "# In .editorconfig\ntrim_trailing_whitespace = true",
          "when": "Auto-trim on save"
        }
      ]
    },
    {
      "id": "standard_no_semi",
      "pattern": "no-semi|Unnecessary semicolon",
      "message": "Semicolons are not needed in Kotlin",
      "cause": "Kotlin doesn't require semicolons at end of statements",
      "solutions": [
        {
          "approach": "Remove semicolons",
          "code": "val x = 1\nval y = 2",
          "when": "Most statements"
        },
        {
          "approach": "Keep for multiple statements",
          "code": "val x = 1; val y = 2  // Same line, semicolon needed",
          "when": "Multiple statements on one line"
        }
      ]
    },
    {
      "id": "standard_spacing_around_colon",
      "pattern": "spacing-around-colon|colon spacing",
      "message": "Incorrect spacing around colon",
      "cause": "Colons in type declarations should have specific spacing",
      "solutions": [
        {
          "approach": "No space before, space after for types",
          "code": "val name: String = \"hello\"\nfun process(data: List<Int>): Result",
          "when": "Type declarations"
        },
        {
          "approach": "Space both sides for inheritance",
          "code": "class MyClass : BaseClass()",
          "when": "Class inheritance"
        }
      ]
    },
    {
      "id": "standard_spacing_around_comma",
      "pattern": "spacing-around-comma|comma spacing",
      "message": "Incorrect spacing around comma",
      "cause": "Comma should have no space before, one space after",
      "solutions": [
        {
          "approach": "Standard comma spacing",
          "code": "fun process(a: Int, b: String, c: Boolean)",
          "when": "Parameter lists"
        },
        {
          "approach": "No trailing space in last parameter",
          "code": "listOf(1, 2, 3)  // Not (1, 2, 3, )",
          "when": "Collections"
        }
      ]
    },
    {
      "id": "standard_no_unused_imports",
      "pattern": "no-unused-imports|Unused import",
      "message": "Import is not used",
      "cause": "Import statement for class/function not used in file",
      "solutions": [
        {
          "approach": "Remove unused import",
          "code": "// Remove: import kotlin.collections.ArrayList",
          "when": "Import genuinely unused"
        },
        {
          "approach": "Run formatter",
          "code": "ktlint --format",
          "when": "Auto-remove unused imports"
        },
        {
          "approach": "IDE optimize imports",
          "code": "// Android Studio: Code > Optimize Imports",
          "when": "Many unused imports"
        }
      ]
    },
    {
      "id": "standard_chain_wrapping",
      "pattern": "chain-wrapping|chain wrap",
      "message": "Chained calls should start on new line with operator",
      "cause": "Long method chains should wrap consistently",
      "solutions": [
        {
          "approach": "Wrap with dot at start",
          "code": "list\n    .filter { it > 0 }\n    .map { it * 2 }\n    .sum()",
          "when": "Long chains"
        },
        {
          "approach": "Keep short chains on one line",
          "code": "list.filter { it > 0 }.sum()",
          "when": "Short, readable chain"
        }
      ]
    },
    {
      "id": "standard_modifier_order",
      "pattern": "modifier-order|wrong order",
      "message": "Modifiers should be in standard order",
      "cause": "Kotlin has a recommended modifier order",
      "solutions": [
        {
          "approach": "Use standard order",
          "code": "public abstract override fun method()\n// Order: public/private, abstract, override, final, etc.",
          "when": "Multiple modifiers"
        },
        {
          "approach": "Reference order",
          "code": "// public, protected, private, internal\n// expect, actual\n// final, open, abstract, sealed, const\n// external, override, lateinit\n// tailrec, vararg, suspend, inner, enum, companion\n// inline, infix, operator\n// data",
          "when": "Learning order"
        }
      ]
    },
    {
      "id": "standard_string_template",
      "pattern": "string-template|Redundant curly braces",
      "message": "Unnecessary braces in string template",
      "cause": "Simple variable reference doesn't need braces",
      "solutions": [
        {
          "approach": "Remove braces for simple variables",
          "code": "\"Hello $name\"  // Not \"Hello ${name}\"",
          "when": "Simple variable"
        },
        {
          "approach": "Keep braces for expressions",
          "code": "\"Length: ${name.length}\"",
          "when": "Property access or expression"
        }
      ]
    },
    {
      "id": "standard_filename",
      "pattern": "filename|File .* does not match",
      "message": "File name should match class name",
      "cause": "Kotlin file name doesn't match the class it contains",
      "solutions": [
        {
          "approach": "Rename file to match class",
          "code": "// UserService.kt for class UserService",
          "when": "Single class in file"
        },
        {
          "approach": "Use appropriate name for utilities",
          "code": "// StringUtils.kt for extension functions on String",
          "when": "Extension functions"
        }
      ]
    },
    {
      "id": "standard_argument_list_wrapping",
      "pattern": "argument-list-wrapping|argument wrapping",
      "message": "Arguments should be on same line or each on separate line",
      "cause": "Mixed wrapping of function arguments",
      "solutions": [
        {
          "approach": "All on one line",
          "code": "function(arg1, arg2, arg3)",
          "when": "Fits on line"
        },
        {
          "approach": "Each on separate line",
          "code": "function(\n    arg1,\n    arg2,\n    arg3,\n)",
          "when": "Too long for one line"
        }
      ]
    }
  ]
}
