{
  "tool": "commitlint",
  "version": "18.6.0",
  "last_updated": "2025-12-23",
  "errors": [
    {
      "id": "type_error",
      "pattern": "type must be one of|type-enum|subject may not be empty",
      "message": "Commit type invalid",
      "cause": "Commit type not in allowed list",
      "solutions": [
        {
          "approach": "Use valid types",
          "code": "# Valid types:\nfeat: new feature\nfix: bug fix\ndocs: documentation\nstyle: formatting\nrefactor: code restructure\ntest: add tests\nchore: maintenance",
          "when": "Wrong type"
        },
        {
          "approach": "Configure types",
          "code": "// commitlint.config.js\nmodule.exports = {\n  extends: ['@commitlint/config-conventional'],\n  rules: {\n    'type-enum': [2, 'always', ['feat', 'fix', 'docs', 'chore', 'ci']]\n  }\n};",
          "when": "Custom types"
        },
        {
          "approach": "Use scope",
          "code": "feat(auth): add login functionality\nfix(api): handle null response",
          "when": "With scope"
        }
      ]
    },
    {
      "id": "config_not_found",
      "pattern": "commitlint.config|Please add a configuration|configuration file",
      "message": "Configuration file not found",
      "cause": "No commitlint config file",
      "solutions": [
        {
          "approach": "Create config file",
          "code": "// commitlint.config.js\nmodule.exports = {\n  extends: ['@commitlint/config-conventional']\n};",
          "when": "JavaScript config"
        },
        {
          "approach": "JSON config",
          "code": "// .commitlintrc.json\n{\n  \"extends\": [\"@commitlint/config-conventional\"]\n}",
          "when": "JSON config"
        },
        {
          "approach": "Package.json config",
          "code": "// package.json\n{\n  \"commitlint\": {\n    \"extends\": [\"@commitlint/config-conventional\"]\n  }\n}",
          "when": "Inline config"
        }
      ]
    },
    {
      "id": "header_length_error",
      "pattern": "header must not be longer|max-line-length|header-max-length",
      "message": "Commit header too long",
      "cause": "First line exceeds maximum length",
      "solutions": [
        {
          "approach": "Shorten message",
          "code": "# Max 72-100 chars typically\nfeat: add user authentication flow",
          "when": "Shorten subject"
        },
        {
          "approach": "Configure length",
          "code": "module.exports = {\n  extends: ['@commitlint/config-conventional'],\n  rules: {\n    'header-max-length': [2, 'always', 100]\n  }\n};",
          "when": "Increase limit"
        },
        {
          "approach": "Use body",
          "code": "feat: add user authentication\n\nImplements login/logout functionality\nwith JWT tokens and session management.",
          "when": "Details in body"
        }
      ]
    },
    {
      "id": "body_error",
      "pattern": "body|body-leading-blank|body-max-line-length",
      "message": "Commit body format error",
      "cause": "Body doesn't follow format rules",
      "solutions": [
        {
          "approach": "Add blank line",
          "code": "feat: add feature\n\nThis is the body with details.\nEach line explains the change.",
          "when": "Missing blank line"
        },
        {
          "approach": "Configure body rules",
          "code": "module.exports = {\n  rules: {\n    'body-leading-blank': [2, 'always'],\n    'body-max-line-length': [2, 'always', 100]\n  }\n};",
          "when": "Adjust rules"
        },
        {
          "approach": "Disable body rules",
          "code": "module.exports = {\n  rules: {\n    'body-max-line-length': [0]\n  }\n};",
          "when": "No body restriction"
        }
      ]
    },
    {
      "id": "husky_integration_error",
      "pattern": "husky|commit-msg|hook|pre-commit",
      "message": "Git hook integration error",
      "cause": "Husky hook not configured correctly",
      "solutions": [
        {
          "approach": "Setup husky",
          "code": "npm install -D husky\nnpx husky init\necho 'npx --no -- commitlint --edit $1' > .husky/commit-msg",
          "when": "Set up husky v9"
        },
        {
          "approach": "Manual hook",
          "code": "# .git/hooks/commit-msg\n#!/bin/sh\nnpx --no -- commitlint --edit $1",
          "when": "Without husky"
        },
        {
          "approach": "Package.json script",
          "code": "// package.json\n{\n  \"scripts\": {\n    \"prepare\": \"husky\"\n  }\n}",
          "when": "Auto-install hooks"
        }
      ]
    },
    {
      "id": "scope_error",
      "pattern": "scope-enum|scope-case|scope may not be empty",
      "message": "Scope format error",
      "cause": "Scope doesn't match configuration",
      "solutions": [
        {
          "approach": "Use valid scope",
          "code": "feat(api): add endpoint\nfix(ui): button alignment\nchore(deps): update packages",
          "when": "With scope"
        },
        {
          "approach": "Configure scopes",
          "code": "module.exports = {\n  rules: {\n    'scope-enum': [2, 'always', ['api', 'ui', 'core', 'deps']]\n  }\n};",
          "when": "Restrict scopes"
        },
        {
          "approach": "Optional scope",
          "code": "module.exports = {\n  rules: {\n    'scope-empty': [0]\n  }\n};",
          "when": "Scope optional"
        }
      ]
    },
    {
      "id": "case_error",
      "pattern": "subject-case|type-case|must be lower-case",
      "message": "Case format error",
      "cause": "Subject or type has wrong case",
      "solutions": [
        {
          "approach": "Use lowercase",
          "code": "feat: add new feature\n# Not: Feat: Add New Feature",
          "when": "Lowercase subject"
        },
        {
          "approach": "Configure case",
          "code": "module.exports = {\n  rules: {\n    'subject-case': [2, 'always', 'sentence-case'],\n    'type-case': [2, 'always', 'lower-case']\n  }\n};",
          "when": "Custom case rules"
        },
        {
          "approach": "Disable case check",
          "code": "module.exports = {\n  rules: {\n    'subject-case': [0]\n  }\n};",
          "when": "Any case allowed"
        }
      ]
    },
    {
      "id": "ci_integration_error",
      "pattern": "CI|GitHub Actions|pipeline|lint commit",
      "message": "CI integration error",
      "cause": "Commitlint failing in CI pipeline",
      "solutions": [
        {
          "approach": "GitHub Actions",
          "code": "# .github/workflows/commitlint.yml\nname: Lint Commits\non: [pull_request]\njobs:\n  commitlint:\n    runs-on: ubuntu-latest\n    steps:\n      - uses: actions/checkout@v4\n        with:\n          fetch-depth: 0\n      - uses: wagoid/commitlint-github-action@v5",
          "when": "GitHub CI"
        },
        {
          "approach": "Lint range",
          "code": "npx commitlint --from=HEAD~10 --to=HEAD --verbose",
          "when": "Multiple commits"
        },
        {
          "approach": "Lint last commit",
          "code": "npx commitlint --last",
          "when": "Single commit"
        }
      ]
    }
  ]
}
