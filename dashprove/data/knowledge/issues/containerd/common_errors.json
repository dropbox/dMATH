{
  "tool": "containerd",
  "category": "container_runtime",
  "description": "containerd - industry-standard container runtime",
  "common_errors": [
    {
      "id": "daemon_not_running",
      "pattern": "containerd is not running",
      "regex": "(?i)containerd.*not running|failed to dial|connection refused.*containerd",
      "cause": "containerd daemon is not running",
      "solution": "Start containerd with 'sudo systemctl start containerd' or run containerd directly",
      "severity": "high",
      "category": "daemon"
    },
    {
      "id": "socket_permission_error",
      "pattern": "permission denied",
      "regex": "(?i)permission denied.*containerd\\.sock|cannot access.*sock|socket.*permission",
      "cause": "User does not have permission to access containerd socket",
      "solution": "Run as root or configure containerd socket permissions in config.toml",
      "severity": "medium",
      "category": "permissions"
    },
    {
      "id": "image_pull_error",
      "pattern": "failed to pull image",
      "regex": "(?i)failed to pull|failed to resolve|pull.*error|resolve.*reference",
      "cause": "Cannot pull container image from registry",
      "solution": "Check registry credentials, verify image reference, check network connectivity",
      "severity": "high",
      "category": "images"
    },
    {
      "id": "snapshotter_error",
      "pattern": "snapshotter error",
      "regex": "(?i)snapshotter.*error|overlayfs.*error|snapshot.*failed|prepare.*snapshot",
      "cause": "Container filesystem snapshotter failure",
      "solution": "Check snapshotter config, verify filesystem supports overlayfs, try native snapshotter",
      "severity": "high",
      "category": "storage"
    },
    {
      "id": "runtime_error",
      "pattern": "runtime error",
      "regex": "(?i)runtime.*error|runc.*error|oci.*runtime|shim.*error",
      "cause": "OCI runtime (runc) execution failure",
      "solution": "Check runc is installed, verify OCI runtime config, review shim logs",
      "severity": "high",
      "category": "runtime"
    },
    {
      "id": "namespace_error",
      "pattern": "namespace error",
      "regex": "(?i)namespace.*not found|invalid namespace|namespace.*error",
      "cause": "Container namespace issue",
      "solution": "Specify namespace with -n flag, verify namespace exists with 'ctr namespaces list'",
      "severity": "medium",
      "category": "namespaces"
    },
    {
      "id": "config_error",
      "pattern": "config error",
      "regex": "(?i)config.*error|config\\.toml.*error|invalid.*configuration|parse.*config",
      "cause": "Error in containerd configuration file",
      "solution": "Check config.toml syntax, verify plugin configurations, review containerd docs",
      "severity": "medium",
      "category": "configuration"
    },
    {
      "id": "cni_error",
      "pattern": "CNI error",
      "regex": "(?i)cni.*error|network.*setup|failed to setup network|cni plugin",
      "cause": "Container Network Interface plugin error",
      "solution": "Check CNI plugins installed in /opt/cni/bin, verify CNI config in /etc/cni/net.d",
      "severity": "medium",
      "category": "networking"
    },
    {
      "id": "content_store_error",
      "pattern": "content store error",
      "regex": "(?i)content.*error|blob.*not found|content.*corrupt|digest.*mismatch",
      "cause": "Error with content store (image layer storage)",
      "solution": "Check storage location permissions, verify disk space, prune unused content",
      "severity": "medium",
      "category": "storage"
    },
    {
      "id": "task_error",
      "pattern": "task error",
      "regex": "(?i)task.*error|task.*not found|failed to create task|task.*exit",
      "cause": "Container task lifecycle error",
      "solution": "Check container configuration, verify resources available, review task status",
      "severity": "medium",
      "category": "tasks"
    }
  ],
  "related_tools": ["docker", "kubernetes", "nerdctl", "cri-o"],
  "documentation_url": "https://containerd.io/docs/"
}
