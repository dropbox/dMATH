{
  "tool": "figures",
  "category": "terminal",
  "common_errors": [
    {
      "id": "figures_esm_only",
      "pattern": "ERR_REQUIRE_ESM|not a function|figures undefined",
      "severity": "error",
      "causes": [
        "figures v5+ is ESM-only",
        "Using require() in CommonJS",
        "CommonJS project"
      ],
      "solutions": [
        "v5+: import figures from 'figures'",
        "Use v4.x for CommonJS: npm i figures@4",
        "Or dynamic import in CommonJS",
        "v5+ also exports named: import { tick, cross } from 'figures'"
      ]
    },
    {
      "id": "figures_fallback_symbols",
      "pattern": "unicode not showing|squares instead|wrong symbols",
      "severity": "warning",
      "causes": [
        "Terminal doesn't support Unicode",
        "Using Windows cmd.exe",
        "Font doesn't have glyphs"
      ],
      "solutions": [
        "figures auto-detects and uses fallbacks",
        "Windows Terminal supports Unicode",
        "Use figures.main for force Unicode",
        "Use figures.windows for force ASCII fallback"
      ]
    },
    {
      "id": "figures_custom_fallback",
      "pattern": "custom fallback|replace symbol|different character",
      "severity": "info",
      "causes": [
        "Want custom symbol fallbacks",
        "Project-specific characters",
        "Different ASCII alternatives"
      ],
      "solutions": [
        "figures provides main and windows exports",
        "Create own mapping: isUnicodeSupported() ? 'âœ“' : 'yes'",
        "Use is-unicode-supported package directly",
        "Override specific symbols as needed"
      ]
    }
  ]
}
