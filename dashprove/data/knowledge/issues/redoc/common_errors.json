{
  "tool": "redoc",
  "category": "api_documentation",
  "description": "OpenAPI documentation generator",
  "errors": [
    {
      "pattern": "Failed to load spec|Unable to load",
      "meaning": "Cannot load OpenAPI spec",
      "causes": ["Invalid spec URL", "CORS blocking", "File not found"],
      "solutions": ["Check spec-url attribute", "Enable CORS on spec server", "Verify file path"]
    },
    {
      "pattern": "Spec is invalid|parsing error",
      "meaning": "OpenAPI spec validation failed",
      "causes": ["Invalid OpenAPI structure", "JSON/YAML syntax error", "Missing required fields"],
      "solutions": ["Validate spec with linter", "Fix syntax errors", "Add required OpenAPI fields"]
    },
    {
      "pattern": "resolve.*reference|$ref.*failed",
      "meaning": "Reference resolution error",
      "causes": ["Invalid $ref path", "External reference not loaded", "Circular reference"],
      "solutions": ["Check $ref paths", "Bundle spec with external refs", "Use redoc-cli bundle"]
    },
    {
      "pattern": "component.*not found",
      "meaning": "Missing component definition",
      "causes": ["Schema/response not defined", "Wrong component path", "Typo in reference"],
      "solutions": ["Define component in components section", "Check reference path", "Verify spelling"]
    },
    {
      "pattern": "Redoc.*not defined|redoc-standalone.*failed",
      "meaning": "ReDoc not loaded",
      "causes": ["Script not loaded", "CDN failed", "Wrong import"],
      "solutions": ["Check script tag src", "Use npm package instead of CDN", "Verify import statement"]
    },
    {
      "pattern": "CSS.*not applied|styles missing",
      "meaning": "Styling not working",
      "causes": ["Theme options wrong", "CSS conflicts", "Wrong element selector"],
      "solutions": ["Check theme configuration", "Inspect for CSS conflicts", "Use correct ReDoc options"]
    },
    {
      "pattern": "markdown.*not rendering",
      "meaning": "Description markdown broken",
      "causes": ["Invalid markdown syntax", "Special characters not escaped", "HTML not allowed"],
      "solutions": ["Validate markdown syntax", "Escape special characters in YAML", "Use CommonMark syntax"]
    },
    {
      "pattern": "performance.*slow|large spec",
      "meaning": "Performance issue with large spec",
      "causes": ["Very large spec file", "Many schemas/operations", "Too many examples"],
      "solutions": ["Split into multiple specs", "Use lazy rendering option", "Reduce inline examples"]
    }
  ]
}
