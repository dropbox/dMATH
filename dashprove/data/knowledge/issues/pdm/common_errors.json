{
  "tool": "pdm",
  "category": "python_packaging",
  "common_errors": [
    {
      "id": "pdm_install",
      "pattern": "pdm not found|install pdm|pipx",
      "severity": "error",
      "causes": [
        "PDM not installed",
        "Not in PATH",
        "Version issues"
      ],
      "solutions": [
        "Install: pipx install pdm",
        "Or: curl -sSL https://pdm-project.org/install-pdm.py | python3 -",
        "Or: brew install pdm"
      ]
    },
    {
      "id": "pdm_init",
      "pattern": "pdm init|pyproject.toml|new project",
      "severity": "info",
      "causes": [
        "Creating new project",
        "Initializing PDM",
        "Config generation"
      ],
      "solutions": [
        "Init: pdm init",
        "Non-interactive: pdm init -n",
        "Creates pyproject.toml and pdm.lock"
      ]
    },
    {
      "id": "pdm_add",
      "pattern": "pdm add|install package|dependency",
      "severity": "info",
      "causes": [
        "Adding dependency",
        "Dev dependency",
        "Optional group"
      ],
      "solutions": [
        "Add: pdm add package",
        "Dev: pdm add -d package",
        "Group: pdm add -G group package"
      ]
    },
    {
      "id": "pdm_lock",
      "pattern": "pdm lock|lockfile|pdm.lock",
      "severity": "info",
      "causes": [
        "Generate lockfile",
        "Update locks",
        "Lock strategy"
      ],
      "solutions": [
        "Lock: pdm lock",
        "Update: pdm update",
        "Specific: pdm update package"
      ]
    },
    {
      "id": "pdm_sync",
      "pattern": "pdm sync|install|sync environment",
      "severity": "info",
      "causes": [
        "Install from lock",
        "Sync dependencies",
        "CI installation"
      ],
      "solutions": [
        "Sync: pdm sync",
        "No dev: pdm sync --no-dev",
        "With group: pdm sync -G group"
      ]
    },
    {
      "id": "pdm_pep582",
      "pattern": "pep582|__pypackages__|virtualenv",
      "severity": "info",
      "causes": [
        "PEP 582 mode",
        "Local packages",
        "No virtualenv mode"
      ],
      "solutions": [
        "PDM supports PEP 582 (__pypackages__)",
        "Enable: pdm config python.use_venv false",
        "Or use traditional venv (default)"
      ]
    },
    {
      "id": "pdm_run",
      "pattern": "pdm run|run script|command",
      "severity": "info",
      "causes": [
        "Run in environment",
        "Execute script",
        "Use project Python"
      ],
      "solutions": [
        "Run: pdm run python script.py",
        "Script: pdm run script_name",
        "Define scripts in pyproject.toml"
      ]
    },
    {
      "id": "pdm_build_backend",
      "pattern": "build backend|pdm-backend|pdm-pep517",
      "severity": "warning",
      "causes": [
        "Build system config",
        "Old backend",
        "Migration needed"
      ],
      "solutions": [
        "Use pdm-backend (new): build-backend = 'pdm.backend'",
        "pdm-pep517 deprecated",
        "Check pyproject.toml [build-system]"
      ]
    }
  ]
}
