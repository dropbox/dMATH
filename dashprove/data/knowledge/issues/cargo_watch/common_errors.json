{
  "tool": "cargo_watch",
  "category": "rust_development",
  "common_errors": [
    {
      "id": "watch_install",
      "pattern": "cargo watch not found|install cargo-watch",
      "severity": "error",
      "causes": [
        "Tool not installed",
        "Not in PATH",
        "Version mismatch"
      ],
      "solutions": [
        "Install: cargo install cargo-watch",
        "Or: cargo binstall cargo-watch",
        "Verify: cargo watch --version"
      ]
    },
    {
      "id": "watch_command",
      "pattern": "run command|-x|-s|shell command",
      "severity": "info",
      "causes": [
        "Want to run specific command",
        "Multiple commands",
        "Custom script"
      ],
      "solutions": [
        "Cargo command: cargo watch -x 'test'",
        "Shell: cargo watch -s 'echo hello'",
        "Multiple: cargo watch -x check -x test"
      ]
    },
    {
      "id": "watch_ignore",
      "pattern": "ignore files|exclude|.gitignore",
      "severity": "warning",
      "causes": [
        "Watching too many files",
        "Generated files trigger",
        "Infinite loop"
      ],
      "solutions": [
        "Ignore: cargo watch -i target/ -i '*.log'",
        "Use .gitignore by default",
        "Create .ignore file for patterns"
      ]
    },
    {
      "id": "watch_clear",
      "pattern": "clear screen|clean output|-c",
      "severity": "info",
      "causes": [
        "Want clean output each run",
        "Screen cluttered",
        "Fresh display"
      ],
      "solutions": [
        "Clear: cargo watch -c -x test",
        "-c clears screen before each run",
        "Combine with -q for quiet"
      ]
    },
    {
      "id": "watch_delay",
      "pattern": "debounce|delay|rapid changes",
      "severity": "info",
      "causes": [
        "Multiple quick saves",
        "Batch file changes",
        "Reduce rebuilds"
      ],
      "solutions": [
        "Delay: cargo watch -d 2 (2 seconds)",
        "Default is 0.5 seconds",
        "Longer delay for slow builds"
      ]
    },
    {
      "id": "watch_specific_files",
      "pattern": "watch specific|only watch|-w",
      "severity": "info",
      "causes": [
        "Only care about certain files",
        "Performance improvement",
        "Filter watched paths"
      ],
      "solutions": [
        "Watch specific: cargo watch -w src/ -x test",
        "Multiple: -w src/ -w tests/",
        "Combines with -i for fine control"
      ]
    },
    {
      "id": "watch_exec",
      "pattern": "execute|binary|run program",
      "severity": "info",
      "causes": [
        "Run built binary",
        "Watch and execute",
        "Development workflow"
      ],
      "solutions": [
        "Build and run: cargo watch -x 'run -- args'",
        "Or: cargo watch -s './target/debug/myapp'",
        "Chain: -x build -s './run.sh'"
      ]
    },
    {
      "id": "watch_features",
      "pattern": "features|--features|feature flags",
      "severity": "info",
      "causes": [
        "Need to pass cargo features",
        "Conditional compilation",
        "Test with features"
      ],
      "solutions": [
        "Pass through: cargo watch -x 'test --features foo'",
        "All features: -x 'test --all-features'",
        "Quote the entire cargo command"
      ]
    }
  ]
}
