{
  "tool": "dynamodb",
  "category": "database",
  "common_errors": [
    {
      "pattern": "ProvisionedThroughputExceededException",
      "meaning": "RCU/WCU capacity exceeded",
      "causes": ["Read/write capacity limit hit", "Hot partition", "Burst capacity depleted"],
      "solutions": ["Enable auto-scaling", "Switch to on-demand mode", "Distribute load across partitions"]
    },
    {
      "pattern": "ResourceNotFoundException",
      "meaning": "Table or index doesn't exist",
      "causes": ["Table not created", "Wrong table name", "Wrong region"],
      "solutions": ["Create table", "Verify table name", "Check AWS region"]
    },
    {
      "pattern": "ValidationException",
      "meaning": "Request validation failed",
      "causes": ["Invalid attribute type", "Missing required parameter", "Key schema mismatch"],
      "solutions": ["Check attribute types match schema", "Provide all required parameters", "Verify key attribute types"]
    },
    {
      "pattern": "ConditionalCheckFailedException",
      "meaning": "Conditional write failed",
      "causes": ["Condition expression evaluated false", "Item doesn't exist", "Attribute value changed"],
      "solutions": ["Check condition expression logic", "Use attribute_exists/attribute_not_exists", "Implement retry logic"]
    },
    {
      "pattern": "ItemCollectionSizeLimitExceededException",
      "meaning": "Item collection exceeds 10GB limit",
      "causes": ["Too many items with same partition key", "Large attribute values", "LSI size limit"],
      "solutions": ["Use composite sort key", "Archive old data", "Redesign partition key"]
    },
    {
      "pattern": "TransactionCanceledException",
      "meaning": "Transaction cancelled",
      "causes": ["Condition check failed", "Transaction conflict", "Item too large"],
      "solutions": ["Check cancellation reasons in response", "Retry transaction", "Reduce item size"]
    },
    {
      "pattern": "AccessDeniedException",
      "meaning": "IAM permission denied",
      "causes": ["Missing IAM permission", "Resource policy denies", "VPC endpoint policy"],
      "solutions": ["Add required DynamoDB actions to IAM policy", "Check table resource policy", "Update VPC endpoint policy"]
    },
    {
      "pattern": "LimitExceededException",
      "meaning": "DynamoDB service limit exceeded",
      "causes": ["Too many tables", "GSI limit reached", "Concurrent control plane operations"],
      "solutions": ["Request limit increase", "Delete unused tables/GSIs", "Wait between operations"]
    },
    {
      "pattern": "ThrottlingException",
      "meaning": "API request rate limit exceeded",
      "causes": ["Control plane API rate limit", "Too many DescribeTable calls", "Rapid CreateTable"],
      "solutions": ["Implement exponential backoff", "Cache metadata locally", "Batch operations"]
    },
    {
      "pattern": "InternalServerError",
      "meaning": "DynamoDB service error",
      "causes": ["Transient service issue", "Infrastructure problem"],
      "solutions": ["Retry with exponential backoff", "Check AWS status page", "Contact AWS support"]
    }
  ],
  "debugging_commands": [
    "aws dynamodb describe-table --table-name <name>",
    "aws dynamodb scan --table-name <name> --max-items 10",
    "aws dynamodb describe-limits",
    "aws cloudwatch get-metric-statistics --namespace AWS/DynamoDB"
  ],
  "documentation_urls": [
    "https://docs.aws.amazon.com/amazondynamodb/",
    "https://github.com/aws/aws-sdk"
  ]
}
