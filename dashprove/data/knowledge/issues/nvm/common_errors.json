{
  "tool": "nvm",
  "category": "version_manager",
  "common_errors": [
    {
      "pattern": "nvm: command not found",
      "cause": "nvm not sourced in shell",
      "solutions": [
        "Add to profile: source ~/.nvm/nvm.sh",
        "Reload shell: source ~/.bashrc or ~/.zshrc",
        "Check NVM_DIR is set correctly"
      ]
    },
    {
      "pattern": "N/A: version.*not yet installed",
      "cause": "Specified Node version not installed",
      "solutions": [
        "Run 'nvm install <version>'",
        "Run 'nvm install' to use .nvmrc",
        "List available: 'nvm ls-remote'"
      ]
    },
    {
      "pattern": "No .nvmrc file found",
      "cause": "No version file in directory tree",
      "solutions": [
        "Create .nvmrc with version number",
        "Specify version directly: 'nvm use 20'",
        "Set default: 'nvm alias default 20'"
      ]
    },
    {
      "pattern": "The default.*is not installed",
      "cause": "Default alias points to uninstalled version",
      "solutions": [
        "Install default: 'nvm install default'",
        "Reset default: 'nvm alias default <version>'",
        "Install and set: 'nvm install <v> && nvm alias default <v>'"
      ]
    },
    {
      "pattern": "nvm is not compatible with.*PREFIX",
      "cause": "npm PREFIX env var conflicts with nvm",
      "solutions": [
        "Unset PREFIX: unset PREFIX",
        "Remove PREFIX from shell profile",
        "Use nvm without global npm config"
      ]
    },
    {
      "pattern": "binary.*not available",
      "cause": "Prebuilt binary not available for platform",
      "solutions": [
        "Compile from source: 'nvm install -s <version>'",
        "Check supported platforms in nvm docs",
        "Try different version with binary support"
      ]
    },
    {
      "pattern": "curl.*failed.*SSL",
      "cause": "SSL certificate or network issue",
      "solutions": [
        "Update CA certificates",
        "Check system date/time",
        "Set NVM_NODEJS_ORG_MIRROR to http (not recommended)"
      ]
    },
    {
      "pattern": "directory.*not writable",
      "cause": "NVM_DIR has permission issues",
      "solutions": [
        "Fix permissions: chmod -R u+w $NVM_DIR",
        "Check ownership of ~/.nvm",
        "Don't use sudo with nvm"
      ]
    },
    {
      "pattern": "node: No such file or directory",
      "cause": "Node binary missing or corrupted",
      "solutions": [
        "Reinstall version: 'nvm reinstall <version>'",
        "Clear cache: 'nvm cache clear'",
        "Check symlinks in ~/.nvm/versions"
      ]
    },
    {
      "pattern": "global.*packages.*need reinstall",
      "cause": "Global packages from different Node version",
      "solutions": [
        "Reinstall globals: 'nvm reinstall-packages <from-version>'",
        "Use npx instead of global installs",
        "Create .nvmrc to track version per project"
      ]
    }
  ]
}
