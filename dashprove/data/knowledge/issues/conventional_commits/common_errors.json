{
  "tool": "conventional_commits",
  "category": "git_conventions",
  "common_errors": [
    {
      "pattern": "type is required",
      "cause": "Commit message missing type prefix",
      "solutions": [
        "Start message with type: feat, fix, docs, etc.",
        "Format: type(scope): description",
        "Use commit tooling for guidance"
      ]
    },
    {
      "pattern": "subject may not be empty",
      "cause": "Commit description missing",
      "solutions": [
        "Add description after colon",
        "Format: type: description",
        "Keep description under 72 characters"
      ]
    },
    {
      "pattern": "type.*not allowed",
      "cause": "Commit type not in allowed list",
      "solutions": [
        "Use standard types: feat, fix, docs, style, refactor, perf, test, chore",
        "Check project's allowed types",
        "Configure allowed types in linter"
      ]
    },
    {
      "pattern": "scope.*not allowed",
      "cause": "Scope not in configured allowed list",
      "solutions": [
        "Check project's scope configuration",
        "Add scope to allowed list",
        "Remove scope if not required"
      ]
    },
    {
      "pattern": "subject must be lowercase",
      "cause": "Description starts with capital letter",
      "solutions": [
        "Use lowercase first letter",
        "Configure linter to allow capitals",
        "Check project style guide"
      ]
    },
    {
      "pattern": "subject may not end with period",
      "cause": "Description ends with punctuation",
      "solutions": [
        "Remove trailing period",
        "Keep description concise",
        "Check linter configuration"
      ]
    },
    {
      "pattern": "body must have leading blank line",
      "cause": "No blank line between subject and body",
      "solutions": [
        "Add blank line after subject line",
        "Format: subject\\n\\nbody",
        "Use multi-line commit message"
      ]
    },
    {
      "pattern": "footer must have leading blank line",
      "cause": "No blank line before footer",
      "solutions": [
        "Add blank line before BREAKING CHANGE:",
        "Format: body\\n\\nfooter",
        "Separate footer tokens with blank line"
      ]
    },
    {
      "pattern": "BREAKING CHANGE.*format invalid",
      "cause": "Breaking change footer malformed",
      "solutions": [
        "Use BREAKING CHANGE: description",
        "Or use ! after type: feat!: description",
        "Check for typos in BREAKING CHANGE"
      ]
    },
    {
      "pattern": "header.*too long",
      "cause": "Subject line exceeds max length",
      "solutions": [
        "Keep subject under 72 characters",
        "Move details to body",
        "Use concise descriptions"
      ]
    }
  ]
}
