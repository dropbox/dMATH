{
  "tool": "signale",
  "category": "logging",
  "common_errors": [
    {
      "id": "signale_type_not_found",
      "pattern": "is not a function|unknown log type|method undefined",
      "severity": "error",
      "causes": [
        "Using non-existent signale type",
        "Custom type not defined",
        "Typo in method name"
      ],
      "solutions": [
        "Built-in types: success, error, warn, info, debug, etc.",
        "Check available: await, complete, error, fatal, etc.",
        "Add custom: signale.config({ types: { custom: {...} } })",
        "See docs for full list of built-in types"
      ]
    },
    {
      "id": "signale_scope_not_showing",
      "pattern": "scope not displayed|scope undefined|missing scope",
      "severity": "warning",
      "causes": [
        "Scope not configured",
        "Using base signale without scope",
        "displayScope option disabled"
      ],
      "solutions": [
        "Create scoped: const log = signale.scope('module')",
        "Or: new Signale({ scope: 'module' })",
        "Check displayScope in config is true",
        "Nested scopes: signale.scope('parent').scope('child')"
      ]
    },
    {
      "id": "signale_interactive_issue",
      "pattern": "interactive not working|spinner not updating|same line",
      "severity": "warning",
      "causes": [
        "Interactive mode not enabled",
        "Non-TTY environment",
        "Multiple interactive instances"
      ],
      "solutions": [
        "Enable: const interactive = new Signale({ interactive: true })",
        "Call interactive.await() then interactive.success()",
        "Interactive requires TTY for same-line update",
        "Only one interactive logger should be active"
      ]
    },
    {
      "id": "signale_secrets_logged",
      "pattern": "secret visible|password logged|credentials in output",
      "severity": "error",
      "causes": [
        "Secrets array not configured",
        "Secret value not in secrets list",
        "Object properties not redacted"
      ],
      "solutions": [
        "Add secrets: signale.config({ secrets: [process.env.API_KEY] })",
        "Secrets are replaced with [secure]",
        "Only string values in secrets array",
        "Objects need properties added individually"
      ]
    },
    {
      "id": "signale_time_not_showing",
      "pattern": "timestamp missing|time not displayed|displayDate",
      "severity": "warning",
      "causes": [
        "Date/time display disabled by default",
        "displayDate or displayTimestamp not set",
        "Config not applied"
      ],
      "solutions": [
        "Enable: signale.config({ displayTimestamp: true })",
        "Or: signale.config({ displayDate: true })",
        "Per-instance: new Signale({ config: { displayTimestamp: true } })",
        "Both can be enabled together"
      ]
    },
    {
      "id": "signale_custom_logger",
      "pattern": "custom type error|badge not showing|colors wrong",
      "severity": "warning",
      "causes": [
        "Custom type definition incomplete",
        "Missing required properties",
        "Color name invalid"
      ],
      "solutions": [
        "Custom type needs: { badge, color, label }",
        "Example: { badge: 'â˜…', color: 'yellow', label: 'star' }",
        "Colors: use chalk color names",
        "Stream can be added: { stream: process.stderr }"
      ]
    }
  ]
}
