{
  "tool": "argo_events",
  "category": "event_driven",
  "common_errors": [
    {
      "error_pattern": "EventSource.*not ready",
      "description": "Event source failed to initialize",
      "causes": [
        "Configuration error",
        "External service unreachable",
        "Credentials invalid"
      ],
      "solutions": [
        "Check EventSource status: kubectl get eventsource",
        "View controller logs for details",
        "Verify service connectivity and credentials"
      ]
    },
    {
      "error_pattern": "Sensor.*not triggering",
      "description": "Sensor not responding to events",
      "causes": [
        "Event dependency not matched",
        "Sensor not connected to event source",
        "Filter rejecting events"
      ],
      "solutions": [
        "Verify dependency references correct EventSource",
        "Check event bus connectivity",
        "Review filters on sensor dependency"
      ]
    },
    {
      "error_pattern": "EventBus.*not found",
      "description": "Event bus not available",
      "causes": [
        "EventBus not created",
        "NATS/Jetstream not running",
        "Wrong EventBus name referenced"
      ],
      "solutions": [
        "Create EventBus: kubectl apply -f eventbus.yaml",
        "Check EventBus pods are running",
        "Reference correct eventBusName in resources"
      ]
    },
    {
      "error_pattern": "trigger.*failed.*execute",
      "description": "Sensor trigger execution failed",
      "causes": [
        "Template resource invalid",
        "RBAC permissions missing",
        "Target resource errors"
      ],
      "solutions": [
        "Check trigger template configuration",
        "Ensure service account has required RBAC",
        "Validate target resource (Workflow, Pod, etc.)"
      ]
    },
    {
      "error_pattern": "webhook.*not receiving",
      "description": "Webhook event source not getting events",
      "causes": [
        "Endpoint not exposed",
        "Port configuration wrong",
        "Ingress/Service not set up"
      ],
      "solutions": [
        "Expose webhook with Service",
        "Configure Ingress or LoadBalancer",
        "Verify port matches EventSource spec"
      ]
    },
    {
      "error_pattern": "dependency.*not resolved",
      "description": "Event dependency cannot be satisfied",
      "causes": [
        "EventSource name mismatch",
        "Event name wrong",
        "Namespace mismatch"
      ],
      "solutions": [
        "Match eventSourceName in dependency",
        "Use correct eventName from EventSource",
        "Ensure same namespace or cross-namespace config"
      ]
    },
    {
      "error_pattern": "transform.*error",
      "description": "Data transformation failed",
      "causes": [
        "Invalid template syntax",
        "Missing data fields",
        "JSON path error"
      ],
      "solutions": [
        "Check template syntax (Go template or expr)",
        "Verify event data structure",
        "Test JSON path expressions"
      ]
    },
    {
      "error_pattern": "policy.*not matched",
      "description": "Trigger policy prevented execution",
      "causes": [
        "All/Any dependency condition not met",
        "Event timing mismatch",
        "Policy too restrictive"
      ],
      "solutions": [
        "Review trigger policy (All, Any)",
        "Check dependency conditions",
        "Adjust policy for use case"
      ]
    },
    {
      "error_pattern": "calendar.*invalid",
      "description": "Calendar event source schedule invalid",
      "causes": [
        "Invalid cron expression",
        "Timezone not recognized",
        "Schedule conflicts"
      ],
      "solutions": [
        "Validate cron syntax",
        "Use valid timezone identifier",
        "Check interval/schedule configuration"
      ]
    },
    {
      "error_pattern": "kafka.*connection failed",
      "description": "Cannot connect to Kafka",
      "causes": [
        "Kafka URL incorrect",
        "Authentication failed",
        "Topic doesn't exist"
      ],
      "solutions": [
        "Verify Kafka broker URL",
        "Check SASL/TLS configuration",
        "Create topic or enable auto-create"
      ]
    },
    {
      "error_pattern": "circuit breaker.*open",
      "description": "Trigger disabled by circuit breaker",
      "causes": [
        "Too many failures",
        "Target consistently failing"
      ],
      "solutions": [
        "Check trigger target health",
        "Review circuit breaker configuration",
        "Fix underlying failures to reset"
      ]
    },
    {
      "error_pattern": "service account.*not found",
      "description": "Missing service account for trigger",
      "causes": [
        "Service account not created",
        "Wrong service account name",
        "Missing RBAC bindings"
      ],
      "solutions": [
        "Create service account",
        "Set correct serviceAccountName in sensor",
        "Create RoleBinding for required permissions"
      ]
    }
  ]
}
