{
  "tool": "nextjs",
  "category": "web_framework",
  "errors": [
    {
      "pattern": "Module not found",
      "cause": "Missing dependency or path",
      "solutions": [
        "Check import path",
        "Install missing package",
        "Configure module resolution"
      ]
    },
    {
      "pattern": "Hydration failed",
      "cause": "Server/client HTML mismatch",
      "solutions": [
        "Check for browser-only code",
        "Use useEffect for client state",
        "Suppress hydration warning if intentional"
      ]
    },
    {
      "pattern": "getServerSideProps.*error",
      "cause": "SSR function error",
      "solutions": [
        "Check async/await usage",
        "Verify data fetching",
        "Handle errors properly"
      ]
    },
    {
      "pattern": "Image.*failed to load",
      "cause": "Next/Image configuration issue",
      "solutions": [
        "Configure domains in next.config.js",
        "Use correct src format",
        "Check image dimensions"
      ]
    },
    {
      "pattern": "404.*page not found",
      "cause": "Page route doesn't exist",
      "solutions": [
        "Check pages directory structure",
        "Verify dynamic routes",
        "Create missing page"
      ]
    },
    {
      "pattern": "API.*error",
      "cause": "API route error",
      "solutions": [
        "Check handler export",
        "Verify request method handling",
        "Review response format"
      ]
    },
    {
      "pattern": "Build error",
      "cause": "Next.js build failed",
      "solutions": [
        "Fix TypeScript errors",
        "Check ESLint warnings",
        "Review build logs"
      ]
    },
    {
      "pattern": "useRouter.*error",
      "cause": "Router used incorrectly",
      "solutions": [
        "Use inside component",
        "Check for SSR issues",
        "Use router from next/navigation"
      ]
    },
    {
      "pattern": "Dynamic.*not allowed",
      "cause": "Static export limitation",
      "solutions": [
        "Use getStaticPaths",
        "Configure fallback",
        "Check output mode"
      ]
    },
    {
      "pattern": "CORS.*blocked",
      "cause": "Cross-origin request blocked",
      "solutions": [
        "Configure CORS in API route",
        "Use Next.js rewrites",
        "Add appropriate headers"
      ]
    }
  ]
}
