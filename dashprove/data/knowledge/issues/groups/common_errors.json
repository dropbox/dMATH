{
  "tool": "groups",
  "version": "coreutils",
  "last_updated": "2025-12-23",
  "errors": [
    {
      "id": "user_not_found",
      "pattern": "no such user|groups: '.*': no such user",
      "message": "User doesn't exist",
      "cause": "Username not in system",
      "solutions": [
        {
          "approach": "List users",
          "code": "getent passwd | cut -d: -f1",
          "when": "Find correct name"
        },
        {
          "approach": "Check current user",
          "code": "groups\nid -Gn",
          "when": "Own groups"
        }
      ]
    },
    {
      "id": "new_group_not_shown",
      "pattern": "not in group|group not showing",
      "message": "New group not visible",
      "cause": "Need to re-login for group changes",
      "solutions": [
        {
          "approach": "Re-login",
          "code": "# Logout and login again, or:\nexec su -l $USER",
          "when": "Refresh groups"
        },
        {
          "approach": "Use newgrp",
          "code": "newgrp groupname",
          "when": "Temp switch to group"
        },
        {
          "approach": "Verify added",
          "code": "getent group groupname | grep $USER",
          "when": "Check /etc/group"
        }
      ]
    }
  ]
}
