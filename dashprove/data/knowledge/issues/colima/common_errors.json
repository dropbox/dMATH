{
  "tool": "colima",
  "category": "local_development",
  "common_errors": [
    {
      "pattern": "colima.*not running",
      "cause": "Colima VM not started",
      "solutions": [
        "Start Colima: colima start",
        "Check status: colima status",
        "Restart: colima restart"
      ]
    },
    {
      "pattern": "Cannot connect to Docker daemon",
      "cause": "Docker context not set to Colima",
      "solutions": [
        "Set context: docker context use colima",
        "Set DOCKER_HOST: export DOCKER_HOST=unix://~/.colima/default/docker.sock",
        "Verify colima is running"
      ]
    },
    {
      "pattern": "QEMU.*failed",
      "cause": "Virtualization issue on host",
      "solutions": [
        "Update QEMU: brew upgrade qemu",
        "Use VZ runtime: colima start --vm-type=vz",
        "Check host virtualization support"
      ]
    },
    {
      "pattern": "out of memory",
      "cause": "VM has insufficient memory",
      "solutions": [
        "Increase memory: colima start -m 4",
        "Stop unused containers",
        "Prune Docker resources"
      ]
    },
    {
      "pattern": "disk space.*full",
      "cause": "VM disk is full",
      "solutions": [
        "Increase disk: colima start -d 100",
        "Prune: docker system prune",
        "Delete unused volumes"
      ]
    },
    {
      "pattern": "mount.*permission denied",
      "cause": "Volume mount path not accessible",
      "solutions": [
        "Add mount: colima start --mount /path:w",
        "Use 9p mount type",
        "Check path exists on host"
      ]
    },
    {
      "pattern": "kubernetes.*not available",
      "cause": "Kubernetes not enabled in Colima",
      "solutions": [
        "Enable K8s: colima start -k",
        "Wait for K8s to be ready",
        "Check kubectl context"
      ]
    },
    {
      "pattern": "SSH.*connection refused",
      "cause": "VM SSH service not ready",
      "solutions": [
        "Wait for VM to fully start",
        "Restart Colima: colima restart",
        "Check VM status: colima status"
      ]
    },
    {
      "pattern": "CPU.*not supported",
      "cause": "Host CPU architecture issue",
      "solutions": [
        "Use correct arch: colima start -a aarch64",
        "Check Rosetta for x86 on ARM",
        "Update Colima to latest"
      ]
    },
    {
      "pattern": "network.*unreachable",
      "cause": "VM network configuration issue",
      "solutions": [
        "Restart Colima",
        "Check host network",
        "Try different network driver"
      ]
    }
  ]
}
