{
  "tool": "yargs",
  "version": "17.x",
  "last_updated": "2025-12-23",
  "errors": [
    {
      "id": "missing_required_argument",
      "pattern": "Missing required argument|Not enough non-option arguments",
      "message": "Required positional argument not provided",
      "cause": "Command expects positional arguments that weren't passed",
      "solutions": [
        {
          "approach": "Pass required arguments",
          "code": "program cmd <required-arg>",
          "when": "Argument is needed"
        },
        {
          "approach": "Make argument optional",
          "code": "yargs.command('cmd [file]', 'description')",
          "when": "Has fallback behavior"
        },
        {
          "approach": "Set demand count",
          "code": "yargs.demandCommand(1, 'You need at least one command')",
          "when": "Customizing error message"
        }
      ]
    },
    {
      "id": "unknown_argument",
      "pattern": "Unknown argument|Unknown option",
      "message": "Unrecognized flag or option passed",
      "cause": "Option not defined in yargs configuration",
      "solutions": [
        {
          "approach": "Define the option",
          "code": "yargs.option('new-flag', { type: 'boolean', describe: 'Enable feature' })",
          "when": "Option should be supported"
        },
        {
          "approach": "Allow unknown options",
          "code": "yargs.strict(false)",
          "when": "Passing to subprocess"
        },
        {
          "approach": "Check spelling",
          "code": "program --help",
          "when": "Typo suspected"
        }
      ]
    },
    {
      "id": "invalid_type",
      "pattern": "Invalid values|must be of type|not a valid",
      "message": "Option value doesn't match expected type",
      "cause": "String passed where number expected, or invalid choice",
      "solutions": [
        {
          "approach": "Pass correct type",
          "code": "program --port 3000",
          "when": "Type is number"
        },
        {
          "approach": "Use valid choice",
          "code": "yargs.option('format', { choices: ['json', 'yaml', 'xml'] })",
          "when": "Value must be from list"
        },
        {
          "approach": "Add type coercion",
          "code": "yargs.option('port', { type: 'number', coerce: Number })",
          "when": "Auto-convert strings"
        }
      ]
    },
    {
      "id": "conflicting_options",
      "pattern": "Arguments.*are mutually exclusive|Implications failed",
      "message": "Incompatible options used together",
      "cause": "Options marked as conflicts() used simultaneously",
      "solutions": [
        {
          "approach": "Choose one option",
          "code": "Use --json OR --yaml, not both",
          "when": "Options are exclusive"
        },
        {
          "approach": "Review conflicts",
          "code": "yargs.option('json', { conflicts: 'yaml' })",
          "when": "Understanding constraints"
        }
      ]
    },
    {
      "id": "missing_implies",
      "pattern": "Implications failed|If you specify.*you must also",
      "message": "Dependent option not provided",
      "cause": "Option marked with implies() requires another option",
      "solutions": [
        {
          "approach": "Add implied option",
          "code": "program --ssl --ssl-cert cert.pem",
          "when": "--ssl implies --ssl-cert"
        },
        {
          "approach": "Review dependencies",
          "code": "yargs.option('ssl', { implies: ['ssl-cert', 'ssl-key'] })",
          "when": "Understanding requirements"
        }
      ]
    }
  ]
}
