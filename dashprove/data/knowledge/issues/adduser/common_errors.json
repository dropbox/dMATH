{
  "tool": "adduser",
  "version": "debian",
  "last_updated": "2025-12-23",
  "errors": [
    {
      "id": "user_exists",
      "pattern": "user '.*' already exists|adduser: The user .* already exists",
      "message": "User already exists",
      "cause": "Username taken",
      "solutions": [
        {
          "approach": "Choose different name",
          "code": "sudo adduser newusername",
          "when": "Different user needed"
        },
        {
          "approach": "Check existing",
          "code": "id existinguser\ngetent passwd existinguser",
          "when": "Verify user info"
        }
      ]
    },
    {
      "id": "permission_denied",
      "pattern": "Permission denied|adduser: Only root may add",
      "message": "Not authorized",
      "cause": "Need root privileges",
      "solutions": [
        {
          "approach": "Use sudo",
          "code": "sudo adduser username",
          "when": "Standard method"
        }
      ]
    },
    {
      "id": "invalid_name",
      "pattern": "invalid user name|adduser: Please enter a username",
      "message": "Username format invalid",
      "cause": "Username contains invalid characters or empty",
      "solutions": [
        {
          "approach": "Follow naming rules",
          "code": "# Must start with lowercase letter\n# Contains lowercase, digits, underscores, hyphens\nsudo adduser validname",
          "when": "Fix name format"
        }
      ]
    },
    {
      "id": "group_exists_no_user",
      "pattern": "group .* already exists|The group .* already exists",
      "message": "Group exists but not user",
      "cause": "System group matches requested username",
      "solutions": [
        {
          "approach": "Specify group",
          "code": "sudo adduser --ingroup existinggroup username",
          "when": "Join existing group"
        },
        {
          "approach": "Force user group",
          "code": "sudo adduser --disabled-login username",
          "when": "Create anyway"
        }
      ]
    },
    {
      "id": "adduser_not_found",
      "pattern": "adduser: command not found",
      "message": "adduser not installed",
      "cause": "Not available (non-Debian systems)",
      "solutions": [
        {
          "approach": "Use useradd",
          "code": "sudo useradd -m -s /bin/bash username",
          "when": "Low-level alternative"
        },
        {
          "approach": "Install on Debian",
          "code": "sudo apt install adduser",
          "when": "Debian/Ubuntu"
        }
      ]
    }
  ]
}
