{
  "tool": "cloc",
  "version": "2.0",
  "last_updated": "2025-12-23",
  "errors": [
    {
      "id": "perl_not_found",
      "pattern": "perl.*not found|Can't locate",
      "message": "Perl not found or missing module",
      "cause": "cloc requires Perl and some modules",
      "solutions": [
        {
          "approach": "Install Perl",
          "code": "# macOS: already installed\n# Ubuntu:\nsudo apt install perl",
          "when": "Perl missing"
        },
        {
          "approach": "Install missing module",
          "code": "cpan Algorithm::Diff",
          "when": "Module missing"
        },
        {
          "approach": "Use standalone binary",
          "code": "# Download single-file executable from GitHub releases",
          "when": "Don't want Perl dependencies"
        }
      ]
    },
    {
      "id": "file_not_found",
      "pattern": "Unable to read|No such file",
      "message": "File or directory not found",
      "cause": "Specified path doesn't exist",
      "solutions": [
        {
          "approach": "Check path",
          "code": "ls -la /path/to/code",
          "when": "Verify path exists"
        },
        {
          "approach": "Use current directory",
          "code": "cloc .",
          "when": "Count current directory"
        },
        {
          "approach": "Use glob patterns",
          "code": "cloc src/ lib/ include/",
          "when": "Multiple directories"
        }
      ]
    },
    {
      "id": "language_not_recognized",
      "pattern": "Language.*not defined|unknown extension",
      "message": "File extension not recognized",
      "cause": "cloc doesn't know how to count this file type",
      "solutions": [
        {
          "approach": "Define custom language",
          "code": "cloc --force-lang=\"Python,py3\" .",
          "when": "Alternative extension"
        },
        {
          "approach": "Use read-lang-def",
          "code": "cloc --read-lang-def=my_langs.txt .",
          "when": "Multiple custom languages"
        },
        {
          "approach": "Show all languages",
          "code": "cloc --show-lang",
          "when": "See what's supported"
        }
      ]
    },
    {
      "id": "binary_file_counted",
      "pattern": "binary|Ignored",
      "message": "Binary files being processed",
      "cause": "cloc trying to count binary files",
      "solutions": [
        {
          "approach": "Exclude patterns",
          "code": "cloc --exclude-dir=node_modules,dist,build .",
          "when": "Skip directories"
        },
        {
          "approach": "Exclude extensions",
          "code": "cloc --exclude-ext=exe,dll,so .",
          "when": "Skip file types"
        },
        {
          "approach": "Use .clocignore",
          "code": "echo 'node_modules' > .clocignore\ncloc .",
          "when": "Project-wide exclusions"
        }
      ]
    },
    {
      "id": "git_diff_error",
      "pattern": "git.*failed|diff.*error",
      "message": "Git diff mode failed",
      "cause": "Not in git repo or invalid commit reference",
      "solutions": [
        {
          "approach": "Use correct syntax",
          "code": "cloc --git --diff HEAD~1 HEAD",
          "when": "Compare commits"
        },
        {
          "approach": "Compare branches",
          "code": "cloc --git --diff main feature-branch",
          "when": "Branch comparison"
        },
        {
          "approach": "Verify git repo",
          "code": "git status && cloc --git .",
          "when": "Ensure in git repo"
        }
      ]
    },
    {
      "id": "large_file_timeout",
      "pattern": "timeout|taking too long",
      "message": "Processing very large files slowly",
      "cause": "Huge files or many files to process",
      "solutions": [
        {
          "approach": "Skip large files",
          "code": "cloc --skip-uniqueness .",
          "when": "Don't need duplicate detection"
        },
        {
          "approach": "Use parallel processing",
          "code": "cloc --processes=4 .",
          "when": "Multi-core available"
        },
        {
          "approach": "Exclude generated code",
          "code": "cloc --exclude-dir=generated,vendor .",
          "when": "Skip generated files"
        }
      ]
    },
    {
      "id": "output_format_error",
      "pattern": "format.*not supported|output.*error",
      "message": "Output format error",
      "cause": "Invalid output format specified",
      "solutions": [
        {
          "approach": "Use valid format",
          "code": "cloc --json . > counts.json\ncloc --csv . > counts.csv\ncloc --xml . > counts.xml",
          "when": "Machine-readable output"
        },
        {
          "approach": "YAML output",
          "code": "cloc --yaml . > counts.yaml",
          "when": "YAML preferred"
        },
        {
          "approach": "SQL insert statements",
          "code": "cloc --sql-project=myproject --sql=-",
          "when": "Database import"
        }
      ]
    },
    {
      "id": "symlink_loop",
      "pattern": "symbolic link loop|too many levels",
      "message": "Symbolic link recursion",
      "cause": "Circular symbolic links in directory tree",
      "solutions": [
        {
          "approach": "Don't follow symlinks",
          "code": "cloc --not-match-d='^\\.' .",
          "when": "Avoid symlinked directories"
        },
        {
          "approach": "Exclude specific links",
          "code": "cloc --exclude-dir=problematic_link .",
          "when": "Known problematic link"
        }
      ]
    }
  ]
}
