{
  "tool": "gofmt",
  "version": "1.21+",
  "last_updated": "2025-12-23",
  "errors": [
    {
      "id": "syntax_error",
      "pattern": "syntax error|expected.*found|illegal",
      "message": "Cannot format due to syntax error",
      "cause": "Go source file has syntax errors",
      "solutions": [
        {
          "approach": "Fix syntax first",
          "code": "go build ./...",
          "when": "Find syntax errors"
        },
        {
          "approach": "Check specific file",
          "code": "gofmt -e file.go",
          "when": "Show all errors"
        }
      ]
    },
    {
      "id": "import_grouping",
      "pattern": "import.*group|imports.*ordered",
      "message": "Import grouping differs from standard",
      "cause": "goimports provides better import handling",
      "solutions": [
        {
          "approach": "Use goimports instead",
          "code": "goimports -w file.go",
          "when": "Need import management"
        },
        {
          "approach": "Group imports manually",
          "code": "import (\n\t\"fmt\"         // stdlib\n\n\t\"external/pkg\" // third-party\n\n\t\"myproject/pkg\" // local\n)",
          "when": "Manual grouping"
        }
      ]
    },
    {
      "id": "file_not_go",
      "pattern": "not a Go source file|unknown file type",
      "message": "File not recognized as Go source",
      "cause": "File extension or content not Go",
      "solutions": [
        {
          "approach": "Rename to .go",
          "code": "mv file.txt file.go",
          "when": "Wrong extension"
        },
        {
          "approach": "Check package declaration",
          "code": "// File must start with: package name",
          "when": "Missing package"
        }
      ]
    },
    {
      "id": "tab_vs_space",
      "pattern": "tab.*space|indentation|indent style",
      "message": "Indentation style issue",
      "cause": "Go standard uses tabs, not spaces",
      "solutions": [
        {
          "approach": "Accept tabs",
          "code": "// gofmt uses tabs for indentation",
          "when": "Configure editor"
        },
        {
          "approach": "Set editor to use tabs",
          "code": "// .editorconfig\n[*.go]\nindent_style = tab",
          "when": "EditorConfig"
        }
      ]
    },
    {
      "id": "check_failed",
      "pattern": "differs from gofmt|would reformat",
      "message": "Format check failed",
      "cause": "Files not formatted according to gofmt",
      "solutions": [
        {
          "approach": "Format all files",
          "code": "gofmt -w .",
          "when": "Apply formatting"
        },
        {
          "approach": "Use go fmt",
          "code": "go fmt ./...",
          "when": "Format entire module"
        },
        {
          "approach": "Show diff",
          "code": "gofmt -d file.go",
          "when": "Preview changes"
        }
      ]
    },
    {
      "id": "generated_code",
      "pattern": "generated.*file|code generated|DO NOT EDIT",
      "message": "Formatting generated code",
      "cause": "Auto-generated code being formatted",
      "solutions": [
        {
          "approach": "Add generated comment",
          "code": "// Code generated by xyz. DO NOT EDIT.",
          "when": "Mark as generated"
        },
        {
          "approach": "Exclude from CI",
          "code": "# Skip generated files in CI check",
          "when": "CI configuration"
        }
      ]
    },
    {
      "id": "cgo_code",
      "pattern": "cgo|import \"C\"|C code",
      "message": "CGO code formatting issues",
      "cause": "C code in cgo preamble has different rules",
      "solutions": [
        {
          "approach": "Format Go parts only",
          "code": "// gofmt doesn't format C code in /*...*/ before import \"C\"",
          "when": "Mixed Go/C"
        },
        {
          "approach": "Use separate C files",
          "code": "// Put C code in .c files",
          "when": "Complex C code"
        }
      ]
    },
    {
      "id": "module_not_found",
      "pattern": "module.*not found|go.mod.*missing",
      "message": "Go module not found",
      "cause": "Running outside module context",
      "solutions": [
        {
          "approach": "Initialize module",
          "code": "go mod init mymodule",
          "when": "New project"
        },
        {
          "approach": "Run from module root",
          "code": "cd /path/to/module && gofmt -w .",
          "when": "Wrong directory"
        }
      ]
    },
    {
      "id": "simplify_option",
      "pattern": "-s option|simplify|redundant",
      "message": "Code can be simplified",
      "cause": "Using gofmt -s shows simplifications",
      "solutions": [
        {
          "approach": "Use simplify flag",
          "code": "gofmt -s -w file.go",
          "when": "Apply simplifications"
        },
        {
          "approach": "Review simplifications",
          "code": "gofmt -s -d file.go",
          "when": "See what changes"
        }
      ]
    },
    {
      "id": "permission_denied",
      "pattern": "permission denied|cannot write|read-only",
      "message": "Cannot write formatted file",
      "cause": "File or directory permissions issue",
      "solutions": [
        {
          "approach": "Fix permissions",
          "code": "chmod u+w file.go",
          "when": "Read-only file"
        },
        {
          "approach": "Output to stdout",
          "code": "gofmt file.go > formatted.go",
          "when": "Can't modify original"
        }
      ]
    }
  ]
}
