{
  "tool": "pusher",
  "category": "realtime_services",
  "errors": [
    {
      "pattern": "Invalid key|401.*Unauthorized",
      "meaning": "Invalid Pusher credentials",
      "causes": ["Wrong app key", "Secret mismatch", "Credentials expired"],
      "solutions": ["Verify PUSHER_APP_KEY and PUSHER_SECRET", "Check credentials in Pusher dashboard", "Regenerate credentials if compromised"]
    },
    {
      "pattern": "Could not connect|WebSocket.*failed",
      "meaning": "Connection failed",
      "causes": ["Network issue", "Firewall blocking", "Cluster mismatch"],
      "solutions": ["Check internet connectivity", "Verify cluster setting", "Allow WebSocket connections in firewall"]
    },
    {
      "pattern": "Channel.*not authorized|403.*Forbidden",
      "meaning": "Private/presence channel auth failed",
      "causes": ["Auth endpoint not configured", "Auth signature wrong", "Endpoint returning wrong format"],
      "solutions": ["Set up auth endpoint correctly", "Verify auth response format", "Check server-side auth logic"]
    },
    {
      "pattern": "Message.*too large|Max message size",
      "meaning": "Message exceeds size limit",
      "causes": ["Message over 10KB limit", "Large payload data", "Including too much info"],
      "solutions": ["Reduce message size", "Send only essential data", "Split into multiple messages"]
    },
    {
      "pattern": "Rate limit exceeded",
      "meaning": "Too many messages/connections",
      "causes": ["Exceeded plan limits", "Burst of messages", "Too many subscribers"],
      "solutions": ["Upgrade Pusher plan", "Implement rate limiting", "Batch messages"]
    },
    {
      "pattern": "Invalid channel name",
      "meaning": "Channel name format wrong",
      "causes": ["Invalid characters", "Too long", "Missing prefix for private/presence"],
      "solutions": ["Use alphanumeric and -_@,.;=", "Keep under 200 chars", "Use private- or presence- prefix"]
    },
    {
      "pattern": "Connection.*timed out|ping.*timeout",
      "meaning": "Connection lost",
      "causes": ["Network interruption", "Server unavailable", "Activity timeout"],
      "solutions": ["Implement reconnection logic", "Handle disconnection events", "Check Pusher status page"]
    },
    {
      "pattern": "undefined.*pusher|Pusher is not defined",
      "meaning": "Pusher not loaded",
      "causes": ["Script not loaded", "Import error", "CDN failed"],
      "solutions": ["Check Pusher script inclusion", "Verify import statement", "Load before use"]
    }
  ]
}
