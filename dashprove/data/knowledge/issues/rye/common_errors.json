{
  "tool": "rye",
  "category": "python_packaging",
  "common_errors": [
    {
      "id": "rye_install",
      "pattern": "rye not found|install rye|curl install",
      "severity": "error",
      "causes": [
        "Rye not installed",
        "Not in PATH",
        "Shell config"
      ],
      "solutions": [
        "Install: curl -sSf https://rye-up.com/get | bash",
        "Follow shell config instructions",
        "Restart shell or source config"
      ]
    },
    {
      "id": "rye_init",
      "pattern": "rye init|new project|pyproject.toml",
      "severity": "info",
      "causes": [
        "Starting new project",
        "Initialize rye",
        "Config setup"
      ],
      "solutions": [
        "New: rye init my-project",
        "Existing: rye init in project dir",
        "Creates pyproject.toml"
      ]
    },
    {
      "id": "rye_add",
      "pattern": "rye add|add dependency|package",
      "severity": "info",
      "causes": [
        "Adding dependency",
        "Dev dependency",
        "Version constraint"
      ],
      "solutions": [
        "Add: rye add package",
        "Dev: rye add --dev package",
        "Version: rye add 'package>=1.0'"
      ]
    },
    {
      "id": "rye_sync",
      "pattern": "rye sync|install deps|sync environment",
      "severity": "info",
      "causes": [
        "Install dependencies",
        "Update environment",
        "Lock and install"
      ],
      "solutions": [
        "Sync: rye sync",
        "Creates venv and installs",
        "Also updates lockfile"
      ]
    },
    {
      "id": "rye_pin",
      "pattern": "rye pin|python version|toolchain",
      "severity": "info",
      "causes": [
        "Set Python version",
        "Project Python",
        "Toolchain management"
      ],
      "solutions": [
        "Pin: rye pin 3.11",
        "Uses Rye-managed Python",
        "Creates .python-version file"
      ]
    },
    {
      "id": "rye_run",
      "pattern": "rye run|run command|script",
      "severity": "info",
      "causes": [
        "Execute in venv",
        "Run script",
        "Use project Python"
      ],
      "solutions": [
        "Run: rye run python script.py",
        "Script: rye run script_name",
        "Define scripts in pyproject.toml"
      ]
    },
    {
      "id": "rye_build",
      "pattern": "rye build|build package|wheel",
      "severity": "info",
      "causes": [
        "Building distribution",
        "Create wheel",
        "Publish preparation"
      ],
      "solutions": [
        "Build: rye build",
        "Output in dist/",
        "Builds wheel and sdist"
      ]
    },
    {
      "id": "rye_workspace",
      "pattern": "workspace|monorepo|multiple packages",
      "severity": "info",
      "causes": [
        "Multiple packages",
        "Shared dependencies",
        "Monorepo setup"
      ],
      "solutions": [
        "Create workspace in pyproject.toml",
        "[tool.rye.workspace] members = ['packages/*']",
        "Each member has own pyproject.toml"
      ]
    }
  ]
}
