{
  "tool": "intellij",
  "version": "2024.3",
  "last_updated": "2025-12-23",
  "errors": [
    {
      "id": "cannot_resolve_symbol",
      "pattern": "Cannot resolve symbol|cannot find symbol",
      "message": "Cannot resolve symbol",
      "cause": "Class/method not imported or dependency missing",
      "solutions": [
        {
          "approach": "Auto-import",
          "code": "Alt+Enter on the symbol > Import class",
          "when": "Class exists but not imported"
        },
        {
          "approach": "Invalidate caches",
          "code": "File > Invalidate Caches > Invalidate and Restart",
          "when": "Index is corrupted"
        },
        {
          "approach": "Reimport project",
          "code": "Right-click project > Maven/Gradle > Reimport",
          "when": "Dependencies not synced"
        }
      ]
    },
    {
      "id": "out_of_memory",
      "pattern": "OutOfMemoryError|out of memory|low memory",
      "message": "Out of memory error",
      "cause": "IDE heap size too small for project",
      "solutions": [
        {
          "approach": "Increase heap",
          "code": "Help > Change Memory Settings > Increase heap size",
          "when": "Large project needs more RAM"
        },
        {
          "approach": "Edit vmoptions",
          "code": "-Xmx4096m in idea.vmoptions",
          "when": "Manual configuration needed"
        },
        {
          "approach": "Close unused projects",
          "code": "File > Close Project",
          "when": "Too many projects open"
        }
      ]
    },
    {
      "id": "gradle_sync_failed",
      "pattern": "Gradle sync failed|Could not resolve|Build failed",
      "message": "Gradle sync failed",
      "cause": "Dependency resolution failure or build script error",
      "solutions": [
        {
          "approach": "Refresh dependencies",
          "code": "View > Tool Windows > Gradle > Refresh",
          "when": "Dependencies need re-download"
        },
        {
          "approach": "Clear gradle cache",
          "code": "rm -rf ~/.gradle/caches/",
          "when": "Corrupted cache"
        },
        {
          "approach": "Use offline mode",
          "code": "Gradle Settings > Offline work (if network issues)",
          "when": "Network problems"
        }
      ]
    },
    {
      "id": "sdk_not_configured",
      "pattern": "SDK.*not configured|Project SDK is not defined",
      "message": "Project SDK is not defined",
      "cause": "JDK not configured for project",
      "solutions": [
        {
          "approach": "Configure SDK",
          "code": "File > Project Structure > Project > SDK",
          "when": "SDK needs to be set"
        },
        {
          "approach": "Download SDK",
          "code": "File > Project Structure > SDKs > + > Download JDK",
          "when": "JDK not installed"
        },
        {
          "approach": "Set module SDK",
          "code": "File > Project Structure > Modules > Dependencies > Module SDK",
          "when": "Module-specific SDK"
        }
      ]
    },
    {
      "id": "indexing_paused",
      "pattern": "Indexing paused|indexing.*suspended|scanning files",
      "message": "Indexing paused or slow",
      "cause": "Large project or power save mode enabled",
      "solutions": [
        {
          "approach": "Wait for completion",
          "code": "Check progress bar in bottom-right",
          "when": "Initial indexing"
        },
        {
          "approach": "Exclude directories",
          "code": "Right-click folder > Mark Directory as > Excluded",
          "when": "Unnecessary folders indexed"
        },
        {
          "approach": "Disable power save",
          "code": "File > Power Save Mode (uncheck)",
          "when": "Power save enabled"
        }
      ]
    },
    {
      "id": "plugin_incompatible",
      "pattern": "plugin.*incompatible|plugin.*not compatible",
      "message": "Plugin incompatible with IDE version",
      "cause": "Plugin requires different IDE version",
      "solutions": [
        {
          "approach": "Update plugin",
          "code": "Settings > Plugins > Updates",
          "when": "Newer version available"
        },
        {
          "approach": "Disable plugin",
          "code": "Settings > Plugins > Installed > Disable",
          "when": "Plugin not essential"
        },
        {
          "approach": "Update IDE",
          "code": "Help > Check for Updates",
          "when": "IDE version outdated"
        }
      ]
    },
    {
      "id": "kotlin_not_configured",
      "pattern": "Kotlin.*not configured|kotlin.*version.*mismatch",
      "message": "Kotlin not configured in project",
      "cause": "Kotlin plugin/stdlib version mismatch",
      "solutions": [
        {
          "approach": "Configure Kotlin",
          "code": "Tools > Kotlin > Configure Kotlin in Project",
          "when": "Kotlin not set up"
        },
        {
          "approach": "Sync Kotlin version",
          "code": "Align kotlin version in build.gradle with IDE plugin",
          "when": "Version mismatch"
        },
        {
          "approach": "Update Kotlin plugin",
          "code": "Settings > Plugins > Kotlin > Update",
          "when": "Plugin outdated"
        }
      ]
    }
  ]
}
