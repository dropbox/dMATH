{
  "tool": "bacon",
  "category": "rust_development",
  "common_errors": [
    {
      "id": "bacon_install",
      "pattern": "bacon not found|install bacon",
      "severity": "error",
      "causes": [
        "Tool not installed",
        "Version outdated",
        "Binary not in PATH"
      ],
      "solutions": [
        "Install: cargo install bacon --locked",
        "Or: cargo binstall bacon",
        "Verify: bacon --version"
      ]
    },
    {
      "id": "bacon_jobs",
      "pattern": "job not found|undefined job|custom job",
      "severity": "error",
      "causes": [
        "Job not defined",
        "Typo in job name",
        "Config not loaded"
      ],
      "solutions": [
        "Use built-in: check, clippy, test, doc",
        "Define custom in bacon.toml",
        "List available: bacon --help"
      ]
    },
    {
      "id": "bacon_config",
      "pattern": "bacon.toml|configuration|prefs.toml",
      "severity": "info",
      "causes": [
        "Want custom config",
        "Project-specific settings",
        "Global preferences"
      ],
      "solutions": [
        "Project config: bacon.toml in project root",
        "Global: ~/.config/bacon/prefs.toml",
        "bacon --init to create template"
      ]
    },
    {
      "id": "bacon_keybindings",
      "pattern": "keybinding|keyboard|shortcuts",
      "severity": "info",
      "causes": [
        "Navigate errors",
        "Switch jobs",
        "Custom shortcuts"
      ],
      "solutions": [
        "h: help, j/k: scroll, Enter: open in editor",
        "c: check, t: test, d: doc, q: quit",
        "Configure in prefs.toml"
      ]
    },
    {
      "id": "bacon_summary",
      "pattern": "summary view|list view|-s",
      "severity": "info",
      "causes": [
        "See all errors at once",
        "List view preferred",
        "Toggle display mode"
      ],
      "solutions": [
        "s key toggles summary mode",
        "Or start with: bacon -s",
        "Shows all warnings/errors in list"
      ]
    },
    {
      "id": "bacon_path",
      "pattern": "wrong directory|workspace|path",
      "severity": "warning",
      "causes": [
        "Not in cargo project",
        "Workspace selection",
        "Subdirectory issues"
      ],
      "solutions": [
        "Run in directory with Cargo.toml",
        "Or: bacon --path /path/to/project",
        "Workspace: bacon -p package_name"
      ]
    },
    {
      "id": "bacon_exports",
      "pattern": "export|locations|json",
      "severity": "info",
      "causes": [
        "IDE integration",
        "CI usage",
        "Error locations file"
      ],
      "solutions": [
        "export.enabled = true in config",
        "Creates .bacon-locations file",
        "VS Code extension reads this"
      ]
    },
    {
      "id": "bacon_features",
      "pattern": "features|--features|feature flags",
      "severity": "info",
      "causes": [
        "Need cargo features",
        "Conditional compilation",
        "Test with features"
      ],
      "solutions": [
        "bacon --features=feat1,feat2",
        "Or in bacon.toml job definition",
        "default_job can set features"
      ]
    }
  ]
}
