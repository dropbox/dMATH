{
  "tool": "astro",
  "category": "framework",
  "common_errors": [
    {
      "id": "astro_client_directive",
      "pattern": "client:load|client:visible|hydration failed|component not interactive",
      "severity": "error",
      "causes": [
        "Missing client directive",
        "Wrong directive type",
        "Island not hydrating"
      ],
      "solutions": [
        "Add client:load for immediate hydration",
        "Use client:visible for lazy hydration",
        "client:idle for when browser idle",
        "No directive = static HTML only"
      ]
    },
    {
      "id": "astro_jsx_framework",
      "pattern": "react component|vue component|framework not found",
      "severity": "error",
      "causes": [
        "Framework integration not installed",
        "Wrong import syntax",
        "Config missing"
      ],
      "solutions": [
        "npx astro add react (or vue, svelte, etc)",
        "Add to astro.config.mjs integrations array",
        "Import from correct path"
      ]
    },
    {
      "id": "astro_content_collections",
      "pattern": "content collection|schema error|frontmatter invalid",
      "severity": "error",
      "causes": [
        "Schema validation failed",
        "Content in wrong directory",
        "Missing config.ts"
      ],
      "solutions": [
        "Define schema in src/content/config.ts",
        "Place content in src/content/<collection>/",
        "Use getCollection() from astro:content"
      ]
    },
    {
      "id": "astro_ssr_mode",
      "pattern": "server output|ssr error|adapter missing",
      "severity": "error",
      "causes": [
        "SSR requires adapter",
        "Output mode not set",
        "Adapter not configured"
      ],
      "solutions": [
        "Set output: 'server' in config",
        "Install adapter: npx astro add node/vercel/etc",
        "Add adapter to integrations"
      ]
    },
    {
      "id": "astro_import_error",
      "pattern": "cannot import|module not found|image import",
      "severity": "error",
      "causes": [
        "Assets need special handling",
        "Public vs src assets",
        "Missing file"
      ],
      "solutions": [
        "Import images from src/: import img from './image.png'",
        "Or use /image.png for public folder",
        "Use Astro Image component for optimization"
      ]
    },
    {
      "id": "astro_slots",
      "pattern": "slot error|named slots|children not rendering",
      "severity": "warning",
      "causes": [
        "Slot not defined in component",
        "Wrong slot syntax",
        "Named slot mismatch"
      ],
      "solutions": [
        "Use <slot /> in component",
        "Named: <slot name='header' />",
        "Pass: <div slot='header'>content</div>"
      ]
    },
    {
      "id": "astro_environment",
      "pattern": "env variable|import.meta.env|process.env undefined",
      "severity": "warning",
      "causes": [
        "Env vars not prefixed",
        "Client vs server context",
        "Missing .env file"
      ],
      "solutions": [
        "Prefix with PUBLIC_ for client access",
        "Use import.meta.env.PUBLIC_*",
        "Server-only vars available in .astro files"
      ]
    }
  ]
}
