{
  "tool": "tsx",
  "category": "process_management",
  "common_errors": [
    {
      "pattern": "tsx: command not found|not recognized",
      "meaning": "tsx not installed",
      "causes": [
        "Not installed globally or locally",
        "PATH doesn't include node_modules/.bin"
      ],
      "solutions": [
        "Install globally: npm install -g tsx",
        "Or locally: npm install --save-dev tsx",
        "Use npx: npx tsx src/index.ts",
        "Add to package.json: \"dev\": \"tsx watch src/index.ts\""
      ]
    },
    {
      "pattern": "Cannot find module|ERR_MODULE_NOT_FOUND",
      "meaning": "Module resolution failed",
      "causes": [
        "Import path incorrect",
        "Missing .js extension in ESM",
        "tsconfig paths not working"
      ],
      "solutions": [
        "tsx supports extensionless imports for TS files",
        "Check import path case sensitivity",
        "For path aliases, ensure tsconfig.json baseUrl/paths set",
        "tsx respects tsconfig paths automatically"
      ]
    },
    {
      "pattern": "SyntaxError: Unexpected token|Cannot use import",
      "meaning": "ESM/CJS interop issue",
      "causes": [
        "Mixing ESM and CJS incorrectly",
        "Package doesn't support ESM",
        "Node.js version too old"
      ],
      "solutions": [
        "tsx handles ESM/CJS automatically",
        "For stubborn packages, use dynamic import",
        "Check package.json type field",
        "Requires Node.js 18.0.0+"
      ]
    },
    {
      "pattern": "watch mode.*not restarting|changes not detected",
      "meaning": "File watching issues",
      "causes": [
        "Watching wrong directory",
        "Ignore pattern too broad",
        "File system events not propagating"
      ],
      "solutions": [
        "Use tsx watch explicitly: tsx watch src/index.ts",
        "Check for .gitignore affecting watch",
        "Try --clear-screen=false for debugging",
        "Use --ignore pattern to exclude build outputs"
      ]
    },
    {
      "pattern": "Type error|tsc.*error|TS\\d{4}",
      "meaning": "TypeScript type checking errors",
      "causes": [
        "tsx doesn't type check by default (like esbuild)",
        "Type errors surfacing at runtime",
        "Missing type declarations"
      ],
      "solutions": [
        "tsx transpiles only, no type checking",
        "Run tsc --noEmit separately for type checking",
        "Add type check to workflow: \"check\": \"tsc --noEmit\"",
        "Install @types/* packages for libraries"
      ]
    },
    {
      "pattern": "decorator.*error|experimentalDecorators",
      "meaning": "Decorator support issues",
      "causes": [
        "Decorators require specific config",
        "esbuild decorator handling differs from tsc"
      ],
      "solutions": [
        "Set in tsconfig: \"experimentalDecorators\": true",
        "emitDecoratorMetadata may not be fully supported",
        "Consider swc backend for full decorator support"
      ]
    },
    {
      "pattern": "EPERM|permission denied|cannot write",
      "meaning": "File permission error",
      "causes": [
        "tsx doesn't write output files",
        "Cache directory permission issue"
      ],
      "solutions": [
        "tsx is runtime-only, doesn't emit files",
        "For output, use tsc or tsup",
        "Check ~/.cache permissions if caching enabled"
      ]
    },
    {
      "pattern": "heap out of memory|JavaScript heap",
      "meaning": "Memory exhaustion",
      "causes": [
        "Large codebase",
        "Memory leak in application",
        "Watching too many files"
      ],
      "solutions": [
        "Increase memory: NODE_OPTIONS='--max-old-space-size=4096' tsx ...",
        "Check for memory leaks in application",
        "Split into smaller entry points"
      ]
    }
  ]
}
