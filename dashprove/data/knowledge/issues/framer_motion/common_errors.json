{
  "tool": "framer_motion",
  "category": "animation",
  "common_errors": [
    {
      "id": "fm_motion_component",
      "pattern": "motion.div|motion component|custom component",
      "severity": "error",
      "causes": [
        "Using motion on wrong element",
        "Custom component not forwarding ref",
        "Missing motion prefix"
      ],
      "solutions": [
        "Use motion.div, motion.span, etc",
        "Custom: motion(Component) with forwardRef",
        "All HTML/SVG elements have motion version"
      ]
    },
    {
      "id": "fm_animate_presence",
      "pattern": "AnimatePresence|exit animation|unmount animation",
      "severity": "error",
      "causes": [
        "Exit animation not playing",
        "Missing AnimatePresence",
        "No exit prop"
      ],
      "solutions": [
        "Wrap in <AnimatePresence>",
        "Add exit prop to motion component",
        "Children need unique key"
      ]
    },
    {
      "id": "fm_layout_animation",
      "pattern": "layout|layout animation|position change",
      "severity": "warning",
      "causes": [
        "Layout changes not animating",
        "FLIP animation issues",
        "Layout ID mismatch"
      ],
      "solutions": [
        "Add layout prop: <motion.div layout>",
        "Use layoutId for shared element",
        "Wrap siblings in LayoutGroup"
      ]
    },
    {
      "id": "fm_variants",
      "pattern": "variants|variant not working|animate variant",
      "severity": "warning",
      "causes": [
        "Variant names don't match",
        "Animate prop wrong",
        "Parent/child variant sync"
      ],
      "solutions": [
        "variants={{ hidden: {}, visible: {} }}",
        "animate='visible' must match variant key",
        "Children inherit parent variant name"
      ]
    },
    {
      "id": "fm_initial_false",
      "pattern": "initial animation|skip initial|no animation on mount",
      "severity": "info",
      "causes": [
        "Animation plays on mount",
        "Want to skip first animation",
        "SSR issues"
      ],
      "solutions": [
        "Use initial={false} to skip",
        "Or set initial same as animate",
        "AnimatePresence initial={false}"
      ]
    },
    {
      "id": "fm_gesture_drag",
      "pattern": "drag|dragConstraints|whileDrag",
      "severity": "info",
      "causes": [
        "Drag not constrained",
        "Drag axis wrong",
        "Drag bounds issue"
      ],
      "solutions": [
        "drag='x' or drag='y' for single axis",
        "dragConstraints={{ left: 0, right: 100 }}",
        "Or ref: dragConstraints={constraintsRef}"
      ]
    },
    {
      "id": "fm_useanimation",
      "pattern": "useAnimation|animation controls|imperative animation",
      "severity": "info",
      "causes": [
        "Need programmatic control",
        "Sequence animations",
        "Start/stop manually"
      ],
      "solutions": [
        "const controls = useAnimation()",
        "animate={controls}",
        "controls.start('visible')"
      ]
    },
    {
      "id": "fm_spring_physics",
      "pattern": "spring|bounce|stiffness|damping",
      "severity": "info",
      "causes": [
        "Animation feels wrong",
        "Want different spring feel",
        "Duration with spring"
      ],
      "solutions": [
        "transition={{ type: 'spring', stiffness: 100 }}",
        "damping controls bounce",
        "Don't use duration with spring (use stiffness/damping)"
      ]
    }
  ]
}
