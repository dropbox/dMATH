{
  "tool": "swagger",
  "category": "api_documentation",
  "description": "Swagger UI and Swagger Editor",
  "errors": [
    {
      "pattern": "Failed to load API definition|Unable to render",
      "meaning": "Cannot load/parse OpenAPI spec",
      "causes": ["Invalid spec file", "CORS blocking", "File not accessible"],
      "solutions": ["Validate spec with swagger-cli", "Enable CORS on spec endpoint", "Check file URL is accessible"]
    },
    {
      "pattern": "Could not resolve reference|$ref.*loop",
      "meaning": "Reference resolution failed",
      "causes": ["Invalid $ref path", "External file not found", "Circular reference"],
      "solutions": ["Fix $ref paths", "Bundle external references", "Check for circular refs"]
    },
    {
      "pattern": "Mixed Content|blocked.*insecure",
      "meaning": "HTTPS/HTTP mismatch",
      "causes": ["HTTP spec from HTTPS page", "Mixed protocol in servers", "Browser security policy"],
      "solutions": ["Serve spec over HTTPS", "Use relative URLs", "Update server URLs to HTTPS"]
    },
    {
      "pattern": "Syntax error.*YAML|parsing error",
      "meaning": "Spec file syntax error",
      "causes": ["Invalid YAML/JSON", "Indentation wrong", "Special characters not escaped"],
      "solutions": ["Validate YAML/JSON syntax", "Use consistent indentation", "Escape special characters"]
    },
    {
      "pattern": "swagger.*2.0.*3.0|version.*not supported",
      "meaning": "Swagger version incompatibility",
      "causes": ["Using wrong Swagger UI version", "Mixing Swagger 2.0 and OpenAPI 3.0", "Outdated tools"],
      "solutions": ["Use Swagger UI 3.x for OpenAPI 3.0", "Convert spec between versions", "Update swagger tools"]
    },
    {
      "pattern": "Try it out.*failed|request failed",
      "meaning": "API request from Swagger UI failed",
      "causes": ["CORS not configured on API", "Authentication issue", "Network error"],
      "solutions": ["Enable CORS on API server", "Configure authentication in Swagger", "Check API server is running"]
    },
    {
      "pattern": "No operations defined|empty spec",
      "meaning": "No API operations found",
      "causes": ["paths object empty", "Spec not fully loaded", "Wrong file"],
      "solutions": ["Add operations to paths", "Check spec file content", "Verify correct file loaded"]
    },
    {
      "pattern": "oauth.*redirect.*error",
      "meaning": "OAuth redirect issue",
      "causes": ["Wrong redirect URI", "OAuth not configured", "Missing oauth2-redirect.html"],
      "solutions": ["Configure oauth2RedirectUrl", "Add redirect URI to OAuth provider", "Serve oauth2-redirect.html"]
    }
  ]
}
