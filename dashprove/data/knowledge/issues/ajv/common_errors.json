{
  "tool": "ajv",
  "category": "data_validation",
  "common_errors": [
    {
      "error_pattern": "must have required property",
      "description": "Required property missing from object",
      "causes": [
        "Property not in input object",
        "Property listed in 'required' array",
        "Typo in property name"
      ],
      "solutions": [
        "Add required property to input",
        "Remove from 'required' array if optional",
        "Check property name spelling"
      ]
    },
    {
      "error_pattern": "must be.*type",
      "description": "Value type doesn't match schema",
      "causes": [
        "Wrong type in JSON data",
        "Schema type constraint violated"
      ],
      "solutions": [
        "Provide correct type",
        "Use coerceTypes option for conversion",
        "Check schema type definition"
      ]
    },
    {
      "error_pattern": "must match pattern",
      "description": "String doesn't match regex pattern",
      "causes": [
        "Input doesn't match 'pattern' in schema",
        "Regex syntax issue"
      ],
      "solutions": [
        "Provide matching string",
        "Check regex pattern in schema",
        "Test pattern with regex tester"
      ]
    },
    {
      "error_pattern": "must be >= minLength",
      "description": "String shorter than minLength",
      "causes": [
        "Input string too short",
        "Empty string provided"
      ],
      "solutions": [
        "Provide longer string",
        "Adjust minLength in schema",
        "Use default value"
      ]
    },
    {
      "error_pattern": "must be <= maxLength",
      "description": "String longer than maxLength",
      "causes": [
        "Input string too long",
        "Unexpected content"
      ],
      "solutions": [
        "Truncate string",
        "Increase maxLength in schema",
        "Validate before submission"
      ]
    },
    {
      "error_pattern": "must be equal to one of",
      "description": "Value not in enum",
      "causes": [
        "Input not in 'enum' array",
        "Case sensitivity"
      ],
      "solutions": [
        "Use one of enum values",
        "Add value to enum if needed",
        "Check case sensitivity"
      ]
    },
    {
      "error_pattern": "must NOT have additional properties",
      "description": "Extra properties in object",
      "causes": [
        "additionalProperties: false in schema",
        "Unknown property in input"
      ],
      "solutions": [
        "Remove extra properties from input",
        "Add property to schema",
        "Set additionalProperties: true",
        "Use removeAdditional option"
      ]
    },
    {
      "error_pattern": "must pass.*schema validation",
      "description": "Complex schema validation failed",
      "causes": [
        "allOf/anyOf/oneOf failed",
        "Conditional schema not matched"
      ],
      "solutions": [
        "Check composite schema rules",
        "Ensure at least one variant matches",
        "Review if-then-else conditions"
      ]
    },
    {
      "error_pattern": "must match format",
      "description": "Format validation failed",
      "causes": [
        "Invalid format (email, uri, date, etc.)",
        "Format not recognized"
      ],
      "solutions": [
        "Provide valid formatted value",
        "Use ajv-formats for additional formats",
        "Check format: 'email', 'uri', etc."
      ]
    },
    {
      "error_pattern": "\\$ref.*cannot be resolved",
      "description": "Schema reference not found",
      "causes": [
        "$ref path incorrect",
        "Referenced schema not added",
        "URI resolution failure"
      ],
      "solutions": [
        "Add referenced schema: ajv.addSchema()",
        "Check $ref path is correct",
        "Use absolute URI or correct relative path"
      ]
    },
    {
      "error_pattern": "schema.*already exists",
      "description": "Duplicate schema ID",
      "causes": [
        "Schema with same $id added twice",
        "Conflicting schema versions"
      ],
      "solutions": [
        "Use unique $id for each schema",
        "Remove old schema before adding new",
        "Check for duplicate addSchema calls"
      ]
    },
    {
      "error_pattern": "unknown keyword",
      "description": "Unrecognized keyword in schema",
      "causes": [
        "Custom keyword not added",
        "Draft version mismatch",
        "Typo in keyword"
      ],
      "solutions": [
        "Use addKeyword() for custom keywords",
        "Check JSON Schema draft version",
        "Verify keyword spelling"
      ]
    },
    {
      "error_pattern": "strict mode.*unknown",
      "description": "Strict mode rejecting unknown",
      "causes": [
        "Unrecognized keyword in strict mode",
        "Unknown format"
      ],
      "solutions": [
        "Disable strict: new Ajv({ strict: false })",
        "Add custom keywords/formats",
        "Use supported JSON Schema features"
      ]
    }
  ]
}
