{
  "tool": "more",
  "version": "coreutils",
  "last_updated": "2025-12-23",
  "errors": [
    {
      "id": "not_a_terminal",
      "pattern": "more:.*not a terminal|more:.*inappropriate ioctl|cannot stat",
      "message": "Not running in interactive terminal",
      "cause": "more requires tty for paging, but running in pipe or script",
      "solutions": [
        {
          "approach": "Use less instead",
          "code": "less file.txt  # Works better in scripts",
          "when": "More flexibility needed"
        },
        {
          "approach": "Use cat for non-interactive",
          "code": "cat file.txt  # Just output all",
          "when": "In scripts"
        },
        {
          "approach": "Force pager",
          "code": "more < file.txt",
          "when": "Force input mode"
        }
      ]
    },
    {
      "id": "no_such_file",
      "pattern": "more:.*No such file|more:.*cannot open",
      "message": "File does not exist",
      "cause": "Specified file not found",
      "solutions": [
        {
          "approach": "Check path",
          "code": "ls -la file.txt  # Verify exists",
          "when": "Verify file"
        },
        {
          "approach": "Use glob",
          "code": "more *.log  # View multiple files",
          "when": "Multiple files"
        }
      ]
    },
    {
      "id": "binary_file",
      "pattern": "more:.*binary|^\\*\\*\\*|Warning.*binary",
      "message": "Binary file detected",
      "cause": "Attempting to page through binary data",
      "solutions": [
        {
          "approach": "Use hexdump",
          "code": "hexdump -C binary_file | more",
          "when": "View binary safely"
        },
        {
          "approach": "Use xxd",
          "code": "xxd binary_file | more",
          "when": "Hex view"
        },
        {
          "approach": "Use strings",
          "code": "strings binary_file | more",
          "when": "Extract text portions"
        }
      ]
    },
    {
      "id": "permission_denied",
      "pattern": "more:.*Permission denied|cannot read",
      "message": "Cannot read file",
      "cause": "No read permission on file",
      "solutions": [
        {
          "approach": "Use sudo",
          "code": "sudo more /var/log/secure",
          "when": "Protected file"
        },
        {
          "approach": "Check permissions",
          "code": "ls -la file.txt",
          "when": "Verify access"
        }
      ]
    },
    {
      "id": "large_file_slow",
      "pattern": "^$|no output|hanging",
      "message": "Slow with large files",
      "cause": "more loads file differently than less",
      "solutions": [
        {
          "approach": "Use less",
          "code": "less +F large.log  # Like tail -f but scrollable",
          "when": "Large files"
        },
        {
          "approach": "Use head/tail",
          "code": "head -1000 large.log | more",
          "when": "Only need portion"
        }
      ]
    }
  ]
}
