{
  "tool": "aspnet_core",
  "category": "web_framework",
  "errors": [
    {
      "pattern": "InvalidOperationException.*service",
      "cause": "Service not registered",
      "solutions": [
        "Add service in Program.cs",
        "Check AddScoped/AddTransient/AddSingleton",
        "Verify interface registration"
      ]
    },
    {
      "pattern": "404 Not Found",
      "cause": "Endpoint not matched",
      "solutions": [
        "Check controller routing",
        "Verify [Route] attributes",
        "Review MapControllers()"
      ]
    },
    {
      "pattern": "Model binding failed",
      "cause": "Request binding error",
      "solutions": [
        "Check [FromBody] attribute",
        "Verify Content-Type",
        "Review model properties"
      ]
    },
    {
      "pattern": "DbContext.*disposed",
      "cause": "DbContext lifetime issue",
      "solutions": [
        "Use AddDbContext properly",
        "Check scope lifetime",
        "Avoid capturing in closures"
      ]
    },
    {
      "pattern": "CORS.*blocked",
      "cause": "Cross-origin blocked",
      "solutions": [
        "Configure CORS policy",
        "Add UseCors() middleware",
        "Check allowed origins"
      ]
    },
    {
      "pattern": "Authentication.*failed",
      "cause": "Auth middleware error",
      "solutions": [
        "Configure authentication",
        "Check scheme name",
        "Verify token validation"
      ]
    },
    {
      "pattern": "Kestrel.*error",
      "cause": "Web server error",
      "solutions": [
        "Check port availability",
        "Review Kestrel config",
        "Verify certificate setup"
      ]
    },
    {
      "pattern": "Configuration.*missing",
      "cause": "Config value not found",
      "solutions": [
        "Check appsettings.json",
        "Verify environment config",
        "Use GetSection() correctly"
      ]
    },
    {
      "pattern": "Validation.*failed",
      "cause": "Model validation error",
      "solutions": [
        "Check data annotations",
        "Review ModelState.IsValid",
        "Handle validation errors"
      ]
    },
    {
      "pattern": "SignalR.*error",
      "cause": "SignalR connection issue",
      "solutions": [
        "Check hub configuration",
        "Verify endpoint mapping",
        "Review client connection"
      ]
    }
  ]
}
