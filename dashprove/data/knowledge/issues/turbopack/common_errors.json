{
  "tool": "turbopack",
  "category": "bundler",
  "common_errors": [
    {
      "id": "turbopack_nextjs_only",
      "pattern": "standalone use|without nextjs|turbopack cli",
      "severity": "info",
      "causes": [
        "Turbopack currently integrated into Next.js only",
        "No standalone bundler available yet",
        "Trying to use outside Next.js"
      ],
      "solutions": [
        "Use Turbopack via Next.js: next dev --turbo",
        "For standalone bundler, use webpack/esbuild/Vite",
        "Turbopack standalone planned for future"
      ]
    },
    {
      "id": "turbopack_unsupported_config",
      "pattern": "config not supported|webpack config|custom loader",
      "severity": "warning",
      "causes": [
        "Some webpack configs not yet supported",
        "Custom loaders may not work",
        "Plugin compatibility issues"
      ],
      "solutions": [
        "Check Next.js Turbopack docs for supported features",
        "Use next.config.js experimental.turbo for config",
        "Fallback to webpack for unsupported features"
      ]
    },
    {
      "id": "turbopack_hmr_issues",
      "pattern": "hmr not working|hot reload fails|changes not detected",
      "severity": "error",
      "causes": [
        "File system events not propagating",
        "Browser cache issues",
        "Large project causing delays"
      ],
      "solutions": [
        "Clear browser cache and .next folder",
        "Check file watcher limits: ulimit -n",
        "Restart dev server"
      ]
    },
    {
      "id": "turbopack_memory_usage",
      "pattern": "out of memory|heap limit|memory leak",
      "severity": "error",
      "causes": [
        "Large project with many modules",
        "Incremental compilation cache growth",
        "Node.js memory limit hit"
      ],
      "solutions": [
        "Increase Node.js memory: NODE_OPTIONS=--max-old-space-size=8192",
        "Restart dev server periodically",
        "Report memory issues to Vercel"
      ]
    },
    {
      "id": "turbopack_css_modules",
      "pattern": "css module error|styles undefined|className missing",
      "severity": "error",
      "causes": [
        "CSS module syntax differences",
        "Import path issues",
        "Build caching problems"
      ],
      "solutions": [
        "Use .module.css extension",
        "Import as: import styles from './file.module.css'",
        "Clear .next folder and restart"
      ]
    },
    {
      "id": "turbopack_production",
      "pattern": "production build|turbo prod|deploy with turbo",
      "severity": "info",
      "causes": [
        "Turbopack is dev-only currently",
        "Production uses webpack by default",
        "Confusion about build modes"
      ],
      "solutions": [
        "Turbopack is for development only (--turbo flag)",
        "Production builds use webpack automatically",
        "next build always uses webpack"
      ]
    }
  ]
}
