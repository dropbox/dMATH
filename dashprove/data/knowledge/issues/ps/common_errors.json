{
  "tool": "ps",
  "version": "3.3",
  "last_updated": "2025-12-23",
  "errors": [
    {
      "id": "syntax_confusion",
      "pattern": "BSD.*UNIX|options|syntax|dash",
      "message": "BSD vs UNIX syntax confusion",
      "cause": "ps supports multiple syntax styles",
      "solutions": [
        {
          "approach": "BSD style",
          "code": "ps aux  # No dash, BSD style\nps auxww  # Wide output",
          "when": "Traditional"
        },
        {
          "approach": "UNIX style",
          "code": "ps -ef  # Dash, UNIX style\nps -eF  # Extra info",
          "when": "UNIX/POSIX"
        },
        {
          "approach": "GNU long",
          "code": "ps --forest  # GNU long options\nps -ef --forest",
          "when": "GNU extensions"
        }
      ]
    },
    {
      "id": "all_processes",
      "pattern": "all processes|every|all users|full list",
      "message": "Show all processes",
      "cause": "Default shows only user's processes",
      "solutions": [
        {
          "approach": "All processes",
          "code": "ps aux  # BSD: all users, terminal & non-terminal\nps -ef  # UNIX: all processes",
          "when": "Full list"
        },
        {
          "approach": "All with details",
          "code": "ps auxf  # With process tree\nps -efH  # With hierarchy",
          "when": "With tree"
        }
      ]
    },
    {
      "id": "find_process",
      "pattern": "find process|grep|search|specific",
      "message": "Find specific process",
      "cause": "Need to locate process by name",
      "solutions": [
        {
          "approach": "Grep with header",
          "code": "ps aux | head -1; ps aux | grep processname | grep -v grep",
          "when": "With column headers"
        },
        {
          "approach": "Use pgrep",
          "code": "pgrep -a processname  # Show command\npgrep -l processname  # With name",
          "when": "Better tool"
        },
        {
          "approach": "Pattern match",
          "code": "ps aux | grep '[p]rocessname'  # Excludes grep itself",
          "when": "Self-excluding"
        }
      ]
    },
    {
      "id": "custom_columns",
      "pattern": "columns|fields|format|custom|specific info",
      "message": "Show specific columns",
      "cause": "Default output not showing needed info",
      "solutions": [
        {
          "approach": "Custom format",
          "code": "ps -eo pid,ppid,user,%cpu,%mem,command",
          "when": "Select fields"
        },
        {
          "approach": "Sort by field",
          "code": "ps aux --sort=-%mem  # By memory descending\nps aux --sort=-%cpu  # By CPU descending",
          "when": "Sorted output"
        },
        {
          "approach": "Show threads",
          "code": "ps -eLf  # Show threads\nps -T -p PID  # Threads for specific process",
          "when": "Thread info"
        }
      ]
    },
    {
      "id": "full_command",
      "pattern": "truncated|cut off|full command|arguments",
      "message": "Command line truncated",
      "cause": "Terminal width limits output",
      "solutions": [
        {
          "approach": "Wide output",
          "code": "ps auxww  # BSD: wide output\nps -ef --width 200  # Specify width",
          "when": "Show full cmd"
        },
        {
          "approach": "No headers",
          "code": "ps --no-headers -eo cmd -p PID",
          "when": "Script friendly"
        },
        {
          "approach": "From proc",
          "code": "cat /proc/PID/cmdline | tr '\\0' ' '",
          "when": "Full args"
        }
      ]
    },
    {
      "id": "process_tree",
      "pattern": "tree|parent|child|hierarchy|fork",
      "message": "Show process hierarchy",
      "cause": "Need to see parent-child relationships",
      "solutions": [
        {
          "approach": "Forest view",
          "code": "ps auxf  # BSD style with forest\nps -ef --forest  # UNIX style with forest",
          "when": "Tree view"
        },
        {
          "approach": "Use pstree",
          "code": "pstree  # Process tree\npstree -p  # With PIDs\npstree -u  # With user changes",
          "when": "Better tool"
        },
        {
          "approach": "For specific",
          "code": "pstree -p PID  # Tree from specific process",
          "when": "Single process tree"
        }
      ]
    }
  ]
}
