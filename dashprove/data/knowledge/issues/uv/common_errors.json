{
  "tool": "uv",
  "category": "python_packaging",
  "common_errors": [
    {
      "id": "uv_install",
      "pattern": "uv not found|install uv|curl install",
      "severity": "error",
      "causes": [
        "uv not installed",
        "Not in PATH",
        "Version outdated"
      ],
      "solutions": [
        "Install: curl -LsSf https://astral.sh/uv/install.sh | sh",
        "Or: pip install uv (slower)",
        "Or: brew install uv (macOS)"
      ]
    },
    {
      "id": "uv_venv",
      "pattern": "virtual environment|venv|activate",
      "severity": "info",
      "causes": [
        "Creating venv with uv",
        "Managing environments",
        "Different Python version"
      ],
      "solutions": [
        "Create: uv venv",
        "Specific Python: uv venv --python 3.11",
        "Activate: source .venv/bin/activate"
      ]
    },
    {
      "id": "uv_pip_compile",
      "pattern": "pip compile|lock file|requirements.txt",
      "severity": "info",
      "causes": [
        "Generate lockfile",
        "Pin dependencies",
        "requirements.in to requirements.txt"
      ],
      "solutions": [
        "Lock: uv pip compile requirements.in -o requirements.txt",
        "Upgrade: --upgrade to update all",
        "Specific: --upgrade-package pkg"
      ]
    },
    {
      "id": "uv_pip_sync",
      "pattern": "pip sync|install from lock|sync environment",
      "severity": "info",
      "causes": [
        "Install exact versions",
        "Match lockfile",
        "Reproducible install"
      ],
      "solutions": [
        "Sync: uv pip sync requirements.txt",
        "Removes extra packages",
        "Use for CI/deployment"
      ]
    },
    {
      "id": "uv_resolution",
      "pattern": "resolution|conflict|version conflict",
      "severity": "error",
      "causes": [
        "Dependency conflict",
        "Incompatible versions",
        "No solution found"
      ],
      "solutions": [
        "Check: uv pip compile --verbose",
        "Try: --resolution lowest-direct",
        "Relax constraints in requirements.in"
      ]
    },
    {
      "id": "uv_extras",
      "pattern": "extras|optional dependencies|[extra]",
      "severity": "info",
      "causes": [
        "Installing with extras",
        "Optional features",
        "Development dependencies"
      ],
      "solutions": [
        "Install: uv pip install 'package[extra]'",
        "Multiple: 'package[extra1,extra2]'",
        "In compile: -extra extra_name"
      ]
    },
    {
      "id": "uv_cache",
      "pattern": "cache|clear cache|disk space",
      "severity": "warning",
      "causes": [
        "Cache corruption",
        "Disk space",
        "Force fresh download"
      ],
      "solutions": [
        "Clear: uv cache clean",
        "Cache dir: uv cache dir",
        "No cache: uv pip install --no-cache"
      ]
    },
    {
      "id": "uv_python_version",
      "pattern": "python version|requires-python|python not found",
      "severity": "error",
      "causes": [
        "Python version mismatch",
        "Package requires different Python",
        "Environment wrong"
      ],
      "solutions": [
        "Specify: --python 3.11",
        "uv venv --python 3.10",
        "Install Python: uv python install 3.11"
      ]
    }
  ]
}
