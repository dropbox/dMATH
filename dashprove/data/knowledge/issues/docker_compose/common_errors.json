{
  "tool": "docker_compose",
  "category": "local_development",
  "common_errors": [
    {
      "pattern": "service.*depends_on.*failed",
      "cause": "Dependent service failed to start",
      "solutions": [
        "Check dependent service logs",
        "Use healthcheck with condition: service_healthy",
        "Verify service can start independently"
      ]
    },
    {
      "pattern": "yaml.*syntax error",
      "cause": "Invalid YAML in compose file",
      "solutions": [
        "Validate YAML syntax",
        "Check indentation (use spaces, not tabs)",
        "Use docker compose config to validate"
      ]
    },
    {
      "pattern": "port.*already allocated",
      "cause": "Port conflict with running container or process",
      "solutions": [
        "Change port mapping in compose file",
        "Stop conflicting container/process",
        "Use different host port: '3001:3000'"
      ]
    },
    {
      "pattern": "network.*not found",
      "cause": "External network doesn't exist",
      "solutions": [
        "Create network: docker network create <name>",
        "Remove external: true if not needed",
        "Check network name spelling"
      ]
    },
    {
      "pattern": "volume.*not found",
      "cause": "Named volume doesn't exist",
      "solutions": [
        "Create volume: docker volume create <name>",
        "Remove external: true if not needed",
        "Check volume name spelling"
      ]
    },
    {
      "pattern": "build.*context.*not found",
      "cause": "Build context path doesn't exist",
      "solutions": [
        "Check build context path is correct",
        "Use relative path from compose file location",
        "Verify Dockerfile exists in context"
      ]
    },
    {
      "pattern": "env_file.*not found",
      "cause": "Environment file missing",
      "solutions": [
        "Create the .env file",
        "Check path is relative to compose file",
        "Use env_file list for multiple files"
      ]
    },
    {
      "pattern": "image.*pull access denied",
      "cause": "Private registry authentication needed",
      "solutions": [
        "Run docker login for registry",
        "Check image name includes registry",
        "Verify registry credentials"
      ]
    },
    {
      "pattern": "container.*unhealthy",
      "cause": "Healthcheck failing",
      "solutions": [
        "Check healthcheck command",
        "Increase start_period for slow services",
        "Verify service is actually healthy"
      ]
    },
    {
      "pattern": "version.*unsupported",
      "cause": "Compose file version compatibility",
      "solutions": [
        "Remove version field (modern compose)",
        "Use version compatible with docker compose",
        "Update Docker Compose to latest"
      ]
    }
  ]
}
