{
  "tool": "devcontainers",
  "category": "local_development",
  "common_errors": [
    {
      "pattern": "devcontainer.json.*not found",
      "cause": "Configuration file missing or misplaced",
      "solutions": [
        "Create .devcontainer/devcontainer.json",
        "Or create .devcontainer.json in root",
        "Use 'Dev Containers: Add Dev Container Config' command"
      ]
    },
    {
      "pattern": "Docker.*not running",
      "cause": "Docker daemon not available",
      "solutions": [
        "Start Docker Desktop",
        "Check Docker service status",
        "Verify Docker socket permissions"
      ]
    },
    {
      "pattern": "Failed to build container",
      "cause": "Dockerfile or build context error",
      "solutions": [
        "Check Dockerfile syntax",
        "Verify build context path",
        "Check for network issues during build"
      ]
    },
    {
      "pattern": "Extension.*failed to install",
      "cause": "VS Code extension installation failed",
      "solutions": [
        "Check extension ID spelling",
        "Verify extension is compatible with container",
        "Install extension manually inside container"
      ]
    },
    {
      "pattern": "Volume mount.*permission denied",
      "cause": "File permission mismatch between host/container",
      "solutions": [
        "Set remoteUser in devcontainer.json",
        "Use updateRemoteUserUID",
        "Adjust volume permissions"
      ]
    },
    {
      "pattern": "Features.*not available",
      "cause": "Dev Container feature installation failed",
      "solutions": [
        "Check feature syntax in devcontainer.json",
        "Verify feature exists in registry",
        "Use specific version for feature"
      ]
    },
    {
      "pattern": "Port.*not forwarded",
      "cause": "Port forwarding not configured",
      "solutions": [
        "Add port to forwardPorts array",
        "Use appPort for Docker Compose",
        "Forward manually from Ports panel"
      ]
    },
    {
      "pattern": "postCreateCommand.*failed",
      "cause": "Post-creation script error",
      "solutions": [
        "Check command syntax",
        "Verify dependencies are installed",
        "Run command manually to debug"
      ]
    },
    {
      "pattern": "Git.*not configured",
      "cause": "Git credentials not passed to container",
      "solutions": [
        "Share git config: mounts with source",
        "Use Git credential manager",
        "Configure git inside container"
      ]
    },
    {
      "pattern": "rebuild.*failed",
      "cause": "Container rebuild encountered error",
      "solutions": [
        "Delete container and rebuild",
        "Clear Docker cache",
        "Check disk space"
      ]
    }
  ]
}
