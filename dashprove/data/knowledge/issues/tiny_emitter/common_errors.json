{
  "tool": "tiny_emitter",
  "category": "events",
  "common_errors": [
    {
      "id": "tiny_emitter_instance",
      "pattern": "not a constructor|new TinyEmitter|import issue",
      "severity": "error",
      "causes": [
        "Wrong import/require usage",
        "Not instantiating",
        "Module system mismatch"
      ],
      "solutions": [
        "CommonJS: const Emitter = require('tiny-emitter'); const e = new Emitter()",
        "Or use singleton: require('tiny-emitter/instance')",
        "ESM: import Emitter from 'tiny-emitter'",
        "Instance export is pre-instantiated"
      ]
    },
    {
      "id": "tiny_emitter_context",
      "pattern": "this is wrong|context lost|wrong binding",
      "severity": "warning",
      "causes": [
        "Not using context parameter",
        "Arrow functions ignore context",
        "Need specific this value"
      ],
      "solutions": [
        "Use context param: emitter.on('event', handler, ctx)",
        "handler is called with ctx as this",
        "Or use arrow function to capture lexical this",
        "Same for once(): once('event', handler, ctx)"
      ]
    },
    {
      "id": "tiny_emitter_off_specific",
      "pattern": "off not removing|wrong handler removed|all listeners removed",
      "severity": "warning",
      "causes": [
        "off() with no args removes all",
        "off(event) removes all for event",
        "Need specific handler reference"
      ],
      "solutions": [
        "Specific: emitter.off('event', handler) removes one",
        "emitter.off('event') removes all for 'event'",
        "emitter.off() removes everything",
        "Store handler reference to remove specific one"
      ]
    },
    {
      "id": "tiny_emitter_emit_args",
      "pattern": "emit arguments|passing data|multiple args",
      "severity": "info",
      "causes": [
        "Unsure how to pass data",
        "Multiple arguments support",
        "Object vs multiple args"
      ],
      "solutions": [
        "emit('event', arg1, arg2, ...) passes all args",
        "Handler receives: function(arg1, arg2) {}",
        "Can pass object for named params",
        "No special event object wrapper"
      ]
    }
  ]
}
