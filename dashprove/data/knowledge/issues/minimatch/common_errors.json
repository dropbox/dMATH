{
  "tool": "minimatch",
  "category": "filesystem",
  "common_errors": [
    {
      "id": "minimatch_no_match",
      "pattern": "pattern doesn't match|minimatch returned false|no matches",
      "severity": "warning",
      "causes": [
        "Pattern syntax not matching file path",
        "Case sensitivity issue",
        "Wrong globstar usage"
      ],
      "solutions": [
        "Test pattern: minimatch('file.js', '*.js')",
        "Use { nocase: true } for case-insensitive",
        "** matches any depth: 'src/**/*.js'",
        "Single * doesn't match path separators"
      ]
    },
    {
      "id": "minimatch_v9_esm_breaking",
      "pattern": "ERR_REQUIRE_ESM|not a function|minimatch undefined",
      "severity": "error",
      "causes": [
        "minimatch v9+ is ESM-only",
        "CommonJS require() fails",
        "Default export changed"
      ],
      "solutions": [
        "v9+: import { minimatch } from 'minimatch'",
        "Use v5.x for CommonJS: npm i minimatch@5",
        "Or use dynamic import in CommonJS",
        "Check your bundler supports ESM"
      ]
    },
    {
      "id": "minimatch_dot_files",
      "pattern": "dotfiles not matching|.hidden not matched|dot pattern",
      "severity": "warning",
      "causes": [
        "Dot files not matched by default",
        "Pattern doesn't start with dot",
        "Shell-style dot exclusion active"
      ],
      "solutions": [
        "Use { dot: true } to match dotfiles",
        "Or explicitly match: '.*' or '.hidden'",
        "'{,.}*' matches both dotfiles and regular files",
        "minimatch('.file', '*', { dot: true })"
      ]
    },
    {
      "id": "minimatch_brace_expansion",
      "pattern": "braces not expanding|{a,b} not working|brace literal",
      "severity": "warning",
      "causes": [
        "Brace expansion disabled",
        "Wrong brace syntax",
        "Nested braces issue"
      ],
      "solutions": [
        "Use { nobrace: false } (default enables braces)",
        "Syntax: '*.{js,ts}' matches .js and .ts",
        "Escape literal braces: '\\{literal\\}'",
        "Brace expansion is not regex"
      ]
    },
    {
      "id": "minimatch_extglob",
      "pattern": "extglob not working|@(pattern)|?(pattern) not matching",
      "severity": "warning",
      "causes": [
        "Extended glob patterns not enabled",
        "Wrong extglob syntax",
        "Pattern misunderstood"
      ],
      "solutions": [
        "Enable: { extglob: true } (v9 default) or { noext: false }",
        "?(pattern): zero or one match",
        "*(pattern): zero or more matches",
        "@(pattern|alt): exactly one of alternatives"
      ]
    },
    {
      "id": "minimatch_partial_match",
      "pattern": "partial match expected|matchBase not working|filename only",
      "severity": "warning",
      "causes": [
        "Need to match just filename, not path",
        "matchBase option not set",
        "Pattern includes path when shouldn't"
      ],
      "solutions": [
        "Use { matchBase: true } to match basename only",
        "minimatch('path/to/file.js', '*.js', { matchBase: true })",
        "Without matchBase, pattern must match full path",
        "Use path.basename() to extract filename first"
      ]
    }
  ]
}
