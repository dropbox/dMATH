{
  "tool": "uname",
  "version": "9.4",
  "last_updated": "2025-12-23",
  "errors": [
    {
      "id": "all_info",
      "pattern": "all|everything|full|complete",
      "message": "Show all system information",
      "cause": "Default only shows kernel name",
      "solutions": [
        {
          "approach": "All info",
          "code": "uname -a  # All available information",
          "when": "Everything"
        },
        {
          "approach": "Specific fields",
          "code": "uname -s  # Kernel name (Linux, Darwin)\nuname -r  # Kernel release\nuname -v  # Kernel version\nuname -m  # Machine hardware\nuname -p  # Processor type\nuname -o  # Operating system",
          "when": "Specific info"
        }
      ]
    },
    {
      "id": "os_detection",
      "pattern": "OS|operating system|Linux|macOS|Windows",
      "message": "Detect operating system",
      "cause": "Need to identify OS in scripts",
      "solutions": [
        {
          "approach": "Kernel name",
          "code": "uname -s\n# Linux = Linux\n# Darwin = macOS\n# MINGW/CYGWIN = Windows",
          "when": "Basic OS"
        },
        {
          "approach": "Distribution",
          "code": "# Linux distribution:\ncat /etc/os-release\nlsb_release -a\n# macOS version:\nsw_vers",
          "when": "Specific distro"
        },
        {
          "approach": "Script pattern",
          "code": "case $(uname -s) in\n  Linux*)  echo 'Linux' ;;\n  Darwin*) echo 'macOS' ;;\n  CYGWIN*|MINGW*) echo 'Windows' ;;\n  *) echo 'Unknown' ;;\nesac",
          "when": "In script"
        }
      ]
    },
    {
      "id": "architecture",
      "pattern": "architecture|arch|x86|ARM|64-bit|32-bit",
      "message": "Detect CPU architecture",
      "cause": "Need architecture for builds/downloads",
      "solutions": [
        {
          "approach": "Machine type",
          "code": "uname -m\n# x86_64 = 64-bit Intel/AMD\n# aarch64 = 64-bit ARM\n# arm64 = 64-bit ARM (macOS)\n# i686 = 32-bit Intel",
          "when": "Hardware arch"
        },
        {
          "approach": "Processor",
          "code": "uname -p  # Processor type\narch  # Usually same as uname -m",
          "when": "CPU info"
        },
        {
          "approach": "Detailed",
          "code": "lscpu  # Detailed CPU info (Linux)\nsysctl -a | grep machdep.cpu  # macOS",
          "when": "Full details"
        }
      ]
    },
    {
      "id": "kernel_version",
      "pattern": "kernel|version|release",
      "message": "Get kernel version",
      "cause": "Need kernel version for compatibility",
      "solutions": [
        {
          "approach": "Kernel release",
          "code": "uname -r  # e.g., 5.15.0-52-generic",
          "when": "Release string"
        },
        {
          "approach": "Full version",
          "code": "uname -v  # Build date and config",
          "when": "Build info"
        },
        {
          "approach": "Proc info",
          "code": "cat /proc/version  # Full kernel info (Linux)",
          "when": "Detailed"
        }
      ]
    },
    {
      "id": "nodename",
      "pattern": "nodename|hostname|network name",
      "message": "Get network node name",
      "cause": "Need system's network name",
      "solutions": [
        {
          "approach": "Node name",
          "code": "uname -n  # Network node name",
          "when": "From uname"
        },
        {
          "approach": "Use hostname",
          "code": "hostname  # Usually same, more options\nhostname -f  # FQDN",
          "when": "Better tool"
        }
      ]
    }
  ]
}
