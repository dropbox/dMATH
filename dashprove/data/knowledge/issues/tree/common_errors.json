{
  "tool": "tree",
  "version": "2.1",
  "last_updated": "2025-12-23",
  "errors": [
    {
      "id": "command_not_found",
      "pattern": "tree:.*command not found|tree:.*not found",
      "message": "tree command not installed",
      "cause": "tree is not installed by default on most systems",
      "solutions": [
        {
          "approach": "Install on macOS",
          "code": "brew install tree",
          "when": "macOS with Homebrew"
        },
        {
          "approach": "Install on Debian/Ubuntu",
          "code": "sudo apt install tree",
          "when": "Debian-based systems"
        },
        {
          "approach": "Install on RHEL/CentOS",
          "code": "sudo yum install tree\n# or: sudo dnf install tree",
          "when": "RHEL-based systems"
        },
        {
          "approach": "Use find alternative",
          "code": "find . -print | sed -e 's;[^/]*/;|____;g;s;____|; |;g'",
          "when": "tree unavailable"
        }
      ]
    },
    {
      "id": "permission_denied",
      "pattern": "tree:.*Permission denied|error opening dir",
      "message": "Cannot read directory contents",
      "cause": "No read permission on directory",
      "solutions": [
        {
          "approach": "Use sudo",
          "code": "sudo tree /root/",
          "when": "Need elevated access"
        },
        {
          "approach": "Skip unreadable",
          "code": "tree --noreport 2>/dev/null",
          "when": "Ignore errors"
        }
      ]
    },
    {
      "id": "too_many_files",
      "pattern": "Warning:.*many files|output truncated|memory",
      "message": "Directory contains too many files",
      "cause": "Large directory tree exhausts memory",
      "solutions": [
        {
          "approach": "Limit depth",
          "code": "tree -L 3  # Only 3 levels deep",
          "when": "Deep structures"
        },
        {
          "approach": "Directories only",
          "code": "tree -d  # Only show directories",
          "when": "Skip files"
        },
        {
          "approach": "Filter pattern",
          "code": "tree -P '*.py' --prune  # Only Python files",
          "when": "Specific files"
        },
        {
          "approach": "Exclude patterns",
          "code": "tree -I 'node_modules|__pycache__|.git'",
          "when": "Skip large dirs"
        }
      ]
    },
    {
      "id": "invalid_option",
      "pattern": "tree:.*Invalid|tree:.*unrecognized|Invalid argument",
      "message": "Unknown or invalid option",
      "cause": "Option syntax varies between versions",
      "solutions": [
        {
          "approach": "Check version",
          "code": "tree --version",
          "when": "Verify capabilities"
        },
        {
          "approach": "List options",
          "code": "tree --help",
          "when": "See available flags"
        }
      ]
    },
    {
      "id": "encoding_issues",
      "pattern": "Invalid or incomplete multibyte|illegal byte sequence|\\?\\?\\?",
      "message": "Character encoding problems",
      "cause": "Non-UTF8 filenames or locale mismatch",
      "solutions": [
        {
          "approach": "Set UTF-8 locale",
          "code": "LC_ALL=en_US.UTF-8 tree",
          "when": "Unicode filenames"
        },
        {
          "approach": "ASCII output",
          "code": "tree --charset=ASCII",
          "when": "Avoid special chars"
        },
        {
          "approach": "Quote filenames",
          "code": "tree -Q  # Quote filenames with double quotes",
          "when": "Special characters"
        }
      ]
    },
    {
      "id": "symlink_loop",
      "pattern": "recursive.*link|too many.*symlinks|loop detected",
      "message": "Circular symlink detected",
      "cause": "Symlink chain creates infinite loop",
      "solutions": [
        {
          "approach": "Don't follow symlinks",
          "code": "tree -l  # Follow links but note loops",
          "when": "Detect but show"
        },
        {
          "approach": "Show link targets",
          "code": "tree -l --noreport",
          "when": "See destinations"
        }
      ]
    }
  ]
}
