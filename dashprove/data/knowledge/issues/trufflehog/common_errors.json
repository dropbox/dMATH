{
  "tool": "trufflehog",
  "category": "secret_scanning",
  "errors": [
    {
      "pattern": "failed to clone repo",
      "cause": "Unable to clone target repository",
      "solutions": [
        "Check repository URL format",
        "Verify authentication token is valid",
        "Ensure network connectivity",
        "Use --only-verified for faster scans"
      ]
    },
    {
      "pattern": "context deadline exceeded",
      "cause": "Scan timeout reached",
      "solutions": [
        "Increase timeout with --timeout flag",
        "Scan smaller portions of repository",
        "Use --since-commit to limit history",
        "Exclude large binary files"
      ]
    },
    {
      "pattern": "rate limit exceeded",
      "cause": "GitHub/GitLab API rate limit hit",
      "solutions": [
        "Add authentication token",
        "Wait for rate limit reset",
        "Use local clone instead of API",
        "Implement exponential backoff"
      ]
    },
    {
      "pattern": "invalid detector",
      "cause": "Specified detector does not exist",
      "solutions": [
        "Check available detectors with --list-detectors",
        "Verify detector name spelling",
        "Use correct detector syntax"
      ]
    },
    {
      "pattern": "failed to verify",
      "cause": "Could not verify if secret is active",
      "solutions": [
        "Check network connectivity",
        "Secret may be revoked/rotated",
        "Use --only-verified=false to show all findings"
      ]
    },
    {
      "pattern": "memory allocation failed",
      "cause": "Insufficient memory for large repository scan",
      "solutions": [
        "Increase available memory",
        "Use --max-depth to limit scan depth",
        "Scan in batches using --since-commit",
        "Enable streaming mode"
      ]
    },
    {
      "pattern": "permission denied",
      "cause": "Insufficient permissions for filesystem scan",
      "solutions": [
        "Run with elevated permissions",
        "Check directory permissions",
        "Exclude restricted paths"
      ]
    },
    {
      "pattern": "no secrets found",
      "cause": "Scan completed without findings (may be expected)",
      "solutions": [
        "Verify scan target is correct",
        "Check if detectors are appropriate",
        "Review include/exclude patterns"
      ]
    }
  ]
}
