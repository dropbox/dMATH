{
  "tool": "pylsp",
  "version": "1.10+",
  "last_updated": "2025-12-23",
  "errors": [
    {
      "id": "server_not_found",
      "pattern": "pylsp.*not found|python-lsp-server.*missing|command not found",
      "message": "Python LSP server not installed",
      "cause": "pylsp not installed in active environment",
      "solutions": [
        {
          "approach": "Install pylsp",
          "code": "pip install python-lsp-server",
          "when": "Basic installation"
        },
        {
          "approach": "Install with all plugins",
          "code": "pip install 'python-lsp-server[all]'",
          "when": "Full installation"
        },
        {
          "approach": "Check virtual environment",
          "code": "which pylsp  # Should point to venv",
          "when": "Wrong Python env"
        }
      ]
    },
    {
      "id": "plugin_not_found",
      "pattern": "plugin.*not found|pylsp-.*missing|provider.*unavailable",
      "message": "LSP plugin not installed",
      "cause": "Requested plugin not installed",
      "solutions": [
        {
          "approach": "Install mypy plugin",
          "code": "pip install pylsp-mypy",
          "when": "Need type checking"
        },
        {
          "approach": "Install black plugin",
          "code": "pip install python-lsp-black",
          "when": "Need Black formatting"
        },
        {
          "approach": "Install ruff plugin",
          "code": "pip install python-lsp-ruff",
          "when": "Need Ruff linting"
        },
        {
          "approach": "Install all plugins",
          "code": "pip install pylsp-mypy python-lsp-black pylsp-rope",
          "when": "Full functionality"
        }
      ]
    },
    {
      "id": "import_resolution_failed",
      "pattern": "import.*could not be resolved|ModuleNotFoundError|unresolved import",
      "message": "Import cannot be resolved",
      "cause": "Module not installed or wrong Python interpreter",
      "solutions": [
        {
          "approach": "Install missing package",
          "code": "pip install packagename",
          "when": "Package not installed"
        },
        {
          "approach": "Set Python interpreter",
          "code": "// Configure editor to use correct Python",
          "when": "Wrong interpreter"
        },
        {
          "approach": "Install package editably",
          "code": "pip install -e .",
          "when": "Local package not found"
        },
        {
          "approach": "Configure extra paths",
          "code": "\"pylsp\": { \"plugins\": { \"jedi\": { \"extra_paths\": [\"./src\"] } } }",
          "when": "Non-standard structure"
        }
      ]
    },
    {
      "id": "diagnostics_conflict",
      "pattern": "duplicate.*diagnostic|conflict.*linter|multiple.*errors",
      "message": "Duplicate or conflicting diagnostics",
      "cause": "Multiple linters reporting same issue",
      "solutions": [
        {
          "approach": "Disable pycodestyle",
          "code": "\"pylsp\": { \"plugins\": { \"pycodestyle\": { \"enabled\": false } } }",
          "when": "Using Ruff instead"
        },
        {
          "approach": "Disable pyflakes",
          "code": "\"pylsp\": { \"plugins\": { \"pyflakes\": { \"enabled\": false } } }",
          "when": "Using other linter"
        },
        {
          "approach": "Configure single linter",
          "code": "// Enable only Ruff and disable others",
          "when": "Want one linter"
        }
      ]
    },
    {
      "id": "completion_slow",
      "pattern": "completion.*slow|autocomplete.*delay|jedi.*timeout",
      "message": "Code completion slow",
      "cause": "Large project or slow Jedi analysis",
      "solutions": [
        {
          "approach": "Limit completion scope",
          "code": "\"pylsp\": { \"plugins\": { \"jedi_completion\": { \"fuzzy\": false } } }",
          "when": "Reduce matches"
        },
        {
          "approach": "Disable signature help",
          "code": "\"pylsp\": { \"plugins\": { \"jedi_signature_help\": { \"enabled\": false } } }",
          "when": "Signature help slow"
        },
        {
          "approach": "Clear Jedi cache",
          "code": "rm -rf ~/.cache/jedi",
          "when": "Cache corrupted"
        }
      ]
    },
    {
      "id": "formatting_not_working",
      "pattern": "format.*not working|formatter.*unavailable|black.*error",
      "message": "Code formatting not working",
      "cause": "Formatter plugin not installed or configured",
      "solutions": [
        {
          "approach": "Install black plugin",
          "code": "pip install python-lsp-black",
          "when": "Use Black formatter"
        },
        {
          "approach": "Enable yapf",
          "code": "\"pylsp\": { \"plugins\": { \"yapf\": { \"enabled\": true } } }",
          "when": "Use yapf formatter"
        },
        {
          "approach": "Enable autopep8",
          "code": "\"pylsp\": { \"plugins\": { \"autopep8\": { \"enabled\": true } } }",
          "when": "Use autopep8"
        }
      ]
    },
    {
      "id": "type_checking_missing",
      "pattern": "type.*error.*not shown|mypy.*not running|type checking.*disabled",
      "message": "Type checking not enabled",
      "cause": "pylsp-mypy not installed or configured",
      "solutions": [
        {
          "approach": "Install mypy plugin",
          "code": "pip install pylsp-mypy",
          "when": "Mypy not installed"
        },
        {
          "approach": "Enable mypy",
          "code": "\"pylsp\": { \"plugins\": { \"pylsp_mypy\": { \"enabled\": true, \"live_mode\": true } } }",
          "when": "Mypy disabled"
        },
        {
          "approach": "Configure mypy.ini",
          "code": "[mypy]\npython_version = 3.11\nstrict = true",
          "when": "Need mypy config"
        }
      ]
    },
    {
      "id": "rope_refactoring_error",
      "pattern": "rope.*error|refactor.*failed|rename.*error",
      "message": "Refactoring not working",
      "cause": "Rope plugin not installed or project issue",
      "solutions": [
        {
          "approach": "Install rope plugin",
          "code": "pip install pylsp-rope",
          "when": "Rope not installed"
        },
        {
          "approach": "Create .ropeproject",
          "code": "mkdir .ropeproject",
          "when": "Rope project not initialized"
        },
        {
          "approach": "Enable rope",
          "code": "\"pylsp\": { \"plugins\": { \"rope\": { \"enabled\": true } } }",
          "when": "Rope disabled"
        }
      ]
    },
    {
      "id": "workspace_symbols_missing",
      "pattern": "workspace.*symbols.*empty|symbol.*search.*no results",
      "message": "Workspace symbols not working",
      "cause": "Jedi workspace not indexed",
      "solutions": [
        {
          "approach": "Enable workspace symbols",
          "code": "\"pylsp\": { \"plugins\": { \"jedi_symbols\": { \"all_scopes\": true } } }",
          "when": "Limited scope"
        },
        {
          "approach": "Wait for indexing",
          "code": "// Jedi needs time to index large projects",
          "when": "Still indexing"
        },
        {
          "approach": "Restart server",
          "code": "// Restart pylsp from editor",
          "when": "State corrupted"
        }
      ]
    },
    {
      "id": "config_not_loaded",
      "pattern": "config.*not loaded|pyproject.toml.*ignored|setup.cfg.*not found",
      "message": "Configuration not loaded",
      "cause": "Config file not found or wrong format",
      "solutions": [
        {
          "approach": "Use pyproject.toml",
          "code": "[tool.pylsp.plugins.pycodestyle]\nmaxLineLength = 120",
          "when": "Project config"
        },
        {
          "approach": "Configure in editor",
          "code": "// Set pylsp settings in editor settings",
          "when": "Editor-level config"
        },
        {
          "approach": "Check config location",
          "code": "// Config should be in workspace root",
          "when": "Wrong location"
        }
      ]
    }
  ]
}
