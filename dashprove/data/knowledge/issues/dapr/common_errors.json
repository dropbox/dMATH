{
  "tool": "dapr",
  "category": "application_runtime",
  "common_errors": [
    {
      "error_pattern": "component.*not found",
      "description": "Dapr component not registered",
      "causes": [
        "Component YAML not applied",
        "Component name mismatch",
        "Namespace scoping issue"
      ],
      "solutions": [
        "Apply component: kubectl apply -f component.yaml",
        "Check component name matches usage",
        "Verify component namespace or use default scope"
      ]
    },
    {
      "error_pattern": "state store.*unavailable",
      "description": "Cannot connect to state store",
      "causes": [
        "State store backend not running",
        "Connection string incorrect",
        "Authentication failed"
      ],
      "solutions": [
        "Verify backend (Redis, etc.) is running",
        "Check component metadata configuration",
        "Verify credentials in secrets"
      ]
    },
    {
      "error_pattern": "pubsub.*not initialized",
      "description": "Pub/Sub component not ready",
      "causes": [
        "Message broker not accessible",
        "Component configuration wrong",
        "Topic doesn't exist"
      ],
      "solutions": [
        "Check broker (Kafka, RabbitMQ) status",
        "Verify component YAML settings",
        "Create topic if auto-create disabled"
      ]
    },
    {
      "error_pattern": "sidecar.*not ready",
      "description": "Dapr sidecar failed to start",
      "causes": [
        "Dapr not injected",
        "Sidecar crashed",
        "Configuration error"
      ],
      "solutions": [
        "Add annotation: dapr.io/enabled: \"true\"",
        "Check sidecar logs: kubectl logs -c daprd",
        "Verify dapr configuration resource"
      ]
    },
    {
      "error_pattern": "service invocation.*failed",
      "description": "App-to-app invocation error",
      "causes": [
        "Target app not running",
        "App-id mismatch",
        "Network policy blocking"
      ],
      "solutions": [
        "Verify target app is running with Dapr",
        "Use correct app-id in invocation",
        "Check network policies allow Dapr traffic"
      ]
    },
    {
      "error_pattern": "binding.*failed",
      "description": "Input/Output binding not working",
      "causes": [
        "Binding component not configured",
        "External service unavailable",
        "Method not implemented"
      ],
      "solutions": [
        "Check binding component exists",
        "Verify external service connectivity",
        "Implement binding handler endpoint"
      ]
    },
    {
      "error_pattern": "actor.*not found",
      "description": "Actor type not registered",
      "causes": [
        "Actor runtime not configured",
        "Actor type name wrong",
        "App not implementing actor interface"
      ],
      "solutions": [
        "Register actor type in app startup",
        "Use correct actor type name",
        "Implement actor interface methods"
      ]
    },
    {
      "error_pattern": "secret store.*error",
      "description": "Cannot retrieve secrets",
      "causes": [
        "Secret store not configured",
        "Access denied",
        "Secret doesn't exist"
      ],
      "solutions": [
        "Configure secret store component",
        "Grant access to secrets",
        "Verify secret name exists"
      ]
    },
    {
      "error_pattern": "middleware.*failed",
      "description": "Middleware pipeline error",
      "causes": [
        "Middleware component misconfigured",
        "Middleware order wrong",
        "Incompatible middleware"
      ],
      "solutions": [
        "Check middleware configuration",
        "Review middleware order in pipeline",
        "Test middleware individually"
      ]
    },
    {
      "error_pattern": "configuration.*not loaded",
      "description": "App configuration not available",
      "causes": [
        "Configuration store not set up",
        "Key doesn't exist",
        "Subscription failed"
      ],
      "solutions": [
        "Configure configuration store component",
        "Verify configuration keys exist",
        "Check subscription settings"
      ]
    },
    {
      "error_pattern": "app-port.*not responding",
      "description": "Sidecar cannot reach app port",
      "causes": [
        "App not listening on configured port",
        "Port annotation wrong",
        "App crashed"
      ],
      "solutions": [
        "Set correct dapr.io/app-port annotation",
        "Verify app listens on that port",
        "Check app container logs"
      ]
    },
    {
      "error_pattern": "placement.*connection failed",
      "description": "Cannot connect to placement service",
      "causes": [
        "Placement service not running",
        "Network issue",
        "mTLS configuration mismatch"
      ],
      "solutions": [
        "Verify placement service: kubectl get pods -n dapr-system",
        "Check network connectivity",
        "Review mTLS settings"
      ]
    }
  ]
}
