{
  "tool": "hatch",
  "category": "python_packaging",
  "common_errors": [
    {
      "id": "hatch_install",
      "pattern": "hatch not found|install hatch|pipx",
      "severity": "error",
      "causes": [
        "Hatch not installed",
        "Global vs local install",
        "Path issues"
      ],
      "solutions": [
        "Install: pipx install hatch",
        "Or: pip install hatch",
        "Or: brew install hatch (macOS)"
      ]
    },
    {
      "id": "hatch_project_init",
      "pattern": "hatch new|init project|pyproject.toml",
      "severity": "info",
      "causes": [
        "Starting new project",
        "Generating structure",
        "Config setup"
      ],
      "solutions": [
        "New project: hatch new my-project",
        "Init existing: hatch new --init",
        "Creates pyproject.toml with hatch config"
      ]
    },
    {
      "id": "hatch_environments",
      "pattern": "environment|hatch env|env not found",
      "severity": "error",
      "causes": [
        "Environment not defined",
        "Wrong environment name",
        "Config missing"
      ],
      "solutions": [
        "Define in pyproject.toml: [tool.hatch.envs.name]",
        "Create: hatch env create",
        "List: hatch env show"
      ]
    },
    {
      "id": "hatch_run",
      "pattern": "hatch run|run command|script",
      "severity": "info",
      "causes": [
        "Run in environment",
        "Execute script",
        "Use different env"
      ],
      "solutions": [
        "Run: hatch run command",
        "Specific env: hatch run myenv:command",
        "Script: hatch run scripts:script_name"
      ]
    },
    {
      "id": "hatch_build",
      "pattern": "hatch build|wheel|sdist",
      "severity": "info",
      "causes": [
        "Building package",
        "Creating wheel",
        "Distribution"
      ],
      "solutions": [
        "Build: hatch build",
        "Wheel only: hatch build -t wheel",
        "Output in dist/"
      ]
    },
    {
      "id": "hatch_version",
      "pattern": "version|bump version|dynamic version",
      "severity": "info",
      "causes": [
        "Version management",
        "Bumping version",
        "Dynamic versioning"
      ],
      "solutions": [
        "View: hatch version",
        "Bump: hatch version minor (or major/patch)",
        "Dynamic: use hatch-vcs for git tags"
      ]
    },
    {
      "id": "hatch_publish",
      "pattern": "publish|pypi|upload",
      "severity": "info",
      "causes": [
        "Publishing to PyPI",
        "Upload package",
        "Authentication"
      ],
      "solutions": [
        "Publish: hatch publish",
        "Test PyPI: hatch publish -r test",
        "Set token: HATCH_INDEX_AUTH"
      ]
    },
    {
      "id": "hatch_matrix",
      "pattern": "matrix|test matrix|multiple python",
      "severity": "info",
      "causes": [
        "Testing multiple Python versions",
        "Matrix testing",
        "Environment variations"
      ],
      "solutions": [
        "Define matrix in env config",
        "[[tool.hatch.envs.test.matrix]] python = ['3.10', '3.11']",
        "Run: hatch run test:test"
      ]
    }
  ]
}
