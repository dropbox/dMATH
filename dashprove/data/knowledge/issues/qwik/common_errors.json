{
  "tool": "qwik",
  "category": "framework",
  "common_errors": [
    {
      "id": "qwik_dollar_sign",
      "pattern": "\\$|component\\$|useSignal\\$|dollar sign",
      "severity": "error",
      "causes": [
        "Missing $ suffix",
        "Wrong function name",
        "Serialization boundary"
      ],
      "solutions": [
        "All Qwik APIs end in $: component$, useTask$",
        "$ marks serialization boundaries",
        "Don't use $ for regular functions"
      ]
    },
    {
      "id": "qwik_serialization",
      "pattern": "not serializable|closure error|QRL error",
      "severity": "error",
      "causes": [
        "Capturing non-serializable values",
        "Closure over complex objects",
        "DOM references in QRL"
      ],
      "solutions": [
        "Only primitive values in closures",
        "Use useSignal/useStore for state",
        "Can't serialize DOM, functions, classes"
      ]
    },
    {
      "id": "qwik_signal_usage",
      "pattern": "useSignal|signal not updating|value property",
      "severity": "error",
      "causes": [
        "Accessing signal wrong",
        "Not using .value",
        "Signal passed incorrectly"
      ],
      "solutions": [
        "Access: signal.value (not signal())",
        "In JSX: {signal.value} or just {signal}",
        "Pass whole signal, not .value"
      ]
    },
    {
      "id": "qwik_event_handler",
      "pattern": "onClick\\$|event handler|handler not firing",
      "severity": "error",
      "causes": [
        "Missing $ on event handler",
        "Wrong event name",
        "Handler not QRL"
      ],
      "solutions": [
        "Use onClick$={() => {}} with $",
        "Handler must be QRL (end in $)",
        "Or reference: onClick$={handler}"
      ]
    },
    {
      "id": "qwik_task_effect",
      "pattern": "useTask\\$|useVisibleTask\\$|side effect",
      "severity": "warning",
      "causes": [
        "Side effect timing",
        "Server vs client task",
        "Dependency tracking"
      ],
      "solutions": [
        "useTask$ runs on server and client",
        "useVisibleTask$ runs only in browser",
        "track() for explicit dependencies"
      ]
    },
    {
      "id": "qwik_resource",
      "pattern": "useResource\\$|async data|loading state",
      "severity": "info",
      "causes": [
        "Fetching async data",
        "Resource state management",
        "SSR data loading"
      ],
      "solutions": [
        "useResource$() for async fetching",
        "Access: resource.value, .loading",
        "Wrap in <Resource> component"
      ]
    },
    {
      "id": "qwik_context",
      "pattern": "useContext|createContextId|context error",
      "severity": "error",
      "causes": [
        "Context not provided",
        "Wrong context ID",
        "Context scope issues"
      ],
      "solutions": [
        "Create: export const Ctx = createContextId<Type>('id')",
        "Provide: useContextProvider(Ctx, value)",
        "Consume: useContext(Ctx)"
      ]
    },
    {
      "id": "qwik_routing",
      "pattern": "routeLoader\\$|routeAction\\$|route data",
      "severity": "info",
      "causes": [
        "Loading data for routes",
        "Form actions",
        "Server functions"
      ],
      "solutions": [
        "routeLoader$() for GET data",
        "routeAction$() for mutations",
        "Export from layout.tsx or index.tsx"
      ]
    }
  ]
}
