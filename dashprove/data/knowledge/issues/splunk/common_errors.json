{
  "tool": "splunk",
  "category": "monitoring",
  "common_errors": [
    {
      "pattern": "license.*exceeded",
      "meaning": "Splunk license volume exceeded",
      "causes": ["Indexing more data than license allows", "License violation window", "Wrong license applied"],
      "solutions": ["Reduce indexed data volume", "Upgrade license", "Apply correct license file"]
    },
    {
      "pattern": "Unable to connect to.*splunkd",
      "meaning": "Cannot reach Splunk daemon",
      "causes": ["Splunk not running", "Wrong port", "Firewall blocking"],
      "solutions": ["Start Splunk: ./splunk start", "Check port 8089 (management)", "Open firewall ports"]
    },
    {
      "pattern": "search.*timed out",
      "meaning": "Search exceeded time limit",
      "causes": ["Query too broad", "Large time range", "Insufficient resources"],
      "solutions": ["Narrow time range", "Add filters to query", "Increase search timeout"]
    },
    {
      "pattern": "disk.*full",
      "meaning": "Splunk disk space exhausted",
      "causes": ["Index growth", "Hot/warm bucket overflow", "minFreeSpace reached"],
      "solutions": ["Free disk space", "Configure retention", "Reduce indexing volume"]
    },
    {
      "pattern": "forwarder.*connection refused",
      "meaning": "Forwarder cannot connect to indexer",
      "causes": ["Indexer not listening", "Wrong port", "SSL mismatch"],
      "solutions": ["Check receiving port on indexer", "Verify outputs.conf", "Match SSL settings"]
    },
    {
      "pattern": "parsing.*error",
      "meaning": "Cannot parse incoming data",
      "causes": ["Wrong sourcetype", "Broken event boundaries", "Encoding issue"],
      "solutions": ["Set correct sourcetype", "Configure LINE_BREAKER", "Set CHARSET"]
    },
    {
      "pattern": "bucket.*corrupted",
      "meaning": "Index bucket data corrupted",
      "causes": ["Disk failure", "Incomplete write", "Hardware issue"],
      "solutions": ["Run: ./splunk rebuild <index>", "Restore from backup", "Check disk health"]
    },
    {
      "pattern": "authentication.*failed",
      "meaning": "Login authentication failed",
      "causes": ["Wrong credentials", "LDAP/SAML issue", "Account locked"],
      "solutions": ["Verify credentials", "Check auth.conf", "Check authentication.log"]
    },
    {
      "pattern": "knowledge bundle.*replication",
      "meaning": "Search head cluster bundle replication failed",
      "causes": ["Member unreachable", "Bundle too large", "Network issue"],
      "solutions": ["Check cluster member status", "Reduce bundle size", "Verify network connectivity"]
    },
    {
      "pattern": "KVStore.*unavailable",
      "meaning": "KV Store service not available",
      "causes": ["KVStore not started", "Corrupt data", "Configuration issue"],
      "solutions": ["Restart KVStore: ./splunk restart splunkd", "Check kvstore status", "Review kvstore logs"]
    }
  ],
  "debugging_commands": [
    "./splunk status",
    "./splunk btool check",
    "./splunk list licenses",
    "./splunk search 'index=_internal ERROR'",
    "./splunk diag"
  ],
  "documentation_urls": [
    "https://docs.splunk.com/",
    "https://github.com/splunk"
  ]
}
