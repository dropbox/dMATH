{
  "tool": "cocogitto",
  "category": "git_conventions",
  "common_errors": [
    {
      "pattern": "not a conventional commit",
      "cause": "Commit message doesn't follow convention",
      "solutions": [
        "Use format: type(scope): description",
        "Check allowed types in cog.toml",
        "Use 'cog commit' for guided commit"
      ]
    },
    {
      "pattern": "cog.toml.*not found",
      "cause": "Configuration file missing",
      "solutions": [
        "Initialize: cog init",
        "Create cog.toml manually",
        "Use default conventional commits rules"
      ]
    },
    {
      "pattern": "unknown commit type",
      "cause": "Commit type not in allowed list",
      "solutions": [
        "Add type to cog.toml [commit_types]",
        "Use standard types: feat, fix, docs, etc.",
        "Check for typos in type"
      ]
    },
    {
      "pattern": "hook.*failed",
      "cause": "Git hook validation failed",
      "solutions": [
        "Check commit message format",
        "Use 'cog commit' instead of 'git commit'",
        "Bypass with --no-verify (not recommended)"
      ]
    },
    {
      "pattern": "cannot bump.*no commits",
      "cause": "No conventional commits since last tag",
      "solutions": [
        "Check commits follow convention",
        "Use feat/fix for version bumps",
        "Specify version manually"
      ]
    },
    {
      "pattern": "changelog.*empty",
      "cause": "No commits to include in changelog",
      "solutions": [
        "Verify commit parser rules",
        "Check tag range includes commits",
        "Ensure commits have correct types"
      ]
    },
    {
      "pattern": "version.*already exists",
      "cause": "Git tag already exists",
      "solutions": [
        "Delete existing tag if incorrect",
        "Use next version number",
        "Check current version: cog get-version"
      ]
    },
    {
      "pattern": "breaking change.*format",
      "cause": "Breaking change not properly formatted",
      "solutions": [
        "Use BREAKING CHANGE: in footer",
        "Or use ! after type: feat!: ",
        "Check cog.toml for breaking change pattern"
      ]
    },
    {
      "pattern": "git.*not in path",
      "cause": "Git executable not found",
      "solutions": [
        "Install git",
        "Add git to PATH",
        "Check git installation"
      ]
    },
    {
      "pattern": "pre-bump.*hook failed",
      "cause": "Pre-bump hook returned error",
      "solutions": [
        "Check pre_bump_hooks in cog.toml",
        "Verify hook commands work",
        "Check hook dependencies"
      ]
    }
  ]
}
