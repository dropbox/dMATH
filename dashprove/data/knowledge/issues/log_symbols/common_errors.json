{
  "tool": "log_symbols",
  "category": "terminal",
  "common_errors": [
    {
      "id": "log_symbols_esm_only",
      "pattern": "ERR_REQUIRE_ESM|not a function|logSymbols undefined",
      "severity": "error",
      "causes": [
        "log-symbols v5+ is ESM-only",
        "Using require() in CommonJS",
        "Package compatibility issue"
      ],
      "solutions": [
        "v5+: import logSymbols from 'log-symbols'",
        "Use v4.x for CommonJS: npm i log-symbols@4",
        "Or use dynamic import",
        "Access: logSymbols.success, .error, .warning, .info"
      ]
    },
    {
      "id": "log_symbols_fallback",
      "pattern": "unicode not showing|? marks|wrong symbols",
      "severity": "warning",
      "causes": [
        "Terminal doesn't support Unicode",
        "Windows legacy console",
        "Font missing glyphs"
      ],
      "solutions": [
        "log-symbols auto-detects terminal support",
        "Falls back to ASCII: √, ×, ‼, i",
        "Windows Terminal supports Unicode",
        "Use figures package for more control"
      ]
    },
    {
      "id": "log_symbols_colors",
      "pattern": "symbols not colored|color missing|plain output",
      "severity": "warning",
      "causes": [
        "log-symbols uses chalk for colors",
        "FORCE_COLOR=0 disables colors",
        "Non-TTY output"
      ],
      "solutions": [
        "Symbols are colored by default with chalk",
        "Set FORCE_COLOR=1 to force colors",
        "Colors: success=green, error=red, warning=yellow, info=blue",
        "Check chalk level for color support"
      ]
    }
  ]
}
