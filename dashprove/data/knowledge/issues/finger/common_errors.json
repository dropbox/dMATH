{
  "tool": "finger",
  "version": "bsd-finger",
  "last_updated": "2025-12-23",
  "errors": [
    {
      "id": "command_not_found",
      "pattern": "finger: command not found|not found",
      "message": "finger not installed",
      "cause": "Package not installed (deprecated on many systems)",
      "solutions": [
        {
          "approach": "Install on Debian",
          "code": "sudo apt install finger",
          "when": "Debian/Ubuntu"
        },
        {
          "approach": "Install on RHEL",
          "code": "sudo yum install finger\nsudo dnf install finger",
          "when": "RHEL/CentOS/Fedora"
        },
        {
          "approach": "Use alternatives",
          "code": "id username\ngetent passwd username\nchfn  # Change finger info",
          "when": "Modern alternatives"
        }
      ]
    },
    {
      "id": "user_not_found",
      "pattern": "no such user|Login name: .* In real life:",
      "message": "User doesn't exist",
      "cause": "Username not in system",
      "solutions": [
        {
          "approach": "List users",
          "code": "getent passwd | cut -d: -f1",
          "when": "Find correct name"
        }
      ]
    },
    {
      "id": "remote_finger_blocked",
      "pattern": "Connection refused|Connection timed out",
      "message": "Remote finger blocked",
      "cause": "Remote finger service disabled (security)",
      "solutions": [
        {
          "approach": "Local only",
          "code": "finger username  # Local user only",
          "when": "No remote finger"
        },
        {
          "approach": "Security note",
          "code": "# Remote finger is a security risk\n# Most systems disable fingerd",
          "when": "Expected behavior"
        }
      ]
    },
    {
      "id": "no_plan_file",
      "pattern": "No Plan|No .plan",
      "message": "No .plan file",
      "cause": "User hasn't created ~/.plan",
      "solutions": [
        {
          "approach": "Create plan",
          "code": "echo 'My status message' > ~/.plan\nchmod 644 ~/.plan",
          "when": "Add plan file"
        }
      ]
    }
  ]
}
