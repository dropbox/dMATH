{
  "tool": "autopep8",
  "version": "2.0+",
  "last_updated": "2025-12-23",
  "errors": [
    {
      "id": "syntax_error",
      "pattern": "SyntaxError|cannot parse|invalid syntax",
      "message": "Cannot parse Python file",
      "cause": "File has syntax errors",
      "solutions": [
        {
          "approach": "Fix syntax first",
          "code": "python -m py_compile file.py",
          "when": "Check errors"
        },
        {
          "approach": "Partial formatting",
          "code": "autopep8 --select=E1,E2 file.py",
          "when": "Fix some issues"
        }
      ]
    },
    {
      "id": "specific_errors",
      "pattern": "E\\d{3}|W\\d{3}|specific error",
      "message": "Need to fix specific PEP 8 errors",
      "cause": "Want to fix only certain violations",
      "solutions": [
        {
          "approach": "Select specific errors",
          "code": "autopep8 --select=E101,E111,E121 file.py",
          "when": "Fix only indentation"
        },
        {
          "approach": "Ignore specific errors",
          "code": "autopep8 --ignore=E501,W503 file.py",
          "when": "Skip line length/operators"
        },
        {
          "approach": "List all fixable",
          "code": "autopep8 --list-fixes",
          "when": "See available fixes"
        }
      ]
    },
    {
      "id": "line_length",
      "pattern": "E501|line too long|max-line-length",
      "message": "Line too long",
      "cause": "Line exceeds 79 characters (default)",
      "solutions": [
        {
          "approach": "Increase line length",
          "code": "autopep8 --max-line-length=120 file.py",
          "when": "Allow longer lines"
        },
        {
          "approach": "Ignore line length",
          "code": "autopep8 --ignore=E501 file.py",
          "when": "Don't fix line length"
        },
        {
          "approach": "Aggressive splitting",
          "code": "autopep8 -a -a file.py",
          "when": "More aggressive fixing"
        }
      ]
    },
    {
      "id": "aggressive_level",
      "pattern": "aggressive|more fixes|-a -a",
      "message": "Need more aggressive fixes",
      "cause": "Default level doesn't fix all issues",
      "solutions": [
        {
          "approach": "Level 1 aggressive",
          "code": "autopep8 -a file.py",
          "when": "E711, E712 fixes"
        },
        {
          "approach": "Level 2 aggressive",
          "code": "autopep8 -a -a file.py",
          "when": "E721, W690 fixes"
        },
        {
          "approach": "Max aggressive",
          "code": "autopep8 -a -a -a file.py",
          "when": "All available fixes"
        }
      ]
    },
    {
      "id": "no_changes",
      "pattern": "no changes|already formatted|unchanged",
      "message": "No changes made",
      "cause": "File already conforms or fixes not applicable",
      "solutions": [
        {
          "approach": "Check with pycodestyle",
          "code": "pycodestyle file.py",
          "when": "Verify conformance"
        },
        {
          "approach": "Use more aggressive",
          "code": "autopep8 -a -a file.py",
          "when": "Enable more fixes"
        },
        {
          "approach": "Use diff mode",
          "code": "autopep8 --diff file.py",
          "when": "See what would change"
        }
      ]
    },
    {
      "id": "in_place_failed",
      "pattern": "in.place.*failed|cannot write|-i.*error",
      "message": "In-place modification failed",
      "cause": "File permission or encoding issue",
      "solutions": [
        {
          "approach": "Check permissions",
          "code": "chmod u+w file.py",
          "when": "Read-only file"
        },
        {
          "approach": "Output to stdout",
          "code": "autopep8 file.py > fixed.py",
          "when": "Can't modify original"
        }
      ]
    },
    {
      "id": "hang_on_file",
      "pattern": "hang|timeout|taking long",
      "message": "autopep8 hangs on file",
      "cause": "Very large file or complex formatting",
      "solutions": [
        {
          "approach": "Use line range",
          "code": "autopep8 --line-range 1 100 file.py",
          "when": "Fix partial file"
        },
        {
          "approach": "Use select",
          "code": "autopep8 --select=E1 file.py",
          "when": "Fix specific issues only"
        },
        {
          "approach": "Split file",
          "code": "# Break large file into modules",
          "when": "File too large"
        }
      ]
    },
    {
      "id": "experimental_features",
      "pattern": "experimental|E227|E228",
      "message": "Experimental features needed",
      "cause": "Some fixes require experimental flag",
      "solutions": [
        {
          "approach": "Enable experimental",
          "code": "autopep8 --experimental file.py",
          "when": "Need experimental fixes"
        },
        {
          "approach": "Avoid experimental",
          "code": "# Stick to stable fixes",
          "when": "Want stability"
        }
      ]
    },
    {
      "id": "config_file",
      "pattern": "config.*not found|setup.cfg|pyproject.toml",
      "message": "Configuration not loaded",
      "cause": "Config file not found or wrong section",
      "solutions": [
        {
          "approach": "Add to pyproject.toml",
          "code": "[tool.autopep8]\nmax_line_length = 120\nignore = [\"E501\", \"W503\"]",
          "when": "Use pyproject.toml"
        },
        {
          "approach": "Add to setup.cfg",
          "code": "[pycodestyle]\nmax_line_length = 120\nignore = E501,W503",
          "when": "Use setup.cfg"
        },
        {
          "approach": "Specify config",
          "code": "autopep8 --global-config=setup.cfg file.py",
          "when": "Non-standard config location"
        }
      ]
    },
    {
      "id": "recursive_error",
      "pattern": "recursive.*error|directory.*skip",
      "message": "Recursive formatting issue",
      "cause": "Files or directories being skipped",
      "solutions": [
        {
          "approach": "Use recursive flag",
          "code": "autopep8 -r -i .",
          "when": "Format all Python files"
        },
        {
          "approach": "Exclude directories",
          "code": "autopep8 -r --exclude='venv,build' .",
          "when": "Skip certain directories"
        }
      ]
    }
  ]
}
