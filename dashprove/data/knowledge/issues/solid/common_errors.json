{
  "tool": "solid",
  "category": "framework",
  "common_errors": [
    {
      "id": "solid_destructure_props",
      "pattern": "props destructuring|lost reactivity|signal not updating",
      "severity": "error",
      "causes": [
        "Destructuring props breaks reactivity",
        "Accessing props outside tracking scope",
        "React habits don't work"
      ],
      "solutions": [
        "Don't destructure: use props.name directly",
        "Or use splitProps() for safe destructuring",
        "Access in JSX or createEffect for reactivity"
      ]
    },
    {
      "id": "solid_signal_access",
      "pattern": "signal not reactive|count vs count()|value not updating",
      "severity": "error",
      "causes": [
        "Forgetting to call signal getter",
        "Accessing signal outside reactive scope",
        "Storing signal value in variable"
      ],
      "solutions": [
        "Always call getter: count() not count",
        "Access in JSX or effects",
        "Don't store in intermediate variable"
      ]
    },
    {
      "id": "solid_memo_vs_effect",
      "pattern": "createMemo|createEffect|derived value",
      "severity": "warning",
      "causes": [
        "Using effect for derived values",
        "Memo vs effect confusion",
        "Side effects in memo"
      ],
      "solutions": [
        "createMemo for computed/derived values",
        "createEffect for side effects",
        "Memo is lazy, effect runs immediately"
      ]
    },
    {
      "id": "solid_for_index",
      "pattern": "For component|Index component|list rendering",
      "severity": "warning",
      "causes": [
        "Using wrong list component",
        "Keyed vs indexed iteration",
        "Performance issues"
      ],
      "solutions": [
        "<For> for keyed lists (items can reorder)",
        "<Index> for indexed lists (items are fixed)",
        "<For> better for object arrays"
      ]
    },
    {
      "id": "solid_show_fallback",
      "pattern": "Show component|conditional rendering|ternary",
      "severity": "info",
      "causes": [
        "Conditional rendering needed",
        "Ternary breaks memoization",
        "Fallback content"
      ],
      "solutions": [
        "<Show when={cond} fallback={<Alt/>}>",
        "Avoid ternary in JSX",
        "Show preserves element references"
      ]
    },
    {
      "id": "solid_store_mutation",
      "pattern": "createStore|store mutation|nested update",
      "severity": "error",
      "causes": [
        "Direct store mutation",
        "Nested property update",
        "Array mutation"
      ],
      "solutions": [
        "Use setStore() with path: setStore('path', 'to', 'key', value)",
        "produce() for complex mutations",
        "reconcile() for replacing objects"
      ]
    },
    {
      "id": "solid_ssr_hydration",
      "pattern": "hydration error|ssr mismatch|isServer",
      "severity": "error",
      "causes": [
        "Client/server render mismatch",
        "Browser APIs on server",
        "Random values differ"
      ],
      "solutions": [
        "Check isServer from 'solid-js/web'",
        "Use clientOnly() for browser components",
        "Avoid Math.random() in render"
      ]
    },
    {
      "id": "solid_resource",
      "pattern": "createResource|async data|suspense",
      "severity": "info",
      "causes": [
        "Fetching async data",
        "Loading states",
        "Refetch needed"
      ],
      "solutions": [
        "createResource() for async data",
        "Wraps in Suspense automatically",
        "Access .loading, .error, resource()"
      ]
    }
  ]
}
