      "cause": "Expression has wrong type/arity",
      "solutions": [
        {
          "approach": "Check relation arity",
          "code": "sig A { r: B -> C }  // r is ternary: A -> B -> C",
          "when": "Wrong number of columns"
        },
        {
          "approach": "Check multiplicity",
          "code": "set, one, lone, some  // Different constraints",
