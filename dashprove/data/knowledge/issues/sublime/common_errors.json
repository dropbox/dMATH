{
  "tool": "sublime",
  "version": "4",
  "last_updated": "2025-12-23",
  "errors": [
    {
      "id": "package_control_missing",
      "pattern": "Package Control.*not installed|install package control",
      "message": "Package Control not installed",
      "cause": "Package manager not set up",
      "solutions": [
        {
          "approach": "Install Package Control",
          "code": "Ctrl+Shift+P > Install Package Control",
          "when": "First time setup"
        },
        {
          "approach": "Manual install",
          "code": "Preferences > Browse Packages > Install Package Control.sublime-package",
          "when": "Auto-install fails"
        },
        {
          "approach": "Download from website",
          "code": "Visit packagecontrol.io/installation",
          "when": "Need manual download"
        }
      ]
    },
    {
      "id": "syntax_highlighting_wrong",
      "pattern": "syntax.*not.*detected|wrong.*syntax|highlighting.*wrong",
      "message": "Wrong syntax highlighting",
      "cause": "File type not detected or package missing",
      "solutions": [
        {
          "approach": "Set syntax manually",
          "code": "View > Syntax > Select correct syntax",
          "when": "Auto-detection failed"
        },
        {
          "approach": "Install syntax package",
          "code": "Ctrl+Shift+P > Install Package > [syntax name]",
          "when": "Syntax not available"
        },
        {
          "approach": "Associate extension",
          "code": "View > Syntax > Open all with current extension as...",
          "when": "Make default for extension"
        }
      ]
    },
    {
      "id": "plugin_error",
      "pattern": "Error loading|plugin.*error|traceback",
      "message": "Plugin error on startup",
      "cause": "Plugin has bug or incompatibility",
      "solutions": [
        {
          "approach": "Check console",
          "code": "View > Show Console (Ctrl+`)",
          "when": "See error details"
        },
        {
          "approach": "Disable plugin",
          "code": "Preferences > Package Settings > Package Control > Disable Package",
          "when": "Isolate problematic plugin"
        },
        {
          "approach": "Reinstall plugin",
          "code": "Remove Package > Install Package",
          "when": "Plugin corrupted"
        }
      ]
    },
    {
      "id": "license_expired",
      "pattern": "license.*expired|evaluation|please purchase",
      "message": "License expired or evaluation mode",
      "cause": "Using unregistered version",
      "solutions": [
        {
          "approach": "Enter license",
          "code": "Help > Enter License",
          "when": "Have license key"
        },
        {
          "approach": "Continue evaluation",
          "code": "Click Cancel when prompted",
          "when": "Still evaluating"
        },
        {
          "approach": "Purchase license",
          "code": "Visit sublimetext.com/buy",
          "when": "Ready to purchase"
        }
      ]
    },
    {
      "id": "settings_not_loading",
      "pattern": "settings.*not.*loading|preferences.*reset",
      "message": "Settings not loading",
      "cause": "Invalid JSON in settings file",
      "solutions": [
        {
          "approach": "Check JSON syntax",
          "code": "Preferences > Settings (check for JSON errors)",
          "when": "Syntax error in settings"
        },
        {
          "approach": "Reset to defaults",
          "code": "Delete Packages/User/Preferences.sublime-settings",
          "when": "Settings file corrupted"
        },
        {
          "approach": "Validate JSON",
          "code": "Use online JSON validator",
          "when": "Can't find error"
        }
      ]
    },
    {
      "id": "lsp_not_working",
      "pattern": "LSP.*not.*working|language server.*error",
      "message": "LSP not working",
      "cause": "Language server not installed or configured",
      "solutions": [
        {
          "approach": "Install LSP package",
          "code": "Install Package > LSP > LSP-[language]",
          "when": "LSP packages missing"
        },
        {
          "approach": "Install language server",
          "code": "npm install -g typescript-language-server",
          "when": "Server not installed"
        },
        {
          "approach": "Check LSP settings",
          "code": "Preferences > Package Settings > LSP > Settings",
          "when": "Server misconfigured"
        }
      ]
    },
    {
      "id": "git_gutter_issues",
      "pattern": "git.*gutter|diff.*markers|git.*not.*detected",
      "message": "Git gutter not showing",
      "cause": "Git not found or not a git repository",
      "solutions": [
        {
          "approach": "Check git path",
          "code": "Preferences > Package Settings > GitGutter > Settings",
          "when": "Git path incorrect"
        },
        {
          "approach": "Initialize git repo",
          "code": "git init",
          "when": "Not a git repository"
        },
        {
          "approach": "Refresh gutter",
          "code": "Ctrl+Shift+P > GitGutter: Compare Against",
          "when": "Gutter needs refresh"
        }
      ]
    }
  ]
}
