{
  "tool": "nightwatch",
  "category": "browser_automation",
  "common_errors": [
    {
      "pattern": "Connection refused.*chromedriver|selenium server.*not running",
      "meaning": "WebDriver server not running",
      "causes": ["ChromeDriver/Selenium not started", "Wrong port", "Service crashed"],
      "solutions": ["Use start_process: true in nightwatch.conf.js", "Start driver manually", "Check server_path points to correct binary"]
    },
    {
      "pattern": "session not created.*version",
      "meaning": "Browser/driver version mismatch",
      "causes": ["Chrome updated", "Driver outdated", "Version incompatibility"],
      "solutions": ["Update driver: npx chromedriver-install", "Match chromedriver version to Chrome", "Use selenium-server for auto-matching"]
    },
    {
      "pattern": "Unable to locate element|element not found",
      "meaning": "Element selector failed",
      "causes": ["Wrong selector", "Element not loaded", "Dynamic content"],
      "solutions": ["Use waitForElementVisible(selector)", "Verify selector in browser", "Add pause or explicit wait"]
    },
    {
      "pattern": "element not interactable|element is not clickable",
      "meaning": "Element cannot be interacted with",
      "causes": ["Element hidden", "Overlay blocking", "Not in viewport"],
      "solutions": ["Wait: waitForElementVisible then click", "Scroll element into view", "Check for modals/overlays"]
    },
    {
      "pattern": "stale element reference",
      "meaning": "Element reference invalidated",
      "causes": ["DOM changed", "Page reload", "Element re-rendered"],
      "solutions": ["Re-query element before use", "Use page objects with fresh selectors", "Add stability waits"]
    },
    {
      "pattern": "timeout.*exceeded.*ms",
      "meaning": "Command timeout exceeded",
      "causes": ["Element never found", "Assertion never true", "Page too slow"],
      "solutions": ["Increase timeout in config", "Pass timeout to command: waitForElementVisible(sel, 10000)", "Check network/page performance"]
    },
    {
      "pattern": "AssertionError.*expected.*got",
      "meaning": "Assertion failed",
      "causes": ["Value mismatch", "Timing issue", "Wrong expectation"],
      "solutions": ["Check error details for actual value", "Add wait before assertion", "Review test logic"]
    },
    {
      "pattern": "No such file.*nightwatch\\.conf|config file not found",
      "meaning": "Config file missing",
      "causes": ["No config file", "Wrong working directory", "File named incorrectly"],
      "solutions": ["Run npx nightwatch --init", "Specify config: --config nightwatch.json", "Check file exists in project root"]
    },
    {
      "pattern": "Error loading.*page object|page object.*undefined",
      "meaning": "Page Object configuration error",
      "causes": ["Wrong path", "Export missing", "Syntax error in page object"],
      "solutions": ["Check page_objects_path in config", "Ensure module.exports = {...}", "Verify page object file syntax"]
    },
    {
      "pattern": "no such window|window was already closed",
      "meaning": "Browser window closed",
      "causes": ["Window manually closed", "Navigation closed window", "Popup blocked"],
      "solutions": ["Don't close active window", "Use switchWindow to correct handle", "Check popup blocker settings"]
    }
  ],
  "debugging_commands": [
    "npx nightwatch --verbose",
    "npx nightwatch --env chrome --test tests/login.js",
    "npx nightwatch --list-files",
    "npx nightwatch --devtools"
  ],
  "documentation_urls": [
    "https://nightwatchjs.org/guide/",
    "https://github.com/nightwatchjs/nightwatch"
  ]
}
