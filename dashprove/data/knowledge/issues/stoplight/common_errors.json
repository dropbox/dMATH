{
  "tool": "stoplight",
  "category": "api_design",
  "description": "Stoplight API design and documentation platform",
  "errors": [
    {
      "pattern": "validation.*error|spec.*invalid",
      "meaning": "OpenAPI validation failed",
      "causes": ["Invalid OpenAPI structure", "Missing required fields", "Schema errors"],
      "solutions": ["Review validation errors", "Fix OpenAPI issues", "Use Stoplight linting rules"]
    },
    {
      "pattern": "Unable to resolve.*reference",
      "meaning": "Reference not found",
      "causes": ["Invalid $ref path", "File not found", "Circular reference"],
      "solutions": ["Check $ref paths", "Verify referenced files exist", "Review dependency structure"]
    },
    {
      "pattern": "git.*sync.*failed|push.*error",
      "meaning": "Git synchronization error",
      "causes": ["Authentication failed", "Conflict in repository", "Network issue"],
      "solutions": ["Re-authenticate Git connection", "Resolve merge conflicts", "Check network connectivity"]
    },
    {
      "pattern": "prism.*mock.*failed|mock server error",
      "meaning": "Mock server error",
      "causes": ["Invalid example data", "Schema mismatch", "Prism configuration issue"],
      "solutions": ["Fix example data", "Match examples to schema", "Check Prism config"]
    },
    {
      "pattern": "spectral.*rule.*failed|linting error",
      "meaning": "Spectral linting failed",
      "causes": ["Style guide violation", "Custom rule failed", "Best practice issue"],
      "solutions": ["Review linting error details", "Fix or disable rule", "Update spec to comply"]
    },
    {
      "pattern": "publish.*failed|docs.*not updated",
      "meaning": "Documentation publish error",
      "causes": ["Build failed", "Invalid spec", "Permission issue"],
      "solutions": ["Fix validation errors first", "Check project permissions", "Retry publish"]
    },
    {
      "pattern": "import.*failed|unable to parse",
      "meaning": "Spec import error",
      "causes": ["Invalid file format", "Unsupported version", "Parsing error"],
      "solutions": ["Validate spec before import", "Convert to supported format", "Fix syntax errors"]
    },
    {
      "pattern": "elements.*not rendering|component.*missing",
      "meaning": "Stoplight Elements issue",
      "causes": ["Missing configuration", "Invalid spec URL", "Component not found"],
      "solutions": ["Check Elements configuration", "Verify spec URL accessible", "Review component props"]
    }
  ]
}
