{
  "tool": "openapi",
  "category": "api_specification",
  "description": "OpenAPI Specification (formerly Swagger)",
  "errors": [
    {
      "pattern": "Invalid OpenAPI|not valid OpenAPI",
      "meaning": "Specification doesn't conform to OpenAPI",
      "causes": ["Missing required fields", "Wrong structure", "Invalid version"],
      "solutions": ["Add openapi: 3.0.x or 3.1.x field", "Verify info and paths objects", "Use OpenAPI validator"]
    },
    {
      "pattern": "reference.*not found|$ref.*not resolved",
      "meaning": "Invalid reference in spec",
      "causes": ["$ref path wrong", "Component doesn't exist", "Circular reference not supported"],
      "solutions": ["Check $ref path spelling", "Ensure referenced component exists", "Use absolute or valid relative path"]
    },
    {
      "pattern": "schema.*invalid|Invalid schema",
      "meaning": "Schema definition error",
      "causes": ["Invalid type", "Missing required property", "Conflicting schema keywords"],
      "solutions": ["Use valid JSON Schema types", "Check schema structure", "Remove conflicting keywords"]
    },
    {
      "pattern": "operationId.*duplicate",
      "meaning": "Duplicate operation ID",
      "causes": ["Same operationId used twice", "Copy-paste error", "Auto-generated collision"],
      "solutions": ["Use unique operationId for each operation", "Review for duplicates", "Make IDs descriptive"]
    },
    {
      "pattern": "path.*parameter.*required",
      "meaning": "Path parameter configuration error",
      "causes": ["Path parameter not defined in parameters", "required: false on path param", "Mismatch between path and params"],
      "solutions": ["Define all {param} in parameters", "Set required: true for path params", "Match parameter names to path"]
    },
    {
      "pattern": "semantic error|structural error",
      "meaning": "Specification structure issue",
      "causes": ["Wrong field placement", "Invalid field type", "Version-specific feature in wrong version"],
      "solutions": ["Check field location in spec", "Verify field types match spec", "Use features for your OpenAPI version"]
    },
    {
      "pattern": "YAML.*parse error|JSON.*syntax error",
      "meaning": "File format error",
      "causes": ["Invalid YAML/JSON syntax", "Indentation error", "Missing quotes"],
      "solutions": ["Validate YAML/JSON syntax", "Check indentation (2 spaces for YAML)", "Quote special characters"]
    },
    {
      "pattern": "securityDefinitions.*not found|security scheme",
      "meaning": "Security configuration error",
      "causes": ["Security scheme not defined", "Wrong security reference", "OpenAPI 2.0 vs 3.0 difference"],
      "solutions": ["Define scheme in components/securitySchemes (3.0)", "Check security reference name", "Match OpenAPI version syntax"]
    }
  ]
}
