{
  "tool": "commitizen",
  "category": "git_conventions",
  "common_errors": [
    {
      "pattern": "The commit message is not a valid",
      "cause": "Commit doesn't follow conventional format",
      "solutions": [
        "Use 'cz commit' for interactive commit",
        "Format: type(scope): description",
        "Check configured schema in pyproject.toml"
      ]
    },
    {
      "pattern": "No valid tags found",
      "cause": "No semver tags in repository",
      "solutions": [
        "Create initial tag: git tag v0.1.0",
        "Configure tag_format in pyproject.toml",
        "Use --increment to specify bump type"
      ]
    },
    {
      "pattern": "cz: command not found",
      "cause": "Commitizen not installed or not in PATH",
      "solutions": [
        "Install: pip install commitizen",
        "Use: pipx install commitizen",
        "Activate virtual environment"
      ]
    },
    {
      "pattern": "No version specified",
      "cause": "Version not found in configured file",
      "solutions": [
        "Add [tool.commitizen] to pyproject.toml",
        "Set version in configuration",
        "Configure version_files"
      ]
    },
    {
      "pattern": "hook.*installed but not working",
      "cause": "Pre-commit hook configuration issue",
      "solutions": [
        "Reinstall hook: cz init --hook",
        "Check .pre-commit-config.yaml",
        "Use pre-commit install"
      ]
    },
    {
      "pattern": "bump.*no commits to process",
      "cause": "No conventional commits since last version",
      "solutions": [
        "Make conventional commit first",
        "Use --increment to force bump type",
        "Check commit history format"
      ]
    },
    {
      "pattern": "changelog.*generation failed",
      "cause": "Template or config error",
      "solutions": [
        "Check changelog_file path",
        "Verify template syntax",
        "Use default template first"
      ]
    },
    {
      "pattern": "Configuration.*not found",
      "cause": "Missing or invalid config file",
      "solutions": [
        "Run 'cz init' to create config",
        "Add [tool.commitizen] to pyproject.toml",
        "Check .cz.toml or setup.cfg"
      ]
    },
    {
      "pattern": "custom.*schema not valid",
      "cause": "Invalid custom commit schema",
      "solutions": [
        "Check schema syntax in config",
        "Test with cz schema",
        "Use built-in cz_conventional_commits"
      ]
    },
    {
      "pattern": "version_files.*not updated",
      "cause": "Pattern didn't match in files",
      "solutions": [
        "Check regex pattern in version_files",
        "Verify file paths are correct",
        "Test pattern against file content"
      ]
    }
  ]
}
