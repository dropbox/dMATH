{
  "tool": "id",
  "version": "coreutils",
  "last_updated": "2025-12-23",
  "errors": [
    {
      "id": "user_not_found",
      "pattern": "no such user|id: '.*': no such user",
      "message": "User doesn't exist",
      "cause": "Username not in system",
      "solutions": [
        {
          "approach": "List users",
          "code": "getent passwd | cut -d: -f1",
          "when": "Find correct name"
        },
        {
          "approach": "Check current user",
          "code": "id\nwhoami",
          "when": "Own identity"
        }
      ]
    },
    {
      "id": "invalid_option",
      "pattern": "invalid option|unrecognized option",
      "message": "Invalid option",
      "cause": "Option not supported",
      "solutions": [
        {
          "approach": "Common options",
          "code": "id              # All info\nid -u           # Just UID\nid -g           # Just GID\nid -G           # All group IDs\nid -n -u        # Username\nid -n -g        # Primary group name",
          "when": "Reference"
        }
      ]
    },
    {
      "id": "permission_denied",
      "pattern": "Permission denied",
      "message": "Cannot read user info",
      "cause": "System file permissions",
      "solutions": [
        {
          "approach": "Check files",
          "code": "ls -la /etc/passwd /etc/group",
          "when": "Verify readable"
        },
        {
          "approach": "Use getent",
          "code": "getent passwd username",
          "when": "Alternative lookup"
        }
      ]
    }
  ]
}
