{
  "tool": "luxon",
  "category": "i18n_localization",
  "common_errors": [
    {
      "pattern": "Invalid DateTime",
      "meaning": "DateTime object represents invalid state",
      "causes": [
        "Parsing failed",
        "Invalid date component values",
        "Timezone not recognized"
      ],
      "solutions": [
        "Check isValid property: if (dt.isValid) { /* safe */ }",
        "Use invalidReason for details: dt.invalidReason",
        "Use invalidExplanation for verbose error: dt.invalidExplanation"
      ]
    },
    {
      "pattern": "you specified .* but the system doesn't have data for",
      "meaning": "ICU data not available for locale/timezone",
      "causes": [
        "Node.js built without full ICU",
        "Browser missing Intl support",
        "Unknown timezone identifier"
      ],
      "solutions": [
        "Node.js: npm install full-icu; NODE_ICU_DATA=./node_modules/full-icu node app.js",
        "Or rebuild Node.js with --with-intl=full-icu",
        "Use IANAZone.isValidSpecifier() to check timezone support"
      ]
    },
    {
      "pattern": "DateTime.fromFormat.*unparsable",
      "meaning": "Input string doesn't match format pattern",
      "causes": [
        "Format tokens don't match input",
        "Extra whitespace or characters",
        "Locale-specific format not matching"
      ],
      "solutions": [
        "Check format tokens: DateTime.fromFormat('25/12/2024', 'dd/MM/yyyy')",
        "Use { locale: 'en' } for locale-sensitive formats",
        "Debug with DateTime.fromFormat(str, fmt, { debug: true })"
      ]
    },
    {
      "pattern": "DateTime.fromISO.*null|undefined",
      "meaning": "Null/undefined passed to parsing function",
      "causes": [
        "API returned no date",
        "Form field empty",
        "Async data not loaded"
      ],
      "solutions": [
        "Guard input: str ? DateTime.fromISO(str) : null",
        "Use optional chaining: DateTime.fromISO(str ?? '')",
        "Check isValid after parsing"
      ]
    },
    {
      "pattern": "Cannot read property '.*' of undefined.*Zone",
      "meaning": "Zone object issue",
      "causes": [
        "Using unsupported zone string",
        "Zone.create() failed silently",
        "Missing timezone data"
      ],
      "solutions": [
        "Use standard IANA zones: 'America/New_York' not 'EST'",
        "Check zone validity: IANAZone.isValidZone('America/New_York')",
        "Use FixedOffsetZone for known offsets"
      ]
    },
    {
      "pattern": "Duration.*undefined.*is not",
      "meaning": "Invalid Duration operation",
      "causes": [
        "Mixing incompatible units",
        "Calling method on invalid Duration",
        "Arithmetic with null values"
      ],
      "solutions": [
        "Check Duration.isValid before operations",
        "Normalize before comparison: dur.normalize()",
        "Use Duration.fromObject with valid units"
      ]
    },
    {
      "pattern": "no locale data|locale.*is not available",
      "meaning": "Locale not supported by Intl",
      "causes": [
        "Node.js without full ICU",
        "Uncommon locale not in browser",
        "Typo in locale code"
      ],
      "solutions": [
        "Use standard locale codes: 'en-US', 'de-DE'",
        "Install full-icu package for Node.js",
        "Fall back to base language: 'de' instead of 'de-AT'"
      ]
    },
    {
      "pattern": "toFormat.*undefined token",
      "meaning": "Invalid format token in toFormat string",
      "causes": [
        "Using moment.js format tokens",
        "Unescaped literal characters",
        "Unknown token letter"
      ],
      "solutions": [
        "Luxon uses different tokens: yyyy not YYYY, dd not DD",
        "Escape literals with single quotes: \"d 'of' MMMM\"",
        "See Luxon formatting docs for token reference"
      ]
    }
  ]
}
