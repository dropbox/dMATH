{
  "tool": "expo",
  "category": "mobile_framework",
  "common_errors": [
    {
      "id": "expo_managed_native",
      "pattern": "native code|eject|expo prebuild|custom native",
      "severity": "info",
      "causes": [
        "Need custom native code",
        "Library requires native setup",
        "Managed workflow limitations"
      ],
      "solutions": [
        "Use expo prebuild for development builds",
        "Or use config plugins for native config",
        "EAS Build for production with native code"
      ]
    },
    {
      "id": "expo_eas_build",
      "pattern": "eas build|build error|credentials",
      "severity": "error",
      "causes": [
        "Credentials not configured",
        "Build config wrong",
        "Native dependencies issue"
      ],
      "solutions": [
        "Run: eas credentials",
        "Check eas.json configuration",
        "Use --clear-cache for fresh build"
      ]
    },
    {
      "id": "expo_sdk_upgrade",
      "pattern": "sdk version|upgrade expo|deprecated sdk",
      "severity": "warning",
      "causes": [
        "Old SDK version",
        "Breaking changes",
        "Dependencies need update"
      ],
      "solutions": [
        "Run: npx expo install --fix",
        "Follow upgrade guide for SDK version",
        "Update all expo-* packages together"
      ]
    },
    {
      "id": "expo_camera_permissions",
      "pattern": "permission denied|camera|location|media library",
      "severity": "error",
      "causes": [
        "Permission not requested",
        "Missing in app.json",
        "User denied"
      ],
      "solutions": [
        "Use expo-* permission APIs",
        "Add to app.json plugins array",
        "Request at runtime with explanation"
      ]
    },
    {
      "id": "expo_router",
      "pattern": "expo-router|file routing|page not found",
      "severity": "error",
      "causes": [
        "File not in app/ directory",
        "Wrong file naming",
        "Metro config issues"
      ],
      "solutions": [
        "Place pages in app/ directory",
        "Use (group) for layout groups",
        "index.tsx for default route"
      ]
    },
    {
      "id": "expo_go_limitations",
      "pattern": "expo go|not available|native module",
      "severity": "warning",
      "causes": [
        "Library not in Expo Go",
        "Custom native code needed",
        "Module requires build"
      ],
      "solutions": [
        "Use development build: expo run:ios/android",
        "Or EAS Build with dev client",
        "Check Expo Go compatibility"
      ]
    },
    {
      "id": "expo_assets",
      "pattern": "asset not found|image missing|font error",
      "severity": "error",
      "causes": [
        "Asset path wrong",
        "Font not loaded",
        "Metro bundling issue"
      ],
      "solutions": [
        "Use require() for local assets",
        "Load fonts with useFonts hook",
        "Check assets in app.json"
      ]
    },
    {
      "id": "expo_web",
      "pattern": "expo web|browser error|platform specific",
      "severity": "warning",
      "causes": [
        "Native-only component used on web",
        "Platform-specific code missing",
        "Polyfill needed"
      ],
      "solutions": [
        "Use Platform.OS checks",
        "Use .web.js file extensions",
        "Check expo-web compatibility"
      ]
    }
  ]
}
