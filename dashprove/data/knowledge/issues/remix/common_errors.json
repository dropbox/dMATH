{
  "tool": "remix",
  "category": "framework",
  "common_errors": [
    {
      "id": "remix_loader_action",
      "pattern": "loader|action|data not loading|POST not working",
      "severity": "error",
      "causes": [
        "Loader/action not exported",
        "Wrong HTTP method",
        "Return format wrong"
      ],
      "solutions": [
        "Export loader for GET: export const loader = async ({ request }) => { return json(data) }",
        "Export action for POST/PUT/DELETE",
        "Use json() helper from @remix-run/node"
      ]
    },
    {
      "id": "remix_useloaderdata",
      "pattern": "useLoaderData|data undefined|type error",
      "severity": "error",
      "causes": [
        "No loader defined",
        "Type mismatch",
        "Called in wrong component"
      ],
      "solutions": [
        "Define loader in same route file",
        "Use useLoaderData<typeof loader>()",
        "Only works in route components"
      ]
    },
    {
      "id": "remix_form",
      "pattern": "Form component|submit not working|action error",
      "severity": "error",
      "causes": [
        "Using regular form instead of Form",
        "Action not handling form data",
        "Wrong action path"
      ],
      "solutions": [
        "Import { Form } from '@remix-run/react'",
        "Use request.formData() in action",
        "Form action='.' for same route"
      ]
    },
    {
      "id": "remix_nested_routing",
      "pattern": "outlet|nested route|layout not showing",
      "severity": "error",
      "causes": [
        "Missing Outlet component",
        "Route structure wrong",
        "Layout not rendering children"
      ],
      "solutions": [
        "Add <Outlet /> in parent route",
        "Child routes in folder: routes/parent/child.tsx",
        "Parent layout: routes/parent.tsx"
      ]
    },
    {
      "id": "remix_error_boundary",
      "pattern": "ErrorBoundary|error handling|uncaught error",
      "severity": "warning",
      "causes": [
        "No error boundary defined",
        "Error not caught",
        "Boundary at wrong level"
      ],
      "solutions": [
        "Export ErrorBoundary from route",
        "Use isRouteErrorResponse() for responses",
        "Root error boundary catches all"
      ]
    },
    {
      "id": "remix_defer_streaming",
      "pattern": "defer|streaming|Await component",
      "severity": "info",
      "causes": [
        "Slow data blocking render",
        "Want progressive loading",
        "Suspense setup"
      ],
      "solutions": [
        "Use defer() in loader",
        "Wrap in <Suspense>",
        "Use <Await> for deferred data"
      ]
    },
    {
      "id": "remix_server_client",
      "pattern": "window undefined|server vs client|hydration mismatch",
      "severity": "error",
      "causes": [
        "Browser API on server",
        "Different render on client",
        "useEffect needed"
      ],
      "solutions": [
        "Use useEffect for browser code",
        "Check typeof window !== 'undefined'",
        "Use .client.tsx/.server.tsx files"
      ]
    },
    {
      "id": "remix_meta_links",
      "pattern": "meta function|links function|head tags",
      "severity": "info",
      "causes": [
        "SEO metadata needed",
        "Stylesheets to add",
        "Title/description"
      ],
      "solutions": [
        "Export meta function for <meta> tags",
        "Export links function for <link> tags",
        "Use matches param for parent meta"
      ]
    }
  ]
}
