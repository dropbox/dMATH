{
  "tool": "nx_monorepo",
  "category": "build_system",
  "errors": [
    {
      "pattern": "nx.json.*not found",
      "cause": "No Nx configuration",
      "solutions": [
        "Run npx nx init",
        "Create nx.json manually",
        "Check working directory"
      ]
    },
    {
      "pattern": "Cannot find project",
      "cause": "Project not in workspace",
      "solutions": [
        "Check project name spelling",
        "Verify project.json exists",
        "Run nx show projects"
      ]
    },
    {
      "pattern": "target.*not found",
      "cause": "Target not defined for project",
      "solutions": [
        "Add target to project.json",
        "Check executor configuration",
        "Verify plugin provides target"
      ]
    },
    {
      "pattern": "dependency.*failed",
      "cause": "Dependent project failed",
      "solutions": [
        "Fix dependent project first",
        "Check task dependencies",
        "Use --skip-nx-cache to debug"
      ]
    },
    {
      "pattern": "cache.*corrupted",
      "cause": "Local cache corruption",
      "solutions": [
        "Run nx reset",
        "Delete .nx/cache directory",
        "Clear node_modules/.cache"
      ]
    },
    {
      "pattern": "daemon.*error",
      "cause": "Nx daemon process issue",
      "solutions": [
        "Run nx daemon --stop",
        "Kill nx daemon processes",
        "Use NX_DAEMON=false"
      ]
    },
    {
      "pattern": "affected.*error",
      "cause": "Affected projects detection issue",
      "solutions": [
        "Check base/head configuration",
        "Verify git history",
        "Use --all for full build"
      ]
    },
    {
      "pattern": "executor.*not found",
      "cause": "Executor package not installed",
      "solutions": [
        "Install required plugin",
        "Check executor name spelling",
        "Verify package.json dependencies"
      ]
    }
  ]
}
