{
  "tool": "pesco",
  "version": "2024",
  "last_updated": "2025-12-23",
  "errors": [
    {
      "id": "false_result",
      "pattern": "FALSE|VERIFICATION FAILED",
      "message": "Property violation found",
      "cause": "PeSCo's portfolio approach found counterexample",
      "solutions": [
        {
          "approach": "Check witness",
          "code": "# Examine violation-witness.graphml",
          "when": "Need counterexample"
        },
        {
          "approach": "Fix bug",
          "code": "// Genuine property violation",
          "when": "Real bug found"
        },
        {
          "approach": "Add annotations",
          "code": "__VERIFIER_assume(condition);",
          "when": "Refine input assumptions"
        }
      ]
    },
    {
      "id": "unknown_result",
      "pattern": "UNKNOWN|could not verify",
      "message": "Verification inconclusive",
      "cause": "None of PeSCo's backend tools succeeded",
      "solutions": [
        {
          "approach": "Increase resources",
          "code": "pesco --timelimit 900 --memlimit 32768 program.c",
          "when": "Tools need more time/memory"
        },
        {
          "approach": "Check property",
          "code": "pesco --property reach program.c",
          "when": "Specify explicit property"
        },
        {
          "approach": "Simplify program",
          "code": "// Add loop bounds or simplify control flow",
          "when": "Program too complex"
        }
      ]
    },
    {
      "id": "timeout",
      "pattern": "TIMEOUT|time limit exceeded",
      "message": "Analysis timed out",
      "cause": "Portfolio approach exhausted time limit",
      "solutions": [
        {
          "approach": "Increase timeout",
          "code": "pesco --timelimit 1800 program.c",
          "when": "Analysis needs more time"
        },
        {
          "approach": "Use specific tool",
          "code": "# Try individual tools: CPAchecker, CBMC, etc.",
          "when": "PeSCo portfolio too slow"
        },
        {
          "approach": "Add invariants",
          "code": "// Loop invariants help all tools",
          "when": "Complex loops"
        }
      ]
    },
    {
      "id": "parsing_error",
      "pattern": "parsing failed|syntax error",
      "message": "C source parsing failed",
      "cause": "Invalid C syntax or unsupported construct",
      "solutions": [
        {
          "approach": "Validate syntax",
          "code": "gcc -fsyntax-only -std=c11 program.c",
          "when": "Check for errors"
        },
        {
          "approach": "Preprocess",
          "code": "gcc -E program.c > preprocessed.c",
          "when": "Macro issues"
        },
        {
          "approach": "Check includes",
          "code": "pesco -I/usr/include program.c",
          "when": "Missing headers"
        }
      ]
    },
    {
      "id": "configuration_error",
      "pattern": "configuration.*error|invalid option",
      "message": "Tool configuration error",
      "cause": "Invalid options or missing configuration",
      "solutions": [
        {
          "approach": "Check syntax",
          "code": "pesco --help",
          "when": "Verify options"
        },
        {
          "approach": "Use defaults",
          "code": "pesco program.c",
          "when": "Use default settings"
        },
        {
          "approach": "Check installation",
          "code": "pesco --version",
          "when": "Verify tool setup"
        }
      ]
    },
    {
      "id": "memory_exhausted",
      "pattern": "out of memory|memory limit exceeded",
      "message": "Analysis ran out of memory",
      "cause": "State space too large for available memory",
      "solutions": [
        {
          "approach": "Increase memory",
          "code": "pesco --memlimit 65536 program.c",
          "when": "More memory available"
        },
        {
          "approach": "Bound analysis",
          "code": "// Add __VERIFIER_assume to limit input space",
          "when": "Can restrict inputs"
        },
        {
          "approach": "Use bounded checking",
          "code": "# PeSCo will try BMC tools with bounds",
          "when": "Full verification too expensive"
        }
      ]
    }
  ]
}
