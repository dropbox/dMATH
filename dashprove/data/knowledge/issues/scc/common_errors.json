{
  "tool": "scc",
  "version": "3.2",
  "last_updated": "2025-12-23",
  "errors": [
    {
      "id": "no_files_processed",
      "pattern": "Total.*0|Processed 0 files",
      "message": "No files processed",
      "cause": "No matching files found or all excluded",
      "solutions": [
        {
          "approach": "Check working directory",
          "code": "pwd && ls -la",
          "when": "Verify location"
        },
        {
          "approach": "Include hidden files",
          "code": "scc --include-hidden .",
          "when": "Files might be hidden"
        },
        {
          "approach": "Include all extensions",
          "code": "scc --include-ext '*' .",
          "when": "Custom extensions"
        }
      ]
    },
    {
      "id": "exclude_pattern_error",
      "pattern": "exclude.*error|pattern.*invalid",
      "message": "Exclude pattern error",
      "cause": "Invalid regex or glob pattern",
      "solutions": [
        {
          "approach": "Use glob patterns",
          "code": "scc --exclude-dir 'node_modules,vendor' .",
          "when": "Simple exclusion"
        },
        {
          "approach": "Regex exclude",
          "code": "scc --not-match '.*test.*' .",
          "when": "Pattern matching"
        },
        {
          "approach": "Multiple exclusions",
          "code": "scc --exclude-dir node_modules --exclude-dir dist .",
          "when": "Multiple directories"
        }
      ]
    },
    {
      "id": "format_not_recognized",
      "pattern": "format.*unknown|output.*error",
      "message": "Output format not recognized",
      "cause": "Invalid format option",
      "solutions": [
        {
          "approach": "Use valid formats",
          "code": "scc -f json .        # JSON\nscc -f csv .         # CSV\nscc -f html .        # HTML\nscc -f cloc-yaml .   # cloc-compatible YAML\nscc -f sql .         # SQL INSERT\nscc -f sql-insert .  # SQL INSERT",
          "when": "Machine-readable output"
        },
        {
          "approach": "Wide output",
          "code": "scc -w .  # Wide table format",
          "when": "More columns"
        }
      ]
    },
    {
      "id": "complexity_calculation",
      "pattern": "complexity.*error|cyclomatic",
      "message": "Complexity calculation issues",
      "cause": "Complex code or parsing issues",
      "solutions": [
        {
          "approach": "Show complexity",
          "code": "scc --by-file --sort complexity .",
          "when": "Find complex files"
        },
        {
          "approach": "Complexity breakdown",
          "code": "scc -c .",
          "when": "Include complexity in output"
        },
        {
          "approach": "Disable complexity",
          "code": "scc --no-complexity .",
          "when": "Faster counting"
        }
      ]
    },
    {
      "id": "uloc_counting",
      "pattern": "ULOC|unique lines",
      "message": "Unique lines of code issues",
      "cause": "ULOC calculation questions",
      "solutions": [
        {
          "approach": "Show ULOC",
          "code": "scc -a .  # Show average values including ULOC",
          "when": "Want unique line counts"
        },
        {
          "approach": "Understanding ULOC",
          "code": "# ULOC = Unique Lines of Code\n# Counts distinct lines, ignoring duplicates\n# Useful for measuring actual unique content",
          "when": "Understanding metric"
        }
      ]
    },
    {
      "id": "cocomo_estimate",
      "pattern": "COCOMO|estimate.*error",
      "message": "COCOMO estimate issues",
      "cause": "Cost estimation questions",
      "solutions": [
        {
          "approach": "Show COCOMO estimate",
          "code": "scc --cocomo-project-type organic .",
          "when": "Small team estimate"
        },
        {
          "approach": "COCOMO parameters",
          "code": "scc --cocomo-project-type embedded .   # Complex project\nscc --cocomo-project-type semi-detached .  # Medium",
          "when": "Different project types"
        },
        {
          "approach": "Custom salary",
          "code": "scc --avg-wage 75000 .",
          "when": "Different cost basis"
        }
      ]
    },
    {
      "id": "large_file_issues",
      "pattern": "large file|memory",
      "message": "Large file handling",
      "cause": "Very large files causing issues",
      "solutions": [
        {
          "approach": "Set size limit",
          "code": "scc --file-gc-count 100 .",
          "when": "Memory issues"
        },
        {
          "approach": "Exclude large files",
          "code": "scc --exclude-dir data --not-match 'generated' .",
          "when": "Skip generated/data files"
        },
        {
          "approach": "Increase parallelism",
          "code": "scc --no-gitignore .",
          "when": "Want all files"
        }
      ]
    },
    {
      "id": "minified_detection",
      "pattern": "minified|generated",
      "message": "Minified/generated file detection",
      "cause": "scc tries to detect minified files",
      "solutions": [
        {
          "approach": "Include minified",
          "code": "scc --no-min .",
          "when": "Count minified files"
        },
        {
          "approach": "Check detection",
          "code": "scc --by-file . | grep -i minified",
          "when": "See what was detected"
        },
        {
          "approach": "Exclude generated dirs",
          "code": "scc --exclude-dir dist,build,generated .",
          "when": "Skip generated code"
        }
      ]
    },
    {
      "id": "duplicate_detection",
      "pattern": "duplicate|identical files",
      "message": "Duplicate file detection",
      "cause": "scc doesn't count duplicates by default",
      "solutions": [
        {
          "approach": "Count duplicates",
          "code": "scc --no-duplicates=false .",
          "when": "Want all copies counted"
        },
        {
          "approach": "Show duplicates",
          "code": "scc -d .",
          "when": "Find duplicate code"
        }
      ]
    }
  ]
}
