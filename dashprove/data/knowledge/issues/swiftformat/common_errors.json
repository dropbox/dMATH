{
  "tool": "swiftformat",
  "version": "0.53.0",
  "last_updated": "2025-12-22",
  "errors": [
    {
      "id": "indent_error",
      "pattern": "indent|indentation",
      "message": "Incorrect indentation",
      "cause": "Code indentation doesn't match configured style (spaces vs tabs, width)",
      "solutions": [
        {
          "approach": "Auto-fix",
          "code": "swiftformat . --indent 4",
          "when": "Want consistent 4-space indentation"
        },
        {
          "approach": "Use tabs",
          "code": "swiftformat . --indent tabs",
          "when": "Project uses tabs"
        },
        {
          "approach": "Configure in file",
          "code": "# .swiftformat\n--indent 2",
          "when": "Project uses 2 spaces"
        }
      ]
    },
    {
      "id": "braces_style",
      "pattern": "braces|opening.*brace|closing.*brace",
      "message": "Brace placement doesn't match style",
      "cause": "Opening/closing braces not on expected lines",
      "solutions": [
        {
          "approach": "Use K&R style",
          "code": "# .swiftformat\n--allman false",
          "when": "Want braces on same line"
        },
        {
          "approach": "Use Allman style",
          "code": "# .swiftformat\n--allman true",
          "when": "Want braces on new line"
        }
      ]
    },
    {
      "id": "redundant_self",
      "pattern": "redundantSelf|redundant.*self",
      "message": "Self is used unnecessarily",
      "cause": "Using self. when there's no ambiguity with local variables",
      "solutions": [
        {
          "approach": "Remove redundant self",
          "code": "swiftformat . --rules redundantSelf",
          "when": "Want minimal self usage"
        },
        {
          "approach": "Keep explicit self",
          "code": "# .swiftformat\n--self insert",
          "when": "Prefer explicit self everywhere"
        },
        {
          "approach": "Disable rule",
          "code": "# .swiftformat\n--disable redundantSelf",
          "when": "Team prefers explicit self"
        }
      ]
    },
    {
      "id": "trailing_comma",
      "pattern": "trailingCommas|trailing.*comma",
      "message": "Trailing comma handling",
      "cause": "Arrays/dictionaries missing or having extra trailing commas",
      "solutions": [
        {
          "approach": "Add trailing commas",
          "code": "# .swiftformat\n--commas always",
          "when": "Want easier diffs"
        },
        {
          "approach": "Remove trailing commas",
          "code": "# .swiftformat\n--commas inline",
          "when": "Traditional style"
        }
      ]
    },
    {
      "id": "space_around_operators",
      "pattern": "spaceAroundOperators|operator.*spacing",
      "message": "Inconsistent spacing around operators",
      "cause": "Missing or extra spaces around +, -, =, etc.",
      "solutions": [
        {
          "approach": "Auto-fix spacing",
          "code": "swiftformat . --rules spaceAroundOperators",
          "when": "Want consistent operator spacing"
        },
        {
          "approach": "Configure operators",
          "code": "# .swiftformat\n--operatorfunc spaced",
          "when": "Custom operator spacing needed"
        }
      ]
    },
    {
      "id": "blank_lines",
      "pattern": "blankLines|consecutive.*blank|blank.*lines",
      "message": "Too many/few blank lines",
      "cause": "Blank line count doesn't match configuration",
      "solutions": [
        {
          "approach": "Configure max blank lines",
          "code": "# .swiftformat\n--maxblanklines 1",
          "when": "Want max 1 blank line between sections"
        },
        {
          "approach": "Configure around types",
          "code": "# .swiftformat\n--typeblanklines remove",
          "when": "No blank lines inside type declarations"
        }
      ]
    },
    {
      "id": "wrap_arguments",
      "pattern": "wrapArguments|argument.*wrapping",
      "message": "Function arguments not wrapped correctly",
      "cause": "Long argument lists should be wrapped consistently",
      "solutions": [
        {
          "approach": "Wrap before first",
          "code": "# .swiftformat\n--wraparguments before-first",
          "when": "Want each argument on new line"
        },
        {
          "approach": "Wrap after first",
          "code": "# .swiftformat\n--wraparguments after-first",
          "when": "First argument on same line"
        },
        {
          "approach": "Preserve wrapping",
          "code": "# .swiftformat\n--wraparguments preserve",
          "when": "Keep manual formatting"
        }
      ]
    },
    {
      "id": "file_not_found",
      "pattern": "no.*files|file.*not.*found|cannot.*read",
      "message": "SwiftFormat couldn't find files to format",
      "cause": "Path doesn't contain Swift files or is incorrect",
      "solutions": [
        {
          "approach": "Specify path correctly",
          "code": "swiftformat ./Sources",
          "when": "Wrong directory"
        },
        {
          "approach": "Check file extension",
          "code": "# Ensure files have .swift extension",
          "when": "Files have wrong extension"
        },
        {
          "approach": "Use glob pattern",
          "code": "swiftformat **/*.swift",
          "when": "Need recursive search"
        }
      ]
    },
    {
      "id": "parser_error",
      "pattern": "parsing.*error|syntax.*error|unexpected.*token",
      "message": "SwiftFormat couldn't parse file",
      "cause": "File contains syntax errors that prevent parsing",
      "solutions": [
        {
          "approach": "Fix syntax errors first",
          "code": "# Compile project to find errors\nxcodebuild build",
          "when": "Invalid Swift syntax"
        },
        {
          "approach": "Check Swift version",
          "code": "# .swiftformat\n--swiftversion 5.9",
          "when": "Using newer Swift features"
        },
        {
          "approach": "Exclude problematic files",
          "code": "# .swiftformat\n--exclude Generated/",
          "when": "Auto-generated code has issues"
        }
      ]
    },
    {
      "id": "rule_conflict",
      "pattern": "conflict|contradictory.*rules",
      "message": "Formatting rules conflict with each other",
      "cause": "Two rules try to format the same code differently",
      "solutions": [
        {
          "approach": "Disable one rule",
          "code": "# .swiftformat\n--disable conflictingRule",
          "when": "One rule more important"
        },
        {
          "approach": "Use rulesets",
          "code": "# .swiftformat\n--rules default",
          "when": "Use curated rule set"
        }
      ]
    }
  ]
}
