{
  "tool": "mockserver",
  "category": "local_development",
  "common_errors": [
    {
      "pattern": "Connection refused.*1080",
      "cause": "MockServer not running or wrong port",
      "solutions": [
        "Start MockServer: java -jar mockserver.jar",
        "Check MOCKSERVER_SERVER_PORT",
        "Verify Docker container is running"
      ]
    },
    {
      "pattern": "expectation.*not matched",
      "cause": "Request doesn't match any expectation",
      "solutions": [
        "Check expectation matcher configuration",
        "Use less strict matching",
        "Verify request path and method"
      ]
    },
    {
      "pattern": "No expectation.*found",
      "cause": "Expectation not created or expired",
      "solutions": [
        "Create expectation before making request",
        "Increase expectation times parameter",
        "Check expectation TTL setting"
      ]
    },
    {
      "pattern": "JSON.*parse error",
      "cause": "Invalid JSON in expectation or response",
      "solutions": [
        "Validate JSON syntax",
        "Escape special characters properly",
        "Use MockServer client library"
      ]
    },
    {
      "pattern": "SSL.*certificate error",
      "cause": "HTTPS configuration issue",
      "solutions": [
        "Trust MockServer CA certificate",
        "Use HTTP for local testing",
        "Configure client to skip SSL verification"
      ]
    },
    {
      "pattern": "Proxy.*forwarding failed",
      "cause": "Proxy mode can't reach target",
      "solutions": [
        "Check target server is reachable",
        "Configure proxy settings properly",
        "Verify network routing"
      ]
    },
    {
      "pattern": "verification.*failed",
      "cause": "Expected requests not received",
      "solutions": [
        "Check request was actually made",
        "Verify verification criteria",
        "Use retrieve() to see received requests"
      ]
    },
    {
      "pattern": "OutOfMemoryError",
      "cause": "MockServer heap exhausted",
      "solutions": [
        "Increase JVM heap: -Xmx2g",
        "Clear old expectations",
        "Reduce log retention"
      ]
    },
    {
      "pattern": "Port.*already in use",
      "cause": "Port conflict with other process",
      "solutions": [
        "Use different port: -serverPort",
        "Kill process on port: lsof -i :1080",
        "Stop other MockServer instances"
      ]
    },
    {
      "pattern": "callback.*not found",
      "cause": "Response callback class not available",
      "solutions": [
        "Ensure callback class is in classpath",
        "Use built-in response templates",
        "Check callback class name"
      ]
    }
  ]
}
