{
  "tool": "phoenix_channels",
  "category": "realtime_framework",
  "description": "Phoenix Framework real-time channels",
  "errors": [
    {
      "pattern": "unmatched topic|could not join",
      "meaning": "Channel topic not handled",
      "causes": ["No channel matching topic pattern", "Route not defined", "Typo in topic"],
      "solutions": ["Add channel route in socket.ex", "Check topic pattern matches", "Verify channel module exists"]
    },
    {
      "pattern": "unauthorized|:error, :unauthorized",
      "meaning": "Channel join rejected",
      "causes": ["join/3 returned error", "Authentication failed", "Authorization check failed"],
      "solutions": ["Check join/3 callback logic", "Verify socket assigns", "Review authorization rules"]
    },
    {
      "pattern": "timeout.*join|channel timeout",
      "meaning": "Channel join timed out",
      "causes": ["Server not responding", "Slow join handler", "Network issue"],
      "solutions": ["Check channel join/3 implementation", "Optimize slow operations", "Increase client timeout"]
    },
    {
      "pattern": "WebSocket.*disconnected|transport error",
      "meaning": "Connection lost",
      "causes": ["Network interruption", "Server restart", "Load balancer timeout"],
      "solutions": ["Implement reconnection with exponential backoff", "Configure load balancer for WebSocket", "Handle onError callback"]
    },
    {
      "pattern": "no handle_in clause|unhandled event",
      "meaning": "Event not handled",
      "causes": ["Missing handle_in/3 clause", "Event name mismatch", "Wrong message format"],
      "solutions": ["Add handle_in for event", "Check event name spelling", "Match expected payload format"]
    },
    {
      "pattern": "PubSub.*not started|no pubsub",
      "meaning": "PubSub not configured",
      "causes": ["PubSub adapter not started", "Missing configuration", "Supervisor not started"],
      "solutions": ["Add PubSub to supervision tree", "Configure pubsub in endpoint", "Start Phoenix.PubSub"]
    },
    {
      "pattern": "Presence.*crash|process.*died",
      "meaning": "Presence tracking error",
      "causes": ["Track called outside channel", "Invalid meta data", "PubSub issue"],
      "solutions": ["Call track in join/3 or handle_in/3", "Return valid meta from presence_meta", "Check PubSub configuration"]
    },
    {
      "pattern": "serialization error|cannot encode",
      "meaning": "Message serialization failed",
      "causes": ["Non-serializable data", "Custom struct without encoder", "Invalid payload"],
      "solutions": ["Use JSON-compatible types", "Implement Jason.Encoder", "Check payload structure"]
    }
  ]
}
