{
  "tool": "forever",
  "category": "process_management",
  "common_errors": [
    {
      "pattern": "error: Cannot start forever|No script found",
      "meaning": "Forever can't find or start the script",
      "causes": [
        "Script path incorrect",
        "Missing script argument",
        "Working directory issue"
      ],
      "solutions": [
        "Use absolute path: forever start /full/path/to/app.js",
        "Set source dir: forever start --sourceDir /app app.js",
        "Ensure script exists and is readable"
      ]
    },
    {
      "pattern": "forever: command not found",
      "meaning": "Forever not installed or not in PATH",
      "causes": [
        "Not installed globally",
        "Node bin directory not in PATH"
      ],
      "solutions": [
        "Install globally: npm install -g forever",
        "Use npx: npx forever start app.js",
        "Check: which forever"
      ]
    },
    {
      "pattern": "warn.*Script was killed|Restarting script",
      "meaning": "Script crashed or was killed",
      "causes": [
        "Application error",
        "Out of memory",
        "SIGKILL received"
      ],
      "solutions": [
        "Check logs: forever logs app.js",
        "View all: forever list",
        "Set max restarts: forever start -m 5 app.js",
        "Debug app directly with node"
      ]
    },
    {
      "pattern": "Error: listen EADDRINUSE|port already in use",
      "meaning": "Port conflict",
      "causes": [
        "Previous instance still running",
        "Quick restart race condition",
        "Another process using port"
      ],
      "solutions": [
        "Stop all: forever stopall",
        "Check: forever list",
        "Add min uptime: forever start --minUptime 5000 app.js",
        "Add spin sleep: forever start --spinSleepTime 1000 app.js"
      ]
    },
    {
      "pattern": "Error: ENOENT.*\\.forever|config not found",
      "meaning": "Forever home directory or config issue",
      "causes": [
        "~/.forever directory missing or corrupted",
        "Permission issue on home directory"
      ],
      "solutions": [
        "Remove and recreate: rm -rf ~/.forever",
        "Run forever again to recreate",
        "Set custom: FOREVER_ROOT=/path/to/dir forever start app.js"
      ]
    },
    {
      "pattern": "warning: Forever detected script exited with code",
      "meaning": "Script exited with error code",
      "causes": [
        "Unhandled exception",
        "Process.exit with non-zero code",
        "Uncaught promise rejection"
      ],
      "solutions": [
        "Check error code in warning",
        "View logs: forever logs <index>",
        "Add error handlers in application",
        "Use --killSignal for graceful shutdown"
      ]
    },
    {
      "pattern": "Cannot read.*undefined|process has no pid",
      "meaning": "Process tracking error",
      "causes": [
        "Process died unexpectedly",
        "PID file corrupted",
        "Multiple forever instances interfering"
      ],
      "solutions": [
        "Clean up: forever cleanlogs; forever stopall",
        "Remove ~/.forever/pids/*",
        "Restart from clean state"
      ]
    },
    {
      "pattern": "DEPRECATED|forever is deprecated",
      "meaning": "Forever package deprecated notice",
      "causes": [
        "Forever hasn't been actively maintained",
        "Using deprecated API"
      ],
      "solutions": [
        "Consider migrating to PM2",
        "Or use systemd for production",
        "Forever still works but unsupported"
      ]
    }
  ]
}
