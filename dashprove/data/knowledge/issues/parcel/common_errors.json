{
  "tool": "parcel",
  "category": "bundler",
  "common_errors": [
    {
      "id": "parcel_entry_point",
      "pattern": "entry point|no input|cannot find entry",
      "severity": "error",
      "causes": [
        "No entry file specified",
        "Entry file doesn't exist",
        "Wrong file path"
      ],
      "solutions": [
        "Specify entry: parcel src/index.html",
        "Or parcel src/index.js for library",
        "Check file exists and path is correct"
      ]
    },
    {
      "id": "parcel_cache_issues",
      "pattern": "cache error|stale build|.parcel-cache",
      "severity": "warning",
      "causes": [
        "Corrupted cache",
        "Cache from older version",
        "Build artifacts stale"
      ],
      "solutions": [
        "Delete .parcel-cache folder",
        "Run: rm -rf .parcel-cache dist",
        "Use --no-cache flag for clean build"
      ]
    },
    {
      "id": "parcel_transformer_not_found",
      "pattern": "transformer not found|no transformer|unsupported file",
      "severity": "error",
      "causes": [
        "File type needs transformer plugin",
        "Plugin not installed",
        "Parcel config missing"
      ],
      "solutions": [
        "Install appropriate transformer",
        "Parcel auto-installs common plugins",
        "Check .parcelrc for custom transformers"
      ]
    },
    {
      "id": "parcel_scope_hoisting",
      "pattern": "scope hoisting|tree shaking|dead code",
      "severity": "warning",
      "causes": [
        "Scope hoisting disabled",
        "CommonJS modules can't be hoisted",
        "Side effects not marked"
      ],
      "solutions": [
        "Enabled by default in production",
        "Use ES modules for better tree shaking",
        "Mark sideEffects in package.json"
      ]
    },
    {
      "id": "parcel_hmr_failing",
      "pattern": "hmr error|hot reload|module replacement failed",
      "severity": "warning",
      "causes": [
        "HMR boundary issues",
        "Module can't accept updates",
        "State not preserved"
      ],
      "solutions": [
        "Refresh page if HMR fails",
        "React Fast Refresh included by default",
        "Check for circular dependencies"
      ]
    },
    {
      "id": "parcel_target_config",
      "pattern": "target not found|output format|browser vs node",
      "severity": "error",
      "causes": [
        "Target environment unclear",
        "Library vs application build",
        "Wrong output format"
      ],
      "solutions": [
        "Configure targets in package.json",
        "Set main/module/browser fields",
        "Use --target option: browser, node, etc"
      ]
    },
    {
      "id": "parcel_postcss",
      "pattern": "postcss error|css processing|autoprefixer",
      "severity": "error",
      "causes": [
        "PostCSS config issues",
        "Plugin not installed",
        "CSS syntax error"
      ],
      "solutions": [
        "Create .postcssrc or postcss.config.js",
        "Install plugins: npm i -D autoprefixer",
        "Parcel auto-includes postcss"
      ]
    },
    {
      "id": "parcel_v1_v2",
      "pattern": "parcel v1|upgrade parcel|breaking changes",
      "severity": "info",
      "causes": [
        "Migrating from Parcel 1 to 2",
        "Config file changes",
        "CLI differences"
      ],
      "solutions": [
        "Parcel 2 uses .parcelrc instead of package.json config",
        "Some plugins renamed",
        "Entry point must be explicit in v2"
      ]
    }
  ]
}
