{
  "tool": "volta",
  "category": "version_manager",
  "common_errors": [
    {
      "pattern": "No tool versions found",
      "cause": "No tools pinned in package.json or installed",
      "solutions": [
        "Pin Node: 'volta pin node@20'",
        "Install globally: 'volta install node@20'",
        "Add volta field to package.json"
      ]
    },
    {
      "pattern": "volta: command not found",
      "cause": "Volta not in PATH or not installed",
      "solutions": [
        "Run installer: curl https://get.volta.sh | bash",
        "Add to PATH: export VOLTA_HOME=\"$HOME/.volta\"",
        "Restart shell after installation"
      ]
    },
    {
      "pattern": "Could not download.*tool",
      "cause": "Network or availability issue",
      "solutions": [
        "Check internet connection",
        "Verify version exists: volta list all node",
        "Check VOLTA_FEATURE_PNPM for pnpm support"
      ]
    },
    {
      "pattern": "not a valid semver",
      "cause": "Invalid version specification",
      "solutions": [
        "Use valid version: 20, 20.0.0, latest",
        "Check available versions",
        "Remove invalid characters"
      ]
    },
    {
      "pattern": "Cannot find package.json",
      "cause": "Pin command run outside project",
      "solutions": [
        "Run volta pin in directory with package.json",
        "Use 'volta install' for global tools",
        "Create package.json first"
      ]
    },
    {
      "pattern": "tool.*is not available",
      "cause": "Tool not supported by Volta",
      "solutions": [
        "Check supported tools: node, npm, yarn, pnpm",
        "Enable experimental: VOLTA_FEATURE_PNPM=1",
        "Use asdf/mise for other tools"
      ]
    },
    {
      "pattern": "Cannot unpin.*not found",
      "cause": "Tool not pinned in project",
      "solutions": [
        "Check package.json volta field",
        "No action needed if not pinned",
        "Pin first before unpinning"
      ]
    },
    {
      "pattern": "VOLTA_HOME.*not set",
      "cause": "Volta home directory not configured",
      "solutions": [
        "Set VOLTA_HOME=$HOME/.volta",
        "Run Volta installer again",
        "Add to shell profile"
      ]
    },
    {
      "pattern": "shim.*could not find project",
      "cause": "Shim can't determine which version to use",
      "solutions": [
        "Pin version in project: 'volta pin node@20'",
        "Set default: 'volta install node@20'",
        "Check directory structure"
      ]
    },
    {
      "pattern": "permission denied.*install",
      "cause": "Can't write to Volta directories",
      "solutions": [
        "Fix permissions on ~/.volta",
        "Don't use sudo with Volta",
        "Check VOLTA_HOME is writable"
      ]
    }
  ]
}
