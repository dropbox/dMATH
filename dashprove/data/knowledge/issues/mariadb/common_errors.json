{
  "tool": "mariadb",
  "category": "database",
  "common_errors": [
    {
      "pattern": "Access denied for user",
      "meaning": "Authentication failed",
      "causes": ["Wrong password", "User doesn't exist", "Host not allowed"],
      "solutions": ["Verify password", "Create user", "GRANT with correct host"]
    },
    {
      "pattern": "Can't connect to.*server",
      "meaning": "Cannot establish connection",
      "causes": ["Server not running", "Wrong socket path", "Network issue"],
      "solutions": ["Start MariaDB", "Check socket: mysql --socket=/path", "Check port/firewall"]
    },
    {
      "pattern": "Table.*doesn't exist",
      "meaning": "Table not found",
      "causes": ["Table not created", "Wrong database", "Case sensitivity"],
      "solutions": ["Create table", "USE database", "Check lower_case_table_names"]
    },
    {
      "pattern": "Duplicate entry.*for key",
      "meaning": "Unique constraint violation",
      "causes": ["Duplicate value insert", "Race condition"],
      "solutions": ["Use INSERT IGNORE", "Use ON DUPLICATE KEY UPDATE", "Check existing data"]
    },
    {
      "pattern": "Lock wait timeout exceeded",
      "meaning": "Row lock wait timed out",
      "causes": ["Long transaction holding lock", "Deadlock", "Inefficient query"],
      "solutions": ["Increase innodb_lock_wait_timeout", "Kill blocking query", "Optimize queries"]
    },
    {
      "pattern": "Deadlock found",
      "meaning": "Circular lock dependency",
      "causes": ["Concurrent transactions locking in different order"],
      "solutions": ["Retry transaction", "Access tables consistently", "Use lower isolation"]
    },
    {
      "pattern": "Too many connections",
      "meaning": "Connection limit exceeded",
      "causes": ["max_connections reached", "Connection leak", "No pooling"],
      "solutions": ["Increase max_connections", "Use connection pooling", "Close idle connections"]
    },
    {
      "pattern": "Got a packet bigger than",
      "meaning": "Query or result too large",
      "causes": ["Large INSERT/LOAD DATA", "Big result set", "BLOB data"],
      "solutions": ["Increase max_allowed_packet", "Batch large operations", "Stream results"]
    },
    {
      "pattern": "Galera.*not ready",
      "meaning": "Galera cluster node not synchronized",
      "causes": ["Node joining cluster", "SST in progress", "Split brain"],
      "solutions": ["Wait for sync: wsrep_ready=ON", "Check wsrep_local_state", "Bootstrap cluster"]
    },
    {
      "pattern": "WSREP.*certification failure",
      "meaning": "Galera transaction conflict",
      "causes": ["Concurrent conflicting writes", "Hot spots", "Large transactions"],
      "solutions": ["Retry transaction", "Reduce transaction size", "Use consistent routing"]
    }
  ],
  "debugging_commands": [
    "SHOW PROCESSLIST;",
    "SHOW ENGINE INNODB STATUS;",
    "SHOW GLOBAL STATUS LIKE 'wsrep%';",
    "SHOW VARIABLES LIKE 'max_connections';"
  ],
  "documentation_urls": [
    "https://mariadb.com/kb/en/documentation/",
    "https://github.com/MariaDB/server"
  ]
}
