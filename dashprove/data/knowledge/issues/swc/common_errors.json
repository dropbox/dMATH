{
  "tool": "swc",
  "category": "compiler",
  "common_errors": [
    {
      "id": "swc_config_file",
      "pattern": ".swcrc not found|config missing|no configuration",
      "severity": "error",
      "causes": [
        "Missing .swcrc configuration file",
        "Running from wrong directory",
        "Config format incorrect"
      ],
      "solutions": [
        "Create .swcrc in project root",
        "Or pass config via --config-file",
        "Use swc init to generate config"
      ]
    },
    {
      "id": "swc_jsx_runtime",
      "pattern": "jsx runtime|React is not defined|pragma",
      "severity": "error",
      "causes": [
        "JSX transform not configured",
        "Wrong React runtime setting",
        "Missing React import"
      ],
      "solutions": [
        "Set jsc.transform.react.runtime: 'automatic'",
        "Or use 'classic' runtime with React import",
        "For automatic: ensure React 17+"
      ]
    },
    {
      "id": "swc_typescript_syntax",
      "pattern": "syntax error|unexpected token|typescript parse",
      "severity": "error",
      "causes": [
        "Parser not set for TypeScript",
        "Syntax feature not enabled",
        "File extension mismatch"
      ],
      "solutions": [
        "Set jsc.parser.syntax: 'typescript'",
        "Enable tsx: true for .tsx files",
        "Set decorators: true for decorators"
      ]
    },
    {
      "id": "swc_target_env",
      "pattern": "target environment|browser support|es5 output",
      "severity": "warning",
      "causes": [
        "Output target not specified",
        "Browser compatibility issues",
        "Need older JS syntax"
      ],
      "solutions": [
        "Set jsc.target: 'es2020' or older",
        "Or use env.targets for browserslist",
        "Configure env.coreJs for polyfills"
      ]
    },
    {
      "id": "swc_decorators",
      "pattern": "decorator error|experimentalDecorators|metadata",
      "severity": "error",
      "causes": [
        "Decorators not enabled",
        "Legacy vs standard decorators",
        "Metadata emit needed"
      ],
      "solutions": [
        "Enable jsc.parser.decorators: true",
        "Set jsc.transform.legacyDecorator: true for TypeScript decorators",
        "Enable emitDecoratorMetadata if needed"
      ]
    },
    {
      "id": "swc_sourcemap",
      "pattern": "sourcemap|source map missing|debug mapping",
      "severity": "warning",
      "causes": [
        "Source maps not enabled",
        "Output path issues",
        "Inline vs external maps"
      ],
      "solutions": [
        "Add sourceMaps: true to config",
        "Use --source-maps flag",
        "Set inlineSourcesContent: true for inline"
      ]
    },
    {
      "id": "swc_plugin_error",
      "pattern": "plugin failed|wasm plugin|plugin not found",
      "severity": "error",
      "causes": [
        "Plugin not installed",
        "Plugin version mismatch",
        "WASM plugin loading issue"
      ],
      "solutions": [
        "Install plugin: npm i -D @swc/plugin-*",
        "Match plugin version to SWC version",
        "Check plugin is in jsc.experimental.plugins"
      ]
    },
    {
      "id": "swc_path_alias",
      "pattern": "module not found|path alias|baseUrl",
      "severity": "error",
      "causes": [
        "Path aliases from tsconfig not applied",
        "SWC doesn't resolve paths by default",
        "Need runtime resolution"
      ],
      "solutions": [
        "SWC only transforms, doesn't resolve paths",
        "Use bundler for path resolution (webpack, etc)",
        "Or use tsc-alias/tsconfig-paths at runtime"
      ]
    }
  ]
}
