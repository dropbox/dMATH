{
  "tool": "lsmem",
  "category": "system_info",
  "common_errors": [
    {
      "error_pattern": "cannot access.*memory_block",
      "cause": "/sys/devices/system/memory not accessible",
      "solution": "Mount sysfs. Feature requires CONFIG_MEMORY_HOTPLUG in kernel.",
      "severity": "error"
    },
    {
      "error_pattern": "Permission denied",
      "cause": "Cannot read memory information",
      "solution": "Use sudo. Check sysfs permissions.",
      "severity": "error"
    },
    {
      "error_pattern": "invalid option",
      "cause": "Unknown command-line flag",
      "solution": "Check lsmem --help. Common: -b (bytes), -a (all), -o (columns)",
      "severity": "error"
    },
    {
      "error_pattern": "not supported",
      "cause": "Kernel doesn't support memory hotplug interface",
      "solution": "Feature requires CONFIG_MEMORY_HOTPLUG kernel config. Use free -h instead.",
      "severity": "error"
    },
    {
      "error_pattern": "unknown column",
      "cause": "Requested column doesn't exist",
      "solution": "List columns: lsmem --help. Common: RANGE, SIZE, STATE, ZONES, NODE",
      "severity": "error"
    },
    {
      "error_pattern": "cannot determine.*block size",
      "cause": "Memory block size not available",
      "solution": "Check /sys/devices/system/memory/block_size_bytes exists.",
      "severity": "error"
    },
    {
      "error_pattern": "no memory ranges",
      "cause": "No memory blocks found (unusual)",
      "solution": "Verify sysfs mounted. May indicate kernel issue.",
      "severity": "error"
    },
    {
      "error_pattern": "offline",
      "cause": "Some memory blocks are offline",
      "solution": "Not an error - shows memory hotplug state. Online with: echo online > /sys/devices/system/memory/memoryN/state",
      "severity": "info"
    },
    {
      "error_pattern": "failed to read",
      "cause": "Cannot read memory block properties",
      "solution": "Check permissions on /sys/devices/system/memory/. May need root.",
      "severity": "error"
    },
    {
      "error_pattern": "unsupported output format",
      "cause": "Invalid output format specified",
      "solution": "Use valid format: lsmem --output-all or specific column names.",
      "severity": "error"
    }
  ]
}
