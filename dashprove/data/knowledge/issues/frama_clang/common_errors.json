{
  "tool": "frama_clang",
  "version": "0.0.15",
  "last_updated": "2025-12-23",
  "errors": [
    {
      "id": "parsing_failed",
      "pattern": "parsing failed|syntax error",
      "message": "C++ parsing failed",
      "cause": "Frama-Clang couldn't parse C++ source",
      "solutions": [
        {
          "approach": "Check syntax",
          "code": "clang++ -fsyntax-only program.cpp",
          "when": "Code has syntax errors"
        },
        {
          "approach": "Use compatible standard",
          "code": "frama-clang -cxx-std=c++14 program.cpp",
          "when": "Using newer C++ features"
        },
        {
          "approach": "Add includes",
          "code": "frama-clang -I/path/to/headers program.cpp",
          "when": "Missing header files"
        }
      ]
    },
    {
      "id": "unsupported_feature",
      "pattern": "unsupported|not implemented",
      "message": "Unsupported C++ feature",
      "cause": "Feature not yet supported by Frama-Clang",
      "solutions": [
        {
          "approach": "Use simpler construct",
          "code": "// Replace with C++11 equivalent",
          "when": "Modern C++ feature"
        },
        {
          "approach": "Abstract feature",
          "code": "// Use extern declaration instead",
          "when": "Can stub the feature"
        },
        {
          "approach": "Check roadmap",
          "code": "# See frama-c.com/frama-clang for status",
          "when": "Feature may be coming"
        }
      ]
    },
    {
      "id": "template_error",
      "pattern": "template.*error|instantiation.*failed",
      "message": "Template instantiation error",
      "cause": "Complex template couldn't be translated",
      "solutions": [
        {
          "approach": "Explicit instantiation",
          "code": "template class MyClass<int>;",
          "when": "Implicit instantiation failing"
        },
        {
          "approach": "Simplify templates",
          "code": "// Reduce template complexity",
          "when": "Complex metaprogramming"
        },
        {
          "approach": "Use concrete types",
          "code": "// Replace template with concrete implementation",
          "when": "Can avoid templates"
        }
      ]
    },
    {
      "id": "acsl_error",
      "pattern": "ACSL.*error|annotation.*invalid",
      "message": "Invalid ACSL++ annotation",
      "cause": "ACSL specification syntax error",
      "solutions": [
        {
          "approach": "Check syntax",
          "code": "/*@ requires condition; */",
          "when": "Wrong annotation syntax"
        },
        {
          "approach": "Use valid predicates",
          "code": "/*@ \\valid(ptr) */",
          "when": "Invalid predicate"
        },
        {
          "approach": "Check scope",
          "code": "// Ensure variables in scope",
          "when": "Undefined identifier"
        }
      ]
    },
    {
      "id": "stdlib_missing",
      "pattern": "stdlib.*not found|standard library",
      "message": "C++ standard library issue",
      "cause": "STL components not available",
      "solutions": [
        {
          "approach": "Include stubs",
          "code": "frama-clang -frama-c-stdlib program.cpp",
          "when": "Using Frama-C stdlib"
        },
        {
          "approach": "Model STL",
          "code": "// Provide STL stub implementations",
          "when": "Need STL containers"
        },
        {
          "approach": "Avoid STL",
          "code": "// Use plain arrays/structs instead",
          "when": "Can avoid STL"
        }
      ]
    },
    {
      "id": "class_translation",
      "pattern": "class.*translation.*failed",
      "message": "Class translation error",
      "cause": "C++ class couldn't be translated to Frama-C AST",
      "solutions": [
        {
          "approach": "Simplify class",
          "code": "// Remove virtual functions if possible",
          "when": "Complex inheritance"
        },
        {
          "approach": "Use C-style",
          "code": "// Convert to struct with functions",
          "when": "Can restructure"
        },
        {
          "approach": "Check limitations",
          "code": "# See Frama-Clang documentation",
          "when": "Hit known limitation"
        }
      ]
    },
    {
      "id": "exception_unsupported",
      "pattern": "exception.*unsupported|try.*catch",
      "message": "Exception handling not supported",
      "cause": "Frama-Clang doesn't handle C++ exceptions",
      "solutions": [
        {
          "approach": "Use error codes",
          "code": "int func(); if (func() < 0) { /* error */ }",
          "when": "Can refactor to return codes"
        },
        {
          "approach": "Use noexcept",
          "code": "void func() noexcept;",
          "when": "Function doesn't throw"
        },
        {
          "approach": "Abstract exceptions",
          "code": "// Stub throwing functions",
          "when": "Need to model throws"
        }
      ]
    }
  ]
}
