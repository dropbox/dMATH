{
  "tool": "tfenv",
  "category": "version_manager",
  "common_errors": [
    {
      "pattern": "tfenv: command not found",
      "cause": "tfenv not in PATH",
      "solutions": [
        "Add to PATH: export PATH=\"$HOME/.tfenv/bin:$PATH\"",
        "Verify installation location",
        "Restart shell after installation"
      ]
    },
    {
      "pattern": "No .terraform-version file found",
      "cause": "No version specified in directory tree",
      "solutions": [
        "Create .terraform-version: echo '1.6.0' > .terraform-version",
        "Set version: tfenv use <version>",
        "Pin version: tfenv pin"
      ]
    },
    {
      "pattern": "version.*not installed",
      "cause": "Terraform version not installed",
      "solutions": [
        "Install: 'tfenv install <version>'",
        "Install from .terraform-version: 'tfenv install'",
        "List installed: 'tfenv list'"
      ]
    },
    {
      "pattern": "No versions available",
      "cause": "Cannot fetch version list from HashiCorp",
      "solutions": [
        "Check internet connection",
        "Update tfenv: git pull in ~/.tfenv",
        "Check releases.hashicorp.com is accessible"
      ]
    },
    {
      "pattern": "Checksum validation failed",
      "cause": "Downloaded binary corrupted or tampered",
      "solutions": [
        "Retry installation",
        "Check network for MITM issues",
        "Verify SHA256 manually if needed"
      ]
    },
    {
      "pattern": "version.*is not a valid semver",
      "cause": "Invalid version format",
      "solutions": [
        "Use format: 1.6.0 or latest",
        "Check available versions: tfenv list-remote",
        "Remove 'v' prefix if present"
      ]
    },
    {
      "pattern": "already installed",
      "cause": "Version is already present",
      "solutions": [
        "Use 'tfenv use <version>' to switch",
        "Force reinstall: rm version then install",
        "No action needed if already installed"
      ]
    },
    {
      "pattern": "TFENV_ARCH.*not supported",
      "cause": "System architecture not supported",
      "solutions": [
        "Check supported architectures: amd64, arm64",
        "Set TFENV_ARCH manually if auto-detect fails",
        "Build from source for exotic architectures"
      ]
    },
    {
      "pattern": "terraform.*could not find",
      "cause": "tfenv shim not finding terraform binary",
      "solutions": [
        "Ensure tfenv bin is first in PATH",
        "Run tfenv install to install version",
        "Check ~/.tfenv/versions/ has binaries"
      ]
    },
    {
      "pattern": "TFENV_ROOT.*not set",
      "cause": "tfenv root directory not configured",
      "solutions": [
        "Set TFENV_ROOT: export TFENV_ROOT=\"$HOME/.tfenv\"",
        "Use default: ~/.tfenv",
        "Verify directory exists"
      ]
    }
  ]
}
