{
  "tool": "zellij",
  "version": "0.40",
  "last_updated": "2025-12-23",
  "errors": [
    {
      "id": "session_not_found",
      "pattern": "Session.*not found|No active sessions|session doesn't exist",
      "message": "Session not found",
      "cause": "Session name wrong or no sessions running",
      "solutions": [
        {
          "approach": "List sessions",
          "code": "zellij list-sessions\nzellij ls",
          "when": "Find sessions"
        },
        {
          "approach": "Attach any",
          "code": "zellij attach  # Attaches to first available",
          "when": "Default attach"
        },
        {
          "approach": "Create if missing",
          "code": "zellij attach myname --create",
          "when": "Attach or create"
        }
      ]
    },
    {
      "id": "already_inside",
      "pattern": "already inside|ZELLIJ.*set|nested.*session",
      "message": "Already inside Zellij",
      "cause": "Trying to start Zellij inside Zellij",
      "solutions": [
        {
          "approach": "New tab",
          "code": "# Ctrl-t (or configured keybind)\n# Creates new tab instead",
          "when": "Add tab"
        },
        {
          "approach": "New pane",
          "code": "# Ctrl-p n (new pane)\n# Or: Ctrl-p d (pane down)",
          "when": "Split pane"
        },
        {
          "approach": "Detach first",
          "code": "# Ctrl-o d to detach\n# Then start new session",
          "when": "Separate session"
        }
      ]
    },
    {
      "id": "config_error",
      "pattern": "config.*error|Failed to parse|invalid configuration|kdl.*error",
      "message": "Configuration file error",
      "cause": "Invalid KDL syntax in config.kdl",
      "solutions": [
        {
          "approach": "Validate config",
          "code": "zellij setup --check",
          "when": "Check configuration"
        },
        {
          "approach": "Reset config",
          "code": "mv ~/.config/zellij/config.kdl ~/.config/zellij/config.kdl.bak\nzellij setup --dump-config > ~/.config/zellij/config.kdl",
          "when": "Fresh config"
        },
        {
          "approach": "KDL syntax",
          "code": "# KDL format:\nkeybinds {\n    normal {\n        bind \"Ctrl t\" { NewTab; }\n    }\n}",
          "when": "Fix syntax"
        }
      ]
    },
    {
      "id": "layout_error",
      "pattern": "layout.*not found|Failed to load layout|invalid layout",
      "message": "Layout file error",
      "cause": "Layout file missing or invalid",
      "solutions": [
        {
          "approach": "List layouts",
          "code": "ls ~/.config/zellij/layouts/\nzellij --layout default",
          "when": "Find layouts"
        },
        {
          "approach": "Dump default",
          "code": "zellij setup --dump-layout default > ~/.config/zellij/layouts/custom.kdl",
          "when": "Create layout"
        },
        {
          "approach": "Built-in layouts",
          "code": "zellij --layout compact\nzellij --layout strider\nzellij --layout default",
          "when": "Use built-in"
        }
      ]
    },
    {
      "id": "plugin_error",
      "pattern": "plugin.*error|Failed to load plugin|wasm.*error",
      "message": "Plugin loading error",
      "cause": "Plugin WASM file missing or incompatible",
      "solutions": [
        {
          "approach": "Check plugins",
          "code": "ls ~/.config/zellij/plugins/\n# Built-in: tab-bar, status-bar, strider, compact-bar",
          "when": "Verify plugins"
        },
        {
          "approach": "Reset plugins",
          "code": "rm -rf ~/.config/zellij/plugins/\n# Zellij will recreate defaults",
          "when": "Fresh plugins"
        },
        {
          "approach": "Disable plugin",
          "code": "# In layout, remove plugin section\n# Or use --layout compact",
          "when": "Bypass plugin"
        }
      ]
    },
    {
      "id": "terminal_rendering",
      "pattern": "rendering.*issue|display.*broken|unicode|font.*missing",
      "message": "Terminal rendering issues",
      "cause": "Font or terminal emulator compatibility",
      "solutions": [
        {
          "approach": "Nerd font",
          "code": "# Install Nerd Font (has powerline glyphs)\n# https://www.nerdfonts.com/",
          "when": "Missing glyphs"
        },
        {
          "approach": "Simplified UI",
          "code": "zellij options --simplified-ui true",
          "when": "Reduce special chars"
        },
        {
          "approach": "Set theme",
          "code": "zellij options --theme default\n# Or in config.kdl:\ntheme \"nord\"",
          "when": "Color issues"
        }
      ]
    }
  ]
}
