{
  "tool": "pyenv",
  "category": "version_manager",
  "common_errors": [
    {
      "pattern": "pyenv: command not found",
      "cause": "pyenv not initialized in shell",
      "solutions": [
        "Add to profile: export PYENV_ROOT=\"$HOME/.pyenv\"",
        "Add to PATH: export PATH=\"$PYENV_ROOT/bin:$PATH\"",
        "Init: eval \"$(pyenv init -)\""
      ]
    },
    {
      "pattern": "pyenv: no such command",
      "cause": "Invalid pyenv subcommand",
      "solutions": [
        "Check spelling of command",
        "Run 'pyenv commands' to list available",
        "Install pyenv-virtualenv for virtualenv commands"
      ]
    },
    {
      "pattern": "python-build:.*BUILD FAILED",
      "cause": "Missing build dependencies",
      "solutions": [
        "Install build deps (macOS): brew install openssl readline sqlite3 xz zlib",
        "Install build deps (Ubuntu): apt-get install build-essential libssl-dev",
        "Check pyenv wiki for OS-specific deps"
      ]
    },
    {
      "pattern": "version.*not installed",
      "cause": "Python version not installed via pyenv",
      "solutions": [
        "Install: 'pyenv install <version>'",
        "List available: 'pyenv install --list'",
        "Set local: 'pyenv local <version>'"
      ]
    },
    {
      "pattern": "No.*found in pyenv",
      "cause": "No Python version set or global not set",
      "solutions": [
        "Set global: 'pyenv global 3.12.0'",
        "Set local: 'pyenv local 3.12.0'",
        "Create .python-version file"
      ]
    },
    {
      "pattern": "configure:.*openssl.*not found",
      "cause": "OpenSSL development files missing",
      "solutions": [
        "macOS: brew install openssl && export LDFLAGS=\"-L/usr/local/opt/openssl/lib\"",
        "Ubuntu: apt-get install libssl-dev",
        "Set PYTHON_CONFIGURE_OPTS"
      ]
    },
    {
      "pattern": "SSL module is not available",
      "cause": "Python built without SSL support",
      "solutions": [
        "Install OpenSSL dev files before building",
        "Reinstall Python version with SSL",
        "Check CONFIGURE_OPTS includes ssl path"
      ]
    },
    {
      "pattern": "pyenv:.*shims.*not in PATH",
      "cause": "Shims directory not in PATH",
      "solutions": [
        "Add to PATH: $(pyenv root)/shims",
        "Run 'pyenv init' and follow instructions",
        "Check shell profile has pyenv init"
      ]
    },
    {
      "pattern": "zlib not available",
      "cause": "zlib development files missing",
      "solutions": [
        "macOS: brew install zlib",
        "Ubuntu: apt-get install zlib1g-dev",
        "Set LDFLAGS and CPPFLAGS for zlib"
      ]
    },
    {
      "pattern": "pyenv: python.*is a system python",
      "cause": "System Python shadowing pyenv",
      "solutions": [
        "Ensure pyenv shims are first in PATH",
        "Check 'pyenv which python'",
        "Reinstall pyenv init in profile"
      ]
    }
  ]
}
