{
  "tool": "yapf",
  "version": "0.40+",
  "last_updated": "2025-12-23",
  "errors": [
    {
      "id": "cannot_parse",
      "pattern": "Cannot parse|SyntaxError|parsing error",
      "message": "Cannot parse Python file",
      "cause": "File has syntax errors",
      "solutions": [
        {
          "approach": "Fix syntax first",
          "code": "python -m py_compile file.py",
          "when": "Check for errors"
        },
        {
          "approach": "Check Python version",
          "code": "yapf --python-version=3.11 file.py",
          "when": "Using newer syntax"
        }
      ]
    },
    {
      "id": "config_not_found",
      "pattern": "style.*not found|configuration.*missing",
      "message": "Configuration not found",
      "cause": "No .style.yapf or setup.cfg with yapf section",
      "solutions": [
        {
          "approach": "Create .style.yapf",
          "code": "[style]\nbased_on_style = pep8\ncolumn_limit = 100",
          "when": "Need custom config"
        },
        {
          "approach": "Use pyproject.toml",
          "code": "[tool.yapf]\nbased_on_style = \"pep8\"",
          "when": "Prefer pyproject.toml"
        },
        {
          "approach": "Specify style on CLI",
          "code": "yapf --style=google file.py",
          "when": "Use predefined style"
        }
      ]
    },
    {
      "id": "style_conflict",
      "pattern": "conflicting.*style|invalid.*combination",
      "message": "Style settings conflict",
      "cause": "Incompatible style options",
      "solutions": [
        {
          "approach": "Use base style",
          "code": "based_on_style = pep8",
          "when": "Start from known style"
        },
        {
          "approach": "Remove conflicting options",
          "code": "# Remove options that conflict",
          "when": "Custom options clash"
        }
      ]
    },
    {
      "id": "line_too_long",
      "pattern": "line.*long|column_limit|cannot split",
      "message": "Line cannot fit column limit",
      "cause": "Expression cannot be split",
      "solutions": [
        {
          "approach": "Increase column limit",
          "code": "column_limit = 120",
          "when": "Wider lines OK"
        },
        {
          "approach": "Disable for line",
          "code": "# yapf: disable\nlong_line\n# yapf: enable",
          "when": "One-off exception"
        },
        {
          "approach": "Refactor code",
          "code": "# Break into smaller expressions",
          "when": "Code too complex"
        }
      ]
    },
    {
      "id": "diff_failed",
      "pattern": "would reformat|differs|check failed",
      "message": "Format check failed",
      "cause": "Files not formatted",
      "solutions": [
        {
          "approach": "Format files",
          "code": "yapf -i file.py",
          "when": "Apply formatting"
        },
        {
          "approach": "Format directory",
          "code": "yapf -ri .",
          "when": "Format all files"
        },
        {
          "approach": "Show diff",
          "code": "yapf -d file.py",
          "when": "Preview changes"
        }
      ]
    },
    {
      "id": "encoding_error",
      "pattern": "UnicodeDecodeError|encoding|codec",
      "message": "File encoding error",
      "cause": "File not UTF-8",
      "solutions": [
        {
          "approach": "Add encoding declaration",
          "code": "# -*- coding: utf-8 -*-",
          "when": "Non-ASCII chars"
        },
        {
          "approach": "Convert file",
          "code": "iconv -f ISO-8859-1 -t UTF-8 file.py > file_utf8.py",
          "when": "Wrong encoding"
        }
      ]
    },
    {
      "id": "exclude_pattern",
      "pattern": "exclude.*not working|file.*formatted",
      "message": "Exclude pattern not working",
      "cause": "Exclude patterns not matching",
      "solutions": [
        {
          "approach": "Use --exclude",
          "code": "yapf -ri --exclude='**/migrations/*' .",
          "when": "CLI exclusion"
        },
        {
          "approach": "Add to config",
          "code": "[yapf]\nexclude =\n    migrations/\n    build/",
          "when": "Config exclusion"
        }
      ]
    },
    {
      "id": "parallel_error",
      "pattern": "parallel.*error|multiprocessing",
      "message": "Parallel formatting error",
      "cause": "Issue with parallel processing",
      "solutions": [
        {
          "approach": "Disable parallel",
          "code": "yapf --parallel=1 file.py",
          "when": "Single-threaded"
        },
        {
          "approach": "Limit workers",
          "code": "yapf --parallel=4 .",
          "when": "Reduce parallelism"
        }
      ]
    },
    {
      "id": "indent_issue",
      "pattern": "indent.*wrong|continuation.*indent",
      "message": "Indentation style issue",
      "cause": "Continuation indent differs from preference",
      "solutions": [
        {
          "approach": "Set continuation indent",
          "code": "continuation_indent_width = 4",
          "when": "Match base indent"
        },
        {
          "approach": "Set indent width",
          "code": "indent_width = 4",
          "when": "Base indent"
        }
      ]
    },
    {
      "id": "blank_lines",
      "pattern": "blank.*lines|blank_lines_around|spacing",
      "message": "Blank line handling unexpected",
      "cause": "Blank line settings differ",
      "solutions": [
        {
          "approach": "Set blank lines around top level",
          "code": "blank_lines_around_top_level_definition = 2",
          "when": "PEP 8 style"
        },
        {
          "approach": "Set blank lines between logic",
          "code": "blank_line_before_nested_class_or_def = true",
          "when": "Separate nested defs"
        }
      ]
    }
  ]
}
