{
  "tool": "sveltekit",
  "category": "framework",
  "common_errors": [
    {
      "id": "sveltekit_load_function",
      "pattern": "load function|+page.server|data not loading",
      "severity": "error",
      "causes": [
        "Load function in wrong file",
        "Not returning data",
        "Async issues"
      ],
      "solutions": [
        "Server-only: +page.server.ts exports load",
        "Universal: +page.ts exports load",
        "Must return object: return { data }"
      ]
    },
    {
      "id": "sveltekit_routing",
      "pattern": "route not found|404|dynamic route",
      "severity": "error",
      "causes": [
        "File not in routes folder",
        "Wrong file naming",
        "Parameter syntax wrong"
      ],
      "solutions": [
        "Files in src/routes/",
        "Dynamic: [param]/+page.svelte",
        "Optional: [[param]]/+page.svelte"
      ]
    },
    {
      "id": "sveltekit_form_actions",
      "pattern": "form action|+page.server.ts|POST not working",
      "severity": "error",
      "causes": [
        "Actions not exported",
        "Form method wrong",
        "Action name mismatch"
      ],
      "solutions": [
        "Export actions from +page.server.ts",
        "Use <form method='POST'>",
        "Named action: action='?/actionName'"
      ]
    },
    {
      "id": "sveltekit_adapter",
      "pattern": "adapter error|build fails|deploy issue",
      "severity": "error",
      "causes": [
        "Wrong adapter for platform",
        "Adapter not installed",
        "Config missing"
      ],
      "solutions": [
        "Install: npm i -D @sveltejs/adapter-*",
        "Configure in svelte.config.js",
        "node, vercel, netlify, static, cloudflare"
      ]
    },
    {
      "id": "sveltekit_ssr_error",
      "pattern": "window undefined|document undefined|ssr error",
      "severity": "error",
      "causes": [
        "Browser API called during SSR",
        "Component not SSR-safe",
        "Import causing issues"
      ],
      "solutions": [
        "Use browser check: import { browser } from '$app/environment'",
        "Or onMount() for browser code",
        "Dynamic import: if (browser) await import('lib')"
      ]
    },
    {
      "id": "sveltekit_hooks",
      "pattern": "hooks.server|handle function|authentication",
      "severity": "info",
      "causes": [
        "Need middleware functionality",
        "Auth checking",
        "Request modification"
      ],
      "solutions": [
        "Create src/hooks.server.ts",
        "Export handle function",
        "Modify event.locals for auth data"
      ]
    },
    {
      "id": "sveltekit_prerender",
      "pattern": "prerender error|static generation|prerender=true",
      "severity": "warning",
      "causes": [
        "Dynamic content in prerendered page",
        "Missing entries for dynamic routes",
        "Server-only code in prerender"
      ],
      "solutions": [
        "Export const prerender = true in +page.ts",
        "Use entries() for dynamic routes",
        "Avoid server-only features in prerendered pages"
      ]
    }
  ]
}
