{
  "tool": "rspack",
  "category": "bundler",
  "common_errors": [
    {
      "id": "rspack_webpack_compat",
      "pattern": "webpack plugin|webpack loader|not compatible",
      "severity": "warning",
      "causes": [
        "Not all webpack plugins work with Rspack",
        "Some loaders need Rspack equivalents",
        "API differences from webpack"
      ],
      "solutions": [
        "Check Rspack docs for compatible plugins",
        "Use builtin loaders: builtin:swc-loader",
        "Some plugins have Rspack ports"
      ]
    },
    {
      "id": "rspack_config_migration",
      "pattern": "migrate from webpack|config conversion|rspack.config",
      "severity": "info",
      "causes": [
        "Migrating existing webpack project",
        "Config file differences",
        "Need to update configuration"
      ],
      "solutions": [
        "Rename webpack.config.js to rspack.config.js",
        "Replace require('webpack') with require('@rspack/core')",
        "Use @rspack/cli instead of webpack-cli"
      ]
    },
    {
      "id": "rspack_swc_loader",
      "pattern": "swc error|builtin:swc-loader|transform failed",
      "severity": "error",
      "causes": [
        "SWC configuration issues",
        "TypeScript/JSX settings wrong",
        "Syntax not supported"
      ],
      "solutions": [
        "Configure swc options in builtin:swc-loader",
        "Set jsc.parser.syntax: 'typescript' or 'ecmascript'",
        "Enable jsx: true for React projects"
      ]
    },
    {
      "id": "rspack_css_extraction",
      "pattern": "css not extracted|styles inline|mini-css-extract",
      "severity": "warning",
      "causes": [
        "CSS extraction not configured",
        "Using MiniCssExtractPlugin incorrectly",
        "Development vs production config"
      ],
      "solutions": [
        "Use experiments.css: true for native CSS support",
        "Or use rspack.CssExtractPlugin",
        "Check mode: 'production' for extraction"
      ]
    },
    {
      "id": "rspack_sourcemap",
      "pattern": "sourcemap missing|source map error|debugging fails",
      "severity": "warning",
      "causes": [
        "Source maps not configured",
        "Wrong devtool setting",
        "Production stripping sourcemaps"
      ],
      "solutions": [
        "Set devtool: 'source-map' in config",
        "Use 'cheap-source-map' for faster builds",
        "Check if browser devtools enabled"
      ]
    },
    {
      "id": "rspack_module_federation",
      "pattern": "module federation|micro frontend|shared modules",
      "severity": "info",
      "causes": [
        "Setting up micro frontends",
        "Module sharing between apps",
        "Version conflicts"
      ],
      "solutions": [
        "Use rspack.container.ModuleFederationPlugin",
        "Configure shared dependencies carefully",
        "Match module federation versions across apps"
      ]
    },
    {
      "id": "rspack_resolve_alias",
      "pattern": "module not found|alias not working|path resolve",
      "severity": "error",
      "causes": [
        "Path aliases not configured",
        "TypeScript paths not synced",
        "Resolve configuration missing"
      ],
      "solutions": [
        "Set resolve.alias in rspack.config.js",
        "Sync with tsconfig.json paths",
        "Use resolve.extensions for file types"
      ]
    }
  ]
}
