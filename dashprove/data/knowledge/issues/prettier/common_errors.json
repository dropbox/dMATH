{
  "tool": "prettier",
  "version": "3.0+",
  "last_updated": "2025-12-23",
  "errors": [
    {
      "id": "config_not_found",
      "pattern": "no config found|configuration.*not found|could not resolve config",
      "message": "Prettier configuration not found",
      "cause": "No .prettierrc or config in package.json",
      "solutions": [
        {
          "approach": "Create config file",
          "code": "echo '{\"semi\": true, \"singleQuote\": true}' > .prettierrc",
          "when": "Need custom config"
        },
        {
          "approach": "Add to package.json",
          "code": "\"prettier\": { \"semi\": true, \"singleQuote\": true }",
          "when": "Prefer package.json config"
        },
        {
          "approach": "Use defaults",
          "code": "prettier --write .",
          "when": "Defaults are fine"
        }
      ]
    },
    {
      "id": "parser_error",
      "pattern": "Parsing error|Unexpected token|Cannot parse",
      "message": "File parsing failed",
      "cause": "Syntax error in source file or wrong parser",
      "solutions": [
        {
          "approach": "Fix syntax first",
          "code": "// Fix the syntax error in your code",
          "when": "Code has errors"
        },
        {
          "approach": "Specify parser",
          "code": "prettier --parser babel file.js",
          "when": "Wrong parser auto-detected"
        },
        {
          "approach": "Configure overrides",
          "code": "{ \"overrides\": [{ \"files\": \"*.js\", \"options\": { \"parser\": \"babel\" } }] }",
          "when": "Specific extension needs different parser"
        }
      ]
    },
    {
      "id": "plugin_not_found",
      "pattern": "plugin.*not found|Cannot find plugin|could not resolve.*plugin",
      "message": "Prettier plugin not installed",
      "cause": "Plugin referenced in config but not installed",
      "solutions": [
        {
          "approach": "Install plugin",
          "code": "npm install prettier-plugin-tailwindcss",
          "when": "Plugin not installed"
        },
        {
          "approach": "Remove plugin from config",
          "code": "// Remove from .prettierrc if not needed",
          "when": "Plugin not required"
        },
        {
          "approach": "Check plugin name",
          "code": "\"plugins\": [\"prettier-plugin-xyz\"]",
          "when": "Wrong plugin name"
        }
      ]
    },
    {
      "id": "ignore_not_working",
      "pattern": "ignored file.*formatted|prettierignore.*not working",
      "message": "Files not being ignored",
      "cause": ".prettierignore not read or wrong patterns",
      "solutions": [
        {
          "approach": "Create .prettierignore",
          "code": "echo 'node_modules\nbuild\ndist' > .prettierignore",
          "when": "No ignore file"
        },
        {
          "approach": "Use correct patterns",
          "code": "# .prettierignore uses gitignore syntax\n*.min.js\ncoverage/",
          "when": "Wrong pattern syntax"
        },
        {
          "approach": "Use --ignore-path",
          "code": "prettier --ignore-path .gitignore --write .",
          "when": "Use existing gitignore"
        }
      ]
    },
    {
      "id": "conflicting_rules",
      "pattern": "conflict.*eslint|rule.*conflict|formatting conflict",
      "message": "Prettier conflicts with ESLint",
      "cause": "ESLint formatting rules conflict with Prettier",
      "solutions": [
        {
          "approach": "Use eslint-config-prettier",
          "code": "npm install eslint-config-prettier\n// Add \"prettier\" to extends array last",
          "when": "Need to disable conflicting rules"
        },
        {
          "approach": "Use eslint-plugin-prettier",
          "code": "npm install eslint-plugin-prettier\n// \"plugins\": [\"prettier\"]",
          "when": "Run Prettier as ESLint rule"
        },
        {
          "approach": "Separate concerns",
          "code": "// Let ESLint handle logic, Prettier handle formatting",
          "when": "Prefer separation"
        }
      ]
    },
    {
      "id": "ci_check_failed",
      "pattern": "check failed|would reformat|formatting issues found",
      "message": "Prettier check failed in CI",
      "cause": "Files not formatted according to Prettier rules",
      "solutions": [
        {
          "approach": "Format all files",
          "code": "prettier --write .",
          "when": "Format and commit"
        },
        {
          "approach": "Add pre-commit hook",
          "code": "npx husky add .husky/pre-commit \"npx prettier --check .\"",
          "when": "Prevent unformatted commits"
        },
        {
          "approach": "Use lint-staged",
          "code": "\"lint-staged\": { \"*.{js,ts,json}\": \"prettier --write\" }",
          "when": "Format only staged files"
        }
      ]
    },
    {
      "id": "encoding_error",
      "pattern": "encoding.*error|invalid character|UTF-8.*error",
      "message": "File encoding error",
      "cause": "File not UTF-8 encoded",
      "solutions": [
        {
          "approach": "Convert to UTF-8",
          "code": "iconv -f ISO-8859-1 -t UTF-8 file.js > file_utf8.js",
          "when": "Wrong encoding"
        },
        {
          "approach": "Skip binary files",
          "code": "// Add binary extensions to .prettierignore",
          "when": "Binary file processed"
        }
      ]
    },
    {
      "id": "range_error",
      "pattern": "range.*error|rangeStart.*invalid|rangeEnd",
      "message": "Range formatting error",
      "cause": "Invalid range specified for partial formatting",
      "solutions": [
        {
          "approach": "Remove range options",
          "code": "prettier --write file.js  # Without range",
          "when": "Full file format OK"
        },
        {
          "approach": "Fix range values",
          "code": "prettier --range-start 0 --range-end 100 file.js",
          "when": "Need specific range"
        }
      ]
    },
    {
      "id": "stdin_error",
      "pattern": "stdin.*error|--stdin-filepath.*required",
      "message": "Stdin processing error",
      "cause": "Missing filepath hint for stdin",
      "solutions": [
        {
          "approach": "Add stdin-filepath",
          "code": "echo 'code' | prettier --stdin-filepath file.js",
          "when": "Reading from stdin"
        },
        {
          "approach": "Add parser explicitly",
          "code": "echo 'code' | prettier --parser babel",
          "when": "Parser can't be inferred"
        }
      ]
    },
    {
      "id": "editorconfig_conflict",
      "pattern": "editorconfig.*conflict|inconsistent.*editorconfig",
      "message": "EditorConfig conflicts with Prettier",
      "cause": "EditorConfig settings differ from Prettier config",
      "solutions": [
        {
          "approach": "Align configurations",
          "code": "# .editorconfig should match .prettierrc",
          "when": "Settings should match"
        },
        {
          "approach": "Disable editorconfig",
          "code": "prettier --no-editorconfig --write .",
          "when": "Ignore editorconfig"
        },
        {
          "approach": "Prettier takes precedence",
          "code": "// Prettier overrides editorconfig by default",
          "when": "Prioritize Prettier"
        }
      ]
    }
  ]
}
