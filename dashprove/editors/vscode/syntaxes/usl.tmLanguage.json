{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "USL",
  "scopeName": "source.usl",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#quantifiers" },
    { "include": "#types" },
    { "include": "#properties" },
    { "include": "#operators" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#punctuation" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.usl",
          "match": "//.*$"
        },
        {
          "name": "comment.block.usl",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.usl",
          "match": "\\b(if|then|else|match|case|with|let|in|where)\\b"
        },
        {
          "name": "keyword.declaration.usl",
          "match": "\\b(type|theorem|temporal|contract|invariant|refinement|axiom)\\b"
        },
        {
          "name": "keyword.contract.usl",
          "match": "\\b(requires|ensures|ensures_err|modifies)\\b"
        },
        {
          "name": "keyword.proof.usl",
          "match": "\\b(proof|qed|by|induction|cases|contradiction|trivial|auto)\\b"
        },
        {
          "name": "keyword.temporal.usl",
          "match": "\\b(always|eventually|until|next|leads_to|weak_until|release)\\b"
        },
        {
          "name": "keyword.refinement.usl",
          "match": "\\b(refines|abstraction|simulation|representation)\\b"
        },
        {
          "name": "constant.language.boolean.usl",
          "match": "\\b(true|false)\\b"
        }
      ]
    },
    "quantifiers": {
      "patterns": [
        {
          "name": "keyword.quantifier.usl",
          "match": "\\b(forall|exists|unique)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.builtin.usl",
          "match": "\\b(Int|Bool|String|Real|Nat|Unit|Option|Result|List|Set|Map|Relation|Trace)\\b"
        },
        {
          "name": "storage.type.user.usl",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "properties": {
      "patterns": [
        {
          "name": "entity.name.function.property.usl",
          "match": "(?<=\\b(theorem|temporal|contract|invariant|refinement)\\s+)[a-z_][a-zA-Z0-9_]*"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.logical.usl",
          "match": "\\b(and|or|not|implies|iff|xor)\\b|&&|\\|\\||!|=>|<=>|->|<-"
        },
        {
          "name": "keyword.operator.comparison.usl",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.arithmetic.usl",
          "match": "\\+|-|\\*|/|%|\\^"
        },
        {
          "name": "keyword.operator.membership.usl",
          "match": "\\b(in|notin|subset|superset|union|intersect|diff)\\b"
        },
        {
          "name": "keyword.operator.assignment.usl",
          "match": "="
        },
        {
          "name": "keyword.operator.type.usl",
          "match": ":"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.usl",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.usl",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.usl",
          "match": "\\b\\d+\\.\\d+\\b"
        },
        {
          "name": "constant.numeric.integer.usl",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.separator.usl",
          "match": "[,;]"
        },
        {
          "name": "punctuation.bracket.usl",
          "match": "[\\[\\]\\{\\}\\(\\)]"
        },
        {
          "name": "punctuation.accessor.usl",
          "match": "\\."
        }
      ]
    }
  }
}
