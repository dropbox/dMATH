{
  "name": "lean5",
  "displayName": "Lean5",
  "description": "Language support for Lean5 theorem prover",
  "version": "0.1.0",
  "publisher": "lean5",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:lean5",
    "onLanguage:lean"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "lean5",
        "aliases": [
          "Lean5",
          "lean5"
        ],
        "extensions": [
          ".lean"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Lean5",
      "properties": {
        "lean5.serverPath": {
          "type": "string",
          "default": "lean5-lsp",
          "description": "Path to the lean5-lsp executable"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/vscode": "^1.75.0",
    "typescript": "^5.0.0"
  }
}
