{
  "comments": {
    "lineComment": "--",
    "blockComment": ["/-", "-/"]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["⟨", "⟩"]
  ],
  "autoClosingPairs": [
    {"open": "{", "close": "}"},
    {"open": "[", "close": "]"},
    {"open": "(", "close": ")"},
    {"open": "⟨", "close": "⟩"},
    {"open": "\"", "close": "\"", "notIn": ["string"]},
    {"open": "'", "close": "'", "notIn": ["string", "comment"]},
    {"open": "/-", "close": "-/"}
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["⟨", "⟩"],
    ["\"", "\""],
    ["'", "'"]
  ],
  "indentationRules": {
    "increaseIndentPattern": "^\\s*(def|theorem|lemma|example|structure|class|instance|inductive|where|do|if|then|else|match|namespace|section)\\b",
    "decreaseIndentPattern": "^\\s*(end)\\b"
  }
}
